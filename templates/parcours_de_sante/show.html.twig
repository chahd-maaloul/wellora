{% extends 'layouts/app.html.twig' %}

{% block title %}{{ parcours_de_sante.nomParcours }} - Parcours de Sant√©{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('trail-css') }}
{% endblock %}

{% block body %}
<div class="relative -mt-4 -mx-4 h-[30vh] min-h-[220px]">
    <img src="{{ parcours_de_sante.imageParcours|default('https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=1200&h=400&fit=crop') }}" alt="Parcours Image" class="object-cover w-full h-full">
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
    <div class="absolute bottom-0 left-0 right-0 p-4 text-white">
        <div class="px-4 mx-auto">
            <h1 class="text-xl font-bold font-display">{{ parcours_de_sante.nomParcours }}</h1>
            <p class="text-sm text-white/80"><i class="mr-1 fa-solid fa-location-dot"></i>{{ parcours_de_sante.localisationParcours }}</p>
        </div>
    </div>
</div>

<div class="px-4 mx-auto">
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
        <div class="space-y-4 lg:col-span-2">
            <div class="grid grid-cols-3 gap-3">
                <div class="p-3 text-center bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <i class="mb-1 fa-solid fa-ruler text-wellcare-500"></i>
                    <p class="text-lg font-bold text-gray-900 dark:text-white">{{ parcours_de_sante.distanceParcours }}</p>
                    <p class="text-xs text-gray-500">Distance (km)</p>
                </div>
                <div class="p-3 text-center bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <i class="mb-1 fa-solid fa-calendar text-wellcare-500"></i>
                    <p class="text-lg font-bold text-gray-900 dark:text-white">{{ parcours_de_sante.dateCreation ? parcours_de_sante.dateCreation|date('Y-m-d') : '-' }}</p>
                    <p class="text-xs text-gray-500">Created</p>
                </div>
                <div class="p-3 text-center bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <i class="mb-1 fa-solid fa-map-location-dot text-wellcare-500"></i>
                    <p class="text-lg font-bold text-gray-900 dark:text-white">{{ parcours_de_sante.localisationParcours }}</p>
                    <p class="text-xs text-gray-500">Location</p>
                </div>
            </div>

            <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <h2 class="mb-3 font-semibold text-gray-900 dark:text-white">Parcours Summary</h2>
                <p class="text-sm text-gray-600 dark:text-gray-300">
                    Distance: <strong>{{ parcours_de_sante.distanceParcours }}</strong> km - Location: <strong>{{ parcours_de_sante.localisationParcours }}</strong> - Publications: <strong>{{ parcours_de_sante.publicationParcours|length }}</strong>
                </p>
            </div>
        </div>

        <div class="space-y-4">
            <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <div class="flex items-center gap-2">
                    <a href="{{ path('app_parcours_de_sante_edit', {'id': parcours_de_sante.id}) }}" class="inline-flex items-center justify-center w-10 h-10 text-white rounded-lg bg-wellcare-500 hover:bg-wellcare-600" title="Edit" aria-label="Edit">
                        <i class="fa-solid fa-pen-to-square"></i>
                    </a>
                    {{ include('parcours_de_sante/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
