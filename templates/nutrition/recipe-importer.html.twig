{% extends 'layouts/app.html.twig' %}

{% block title %}Recipe Importer - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
    <style>
        .recipe-importer-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 24px;
        }
        
        .recipe-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            flex-wrap: wrap;
            gap: 16px;
        }
        
        .recipe-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1f2937;
        }
        
        .recipe-tabs {
            display: flex;
            gap: 8px;
            margin-bottom: 24px;
        }
        
        .recipe-tab {
            padding: 12px 24px;
            background: #f3f4f6;
            border: none;
            border-radius: 10px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.2s;
        }
        
        .recipe-tab:hover {
            background: #e5e7eb;
        }
        
        .recipe-tab.active {
            background: #10b981;
            color: white;
        }
        
        .importer-section {
            background: white;
            border-radius: 20px;
            padding: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 24px;
        }
        
        .section-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 16px;
        }
        
        .url-input-group {
            display: flex;
            gap: 12px;
            margin-bottom: 16px;
        }
        
        .url-input {
            flex: 1;
            padding: 14px 16px;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-size: 1rem;
            transition: border-color 0.2s;
        }
        
        .url-input:focus {
            outline: none;
            border-color: #10b981;
        }
        
        .import-btn {
            padding: 14px 24px;
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        
        .import-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
        }
        
        .import-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }
        
        .supported-sites {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-bottom: 24px;
        }
        
        .site-badge {
            padding: 6px 12px;
            background: #f3f4f6;
            border-radius: 20px;
            font-size: 0.875rem;
            color: #6b7280;
        }
        
        .manual-entry {
            border-top: 1px solid #e5e7eb;
            padding-top: 24px;
            margin-top: 24px;
        }
        
        .manual-form {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 16px;
        }
        
        @media (max-width: 768px) {
            .manual-form {
                grid-template-columns: 1fr;
            }
        }
        
        .form-group {
            margin-bottom: 16px;
        }
        
        .form-group.full-width {
            grid-column: 1 / -1;
        }
        
        .form-label {
            display: block;
            font-weight: 500;
            color: #374151;
            margin-bottom: 8px;
        }
        
        .form-input, .form-textarea, .form-select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            font-size: 1rem;
            transition: border-color 0.2s;
        }
        
        .form-input:focus, .form-textarea:focus, .form-select:focus {
            outline: none;
            border-color: #10b981;
        }
        
        .form-textarea {
            min-height: 100px;
            resize: vertical;
        }
        
        .ingredients-list {
            margin-bottom: 16px;
        }
        
        .ingredient-row {
            display: flex;
            gap: 8px;
            margin-bottom: 8px;
        }
        
        .ingredient-row input {
            flex: 1;
            padding: 10px;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
        }
        
        .ingredient-row input:focus {
            outline: none;
            border-color: #10b981;
        }
        
        .add-ingredient-btn {
            background: none;
            border: 2px dashed #e5e7eb;
            padding: 10px;
            border-radius: 8px;
            cursor: pointer;
            color: #6b7280;
            width: 100%;
            transition: all 0.2s;
        }
        
        .add-ingredient-btn:hover {
            border-color: #10b981;
            color: #10b981;
        }
        
        .recipe-preview {
            background: #f9fafb;
            border-radius: 16px;
            padding: 24px;
            margin-top: 24px;
        }
        
        .preview-header {
            display: flex;
            gap: 20px;
            margin-bottom: 20px;
        }
        
        .preview-image {
            width: 200px;
            height: 150px;
            background: #e5e7eb;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #9ca3af;
        }
        
        .preview-info {
            flex: 1;
        }
        
        .preview-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 8px;
        }
        
        .preview-meta {
            display: flex;
            gap: 16px;
            margin-bottom: 12px;
        }
        
        .preview-meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
            color: #6b7280;
            font-size: 0.875rem;
        }
        
        .preview-nutrition {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 12px;
        }
        
        .nutrition-box {
            background: white;
            padding: 12px;
            border-radius: 10px;
            text-align: center;
        }
        
        .nutrition-value {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
        }
        
        .nutrition-label {
            font-size: 0.75rem;
            color: #6b7280;
        }
        
        .my-recipes-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }
        
        .recipe-card {
            background: white;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.2s;
        }
        
        .recipe-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        }
        
        .recipe-card-image {
            height: 160px;
            background: linear-gradient(135deg, #10b981, #059669);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 3rem;
        }
        
        .recipe-card-content {
            padding: 16px;
        }
        
        .recipe-card-title {
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 8px;
        }
        
        .recipe-card-meta {
            display: flex;
            gap: 12px;
            font-size: 0.875rem;
            color: #6b7280;
            margin-bottom: 12px;
        }
        
        .recipe-card-actions {
            display: flex;
            gap: 8px;
        }
        
        .recipe-card-btn {
            flex: 1;
            padding: 10px;
            border: none;
            border-radius: 8px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .recipe-card-btn.primary {
            background: #10b981;
            color: white;
        }
        
        .recipe-card-btn.secondary {
            background: #f3f4f6;
            color: #374151;
        }
        
        .import-history {
            margin-top: 24px;
        }
        
        .history-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            background: #f9fafb;
            border-radius: 12px;
            margin-bottom: 12px;
        }
        
        .history-info {
            flex: 1;
        }
        
        .history-name {
            font-weight: 500;
            color: #374151;
        }
        
        .history-url {
            font-size: 0.75rem;
            color: #9ca3af;
            margin-top: 4px;
        }
        
        .history-status {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        
        .history-status.success {
            background: #d1fae5;
            color: #059669;
        }
        
        .history-status.pending {
            background: #fef3c7;
            color: #d97706;
        }
        
        .history-status.failed {
            background: #fee2e2;
            color: #dc2626;
        }
        
        .history-time {
            font-size: 0.75rem;
            color: #9ca3af;
            margin-left: 16px;
        }
        
        .macro-inputs {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 12px;
        }
        
        @media (max-width: 768px) {
            .macro-inputs {
                grid-template-columns: repeat(2, 1fr);
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="recipe-importer-container">
        <div class="recipe-header">
            <h1 class="recipe-title">üìñ Recipe Importer</h1>
            <a href="{{ path('nutrition_food_logger') }}" class="add-to-log" style="width: auto; padding: 10px 20px;">
                ‚Üê Back to Food Logger
            </a>
        </div>
        
        <div class="recipe-tabs">
            <button class="recipe-tab active" onclick="switchTab('import')">Import Recipe</button>
            <button class="recipe-tab" onclick="switchTab('my-recipes')">My Recipes</button>
            <button class="recipe-tab" onclick="switchTab('manual')">Manual Entry</button>
        </div>
        
        <!-- Import Tab -->
        <div id="import-tab" class="tab-content">
            <div class="importer-section">
                <h2 class="section-title">Import from URL</h2>
                <p style="color: #6b7280; margin-bottom: 16px;">Paste a recipe URL from your favorite cooking website and we'll extract the nutritional information.</p>
                
                <div class="supported-sites">
                    <span class="site-badge">Marmiton</span>
                    <span class="site-badge">750g</span>
                    <span class="site-badge">Cuisine AZ</span>
                    <span class="site-badge">Jamie Oliver</span>
                    <span class="site-badge">AllRecipes</span>
                    <span class="site-badge">Epicurious</span>
                </div>
                
                <div class="url-input-group">
                    <input type="url" class="url-input" id="recipeUrl" placeholder="Paste recipe URL here (e.g., https://www.marmiton.org/recettes/...)">
                    <button class="import-btn" onclick="importRecipe()">
                        üì• Import Recipe
                    </button>
                </div>
                
                <div class="recipe-preview" id="recipePreview" style="display: none;">
                    <div class="preview-header">
                        <div class="preview-image">üçΩÔ∏è</div>
                        <div class="preview-info">
                            <h3 class="preview-title" id="previewTitle">Recipe Title</h3>
                            <div class="preview-meta">
                                <span class="preview-meta-item">‚è±Ô∏è <span id="previewTime">0</span> min</span>
                                <span class="preview-meta-item">üë• <span id="previewServings">0</span> servings</span>
                                <span class="preview-meta-item">‚≠ê <span id="previewRating">0</span></span>
                            </div>
                            <p id="previewDescription" style="color: #6b7280; font-size: 0.875rem;"></p>
                        </div>
                    </div>
                    <div class="preview-nutrition">
                        <div class="nutrition-box">
                            <div class="nutrition-value" id="previewCalories">0</div>
                            <div class="nutrition-label">Calories</div>
                        </div>
                        <div class="nutrition-box">
                            <div class="nutrition-value" id="previewProteins">0g</div>
                            <div class="nutrition-label">Protein</div>
                        </div>
                        <div class="nutrition-box">
                            <div class="nutrition-value" id="previewCarbs">0g</div>
                            <div class="nutrition-label">Carbs</div>
                        </div>
                        <div class="nutrition-box">
                            <div class="nutrition-value" id="previewFats">0g</div>
                            <div class="nutrition-label">Fats</div>
                        </div>
                        <div class="nutrition-box">
                            <div class="nutrition-value" id="previewFiber">0g</div>
                            <div class="nutrition-label">Fiber</div>
                        </div>
                    </div>
                    <div style="margin-top: 20px; display: flex; gap: 12px;">
                        <button class="import-btn" onclick="saveImportedRecipe()">üíæ Save Recipe</button>
                        <button class="import-btn" style="background: #f3f4f6; color: #374151;" onclick="addToLog()">‚ûï Add to Food Log</button>
                    </div>
                </div>
                
                <div class="manual-entry">
                    <h3 class="section-title">Or enter manually</h3>
                    <button class="recipe-tab active" onclick="switchTab('manual')" style="width: auto;">
                        Open Manual Entry Form
                    </button>
                </div>
            </div>
            
            <div class="importer-section import-history">
                <h3 class="section-title">Import History</h3>
                <div id="importHistory">
                    {% for import in importHistory %}
                        <div class="history-item">
                            <div class="history-info">
                                <div class="history-name">{{ import.name }}</div>
                                <div class="history-url">{{ import.url }}</div>
                            </div>
                            <span class="history-status {{ import.status }}">
                                {% if import.status == 'success' %}‚úì Imported{% elseif import.status == 'partial' %}‚ö† Partial{% else %}‚úó Failed{% endif %}
                            </span>
                            <span class="history-time">{{ import.importedAt|date('M j, H:i') }}</span>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        
        <!-- My Recipes Tab -->
        <div id="my-recipes-tab" class="tab-content" style="display: none;">
            <div class="my-recipes-grid">
                {% for recipe in myRecipes %}
                    <div class="recipe-card">
                        <div class="recipe-card-image">üç≤</div>
                        <div class="recipe-card-content">
                            <h4 class="recipe-card-title">{{ recipe.name }}</h4>
                            <div class="recipe-card-meta">
                                <span>‚è±Ô∏è {{ recipe.prepTime }} min</span>
                                <span>üë• {{ recipe.servings }} servings</span>
                                <span>üî• {{ recipe.calories }} cal</span>
                            </div>
                            <div class="recipe-card-actions">
                                <button class="recipe-card-btn primary" onclick="addRecipeToLog({{ recipe.id }})">Add to Log</button>
                                <button class="recipe-card-btn secondary" onclick="viewRecipe({{ recipe.id }})">View</button>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
        <!-- Manual Entry Tab -->
        <div id="manual-tab" class="tab-content" style="display: none;">
            <div class="importer-section">
                <h2 class="section-title">Create New Recipe</h2>
                <form id="manualRecipeForm" onsubmit="saveManualRecipe(event)">
                    <div class="manual-form">
                        <div class="form-group full-width">
                            <label class="form-label" for="recipeName">Recipe Name *</label>
                            <input type="text" class="form-input" id="recipeName" required>
                        </div>
                        
                        <div class="form-group full-width">
                            <label class="form-label" for="recipeDescription">Description</label>
                            <textarea class="form-textarea" id="recipeDescription" placeholder="Describe your recipe..."></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="prepTime">Prep Time (min)</label>
                            <input type="number" class="form-input" id="prepTime" value="15" min="0">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="cookTime">Cook Time (min)</label>
                            <input type="number" class="form-input" id="cookTime" value="30" min="0">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="servings">Servings</label>
                            <input type="number" class="form-input" id="servings" value="4" min="1">
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label" for="sourceUrl">Source URL (optional)</label>
                            <input type="url" class="form-input" id="sourceUrl" placeholder="https://...">
                        </div>
                        
                        <div class="form-group full-width">
                            <label class="form-label">Ingredients</label>
                            <div class="ingredients-list" id="ingredientsList">
                                <div class="ingredient-row">
                                    <input type="text" placeholder="Ingredient name" class="ingredient-name">
                                    <input type="text" placeholder="Amount (e.g., 200g)" class="ingredient-amount">
                                    <button type="button" onclick="removeIngredient(this)" style="background: #fee2e2; border: none; padding: 0 12px; border-radius: 8px; cursor: pointer;">‚úï</button>
                                </div>
                            </div>
                            <button type="button" class="add-ingredient-btn" onclick="addIngredient()">+ Add Ingredient</button>
                        </div>
                        
                        <div class="form-group full-width">
                            <label class="form-label">Nutrition (per serving)</label>
                            <div class="macro-inputs">
                                <div class="form-group">
                                    <input type="number" class="form-input" id="recipeCalories" placeholder="Calories" value="0">
                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-input" id="recipeProteins" placeholder="Protein (g)" value="0" step="0.1">
                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-input" id="recipeCarbs" placeholder="Carbs (g)" value="0" step="0.1">
                                </div>
                                <div class="form-group">
                                    <input type="number" class="form-input" id="recipeFats" placeholder="Fats (g)" value="0" step="0.1">
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group full-width">
                            <button type="submit" class="import-btn" style="width: 100%; justify-content: center;">
                                üíæ Save Recipe
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let currentRecipe = null;
        
        function switchTab(tab) {
            document.querySelectorAll('.recipe-tab').forEach(t => t.classList.remove('active'));
            event.target.classList.add('active');
            
            document.querySelectorAll('.tab-content').forEach(c => c.style.display = 'none');
            document.getElementById(tab + '-tab').style.display = 'block';
        }
        
        function importRecipe() {
            const url = document.getElementById('recipeUrl').value.trim();
            
            if (!url) {
                alert('Please enter a recipe URL');
                return;
            }
            
            // Show loading state
            document.querySelector('.import-btn').disabled = true;
            document.querySelector('.import-btn').innerHTML = '‚è≥ Importing...';
            
            // Simulated import - replace with actual scraping service
            setTimeout(() => {
                // Demo recipe data
                const demoRecipe = {
                    name: 'Salade de Quinoa aux L√©gumes',
                    description: 'Une salade fra√Æche et √©quilibr√©e riche en fibres et prot√©ines v√©g√©tales.',
                    prepTime: 15,
                    cookTime: 20,
                    servings: 2,
                    rating: 4.8,
                    calories: 350,
                    proteins: 12,
                    carbs: 45,
                    fats: 14,
                    fiber: 8,
                    ingredients: [
                        'Quinoa 150g',
                        'Concombre 1',
                        'Tomates cerises 100g',
                        'Feta 50g',
                        'Olive oil 2cs'
                    ]
                };
                
                displayRecipePreview(demoRecipe);
                
                document.querySelector('.import-btn').disabled = false;
                document.querySelector('.import-btn').innerHTML = 'üì• Import Recipe';
            }, 2000);
        }
        
        function displayRecipePreview(recipe) {
            currentRecipe = recipe;
            
            document.getElementById('recipePreview').style.display = 'block';
            document.getElementById('previewTitle').textContent = recipe.name;
            document.getElementById('previewTime').textContent = (recipe.prepTime + recipe.cookTime);
            document.getElementById('previewServings').textContent = recipe.servings;
            document.getElementById('previewRating').textContent = recipe.rating;
            document.getElementById('previewDescription').textContent = recipe.description || '';
            document.getElementById('previewCalories').textContent = recipe.calories;
            document.getElementById('previewProteins').textContent = recipe.proteins + 'g';
            document.getElementById('previewCarbs').textContent = recipe.carbs + 'g';
            document.getElementById('previewFats').textContent = recipe.fats + 'g';
            document.getElementById('previewFiber').textContent = (recipe.fiber || 0) + 'g';
        }
        
        function saveImportedRecipe() {
            if (!currentRecipe) return;
            
            // Save to localStorage
            const recipes = JSON.parse(localStorage.getItem('userRecipes') || '[]');
            recipes.push({
                ...currentRecipe,
                id: Date.now(),
                createdAt: new Date().toISOString()
            });
            localStorage.setItem('userRecipes', JSON.stringify(recipes));
            
            alert('Recipe saved successfully!');
        }
        
        function addToLog() {
            if (!currentRecipe) return;
            
            // Redirect to food logger with recipe data
            localStorage.setItem('pendingRecipe', JSON.stringify(currentRecipe));
            window.location.href = '{{ path('nutrition_food_logger') }}';
        }
        
        function addIngredient() {
            const list = document.getElementById('ingredientsList');
            const row = document.createElement('div');
            row.className = 'ingredient-row';
            row.innerHTML = `
                <input type="text" placeholder="Ingredient name" class="ingredient-name">
                <input type="text" placeholder="Amount (e.g., 200g)" class="ingredient-amount">
                <button type="button" onclick="removeIngredient(this)" style="background: #fee2e2; border: none; padding: 0 12px; border-radius: 8px; cursor: pointer;">‚úï</button>
            `;
            list.appendChild(row);
        }
        
        function removeIngredient(button) {
            const list = document.getElementById('ingredientsList');
            if (list.children.length > 1) {
                button.parentElement.remove();
            }
        }
        
        function saveManualRecipe(event) {
            event.preventDefault();
            
            const recipe = {
                name: document.getElementById('recipeName').value,
                description: document.getElementById('recipeDescription').value,
                prepTime: parseInt(document.getElementById('prepTime').value) || 0,
                cookTime: parseInt(document.getElementById('cookTime').value) || 0,
                servings: parseInt(document.getElementById('servings').value) || 1,
                sourceUrl: document.getElementById('sourceUrl').value,
                calories: parseInt(document.getElementById('recipeCalories').value) || 0,
                proteins: parseFloat(document.getElementById('recipeProteins').value) || 0,
                carbs: parseFloat(document.getElementById('recipeCarbs').value) || 0,
                fats: parseFloat(document.getElementById('recipeFats').value) || 0,
                ingredients: []
            };
            
            // Collect ingredients
            document.querySelectorAll('.ingredient-row').forEach(row => {
                const name = row.querySelector('.ingredient-name').value;
                const amount = row.querySelector('.ingredient-amount').value;
                if (name) {
                    recipe.ingredients.push({ name, amount });
                }
            });
            
            // Calculate per-serving values if needed
            if (recipe.servings > 1) {
                recipe.calories = Math.round(recipe.calories / recipe.servings);
                recipe.proteins = parseFloat((recipe.proteins / recipe.servings).toFixed(1));
                recipe.carbs = parseFloat((recipe.carbs / recipe.servings).toFixed(1));
                recipe.fats = parseFloat((recipe.fats / recipe.servings).toFixed(1));
            }
            
            // Save to localStorage
            const recipes = JSON.parse(localStorage.getItem('userRecipes') || '[]');
            recipes.push({
                ...recipe,
                id: Date.now(),
                createdAt: new Date().toISOString()
            });
            localStorage.setItem('userRecipes', JSON.stringify(recipes));
            
            alert('Recipe saved successfully!');
            event.target.reset();
            
            // Clear ingredients list except first row
            const list = document.getElementById('ingredientsList');
            while (list.children.length > 1) {
                list.lastChild.remove();
            }
        }
        
        function addRecipeToLog(recipeId) {
            const recipes = JSON.parse(localStorage.getItem('userRecipes') || '[]');
            const recipe = recipes.find(r => r.id === recipeId);
            
            if (recipe) {
                localStorage.setItem('pendingRecipe', JSON.stringify(recipe));
                window.location.href = '{{ path('nutrition_food_logger') }}';
            }
        }
        
        function viewRecipe(recipeId) {
            console.log('View recipe:', recipeId);
        }
    </script>
