{% extends 'layouts/app.html.twig' %}

{% block title %}Détails de l'objectif - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8">
    <div class="max-w-6xl px-4 mx-auto">
        {# Header #}
        <div class="mb-8">
            <a href="{{ path('nutrition_goals_index') }}" class="inline-flex items-center mb-4 text-gray-500 transition-colors dark:text-gray-400 hover:text-wellcare-500">
                <i class="mr-2 fas fa-arrow-left"></i>Retour aux objectifs
            </a>
            <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{{ goal.name|default('Nouvel objectif') }}</h1>
                    <p class="mt-1 text-gray-500 dark:text-gray-400">{{ goal.goalType|default('WEIGHT_LOSS')|replace({'_': ' '})|lower|title }}</p>
                </div>
                <div class="flex items-center gap-3">
                    <span class="px-3 py-1 text-sm font-medium rounded-full bg-wellcare-100 dark:bg-wellcare-900/30 text-wellcare-600 dark:text-wellcare-400">
                        {{ goal.status|default('ACTIVE') }}
                    </span>
                    <span class="px-3 py-1 text-sm font-medium text-gray-600 bg-gray-100 rounded-full dark:bg-gray-700 dark:text-gray-300">
                        Priorité {{ goal.priority|default('MEDIUM')|lower }}
                    </span>
                </div>
            </div>
        </div>

        {# Main Grid #}
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
            {# Left Column: Progress Overview #}
            <div class="space-y-6 lg:col-span-2">
                {# Progress Card #}
                <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                    <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Progression globale</h2>
                    
                    {# Progress Bar #}
                    <div class="mb-6">
                        <div class="flex justify-between mb-2 text-sm">
                            <span class="text-gray-500 dark:text-gray-400">Progression</span>
                            <span class="font-semibold text-wellcare-500">{{ goal.progress|default(65) }}%</span>
                        </div>
                        <div class="h-3 overflow-hidden bg-gray-200 rounded-full dark:bg-gray-700">
                            <div class="h-full transition-all duration-500 rounded-full bg-gradient-to-r from-wellcare-400 to-wellcare-600" 
                                 style="width: {{ goal.progress|default(65) }}%"></div>
                        </div>
                    </div>

                    {# Weight Progress #}
                    <div class="grid grid-cols-3 gap-4 mb-6">
                        <div class="p-4 text-center bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                            <p class="mb-1 text-xs text-gray-500 dark:text-gray-400">Départ</p>
                            <p class="text-xl font-bold text-gray-900 dark:text-white">82.0 kg</p>
                        </div>
                        <div class="p-4 text-center border bg-wellcare-50 dark:bg-wellcare-900/20 rounded-xl border-wellcare-200 dark:border-wellcare-800">
                            <p class="mb-1 text-xs text-wellcare-600 dark:text-wellcare-400">Actuel</p>
                            <p class="text-xl font-bold text-wellcare-500">78.5 kg</p>
                            <p class="text-xs text-wellcare-600">-3.5 kg</p>
                        </div>
                        <div class="p-4 text-center bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                            <p class="mb-1 text-xs text-gray-500 dark:text-gray-400">Cible</p>
                            <p class="text-xl font-bold text-gray-900 dark:text-white">72.0 kg</p>
                            <p class="text-xs text-gray-500">-6.0 kg restants</p>
                        </div>
                    </div>

                    {# Timeline #}
                    <div class="flex items-center gap-4 text-sm">
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded-full bg-wellcare-500"></div>
                            <span class="text-gray-600 dark:text-gray-300">Début: {{ goal.startDate|default('-30 days')|date('d/m/Y') }}</span>
                        </div>
                        <div class="flex-1 h-px bg-gray-200 dark:bg-gray-700"></div>
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                            <span class="text-gray-600 dark:text-gray-300">Aujourd'hui</span>
                        </div>
                        <div class="flex-1 h-px bg-gray-200 dark:bg-gray-700"></div>
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 bg-gray-300 rounded-full dark:bg-gray-600"></div>
                            <span class="text-gray-600 dark:text-gray-300">Cible: {{ goal.targetDate|default('+45 days')|date('d/m/Y') }}</span>
                        </div>
                    </div>
                </div>

                {# Weekly Progress Chart #}
                <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                    <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Progression de la semaine</h2>
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="text-sm text-left text-gray-500 dark:text-gray-400">
                                    <th class="pb-3 font-medium">Jour</th>
                                    <th class="pb-3 font-medium">Poids</th>
                                    <th class="pb-3 font-medium">Calories</th>
                                    <th class="pb-3 font-medium">Protéines</th>
                                    <th class="pb-3 font-medium">Adhésion</th>
                                </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                                {% for day in weeklyProgress|default([]) %}
                                <tr class="transition-colors hover:bg-gray-50 dark:hover:bg-gray-700/50">
                                    <td class="py-3 font-medium text-gray-900 dark:text-white">{{ day.date }}</td>
                                    <td class="py-3 text-gray-600 dark:text-gray-300">{{ day.weight }} kg</td>
                                    <td class="py-3 text-gray-600 dark:text-gray-300">{{ day.calories }} kcal</td>
                                    <td class="py-3 text-gray-600 dark:text-gray-300">{{ day.protein }}g</td>
                                    <td class="py-3">
                                        <div class="flex items-center gap-2">
                                            <div class="w-16 h-2 overflow-hidden bg-gray-200 rounded-full dark:bg-gray-700">
                                                <div class="h-full {% if day.adherence >= 80 %}bg-wellcare-500{% elseif day.adherence >= 60 %}bg-yellow-500{% else %}bg-red-500{% endif %} rounded-full"
                                                     style="width: {{ day.adherence }}%"></div>
                                            </div>
                                            <span class="text-sm text-gray-500 dark:text-gray-400">{{ day.adherence }}%</span>
                                        </div>
                                    </td>
                                </tr>
                                {% else %}
                                    {% for i in 1..7 %}
                                    {% set day_names = ['Lun', 'Mar', 'Mer', 'Jeu', 'Ven', 'Sam', 'Dim'] %}
                                    <tr class="transition-colors hover:bg-gray-50 dark:hover:bg-gray-700/50">
                                        <td class="py-3 font-medium text-gray-900 dark:text-white">{{ day_names[i-1] }}</td>
                                        <td class="py-3 text-gray-600 dark:text-gray-300">{{ (78.5 - (7-i)*0.1)|round(1) }} kg</td>
                                        <td class="py-3 text-gray-600 dark:text-gray-300">{{ 1750 + random(-150, 150) }} kcal</td>
                                        <td class="py-3 text-gray-600 dark:text-gray-300">{{ 110 + random(-10, 15) }}g</td>
                                        <td class="py-3">
                                            <div class="flex items-center gap-2">
                                                <div class="w-16 h-2 overflow-hidden bg-gray-200 rounded-full dark:bg-gray-700">
                                                    <div class="h-full rounded-full bg-wellcare-500" style="width: {{ 80 + random(-15, 15) }}%"></div>
                                                </div>
                                                <span class="text-sm text-gray-500 dark:text-gray-400">{{ 80 + random(-15, 15) }}%</span>
                                            </div>
                                        </td>
                                    </tr>
                                    {% endfor %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                {# Milestones #}
                <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-xl font-bold text-gray-900 dark:text-white">Jalons</h2>
                        <span class="text-sm text-gray-500 dark:text-gray-400">2/3 atteints</span>
                    </div>
                    <div class="space-y-4">
                        {% for milestone in milestones|default([]) %}
                        <div class="flex items-center gap-4 p-4 rounded-xl {% if milestone.isCompleted %}bg-wellcare-50 dark:bg-wellcare-900/20 border border-wellcare-200 dark:border-wellcare-800{% else %}bg-gray-50 dark:bg-gray-700/50{% endif %}">
                            <div class="w-10 h-10 rounded-full flex items-center justify-center {% if milestone.isCompleted %}bg-wellcare-500 text-white{% else %}bg-gray-200 dark:bg-gray-600 text-gray-500 dark:text-gray-400{% endif %}">
                                {% if milestone.isCompleted %}
                                    <i class="fas fa-check"></i>
                                {% else %}
                                    <i class="fas fa-flag"></i>
                                {% endif %}
                            </div>
                            <div class="flex-1">
                                <h3 class="font-medium text-gray-900 dark:text-white">{{ milestone.name }}</h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400">
                                    {{ milestone.targetValue }} {{ milestone.unit }}
                                    {% if milestone.isCompleted %}
                                        - Atteint le {{ milestone.completedDate|date('d/m/Y') }}
                                    {% else %}
                                        - Cible: {{ milestone.targetDate|date('d/m/Y') }}
                                    {% endif %}
                                </p>
                            </div>
                            {% if not milestone.isCompleted %}
                                <button class="px-4 py-2 text-sm text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-wellcare-50 dark:hover:bg-wellcare-900/20 hover:border-wellcare-500">
                                    Marquer atteint
                                </button>
                            {% endif %}
                        </div>
                        {% else %}
                            <div class="flex items-center gap-4 p-4 border bg-wellcare-50 dark:bg-wellcare-900/20 border-wellcare-200 dark:border-wellcare-800 rounded-xl">
                                <div class="flex items-center justify-center w-10 h-10 text-white rounded-full bg-wellcare-500">
                                    <i class="fas fa-check"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-medium text-gray-900 dark:text-white">Premier jalon</h3>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">77.0 kg - Atteint le {{ '-15 days'|date('d/m/Y') }}</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-4 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                                <div class="flex items-center justify-center w-10 h-10 text-gray-500 bg-gray-200 rounded-full dark:bg-gray-600 dark:text-gray-400">
                                    <i class="fas fa-flag"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-medium text-gray-900 dark:text-white">Deuxième jalon</h3>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">75.0 kg - Cible: {{ '+15 days'|date('d/m/Y') }}</p>
                                </div>
                                <button class="px-4 py-2 text-sm text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-wellcare-50 dark:hover:bg-wellcare-900/20 hover:border-wellcare-500">
                                    Marquer atteint
                                </button>
                            </div>
                            <div class="flex items-center gap-4 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                                <div class="flex items-center justify-center w-10 h-10 text-gray-500 bg-gray-200 rounded-full dark:bg-gray-600 dark:text-gray-400">
                                    <i class="fas fa-flag"></i>
                                </div>
                                <div class="flex-1">
                                    <h3 class="font-medium text-gray-900 dark:text-white">Objectif final</h3>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">72.0 kg - Cible: {{ '+45 days'|date('d/m/Y') }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            {# Right Column: Stats & Actions #}
            <div class="space-y-6">
                {# Quick Stats #}
                <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                    <h2 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">Statistiques</h2>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <div class="flex items-center justify-center w-10 h-10 bg-orange-100 rounded-full dark:bg-orange-900/30">
                                    <i class="text-orange-500 fas fa-fire"></i>
                                </div>
                                <span class="text-gray-600 dark:text-gray-300">Série actuelle</span>
                            </div>
                            <span class="font-bold text-gray-900 dark:text-white">{{ goal.streak|default(12) }} jours</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <div class="flex items-center justify-center w-10 h-10 bg-blue-100 rounded-full dark:bg-blue-900/30">
                                    <i class="text-blue-500 fas fa-calendar-check"></i>
                                </div>
                                <span class="text-gray-600 dark:text-gray-300">Jours restants</span>
                            </div>
                            <span class="font-bold text-gray-900 dark:text-white">{{ goal.daysRemaining|default(45) }}</span>
                        </div>
                        <div class="flex items-center justify-between">
                            <div class="flex items-center gap-3">
                                <div class="flex items-center justify-center w-10 h-10 bg-green-100 rounded-full dark:bg-green-900/30">
                                    <i class="text-green-500 fas fa-chart-line"></i>
                                </div>
                                <span class="text-gray-600 dark:text-gray-300">Sur la bonne voie</span>
                            </div>
                            <span class="font-bold {% if goal.isOnTrack|default(true) %}text-green-500{% else %}text-red-500{% endif %}">
                                {% if goal.isOnTrack|default(true) %}Oui{% else %}Non{% endif %}
                            </span>
                        </div>
                    </div>
                </div>

                {# Macro Goals #}
                <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                    <h2 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">Objectifs quotidiens</h2>
                    <div class="space-y-4">
                        <div>
                            <div class="flex justify-between mb-1 text-sm">
                                <span class="text-gray-600 dark:text-gray-300">Calories</span>
                                <span class="font-medium text-gray-900 dark:text-white">1850 / 1800 kcal</span>
                            </div>
                            <div class="h-2 overflow-hidden bg-gray-200 rounded-full dark:bg-gray-700">
                                <div class="h-full bg-blue-500 rounded-full" style="width: 100%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between mb-1 text-sm">
                                <span class="text-gray-600 dark:text-gray-300">Protéines</span>
                                <span class="font-medium text-gray-900 dark:text-white">115 / 120g</span>
                            </div>
                            <div class="h-2 overflow-hidden bg-gray-200 rounded-full dark:bg-gray-700">
                                <div class="h-full rounded-full bg-wellcare-500" style="width: 96%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between mb-1 text-sm">
                                <span class="text-gray-600 dark:text-gray-300">Glucides</span>
                                <span class="font-medium text-gray-900 dark:text-white">195 / 200g</span>
                            </div>
                            <div class="h-2 overflow-hidden bg-gray-200 rounded-full dark:bg-gray-700">
                                <div class="h-full bg-blue-500 rounded-full" style="width: 98%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between mb-1 text-sm">
                                <span class="text-gray-600 dark:text-gray-300">Lipides</span>
                                <span class="font-medium text-gray-900 dark:text-white">58 / 60g</span>
                            </div>
                            <div class="h-2 overflow-hidden bg-gray-200 rounded-full dark:bg-gray-700">
                                <div class="h-full rounded-full bg-amber-500" style="width: 97%"></div>
                            </div>
                        </div>
                        <div>
                            <div class="flex justify-between mb-1 text-sm">
                                <span class="text-gray-600 dark:text-gray-300">Eau</span>
                                <span class="font-medium text-gray-900 dark:text-white">6 / 8 verres</span>
                            </div>
                            <div class="h-2 overflow-hidden bg-gray-200 rounded-full dark:bg-gray-700">
                                <div class="h-full rounded-full bg-cyan-500" style="width: 75%"></div>
                            </div>
                        </div>
                    </div>
                </div>

                {# Recent Achievements #}
                <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                    <h2 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">Réussites récentes</h2>
                    <div class="space-y-3">
                        {% for achievement in recentAchievements|default([]) %}
                        <div class="flex items-center gap-3 p-3 rounded-xl bg-gray-50 dark:bg-gray-700/50">
                            <div class="w-10 h-10 rounded-full flex items-center justify-center {% if achievement.tier == 'GOLD' %}bg-yellow-100 dark:bg-yellow-900/30{% elseif achievement.tier == 'SILVER' %}bg-gray-100 dark:bg-gray-600{% else %}bg-amber-100 dark:bg-amber-900/30{% endif %}">
                                <i class="fas fa-medal {% if achievement.tier == 'GOLD' %}text-yellow-500{% elseif achievement.tier == 'SILVER' %}text-gray-400{% else %}text-amber-500{% endif %}"></i>
                            </div>
                            <div class="flex-1">
                                <h4 class="text-sm font-medium text-gray-900 dark:text-white">{{ achievement.name }}</h4>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ achievement.earnedAt|date('d/m/Y') }}</p>
                            </div>
                        </div>
                        {% else %}
                            <div class="flex items-center gap-3 p-3 rounded-xl bg-gray-50 dark:bg-gray-700/50">
                                <div class="flex items-center justify-center w-10 h-10 bg-orange-100 rounded-full dark:bg-orange-900/30">
                                    <i class="text-orange-500 fas fa-fire"></i>
                                </div>
                                <div class="flex-1">
                                    <h4 class="text-sm font-medium text-gray-900 dark:text-white">7 jours consécutifs</h4>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ '-2 days'|date('d/m/Y') }}</p>
                                </div>
                            </div>
                            <div class="flex items-center gap-3 p-3 rounded-xl bg-gray-50 dark:bg-gray-700/50">
                                <div class="flex items-center justify-center w-10 h-10 bg-gray-100 rounded-full dark:bg-gray-600">
                                    <i class="text-gray-400 fas fa-medal"></i>
                                </div>
                                <div class="flex-1">
                                    <h4 class="text-sm font-medium text-gray-900 dark:text-white">Premier jalon</h4>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ '-15 days'|date('d/m/Y') }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {# Action Buttons #}
                <div class="space-y-3">
                    <a href="{{ path('nutrition_goals_progress', {'id': goal.id|default(1)}) }}" 
                       class="flex items-center justify-center w-full gap-2 py-3 font-medium text-white transition-colors rounded-xl bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="fas fa-chart-line"></i>Voir la progression
                    </a>
                    <a href="{{ path('nutrition_goals_adjust', {'id': goal.id|default(1)}) }}" 
                       class="flex items-center justify-center w-full gap-2 py-3 font-medium text-gray-700 transition-colors border border-gray-300 rounded-xl dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                        <i class="fas fa-sliders-h"></i>Ajuster l'objectif
                    </a>
                    <a href="{{ path('nutrition_goals_metrics', {'id': goal.id|default(1)}) }}" 
                       class="flex items-center justify-center w-full gap-2 py-3 font-medium text-gray-700 transition-colors border border-gray-300 rounded-xl dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                        <i class="fas fa-trophy"></i>Critères de succès
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/nutrition-goals.js') }}"></script>
{% endblock %}
