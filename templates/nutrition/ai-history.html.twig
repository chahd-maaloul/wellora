{% extends 'layouts/app.html.twig' %}

{% block title %}Historique AI - WellCare Nutrition{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('nutrition-css') }}
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8">
    <div class="px-4 mx-auto max-w-4xl">
        <!-- Header -->
        <div class="flex items-center justify-between mb-8">
            <div class="flex items-center gap-4">
                <a href="{{ path('nutrition_ai_assistant') }}" class="p-2 bg-white dark:bg-gray-800 rounded-lg shadow hover:shadow-md transition-all dark:hover:bg-gray-700">
                    <svg class="w-5 h-5 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </a>
                <div>
                    <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Historique des conversations</h1>
                    <p class="text-gray-600 dark:text-gray-400">{{ totalCount }} conversations</p>
                </div>
            </div>
            <button onclick="showClearAllModal()" class="px-4 py-2 bg-red-100 dark:bg-red-900 text-red-600 dark:text-red-300 rounded-lg hover:bg-red-200 dark:hover:bg-red-800 transition-colors text-sm">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                </svg>
                Tout effacer
            </button>
        </div>

        <!-- Quick Stats -->
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
            <div class="bg-white dark:bg-gray-800 rounded-xl p-4 shadow-sm">
                <div class="text-2xl font-bold text-emerald-600">{{ totalCount }}</div>
                <div class="text-sm text-gray-500 dark:text-gray-400">Total messages</div>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-xl p-4 shadow-sm">
                <a href="{{ path('nutrition_ai_insights') }}" class="block hover:opacity-80">
                    <div class="text-2xl font-bold text-blue-600">üìä</div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">Voir analyses</div>
                </a>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-xl p-4 shadow-sm">
                <a href="{{ path('nutrition_ai_recommendations') }}" class="block hover:opacity-80">
                    <div class="text-2xl font-bold text-purple-600">üí°</div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">Recommandations</div>
                </a>
            </div>
            <div class="bg-white dark:bg-gray-800 rounded-xl p-4 shadow-sm">
                <a href="{{ path('nutrition_ai_assistant') }}" class="block hover:opacity-80">
                    <div class="text-2xl font-bold text-orange-600">üí¨</div>
                    <div class="text-sm text-gray-500 dark:text-gray-400">Nouvelle conversation</div>
                </a>
            </div>
        </div>

        <!-- Conversation List -->
        <div class="space-y-6">
            {% for date, dayConversations in conversations %}
                <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-sm overflow-hidden">
                    <div class="bg-gray-100 dark:bg-gray-700 px-4 py-2">
                        <h3 class="font-semibold text-gray-700 dark:text-gray-200">
                            {% set dateObj = date|date('Y-m-d') %}
                            {% if dateObj == 'now'|date('Y-m-d') %}
                                Aujourd'hui
                            {% elseif dateObj == 'now'|date_modify('-1 day')|date('Y-m-d') %}
                                Hier
                            {% else %}
                                {{ date|date('d MMM yyyy') }}
                            {% endif %}
                        </h3>
                    </div>
                    <div class="divide-y divide-gray-100 dark:divide-gray-700">
                        {% for conv in dayConversations %}
                            <a href="{{ path('nutrition_ai_view', {id: conv.id}) }}" class="block p-4 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors cursor-pointer">
                                <div class="flex items-start justify-between gap-4">
                                    <div class="flex-1 min-w-0">
                                        <div class="flex items-center gap-2 mb-1">
                                            <span class="text-sm font-medium text-emerald-600 dark:text-emerald-400">
                                                {% if conv.intent %}
                                                    {% set intentEmoji = {
                                                        'recipe': 'üç≥',
                                                        'meal_plan': 'üìÖ',
                                                        'weight_loss': '‚öñÔ∏è',
                                                        'muscle': 'üí™',
                                                        'vegan': 'üå±',
                                                        'keto': 'ü•ë',
                                                        'sport': 'üèÉ',
                                                        'water': 'üíß',
                                                        'calories': 'üî•',
                                                        'protein': 'ü•©',
                                                        'carbs': 'üçö',
                                                        'fats': 'ü•ë',
                                                        'greeting': 'üëã',
                                                        'help': '‚ùì',
                                                        'default': 'üí¨'
                                                    }[conv.intent] ?? 'üí¨' %}
                                                    {{ intentEmoji }}
                                                {% endif %}
                                            </span>
                                            <span class="text-xs text-gray-400">{{ conv.createdAt|date('H:i') }}</span>
                                        </div>
                                        <p class="text-sm text-gray-800 dark:text-white font-medium truncate">{{ conv.userMessage }}</p>
                                        <p class="text-sm text-gray-500 dark:text-gray-400 truncate mt-1">{{ conv.aiResponse|slice(0, 100) }}...</p>
                                    </div>
                                    <div class="flex items-center gap-2" onclick="event.stopPropagation()">
                                        <a href="{{ path('nutrition_ai_star', {id: conv.id}) }}" class="p-2 hover:bg-gray-100 dark:hover:bg-gray-600 rounded-lg transition-colors" title="{{ conv.isStarred ? 'Retirer des favoris' : 'Ajouter aux favoris' }}">
                                            <svg class="w-5 h-5 {{ conv.isStarred ? 'text-yellow-500' : 'text-gray-400' }}" fill="{{ conv.isStarred ? 'currentColor' : 'none' }}" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                                            </svg>
                                        </a>
                                        <button onclick="showDeleteModal({{ conv.id }}, '{{ conv.userMessage|escape('js') }}')" class="p-2 hover:bg-red-100 dark:hover:bg-red-900 rounded-lg transition-colors text-red-500" title="Supprimer">
                                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="text-center py-12">
                    <div class="text-6xl mb-4">üí¨</div>
                    <h3 class="text-xl font-semibold text-gray-800 dark:text-white mb-2">Aucune conversation</h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-4">Commencez √† discuter avec l'AI!</p>
                    <a href="{{ path('nutrition_ai_assistant') }}" class="inline-flex items-center px-6 py-3 bg-emerald-500 text-white rounded-xl hover:bg-emerald-600 transition-colors">
                        Ouvrir l'assistant
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

{# Custom Delete Confirmation Modal #}
<div id="delete-modal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50" onclick="hideDeleteModal()"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="relative w-full max-w-md p-6 bg-white dark:bg-gray-800 rounded-2xl shadow-xl">
            <div class="text-center">
                <div class="mx-auto w-16 h-16 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mb-4">
                    <i class="text-3xl text-red-500 fas fa-exclamation-triangle"></i>
                </div>
                <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">Confirmer la suppression</h3>
                <p class="mb-6 text-gray-600 dark:text-gray-400">
                    √ätes-vous s√ªr de vouloir supprimer <span id="delete-item-name" class="font-semibold text-red-500"></span> ?
                </p>
                <div class="flex gap-3">
                    <button onclick="hideDeleteModal()" 
                            class="flex-1 px-4 py-3 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600">
                        Annuler
                    </button>
                    <a id="delete-confirm-btn" href="#"
                       class="flex-1 px-4 py-3 text-white bg-red-500 rounded-lg hover:bg-red-600 text-center">
                        Supprimer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

{# Clear All Modal #}
<div id="clear-all-modal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50" onclick="hideClearAllModal()"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="relative w-full max-w-md p-6 bg-white dark:bg-gray-800 rounded-2xl shadow-xl">
            <div class="text-center">
                <div class="mx-auto w-16 h-16 bg-orange-100 dark:bg-orange-900/30 rounded-full flex items-center justify-center mb-4">
                    <i class="text-3xl text-orange-500 fas fa-trash-alt"></i>
                </div>
                <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">Effacer tout l'historique</h3>
                <p class="mb-6 text-gray-600 dark:text-gray-400">
                    √ätes-vous s√ªr de vouloir supprimer toutes les conversations ? Cette action est irr√©versible.
                </p>
                <div class="flex gap-3">
                    <button onclick="hideClearAllModal()" 
                            class="flex-1 px-4 py-3 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600">
                        Annuler
                    </button>
                    <a href="{{ path('nutrition_ai_clear_history') }}"
                       class="flex-1 px-4 py-3 text-white bg-red-500 rounded-lg hover:bg-red-600 text-center">
                        Tout effacer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
let deleteUrl = '';

function showDeleteModal(convId, itemName) {
    document.getElementById('delete-item-name').textContent = itemName || 'cette conversation';
    document.getElementById('delete-confirm-btn').href = '/nutrition/ai-delete/' + convId;
    document.getElementById('delete-modal').classList.remove('hidden');
}

function hideDeleteModal() {
    document.getElementById('delete-modal').classList.add('hidden');
}

function showClearAllModal() {
    document.getElementById('clear-all-modal').classList.remove('hidden');
}

function hideClearAllModal() {
    document.getElementById('clear-all-modal').classList.add('hidden');
}

// Close modals on escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        hideDeleteModal();
        hideClearAllModal();
    }
});
</script>
{% endblock %}
