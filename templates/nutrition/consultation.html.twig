{% extends 'layouts/app.html.twig' %}

{% block title %}Consultation Nutritionniste - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('nutrition-css') }}
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900" x-data="nutritionConsultation()">
    {# Page Header #}
    <div class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-4 py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
                <div>
                    <h1 class="flex items-center gap-3 text-2xl font-bold text-gray-900 dark:text-white">
                        <i class="text-3xl fas fa-video text-wellcare-500"></i>
                        Consultation Vidéo
                    </h1>
                    <p class="mt-1 text-gray-600 dark:text-gray-400">Prenez rendez-vous avec votre nutritionniste</p>
                </div>
            </div>
        </div>
    </div>

    <main class="px-4 py-8 mx-auto max-w-7xl sm:px-6 lg:px-8">
        {# Nutritionist Info #}
        <div class="p-6 mb-8 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
            <div class="flex items-center gap-4">
                <div class="flex items-center justify-center w-20 h-20 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                    <i class="text-3xl fas fa-user-md text-wellcare-500"></i>
                </div>
                <div class="flex-1">
                    <h2 class="text-xl font-semibold text-gray-900 dark:text-white">{{ nutritionist.name }}</h2>
                    <p class="text-gray-500 dark:text-gray-400">{{ nutritionist.specialty }}</p>
                    <div class="flex items-center gap-2 mt-2">
                        <span class="px-2 py-1 text-xs font-medium text-green-700 bg-green-100 rounded-full dark:bg-green-900/30 dark:text-green-400">
                            <i class="mr-1 text-xs fas fa-circle"></i>
                            {{ nutritionist.status }}
                        </span>
                        <span class="text-sm text-gray-500">Prochaine disponibilité: {{ nutritionist.nextAvailable|date('d/m/Y H:i') }}</span>
                    </div>
                </div>
                <button class="px-6 py-3 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-calendar-check"></i>
                    Prendre rendez-vous
                </button>
            </div>
        </div>

        {# Upcoming Appointments #}
        <div class="bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
            <div class="p-6 border-b border-gray-100 dark:border-gray-700">
                <h3 class="font-semibold text-gray-900 dark:text-white">Prochaines consultations</h3>
            </div>
            <div class="p-6">
                {% if upcomingAppointments|length > 0 %}
                    {% for appointment in upcomingAppointments %}
                    <div class="flex items-center justify-between p-4 mb-4 border border-gray-100 rounded-lg dark:border-gray-700">
                        <div class="flex items-center gap-4">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                <i class="text-wellcare-500 fas fa-video"></i>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">{{ appointment.date|date('d/m/Y H:i') }}</p>
                                <p class="text-sm text-gray-500">{{ appointment.duration }} minutes - {{ appointment.type }}</p>
                            </div>
                        </div>
                        <span class="px-3 py-1 text-sm font-medium rounded-full
                            {% if appointment.status == 'confirmed' %}bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400
                            {% else %}bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300{% endif %}">
                            {{ appointment.status }}
                        </span>
                    </div>
                    {% endfor %}
                {% else %}
                    <div class="py-8 text-center">
                        <i class="mb-4 text-4xl text-gray-300 fas fa-calendar-xmark"></i>
                        <p class="text-gray-500 dark:text-gray-400">Aucune consultation prévue</p>
                        <button class="px-6 py-2 mt-4 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                            Planifier une consultation
                        </button>
                    </div>
                {% endif %}
            </div>
        </div>
    </main>
</div>
{% endblock %}
