                    <label class="form-label" for="foodName">Food Name</label>
                    <input type="text" class="form-input" id="foodName" name="foodName" required>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label" for="quantity">Quantity</label>
                        <input type="number" class="form-input" id="quantity" name="quantity" value="1" step="0.1" required>
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="unit">Unit</label>
                        <select class="form-input" id="unit" name="unit">
                            {% for unit in servingUnits %}
                                <option value="{{ unit }}">{{ unit|capitalize }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label" for="calories">Calories</label>
                        <input type="number" class="form-input" id="calories" name="calories" value="0">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="proteins">Protein (g)</label>
                        <input type="number" class="form-input" id="proteins" name="proteins" value="0" step="0.1">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label" for="carbs">Carbs (g)</label>
                        <input type="number" class="form-input" id="carbs" name="carbs" value="0" step="0.1">
                    </div>
                    <div class="form-group">
                        <label class="form-label" for="fats">Fats (g)</label>
                        <input type="number" class="form-input" id="fats" name="fats" value="0" step="0.1">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label" for="notes">Notes (optional)</label>
                    <input type="text" class="form-input" id="notes" name="notes" placeholder="e.g., homemade, restaurant...">
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn-cancel" onclick="closeAddFoodModal()">Cancel</button>
                    <button type="submit" class="btn-save">Add Food</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/food-logging.js') }}"></script>
    <script>
        let currentDate = new Date();
        let selectedMealType = null;
        let foodLog = {
            breakfast: [],
            lunch: [],
            dinner: [],
            snack: []
        };
        
        function changeDate(days) {
            currentDate.setDate(currentDate.getDate() + days);
            document.getElementById('currentDate').textContent = currentDate.toLocaleDateString('en-US', { 
                weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' 
            });
            loadFoodLogForDate(currentDate);
        }
        
        function goToToday() {
            currentDate = new Date();
            document.getElementById('currentDate').textContent = currentDate.toLocaleDateString('en-US', { 
                weekday: 'long', month: 'long', day: 'numeric', year: 'numeric' 
            });
            loadFoodLogForDate(currentDate);
        }
        
        function loadFoodLogForDate(date) {
            // Load food log for the selected date from server
            console.log('Loading food log for:', date.toISOString().split('T')[0]);
        }
        
        function toggleMeal(mealType) {
            const itemsContainer = document.getElementById(`${mealType}-items`);
            itemsContainer.style.display = itemsContainer.style.display === 'none' ? 'flex' : 'none';
        }
        
        function openAddFoodModal(mealType) {
            selectedMealType = mealType;
            document.getElementById('mealType').value = mealType;
            document.getElementById('addFoodModal').classList.add('active');
            document.getElementById('foodName').focus();
        }
        
        function closeAddFoodModal() {
            document.getElementById('addFoodModal').classList.remove('active');
            document.getElementById('addFoodForm').reset();
            selectedMealType = null;
        }
        
        function saveFood(event) {
            event.preventDefault();
            
            const foodData = {
                name: document.getElementById('foodName').value,
                quantity: parseFloat(document.getElementById('quantity').value),
                unit: document.getElementById('unit').value,
                calories: parseFloat(document.getElementById('calories').value) || 0,
                proteins: parseFloat(document.getElementById('proteins').value) || 0,
                carbs: parseFloat(document.getElementById('carbs').value) || 0,
                fats: parseFloat(document.getElementById('fats').value) || 0,
                notes: document.getElementById('notes').value
            };
            
            addFoodToMeal(selectedMealType, foodData);
            closeAddFoodModal();
        }
        
        function addFoodToMeal(mealType, foodData) {
            foodLog[mealType].push(foodData);
            renderFoodItems(mealType);
            updateMealCalories(mealType);
            updateTotalNutrition();
        }
        
        function renderFoodItems(mealType) {
            const container = document.getElementById(`${mealType}-items`);
            const emptyState = document.getElementById(`${mealType}-empty`);
            
            if (foodLog[mealType].length === 0) {
                emptyState.style.display = 'block';
                // Remove all food items except empty state
                container.querySelectorAll('.food-item').forEach(el => el.remove());
            } else {
                emptyState.style.display = 'none';
                container.querySelectorAll('.food-item').forEach(el => el.remove());
                
                foodLog[mealType].forEach((food, index) => {
                    const item = document.createElement('div');
                    item.className = 'food-item';
                    item.innerHTML = `
                        <div class="food-info">
                            <div class="food-name">${food.name}</div>
                            <div class="food-quantity">${food.quantity} ${food.unit}${food.notes ? ' ‚Ä¢ ' + food.notes : ''}</div>
                        </div>
                        <div class="food-calories">${Math.round(food.calories)} cal</div>
                        <div class="food-actions">
                            <button onclick="editFood('${mealType}', ${index})" title="Edit">‚úèÔ∏è</button>
                            <button class="delete" onclick="deleteFood('${mealType}', ${index})" title="Delete">üóëÔ∏è</button>
                        </div>
                    `;
                    container.appendChild(item);
                });
            }
        }
        
        function updateMealCalories(mealType) {
            const total = foodLog[mealType].reduce((sum, food) => sum + food.calories, 0);
            document.getElementById(`${mealType}-calories`).textContent = `${Math.round(total)} cal`;
        }
        
        function updateTotalNutrition() {
            let totals = { calories: 0, proteins: 0, carbs: 0, fats: 0 };
            
            Object.values(foodLog).forEach(mealFoods => {
                mealFoods.forEach(food => {
                    totals.calories += food.calories;
                    totals.proteins += food.proteins;
                    totals.carbs += food.carbs;
                    totals.fats += food.fats;
                });
            });
            
            document.getElementById('total-calories').textContent = Math.round(totals.calories);
            document.getElementById('total-proteins').textContent = Math.round(totals.proteins);
            document.getElementById('total-carbs').textContent = Math.round(totals.carbs);
            document.getElementById('total-fats').textContent = Math.round(totals.fats);
        }
        
        function deleteFood(mealType, index) {
            foodLog[mealType].splice(index, 1);
            renderFoodItems(mealType);
            updateMealCalories(mealType);
            updateTotalNutrition();
        }
        
        function editFood(mealType, index) {
            const food = foodLog[mealType][index];
            openAddFoodModal(mealType);
            document.getElementById('foodName').value = food.name;
            document.getElementById('quantity').value = food.quantity;
            document.getElementById('unit').value = food.unit;
            document.getElementById('calories').value = food.calories;
            document.getElementById('proteins').value = food.proteins;
            document.getElementById('carbs').value = food.carbs;
            document.getElementById('fats').value = food.fats;
            document.getElementById('notes').value = food.notes || '';
            deleteFood(mealType, index);
        }
        
        function quickAddFood(name, calories) {
            openAddFoodModal('snack');
            document.getElementById('foodName').value = name;
            document.getElementById('calories').value = calories;
        }
        
        function switchInputMethod(method) {
            document.querySelectorAll('.input-method-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            document.querySelector(`[data-method="${method}"]`).classList.add('active');
            
            if (method === 'barcode') {
                window.location.href = '{{ path('nutrition_barcode_scanner') }}';
            } else if (method === 'voice') {
                window.location.href = '{{ path('nutrition_voice_input') }}';
            }
        }
        
        // Search functionality
        const searchInput = document.getElementById('foodSearch');
        const searchResults = document.getElementById('searchResults');
        const recentFoods = {{ recentFoods|json_encode|raw }};
        
        searchInput.addEventListener('input', function() {
            const query = this.value.toLowerCase();
            if (query.length < 2) {
                searchResults.classList.remove('active');
                return;
            }
            
            const results = recentFoods.filter(food => 
                food.name.toLowerCase().includes(query)
            );
            
            if (results.length > 0) {
                searchResults.innerHTML = results.map(food => `
                    <div class="search-result-item" onclick="quickAddFood('${food.name}', ${food.calories})">
                        <strong>${food.name}</strong>
                        <small>${food.calories} cal</small>
                    </div>
                `).join('');
                searchResults.classList.add('active');
            } else {
                searchResults.innerHTML = '<div class="search-result-item">No foods found</div>';
                searchResults.classList.add('active');
            }
        });
        
        searchInput.addEventListener('blur', function() {
            setTimeout(() => {
                searchResults.classList.remove('active');
            }, 200);
        });
        
        // Close modal on outside click
        document.getElementById('addFoodModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeAddFoodModal();
            }
        });
    </script>
{% endblock %}
