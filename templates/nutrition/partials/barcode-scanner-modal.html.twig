<div x-show="showBarcodeScanner" 
     x-cloak
     x-transition:enter="transition ease-out duration-300"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-200"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     class="fixed inset-0 z-50 overflow-y-auto"
     @open-barcode.window="showBarcodeScanner = true"
     @keydown.escape.window="showBarcodeScanner = false">
    <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
        {# Backdrop #}
        <div x-show="showBarcodeScanner"
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0"
             x-transition:enter-end="opacity-100"
             x-transition:leave="transition ease-in duration-200"
             x-transition:leave-start="opacity-100"
             x-transition:leave-end="opacity-0"
             class="fixed inset-0 transition-opacity bg-gray-500 bg-opacity-75 dark:bg-gray-900 dark:bg-opacity-75"
             @click="showBarcodeScanner = false">
        </div>

        {# Modal #}
        <div x-show="showBarcodeScanner"
             x-transition:enter="transition ease-out duration-300"
             x-transition:enter-start="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
             x-transition:enter-end="opacity-100 translate-y-0 sm:scale-100"
             x-transition:leave="transition ease-in duration-200"
             x-transition:leave-start="opacity-100 translate-y-0 sm:scale-100"
             x-transition:leave-end="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95"
             class="relative inline-block w-full max-w-lg p-6 my-8 overflow-hidden text-left align-middle transition-all transform bg-white shadow-xl dark:bg-gray-800 rounded-2xl">
            
            {# Header #}
            <div class="flex items-center justify-between mb-6">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 text-blue-500 fas fa-barcode"></i>
                    Scanner un code-barres
                </h3>
                <button @click="showBarcodeScanner = false" class="text-gray-400 hover:text-gray-500 dark:hover:text-gray-300">
                    <i class="text-xl fas fa-times"></i>
                </button>
            </div>

            {# Camera Scanner #}
            <div class="mb-6">
                <div class="relative overflow-hidden bg-gray-900 rounded-lg aspect-video">
                    <video x-ref="scannerVideo" 
                           class="object-cover w-full h-full"
                           autoplay playsinline>
                    </video>
                    <div class="absolute inset-0 flex items-center justify-center pointer-events-none">
                        <div class="w-64 h-40 border-2 rounded-lg border-white/50">
                            <div class="absolute top-0 left-0 w-4 h-4 border-t-2 border-l-2 border-wellcare-500"></div>
                            <div class="absolute top-0 right-0 w-4 h-4 border-t-2 border-r-2 border-wellcare-500"></div>
                            <div class="absolute bottom-0 left-0 w-4 h-4 border-b-2 border-l-2 border-wellcare-500"></div>
                            <div class="absolute bottom-0 right-0 w-4 h-4 border-b-2 border-r-2 border-wellcare-500"></div>
                        </div>
                    </div>
                    <div x-show="!isScanning" 
                         class="absolute inset-0 flex items-center justify-center bg-gray-900/80">
                        <button @click="startScanner()" 
                                class="px-4 py-2 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                            <i class="mr-2 fas fa-camera"></i>
                            Démarrer le scanner
                        </button>
                    </div>
                </div>
                
                <div class="flex items-center justify-between mt-4">
                    <button @click="isScanning ? stopScanner() : startScanner()"
                            class="px-4 py-2 text-sm font-medium text-gray-700 transition-colors bg-gray-100 rounded-lg dark:text-gray-300 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600">
                        <i class="mr-2 fas" :class="isScanning ? 'fa-stop' : 'fa-play'"></i>
                        <span x-text="isScanning ? 'Arrêter' : 'Reprendre'"></span>
                    </button>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <i class="mr-1 fas fa-lightbulb"></i>
                        Positionnez le code-barres dans le cadre
                    </p>
                </div>
            </div>

            {# Manual Barcode Entry #}
            <div class="pt-4 mt-4 border-t border-gray-200 dark:border-gray-700">
                <p class="mb-3 text-xs font-medium text-gray-500 dark:text-gray-400">
                    <i class="mr-1 fas fa-pen"></i>
                    Saisie manuelle du code
                </p>
                <div class="flex gap-3">
                    <input type="text" 
                           x-model="manualBarcode"
                           placeholder="Entrez le code-barres"
                           class="flex-1 px-4 py-2 text-gray-900 bg-white border border-gray-300 rounded-lg dark:border-gray-600 focus:ring-2 focus:ring-wellcare-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                    <button @click="lookupBarcode(manualBarcode)"
                            class="px-4 py-2 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

            {# Scanned Product Info #}
            <div x-show="scannedProduct" 
                 x-transition
                 class="p-4 mt-4 border rounded-lg bg-wellcare-50 dark:bg-wellcare-900/20 border-wellcare-200 dark:border-wellcare-800">
                <div class="flex items-start gap-4">
                    <div class="flex items-center justify-center w-16 h-16 bg-white rounded-lg shadow-sm">
                        <i class="text-2xl text-gray-400 fas fa-box"></i>
                    </div>
                    <div class="flex-1">
                        <h4 class="font-medium text-gray-900 dark:text-white" x-text="scannedProduct.name"></h4>
                        <p class="text-sm text-gray-500 dark:text-gray-400" x-text="scannedProduct.brand"></p>
                        <div class="flex items-center gap-4 mt-2">
                            <span class="text-lg font-semibold text-wellcare-600 dark:text-wellcare-400" x-text="scannedProduct.calories + ' kcal'"></span>
                            <span class="text-sm text-gray-500" x-text="scannedProduct.portion + 'g'"></span>
                        </div>
                    </div>
                </div>
                <div class="flex gap-3 mt-4">
                    <button @click="addScannedProduct()"
                            class="flex-1 px-4 py-2 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="mr-1 fas fa-plus"></i>Ajouter
                    </button>
                    <button @click="scannedProduct = null"
                            class="px-4 py-2 text-gray-700 transition-colors bg-gray-100 rounded-lg dark:text-gray-300 dark:bg-gray-700 hover:bg-gray-200 dark:hover:bg-gray-600">
                        Ignorer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
