{% extends 'layouts/app.html.twig' %}

{% block title %}Nutrition Analysis - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
    <style>
        .analysis-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 24px;
        }
        
        .analysis-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
            flex-wrap: wrap;
            gap: 16px;
        }
        
        .analysis-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1f2937;
        }
        
        .period-selector {
            display: flex;
            gap: 8px;
        }
        
        .period-btn {
            padding: 8px 16px;
            background: #f3f4f6;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.2s;
        }
        
        .period-btn:hover {
            background: #e5e7eb;
        }
        
        .period-btn.active {
            background: #10b981;
            color: white;
        }
        
        .analysis-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 24px;
        }
        
        @media (max-width: 1024px) {
            .analysis-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        
        @media (max-width: 640px) {
            .analysis-grid {
                grid-template-columns: 1fr;
            }
        }
        
        .stat-card {
            background: white;
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .stat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 12px;
        }
        
        .stat-label {
            font-weight: 600;
            color: #374151;
        }
        
        .stat-trend {
            display: flex;
            align-items: center;
            gap: 4px;
            font-size: 0.875rem;
            padding: 4px 8px;
            border-radius: 20px;
        }
        
        .stat-trend.up {
            background: #fee2e2;
            color: #dc2626;
        }
        
        .stat-trend.down {
            background: #d1fae5;
            color: #059669;
        }
        
        .stat-trend.neutral {
            background: #fef3c7;
            color: #d97706;
        }
        
        .stat-value {
            font-size: 2rem;
            font-weight: 700;
            color: #1f2937;
            margin-bottom: 8px;
        }
        
        .stat-progress {
            height: 8px;
            background: #e5e7eb;
            border-radius: 4px;
            overflow: hidden;
        }
        
        .stat-progress-bar {
            height: 100%;
            border-radius: 4px;
            transition: width 0.3s ease;
        }
        
        .stat-progress-bar.success { background: #10b981; }
        .stat-progress-bar.warning { background: #f59e0b; }
        .stat-progress-bar.danger { background: #ef4444; }
        
        .stat-detail {
            display: flex;
            justify-content: space-between;
            font-size: 0.875rem;
            color: #6b7280;
            margin-top: 8px;
        }
        
        .charts-grid {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 24px;
            margin-bottom: 24px;
        }
        
        @media (max-width: 1024px) {
            .charts-grid {
                grid-template-columns: 1fr;
            }
        }
        
        .chart-card {
            background: white;
            border-radius: 20px;
            padding: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .chart-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 20px;
        }
        
        .chart-container {
            height: 300px;
            position: relative;
        }
        
        .bar-chart {
            display: flex;
            align-items: flex-end;
            justify-content: space-between;
            height: 100%;
            padding-top: 40px;
        }
        
        .bar-group {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1;
        }
        
        .bar-wrapper {
            display: flex;
            align-items: flex-end;
            gap: 4px;
            height: 200px;
        }
        
        .bar {
            width: 24px;
            border-radius: 4px 4px 0 0;
            transition: height 0.3s ease;
        }
        
        .bar.calories { background: #10b981; }
        .bar.proteins { background: #f97316; }
        
        .bar-label {
            margin-top: 8px;
            font-size: 0.75rem;
            color: #6b7280;
        }
        
        .pie-chart-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
        }
        
        .pie-chart {
            width: 200px;
            height: 200px;
            border-radius: 50%;
            background: conic-gradient(
                #10b981 0% 35%,
                #f97316 35% 55%,
                #a855f7 55% 75%,
                #3b82f6 75% 100%
            );
            position: relative;
        }
        
        .pie-chart::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 100px;
            height: 100px;
            background: white;
            border-radius: 50%;
        }
        
        .pie-legend {
            margin-left: 24px;
        }
        
        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 8px;
        }
        
        .legend-color {
            width: 16px;
            height: 16px;
            border-radius: 4px;
        }
        
        .legend-label {
            font-size: 0.875rem;
            color: #374151;
        }
        
        .insights-section {
            background: white;
            border-radius: 20px;
            padding: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 24px;
        }
        
        .insights-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 20px;
        }
        
        .insights-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 16px;
        }
        
        .insight-card {
            padding: 16px;
            border-radius: 12px;
            display: flex;
            gap: 12px;
        }
        
        .insight-card.success {
            background: #f0fdf4;
            border-left: 4px solid #10b981;
        }
        
        .insight-card.info {
            background: #eff6ff;
            border-left: 4px solid #3b82f6;
        }
        
        .insight-card.warning {
            background: #fffbeb;
            border-left: 4px solid #f59e0b;
        }
        
        .insight-card.danger {
            background: #fef2f2;
            border-left: 4px solid #ef4444;
        }
        
        .insight-icon {
            font-size: 1.5rem;
        }
        
        .insight-content {
            flex: 1;
        }
        
        .insight-message {
            font-weight: 500;
            color: #1f2937;
            margin-bottom: 4px;
        }
        
        .insight-recommendation {
            font-size: 0.875rem;
            color: #6b7280;
        }
        
        .patterns-section {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 24px;
            margin-bottom: 24px;
        }
        
        @media (max-width: 1024px) {
            .patterns-section {
                grid-template-columns: 1fr;
            }
        }
        
        .pattern-card {
            background: white;
            border-radius: 20px;
            padding: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .pattern-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 20px;
        }
        
        .meal-pattern {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px;
            background: #f9fafb;
            border-radius: 10px;
            margin-bottom: 8px;
        }
        
        .meal-name {
            font-weight: 500;
            color: #374151;
        }
        
        .meal-stats {
            display: flex;
            gap: 16px;
            font-size: 0.875rem;
            color: #6b7280;
        }
        
        .timing-bar {
            display: flex;
            height: 12px;
            background: #e5e7eb;
            border-radius: 6px;
            overflow: hidden;
            margin-top: 12px;
        }
        
        .timing-segment {
            height: 100%;
            transition: width 0.3s ease;
        }
        
        .timing-segment.morning { background: #fef3c7; }
        .timing-segment.afternoon { background: #dbeafe; }
        .timing-segment.evening { background: #e0e7ff; }
        
        .timing-labels {
            display: flex;
            justify-content: space-between;
            margin-top: 8px;
            font-size: 0.75rem;
            color: #6b7280;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="analysis-container">
        <div class="analysis-header">
            <h1 class="analysis-title">üìä Nutrition Analysis</h1>
            <div class="period-selector">
                <button class="period-btn" onclick="setPeriod('7d')">7 Days</button>
                <button class="period-btn active" onclick="setPeriod('30d')">30 Days</button>
                <button class="period-btn" onclick="setPeriod('90d')">90 Days</button>
                <button class="period-btn" onclick="setPeriod('year')">Year</button>
            </div>
        </div>
        
        <div class="analysis-grid">
            {% for macro, data in goals %}
                <div class="stat-card">
                    <div class="stat-header">
                        <span class="stat-label">
                            {% if macro == 'calories' %}üî• Calories
                            {% elseif macro == 'proteins' %}üí™ Protein
                            {% elseif macro == 'carbs' %}üçû Carbohydrates
                            {% elseif macro == 'fats' %}ü•ë Fats{% endif %}
                        </span>
                        <span class="stat-trend down">‚Üì 5%</span>
                    </div>
                    <div class="stat-value">{{ data.current }}{% if macro != 'calories' %}g{% endif %}</div>
                    <div class="stat-progress">
                        <div class="stat-progress-bar {% if data.progress >= 90 %}success{% elseif data.progress >= 70 %}warning{% else %}danger{% endif %}" 
                             style="width: {{ data.progress }}%"></div>
                    </div>
                    <div class="stat-detail">
                        <span>Target: {{ data.target }}{% if macro != 'calories' %}g{% endif %}</span>
                        <span>{{ data.progress }}%</span>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        <div class="charts-grid">
            <div class="chart-card">
                <h3 class="chart-title">Weekly Calorie & Protein Intake</h3>
                <div class="chart-container">
                    <div class="bar-chart">
                        {% for i in 0..6 %}
                            <div class="bar-group">
                                <div class="bar-wrapper">
                                    <div class="bar calories" style="height: {{ (weeklyTrends.calories[i] / 2500 * 180)|round }}px" title="{{ weeklyTrends.calories[i] }} cal"></div>
                                    <div class="bar proteins" style="height: {{ (weeklyTrends.proteins[i] / 150 * 180)|round }}px" title="{{ weeklyTrends.proteins[i] }}g"></div>
                                </div>
                                <div class="bar-label">{{ weeklyTrends.labels[i] }}</div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            
            <div class="chart-card">
                <h3 class="chart-title">Macro Distribution</h3>
                <div class="pie-chart-container">
                    <div class="pie-chart"></div>
                    <div class="pie-legend">
                        <div class="legend-item">
                            <div class="legend-color" style="background: #10b981;"></div>
                            <span class="legend-label">Protein 35%</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-color" style="background: #f97316;"></div>
                            <span class="legend-label">Carbs 20%</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-color" style="background: #a855f7;"></div>
                            <span class="legend-label">Fats 20%</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-color" style="background: #3b82f6;"></div>
                            <span class="legend-label">Other 25%</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="insights-section">
            <h3 class="insights-title">üí° Health Insights</h3>
            <div class="insights-grid">
                {% for insight in healthInsights %}
                    <div class="insight-card {{ insight.type }}">
                        <div class="insight-icon">
                            {% if insight.type == 'success' %}‚úÖ
                            {% elseif insight.type == 'info' %}‚ÑπÔ∏è
                            {% elseif insight.type == 'warning' %}‚ö†Ô∏è
                            {% else %}‚ùå{% endif %}
                        </div>
                        <div class="insight-content">
                            <div class="insight-message">{{ insight.message }}</div>
                            <div class="insight-recommendation">{{ insight.recommendation }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
        <div class="patterns-section">
            <div class="pattern-card">
                <h3 class="pattern-title">Meal Pattern Analysis</h3>
                {% for mealType, pattern in mealPatterns %}
                    <div class="meal-pattern">
                        <span class="meal-name">{{ mealType|capitalize }}</span>
                        <div class="meal-stats">
                            <span>üî• {{ pattern.avgCalories }} cal</span>
                            <span>üïê {{ pattern.avgTime }}</span>
                            <span>{% if pattern.regularity == 'high' %}‚úÖ{% elseif pattern.regularity == 'medium' %}‚ö†Ô∏è{% else %}‚ùå{% endif %} {{ pattern.regularity }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
            
            <div class="pattern-card">
                <h3 class="pattern-title">Nutrient Timing</h3>
                <div class="timing-bar">
                    <div class="timing-segment morning" style="width: 20%;"></div>
                    <div class="timing-segment afternoon" style="width: 45%;"></div>
                    <div class="timing-segment evening" style="width: 35%;"></div>
                </div>
                <div class="timing-labels">
                    <span>Morning (20%)</span>
                    <span>Afternoon (45%)</span>
                    <span>Evening (35%)</span>
                </div>
                
                <div style="margin-top: 20px;">
                    <div class="meal-pattern">
                        <span class="meal-name">üåÖ Morning</span>
                        <div class="meal-stats">
                            <span>üî• {{ nutrientTiming.morning.calories }} cal</span>
                            <span>P: {{ nutrientTiming.morning.protein }}g</span>
                            <span>C: {{ nutrientTiming.morning.carbs }}g</span>
                        </div>
                    </div>
                    <div class="meal-pattern">
                        <span class="meal-name">‚òÄÔ∏è Afternoon</span>
                        <div class="meal-stats">
                            <span>üî• {{ nutrientTiming.afternoon.calories }} cal</span>
                            <span>P: {{ nutrientTiming.afternoon.protein }}g</span>
                            <span>C: {{ nutrientTiming.afternoon.carbs }}g</span>
                        </div>
                    </div>
                    <div class="meal-pattern">
                        <span class="meal-name">üåô Evening</span>
                        <div class="meal-stats">
                            <span>üî• {{ nutrientTiming.evening.calories }} cal</span>
                            <span>P: {{ nutrientTiming.evening.protein }}g</span>
                            <span>C: {{ nutrientTiming.evening.carbs }}g</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function setPeriod(period) {
            document.querySelectorAll('.period-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // In production, fetch new data for the selected period
            console.log('Loading data for period:', period);
        }
        
        // Add animation on scroll
        document.addEventListener('DOMContentLoaded', function() {
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            });
            
            document.querySelectorAll('.stat-card, .chart-card, .insight-card').forEach(el => {
                el.style.opacity = '0';
                el.style.transform = 'translateY(20px)';
                el.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                observer.observe(el);
            });
        });
    </script>
{% endblock %}
