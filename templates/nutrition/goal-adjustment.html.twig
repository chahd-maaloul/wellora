{% extends 'layouts/app.html.twig' %}

{% block title %}Ajuster l'objectif - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8" x-data="goalAdjustment()" x-init="init()">
    <div class="max-w-4xl px-4 mx-auto">
        {# Header #}
        <div class="mb-8">
            <a href="{{ path('nutrition_goals_detail', {'id': goal.id|default(1)}) }}" class="inline-flex items-center mb-4 text-gray-500 transition-colors dark:text-gray-400 hover:text-wellcare-500">
                <i class="mr-2 fas fa-arrow-left"></i>Retour √† l'objectif
            </a>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Ajuster l'objectif</h1>
            <p class="mt-1 text-gray-500 dark:text-gray-400">{{ goal.name|default('Perte de poids √©t√© 2024') }}</p>
        </div>

        {# Adjustment Reason #}
        <div class="p-6 mb-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Raison de l'ajustement</h2>
            <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                <label class="relative flex items-center p-4 border rounded-xl cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors {% if adjustment.reason == 'plateau' %}border-wellcare-500 bg-wellcare-50 dark:bg-wellcare-900/20{% endif %}">
                    <input type="radio" name="reason" value="plateau" x-model="adjustment.reason" class="sr-only">
                    <div class="flex items-center justify-center w-10 h-10 mr-4 bg-orange-100 rounded-full dark:bg-orange-900/30">
                        <i class="text-orange-500 fas fa-stop-circle"></i>
                    </div>
                    <div>
                        <h3 class="font-medium text-gray-900 dark:text-white">Plateau de poids</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Pas de perte depuis 2+ semaines</p>
                    </div>
                    <div class="ml-auto" x-show="adjustment.reason === 'plateau'">
                        <i class="text-xl fas fa-check-circle text-wellcare-500"></i>
                    </div>
                </label>

                <label class="relative flex items-center p-4 border rounded-xl cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors {% if adjustment.reason == 'too_fast' %}border-wellcare-500 bg-wellcare-50 dark:bg-wellcare-900/20{% endif %}">
                    <input type="radio" name="reason" value="too_fast" x-model="adjustment.reason" class="sr-only">
                    <div class="flex items-center justify-center w-10 h-10 mr-4 bg-blue-100 rounded-full dark:bg-blue-900/30">
                        <i class="text-blue-500 fas fa-bolt"></i>
                    </div>
                    <div>
                        <h3 class="font-medium text-gray-900 dark:text-white">Perte trop rapide</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Perte > 1kg par semaine</p>
                    </div>
                    <div class="ml-auto" x-show="adjustment.reason === 'too_fast'">
                        <i class="text-xl fas fa-check-circle text-wellcare-500"></i>
                    </div>
                </label>

                <label class="relative flex items-center p-4 border rounded-xl cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors {% if adjustment.reason == 'difficulty' %}border-wellcare-500 bg-wellcare-50 dark:bg-wellcare-900/20{% endif %}">
                    <input type="radio" name="reason" value="difficulty" x-model="adjustment.reason" class="sr-only">
                    <div class="flex items-center justify-center w-10 h-10 mr-4 bg-red-100 rounded-full dark:bg-red-900/30">
                        <i class="text-red-500 fas fa-exclamation-circle"></i>
                    </div>
                    <div>
                        <h3 class="font-medium text-gray-900 dark:text-white">Difficult√© √† suivre</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Objectifs trop stricts</p>
                    </div>
                    <div class="ml-auto" x-show="adjustment.reason === 'difficulty'">
                        <i class="text-xl fas fa-check-circle text-wellcare-500"></i>
                    </div>
                </label>

                <label class="relative flex items-center p-4 border rounded-xl cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors {% if adjustment.reason == 'lifestyle' %}border-wellcare-500 bg-wellcare-50 dark:bg-wellcare-900/20{% endif %}">
                    <input type="radio" name="reason" value="lifestyle" x-model="adjustment.reason" class="sr-only">
                    <div class="flex items-center justify-center w-10 h-10 mr-4 bg-green-100 rounded-full dark:bg-green-900/30">
                        <i class="text-green-500 fas fa-sync-alt"></i>
                    </div>
                    <div>
                        <h3 class="font-medium text-gray-900 dark:text-white">Changement de mode de vie</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Nouvelle activit√©, etc.</p>
                    </div>
                    <div class="ml-auto" x-show="adjustment.reason === 'lifestyle'">
                        <i class="text-xl fas fa-check-circle text-wellcare-500"></i>
                    </div>
                </label>
            </div>
        </div>

        {# Current vs New Settings #}
        <div class="grid grid-cols-1 gap-6 mb-6 lg:grid-cols-2">
            {# Current Settings #}
            <div class="p-6 bg-gray-100 dark:bg-gray-800/50 rounded-2xl">
                <h3 class="flex items-center mb-4 text-lg font-bold text-gray-900 dark:text-white">
                    <i class="mr-2 text-gray-400 fas fa-cog"></i>Param√®tres actuels
                </h3>
                <div class="space-y-4">
                    <div class="flex items-center justify-between py-2 border-b border-gray-200 dark:border-gray-700">
                        <span class="text-gray-500 dark:text-gray-400">Calories quotidiennes</span>
                        <span class="font-semibold text-gray-900 dark:text-white">{{ goal.dailyCalories|default(1800) }} kcal</span>
                    </div>
                    <div class="flex items-center justify-between py-2 border-b border-gray-200 dark:border-gray-700">
                        <span class="text-gray-500 dark:text-gray-400">Prot√©ines</span>
                        <span class="font-semibold text-gray-900 dark:text-white">{{ goal.macroProtein|default(120) }}g ({{ goal.macroProteinPercent|default(27) }}%)</span>
                    </div>
                    <div class="flex items-center justify-between py-2 border-b border-gray-200 dark:border-gray-700">
                        <span class="text-gray-500 dark:text-gray-400">Glucides</span>
                        <span class="font-semibold text-gray-900 dark:text-white">{{ goal.macroCarbs|default(200) }}g ({{ goal.macroCarbsPercent|default(44) }}%)</span>
                    </div>
                    <div class="flex items-center justify-between py-2 border-b border-gray-200 dark:border-gray-700">
                        <span class="text-gray-500 dark:text-gray-400">Lipides</span>
                        <span class="font-semibold text-gray-900 dark:text-white">{{ goal.macroFats|default(60) }}g ({{ goal.macroFatsPercent|default(29) }}%)</span>
                    </div>
                    <div class="flex items-center justify-between py-2 border-b border-gray-200 dark:border-gray-700">
                        <span class="text-gray-500 dark:text-gray-400">Date cible</span>
                        <span class="font-semibold text-gray-900 dark:text-white">{{ goal.targetDate|default('+45 days')|date('d/m/Y') }}</span>
                    </div>
                    <div class="flex items-center justify-between py-2">
                        <span class="text-gray-500 dark:text-gray-400">‰ΩìÈáçÁõÆÊ®ô</span>
                        <span class="font-semibold text-gray-900 dark:text-white">{{ goal.targetWeight|default(72.0) }} kg</span>
                    </div>
                </div>
            </div>

            {# New Settings #}
            <div class="p-6 bg-white border-2 dark:bg-gray-800 rounded-2xl border-wellcare-500">
                <h3 class="flex items-center mb-4 text-lg font-bold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-sliders-h text-wellcare-500"></i>Nouveaux param√®tres
                </h3>
                
                <div class="space-y-4">
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Calories quotidiennes</label>
                        <div class="flex items-center gap-4">
                            <input type="range" min="1400" max="2500" step="50" 
                                   x-model="adjustment.dailyCalories" 
                                   class="flex-1 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-gray-700">
                            <input type="number" min="1400" max="2500" step="50" 
                                   x-model="adjustment.dailyCalories"
                                   class="w-24 px-3 py-2 font-semibold text-center border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                            <span class="text-gray-500">kcal</span>
                        </div>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">R√©partition des macros</label>
                        <div class="flex gap-2 mb-2">
                            <button @click="adjustment.macroPreset = 'balanced'" 
                                    class="flex-1 px-3 py-2 text-sm font-medium transition-colors rounded-lg"
                                    :class="adjustment.macroPreset === 'balanced' ? 'bg-wellcare-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300'">
                                √âquilibr√©
                            </button>
                            <button @click="adjustment.macroPreset = 'high_protein'" 
                                    class="flex-1 px-3 py-2 text-sm font-medium transition-colors rounded-lg"
                                    :class="adjustment.macroPreset === 'high_protein' ? 'bg-wellcare-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300'">
                                Prot√©ines √©lev√©es
                            </button>
                            <button @click="adjustment.macroPreset = 'low_carb'" 
                                    class="flex-1 px-3 py-2 text-sm font-medium transition-colors rounded-lg"
                                    :class="adjustment.macroPreset === 'low_carb' ? 'bg-wellcare-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300'">
                                Low carb
                            </button>
                        </div>
                        <div class="grid grid-cols-3 gap-4 text-center">
                            <div>
                                <span class="text-xs text-gray-500 dark:text-gray-400">Prot√©ines</span>
                                <p class="font-bold text-wellcare-500" x-text="getMacros().protein + 'g (' + getMacros().proteinPercent + '%)'"></p>
                            </div>
                            <div>
                                <span class="text-xs text-gray-500 dark:text-gray-400">Glucides</span>
                                <p class="font-bold text-blue-500" x-text="getMacros().carbs + 'g (' + getMacros().carbsPercent + '%)'"></p>
                            </div>
                            <div>
                                <span class="text-xs text-gray-500 dark:text-gray-400">Lipides</span>
                                <p class="font-bold text-amber-500" x-text="getMacros().fats + 'g (' + getMacros().fatsPercent + '%)'"></p>
                            </div>
                        </div>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Nouvelle date cible</label>
                        <input type="date" x-model="adjustment.targetDate" 
                               class="w-full px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                            Nouveau d√©lai: <span x-text="getDaysRemaining()"></span> jours
                        </p>
                    </div>

                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Nouveau poids cible</label>
                        <div class="flex items-center gap-4">
                            <input type="range" min="60" max="85" step="0.5" 
                                   x-model="adjustment.targetWeight" 
                                   class="flex-1 h-2 bg-gray-200 rounded-lg appearance-none cursor-pointer dark:bg-gray-700">
                            <input type="number" min="60" max="85" step="0.5" 
                                   x-model="adjustment.targetWeight"
                                   class="w-20 px-3 py-2 font-semibold text-center border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                            <span class="text-gray-500">kg</span>
                        </div>
                        <p class="mt-1 text-sm" :class="adjustment.targetWeight < goal.targetWeight ? 'text-blue-500' : 'text-amber-500'">
                            <span x-show="adjustment.targetWeight < goal.targetWeight">ü°á <span x-text="(goal.targetWeight - adjustment.targetWeight).toFixed(1)"></span> kg de plus √† perdre</span>
                            <span x-show="adjustment.targetWeight > goal.targetWeight">ü°Ö <span x-text="(adjustment.targetWeight - goal.targetWeight).toFixed(1)"></span> kg en moins √† perdre</span>
                            <span x-show="adjustment.targetWeight == goal.targetWeight">‰ΩìÈáçÁõÆÊ®ôÁ∂≠ÊåÅ</span>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        {# Adjustment Summary #}
        <div class="p-6 mb-6 border bg-wellcare-50 dark:bg-wellcare-900/20 border-wellcare-200 dark:border-wellcare-800 rounded-2xl">
            <h3 class="mb-4 text-lg font-bold text-wellcare-600 dark:text-wellcare-400">
                <i class="mr-2 fas fa-info-circle"></i>R√©capitulatif des modifications
            </h3>
            <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
                <div class="flex items-center gap-2">
                    <i class="text-gray-400 fas fa-thermometer-half"></i>
                    <span class="text-gray-600 dark:text-gray-300">Calories:</span>
                    <span class="font-semibold" :class="adjustment.dailyCalories !== {{ goal.dailyCalories|default(1800) }} ? 'text-blue-500' : 'text-gray-500'">
                        {{ goal.dailyCalories|default(1800) }} ‚Üí <span x-text="adjustment.dailyCalories"></span> kcal
                    </span>
                </div>
                <div class="flex items-center gap-2">
                    <i class="text-gray-400 fas fa-calendar-alt"></i>
                    <span class="text-gray-600 dark:text-gray-300">Date cible:</span>
                    <span class="font-semibold" :class="adjustment.targetDate !== '{{ goal.targetDate|default('+45 days')|date('Y-m-d') }}' ? 'text-blue-500' : 'text-gray-500'">
                        {{ goal.targetDate|default('+45 days')|date('d/m/Y') }} ‚Üí <span x-text="formatDate(adjustment.targetDate)"></span>
                    </span>
                </div>
                <div class="flex items-center gap-2">
                    <i class="text-gray-400 fas fa-weight"></i>
                    <span class="text-gray-600 dark:text-gray-300">Objectif:</span>
                    <span class="font-semibold" :class="adjustment.targetWeight !== {{ goal.targetWeight|default(72.0) }} ? 'text-blue-500' : 'text-gray-500'">
                        {{ goal.targetWeight|default(72.0) }} ‚Üí <span x-text="adjustment.targetWeight"></span> kg
                    </span>
                </div>
            </div>
            <div class="p-3 mt-4 border border-blue-200 rounded-lg bg-blue-50 dark:bg-blue-900/20 dark:border-blue-800">
                <p class="text-sm text-blue-600 dark:text-blue-400">
                    <i class="mr-1 fas fa-lightbulb"></i>
                    <strong>Conseil:</strong> 
                    <span x-text="getAdvice()"></span>
                </p>
            </div>
        </div>

        {# Action Buttons #}
        <div class="flex items-center justify-between">
            <a href="{{ path('nutrition_goals_detail', {'id': goal.id|default(1)}) }}" 
               class="px-6 py-3 font-medium text-gray-700 transition-colors border border-gray-300 rounded-xl dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                <i class="mr-2 fas fa-times"></i>Annuler
            </a>
            <div class="flex gap-3">
                <button type="button" 
                        @click="saveDraft()"
                        class="px-6 py-3 font-medium text-gray-700 transition-colors border border-gray-300 rounded-xl dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                    <i class="mr-2 fas fa-save"></i>Enregistrer le brouillon
                </button>
                <button type="button" 
                        @click="submitAdjustment()"
                        class="px-6 py-3 font-medium text-white transition-colors rounded-xl bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-check"></i>Confirmer les modifications
                </button>
            </div>
        </div>

        {# Adjustment History #}
        <div class="p-6 mt-8 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Historique des ajustements</h2>
            <div class="space-y-3">
                {% for adjustment in adjustments|default([]) %}
                <div class="flex items-center gap-4 p-3 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                    <div class="w-10 h-10 rounded-full flex items-center justify-center {% if adjustment.impact == 'positive' %}bg-green-100 dark:bg-green-900/30 text-green-500{% else %}bg-amber-100 dark:bg-amber-900/30 text-amber-500{% endif %}">
                        <i class="fas {% if adjustment.impact == 'positive' %}fa-arrow-up{% else %}fa-arrow-down{% endif %}"></i>
                    </div>
                    <div class="flex-1">
                        <h4 class="font-medium text-gray-900 dark:text-white">{{ adjustment.reason }}</h4>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ adjustment.description }}</p>
                    </div>
                    <span class="text-sm text-gray-500 dark:text-gray-400">{{ adjustment.date|date('d/m/Y') }}</span>
                </div>
                {% else %}
                    <div class="flex items-center gap-4 p-3 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                        <div class="flex items-center justify-center w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30 text-wellcare-500">
                            <i class="fas fa-plus"></i>
                        </div>
                        <div class="flex-1">
                            <h4 class="font-medium text-gray-900 dark:text-white">Aucun ajustement pr√©c√©dent</h4>
                            <p class="text-sm text-gray-500 dark:text-gray-400">C'est votre premier ajustement pour cet objectif</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/nutrition-goals.js') }}"></script>
{% endblock %}
