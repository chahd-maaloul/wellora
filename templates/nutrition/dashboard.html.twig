        <div class="px-4 py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
                <div>
                    <h1 class="flex items-center gap-3 text-2xl font-bold text-gray-900 dark:text-white">
                        <i class="text-3xl fas fa-utensils text-wellcare-500"></i>
                        Tableau de Bord Nutrition
                    </h1>
                    <p class="mt-1 text-gray-600 dark:text-gray-400">Suivez votre alimentation quotidienne</p>
                </div>
                <div class="flex items-center gap-3">
                    <a href="{{ path('nutrition_quick_log') }}" 
                       class="inline-flex items-center px-4 py-2 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="mr-2 fas fa-plus"></i>
                        Ajout Rapide
                    </a>
                    <a href="{{ path('nutrition_ai_assistant') }}" 
                       class="inline-flex items-center px-4 py-2 text-white transition-colors rounded-lg bg-gradient-to-r from-emerald-500 to-teal-600 hover:from-emerald-600 hover:to-teal-700">
                        <i class="mr-2 fas fa-robot"></i>
                        AI Assistant
                    </a>
                </div>
            </div>
        </div>
    </div>

    <main class="px-4 py-8 mx-auto max-w-7xl sm:px-6 lg:px-8">
        {# Summary Cards #}
        <div class="grid grid-cols-1 gap-6 mb-8 md:grid-cols-4">
            {# Calories Card #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Calories</h3>
                    <span class="text-2xl">üî•</span>
                </div>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-bold text-gray-900 dark:text-white">{{ calories.consumed|default(0) }}</span>
                    <span class="text-sm text-gray-500">/ {{ calories.target|default(2000) }}</span>
                </div>
                <div class="mt-3 w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                    <div class="bg-wellcare-500 h-2 rounded-full" style="width: {{ calories.target > 0 ? min(100, (calories.consumed / calories.target) * 100) : 0 }}%"></div>
                </div>
            </div>

            {# Protein Card #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Prot√©ines</h3>
                    <span class="text-2xl">ü•©</span>
                </div>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-bold text-gray-900 dark:text-white">{{ macros.proteins|default(0) }}g</span>
                    <span class="text-sm text-gray-500">/ {{ nutritionGoal.proteinTarget|default(120) }}g</span>
                </div>
                <div class="mt-3 w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                    <div class="bg-amber-500 h-2 rounded-full" style="width: {{ nutritionGoal.proteinTarget > 0 ? min(100, (macros.proteins / nutritionGoal.proteinTarget) * 100) : 0 }}%"></div>
                </div>
            </div>

            {# Carbs Card #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Glucides</h3>
                    <span class="text-2xl">üçû</span>
                </div>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-bold text-gray-900 dark:text-white">{{ macros.carbs|default(0) }}g</span>
                    <span class="text-sm text-gray-500">/ {{ nutritionGoal.carbsTarget|default(250) }}g</span>
                </div>
                <div class="mt-3 w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                    <div class="bg-green-500 h-2 rounded-full" style="width: {{ nutritionGoal.carbsTarget > 0 ? min(100, (macros.carbs / nutritionGoal.carbsTarget) * 100) : 0 }}%"></div>
                </div>
            </div>

            {# Fats Card #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-sm font-medium text-gray-500 dark:text-gray-400">Lipides</h3>
                    <span class="text-2xl">üßà</span>
                </div>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-bold text-gray-900 dark:text-white">{{ macros.fats|default(0) }}g</span>
                    <span class="text-sm text-gray-500">/ {{ nutritionGoal.fatsTarget|default(70) }}g</span>
                </div>
                <div class="mt-3 w-full bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                    <div class="bg-purple-500 h-2 rounded-full" style="width: {{ nutritionGoal.fatsTarget > 0 ? min(100, (macros.fats / nutritionGoal.fatsTarget) * 100) : 0 }}%"></div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
            {# Today's Meals #}
            <div class="lg:col-span-2 space-y-6">
                {% for mealType, mealData in meals %}
                    {% if mealData.items|length > 0 %}
                        <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
                            <div class="flex items-center justify-between mb-4">
                                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                                    {% if mealType == 'breakfast' %}
                                        <i class="mr-2 text-orange-500 fas fa-coffee"></i>Petit-d√©jeuner
                                    {% elseif mealType == 'lunch' %}
                                        <i class="mr-2 text-yellow-500 fas fa-sun"></i>D√©jeuner
                                    {% elseif mealType == 'dinner' %}
                                        <i class="mr-2 text-indigo-500 fas fa-moon"></i>D√Æner
                                    {% else %}
                                        <i class="mr-2 text-pink-500 fas fa-cookie-bite"></i>Collation
                                    {% endif %}
                                </h3>
                                <span class="text-sm font-medium text-gray-500">{{ mealData.calories }} kcal</span>
                            </div>
                            
                            <div class="space-y-3">
                                {% for item in mealData.items %}
                                    <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                        <div class="flex-1">
                                            <p class="font-medium text-gray-900 dark:text-white">{{ item.name }}</p>
                                            <p class="text-sm text-gray-500">
                                                {{ item.calories }} kcal | 
                                                P: {{ item.protein }}g | 
                                                G: {{ item.carbs }}g | 
                                                L: {{ item.fats }}g
                                            </p>
                                        </div>
                                        <div class="flex items-center gap-1">
                                            <a href="{{ path('nutrition_food_edit', { id: item.id }) }}" 
                                               class="text-blue-500 hover:text-blue-700 p-2" title="Modifier">
                                                <i class="fas fa-edit text-xs"></i>
                                            </a>
                                            <a href="{{ path('nutrition_food_delete', { id: item.id }) }}" 
                                               class="text-red-500 hover:text-red-700 p-2"
                                               onclick="showDeleteModal(event, '{{ path('nutrition_food_delete', { id: item.id }) }}', '{{ item.name|escape('js') }}')">
                                                <i class="fas fa-times text-xs"></i>
                                            </a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}

                {# Add Meal Buttons #}
                <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
                    <a href="{{ path('nutrition_quick_log', { meal: 'breakfast' }) }}" 
                       class="p-4 text-center transition-all border-2 border-orange-200 rounded-xl hover:border-orange-400 hover:bg-orange-50 dark:border-gray-700 dark:hover:border-orange-600 dark:hover:bg-orange-900/20">
                        <i class="mb-2 text-2xl text-orange-500 fas fa-coffee"></i>
                        <p class="text-sm font-medium text-gray-700 dark:text-gray-300">Petit-d√©jeuner</p>
                    </a>
                    <a href="{{ path('nutrition_quick_log', { meal: 'lunch' }) }}" 
                       class="p-4 text-center transition-all border-2 border-yellow-200 rounded-xl hover:border-yellow-400 hover:bg-yellow-50 dark:border-gray-700 dark:hover:border-yellow-600 dark:hover:bg-yellow-900/20">
                        <i class="mb-2 text-2xl text-yellow-500 fas fa-sun"></i>
                        <p class="text-sm font-medium text-gray-700 dark:text-gray-300">D√©jeuner</p>
                    </a>
                    <a href="{{ path('nutrition_quick_log', { meal: 'dinner' }) }}" 
                       class="p-4 text-center transition-all border-2 border-indigo-200 rounded-xl hover:border-indigo-400 hover:bg-indigo-50 dark:border-gray-700 dark:hover:border-indigo-600 dark:hover:bg-indigo-900/20">
                        <i class="mb-2 text-2xl text-indigo-500 fas fa-moon"></i>
                        <p class="text-sm font-medium text-gray-700 dark:text-gray-300">D√Æner</p>
                    </a>
                    <a href="{{ path('nutrition_quick_log', { meal: 'snacks' }) }}" 
                       class="p-4 text-center transition-all border-2 border-pink-200 rounded-xl hover:border-pink-400 hover:bg-pink-50 dark:border-gray-700 dark:hover:border-pink-600 dark:hover:bg-pink-900/20">
                        <i class="mb-2 text-2xl text-pink-500 fas fa-cookie-bite"></i>
                        <p class="text-sm font-medium text-gray-700 dark:text-gray-300">Collation</p>
                    </a>
                </div>
            </div>

            {# AI Quick Actions #}
            <div class="p-6 bg-gradient-to-r from-emerald-50 to-teal-50 dark:from-emerald-900/20 dark:to-teal-900/20 border border-emerald-200 dark:border-emerald-800 rounded-xl">
                <div class="flex items-center justify-between mb-4">
                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 text-emerald-500 fas fa-robot"></i>
                        Assistant AI
                    </h3>
                    <a href="{{ path('nutrition_ai_insights') }}" class="text-sm text-emerald-600 dark:text-emerald-400 hover:underline">
                        Voir analyses ‚Üí
                    </a>
                </div>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-3">
                    <a href="{{ path('nutrition_ai_assistant', {'_fragment': 'ask'}) }}?message=recette" 
                       class="p-3 bg-white dark:bg-gray-800 rounded-lg hover:shadow-md transition-all text-center">
                        <span class="text-2xl block mb-1">üç≥</span>
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300">Recettes</span>
                    </a>
                    <a href="{{ path('nutrition_ai_assistant') }}?message=menu semaine" 
                       class="p-3 bg-white dark:bg-gray-800 rounded-lg hover:shadow-md transition-all text-center">
                        <span class="text-2xl block mb-1">üìÖ</span>
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300">Menu</span>
                    </a>
                    <a href="{{ path('nutrition_ai_assistant') }}?message=perdre du poids" 
                       class="p-3 bg-white dark:bg-gray-800 rounded-lg hover:shadow-md transition-all text-center">
                        <span class="text-2xl block mb-1">‚öñÔ∏è</span>
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300">Perte poids</span>
                    </a>
                    <a href="{{ path('nutrition_ai_recommendations') }}" 
                       class="p-3 bg-white dark:bg-gray-800 rounded-lg hover:shadow-md transition-all text-center">
                        <span class="text-2xl block mb-1">üí°</span>
                        <span class="text-xs font-medium text-gray-700 dark:text-gray-300">Conseils</span>
                    </a>
                </div>
            </div>

            {# Sidebar #}
            <div class="space-y-6">
                {# Water Intake #}
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
                    <h3 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 text-blue-500 fas fa-tint"></i>
                        Hydratation
                    </h3>
                    <div class="text-center">
                        <div class="relative inline-block mb-4">
                            <svg class="w-32 h-32 transform -rotate-90">
                                <circle cx="64" cy="64" r="56" stroke="currentColor" stroke-width="12" fill="none" class="text-gray-200 dark:text-gray-700"/>
                                {% set waterPercent = water.target > 0 ? (water.intake / water.target * 100) : 0 %}
                                {% set waterColor = waterPercent >= 100 ? 'text-green-500' : 'text-blue-500' %}
                                <circle cx="64" cy="64" r="56" stroke="currentColor" stroke-width="12" fill="none" 
                                        stroke-dasharray="{{ water.target * 35 }}"
                                        stroke-dashoffset="{{ water.target * 35 - (water.intake / water.target * water.target * 35)|round }}"
                                        class="{{ waterColor }} transition-all duration-500"/>
                            </svg>
                            <div class="absolute inset-0 flex items-center justify-center">
                                <span class="text-3xl font-bold {{ waterPercent >= 100 ? 'text-green-500' : 'text-gray-900 dark:text-white' }}">{{ water.intake|default(0) }}</span>
                            </div>
                        </div>
                        <p class="text-gray-600 dark:text-gray-400">/ {{ water.target|default(8) }} verres</p>
                        {% if waterPercent >= 100 %}
                        <div class="mt-3 px-4 py-2 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full animate-pulse">
                            <p class="text-white font-bold text-sm">
                                <i class="fas fa-trophy mr-1"></i>
                                Objectif atteint! üéâ
                            </p>
                        </div>
                        {% endif %}
                    </div>
                    <div class="grid grid-cols-4 gap-2 mt-4">
                        {% for i in 1..4 %}
                            <form method="post" action="{{ path('nutrition_water_quick_add') }}">
                                <input type="hidden" name="glasses" value="{{ i }}">
                                <button type="submit" class="w-full px-3 py-2 text-sm font-medium text-blue-600 bg-blue-50 rounded-lg hover:bg-blue-100 dark:bg-blue-900/30 dark:text-blue-400 dark:hover:bg-blue-900/50">
                                    +{{ i }}
                                </button>
                            </form>
                        {% endfor %}
                    </div>
                </div>

                {# Quick Links #}
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
                    <h3 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 text-wellcare-500 fas fa-bolt"></i>
                        Acc√®s Rapide
                    </h3>
                    <div class="space-y-2">
                        <a href="{{ path('nutrition_meal_planner') }}" class="flex items-center gap-3 p-3 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                            <i class="text-wellcare-500 fas fa-calendar-alt"></i>
                            <span class="text-gray-700 dark:text-gray-300">Planificateur</span>
                        </a>
                        <a href="{{ path('nutrition_goals') }}" class="flex items-center gap-3 p-3 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                            <i class="text-wellcare-500 fas fa-target"></i>
                            <span class="text-gray-700 dark:text-gray-300">Objectifs</span>
                        </a>
                        <a href="{{ path('nutrition_food_diary') }}" class="flex items-center gap-3 p-3 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                            <i class="text-wellcare-500 fas fa-book"></i>
                            <span class="text-gray-700 dark:text-gray-300">Journal</span>
                        </a>
                        <a href="{{ path('nutrition_nutrition_recipes') }}" class="flex items-center gap-3 p-3 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                            <i class="text-wellcare-500 fas fa-book-open"></i>
                            <span class="text-gray-700 dark:text-gray-300">Recettes</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

{# Custom Delete Confirmation Modal #}
<div id="delete-modal" class="fixed inset-0 z-50 hidden">
    <div class="absolute inset-0 bg-black/50" onclick="hideDeleteModal()"></div>
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="relative w-full max-w-md p-6 bg-white dark:bg-gray-800 rounded-2xl shadow-xl">
            <div class="text-center">
                <div class="mx-auto w-16 h-16 bg-red-100 dark:bg-red-900/30 rounded-full flex items-center justify-center mb-4">
                    <i class="text-3xl text-red-500 fas fa-exclamation-triangle"></i>
                </div>
                <h3 class="mb-2 text-xl font-bold text-gray-900 dark:text-white">Confirmer la suppression</h3>
                <p class="mb-6 text-gray-600 dark:text-gray-400">
                    √ätes-vous s√ªr de vouloir supprimer <span id="delete-item-name" class="font-semibold text-red-500"></span> ?
                </p>
                <div class="flex gap-3">
                    <button onclick="hideDeleteModal()" 
                            class="flex-1 px-4 py-3 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600">
                        Annuler
                    </button>
                    <a id="delete-confirm-btn" href="#"
                       class="flex-1 px-4 py-3 text-white bg-red-500 rounded-lg hover:bg-red-600">
                        Supprimer
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
let deleteUrl = '';

function showDeleteModal(event, url, itemName) {
    event.preventDefault();
    deleteUrl = url;
    document.getElementById('delete-item-name').textContent = itemName;
    document.getElementById('delete-confirm-btn').href = url;
    document.getElementById('delete-modal').classList.remove('hidden');
}

function hideDeleteModal() {
    document.getElementById('delete-modal').classList.add('hidden');
    deleteUrl = '';
}

// Close modal on escape key
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        hideDeleteModal();
    }
});
</script>

