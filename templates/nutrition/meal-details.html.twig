{% extends 'layouts/app.html.twig' %}

{% block title %}Meal Details - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
    <style>
        .meal-details-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 24px;
        }
        
        .meal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }
        
        .meal-title {
            font-size: 1.75rem;
            font-weight: 700;
            color: #1f2937;
        }
        
        .meal-meta {
            display: flex;
            gap: 16px;
            color: #6b7280;
            font-size: 0.875rem;
        }
        
        .meal-meta-item {
            display: flex;
            align-items: center;
            gap: 6px;
        }
        
        .meal-card {
            background: white;
            border-radius: 20px;
            padding: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 24px;
        }
        
        .meal-info-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 16px;
            margin-bottom: 24px;
        }
        
        @media (max-width: 768px) {
            .meal-info-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        
        .info-box {
            background: #f9fafb;
            padding: 16px;
            border-radius: 12px;
            text-align: center;
        }
        
        .info-label {
            font-size: 0.75rem;
            color: #6b7280;
            margin-bottom: 4px;
        }
        
        .info-value {
            font-size: 1.25rem;
            font-weight: 700;
            color: #1f2937;
        }
        
        .food-list {
            border-top: 1px solid #e5e7eb;
            padding-top: 24px;
        }
        
        .food-list-title {
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 16px;
        }
        
        .food-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 16px;
            background: #f9fafb;
            border-radius: 12px;
            margin-bottom: 12px;
        }
        
        .food-main {
            flex: 1;
        }
        
        .food-name {
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 4px;
        }
        
        .food-quantity {
            font-size: 0.875rem;
            color: #6b7280;
        }
        
        .food-macros {
            display: flex;
            gap: 16px;
            margin-right: 24px;
        }
        
        .macro-item {
            text-align: center;
        }
        
        .macro-value {
            font-weight: 600;
            color: #374151;
        }
        
        .macro-label {
            font-size: 0.75rem;
            color: #9ca3af;
        }
        
        .food-calories {
            font-size: 1.25rem;
            font-weight: 700;
            color: #10b981;
            min-width: 80px;
            text-align: right;
        }
        
        .serving-reference {
            background: white;
            border-radius: 20px;
            padding: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 24px;
        }
        
        .reference-title {
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 16px;
        }
        
        .reference-grid {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 12px;
        }
        
        @media (max-width: 768px) {
            .reference-grid {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        
        .reference-item {
            background: #f9fafb;
            padding: 16px;
            border-radius: 12px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .reference-item:hover {
            background: #e5e7eb;
        }
        
        .reference-item.active {
            background: #10b981;
            color: white;
        }
        
        .reference-icon {
            font-size: 2rem;
            margin-bottom: 8px;
        }
        
        .reference-name {
            font-weight: 500;
            font-size: 0.875rem;
        }
        
        .meal-notes {
            background: white;
            border-radius: 20px;
            padding: 24px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 24px;
        }
        
        .notes-title {
            font-weight: 600;
            color: #1f2937;
            margin-bottom: 16px;
        }
        
        .notes-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
        }
        
        @media (max-width: 768px) {
            .notes-grid {
                grid-template-columns: 1fr;
            }
        }
        
        .form-group {
            margin-bottom: 16px;
        }
        
        .form-label {
            display: block;
            font-weight: 500;
            color: #374151;
            margin-bottom: 8px;
        }
        
        .form-select {
            width: 100%;
            padding: 12px;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            font-size: 1rem;
            background: white;
            cursor: pointer;
        }
        
        .form-select:focus {
            outline: none;
            border-color: #10b981;
        }
        
        .form-input {
            width: 100%;
            padding: 12px;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            font-size: 1rem;
        }
        
        .form-input:focus {
            outline: none;
            border-color: #10b981;
        }
        
        .form-textarea {
            width: 100%;
            min-height: 100px;
            padding: 12px;
            border: 2px solid #e5e7eb;
            border-radius: 10px;
            font-size: 1rem;
            resize: vertical;
        }
        
        .form-textarea:focus {
            outline: none;
            border-color: #10b981;
        }
        
        .meal-actions {
            display: flex;
            gap: 12px;
        }
        
        .meal-btn {
            flex: 1;
            padding: 14px;
            border: none;
            border-radius: 12px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .meal-btn.primary {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
        }
        
        .meal-btn.secondary {
            background: #f3f4f6;
            color: #374151;
        }
        
        .meal-btn:hover {
            transform: translateY(-2px);
        }
        
        .preparation-methods {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
        }
        
        .prep-method {
            padding: 8px 16px;
            background: #f3f4f6;
            border: 2px solid transparent;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s;
            font-size: 0.875rem;
        }
        
        .prep-method:hover {
            background: #e5e7eb;
        }
        
        .prep-method.active {
            background: #10b981;
            color: white;
        }
        
        .hunger-selector {
            display: flex;
            gap: 8px;
        }
        
        .hunger-option {
            flex: 1;
            padding: 12px;
            background: #f9fafb;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .hunger-option:hover {
            border-color: #10b981;
        }
        
        .hunger-option.active {
            border-color: #10b981;
            background: #d1fae5;
        }
        
        .hunger-emoji {
            font-size: 1.5rem;
            margin-bottom: 4px;
        }
        
        .hunger-label {
            font-size: 0.75rem;
            color: #6b7280;
        }
        
        .hunger-option.active .hunger-label {
            color: #059669;
        }
        
        .mood-selector {
            display: grid;
            grid-template-columns: repeat(6, 1fr);
            gap: 8px;
        }
        
        @media (max-width: 768px) {
            .mood-selector {
                grid-template-columns: repeat(3, 1fr);
            }
        }
        
        .mood-option {
            padding: 12px;
            background: #f9fafb;
            border: 2px solid #e5e7eb;
            border-radius: 8px;
            text-align: center;
            cursor: pointer;
            transition: all 0.2s;
        }
        
        .mood-option:hover {
            border-color: #10b981;
        }
        
        .mood-option.active {
            border-color: #10b981;
            background: #d1fae5;
        }
        
        .mood-emoji {
            font-size: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="meal-details-container">
        <div class="meal-header">
            <div>
                <h1 class="meal-title">üçΩÔ∏è Meal Details</h1>
                <div class="meal-meta">
                    <span class="meal-meta-item">üìÖ {{ meal.date|date('l, F j, Y') }}</span>
                    <span class="meal-meta-item">üïê {{ meal.time|date('H:i') }}</span>
                    <span class="meal-meta-item">üî• {{ meal.totalCalories }} cal</span>
                </div>
            </div>
            <a href="{{ path('nutrition_food_logger') }}" class="add-to-log" style="width: auto; padding: 10px 20px;">
                ‚Üê Back
            </a>
        </div>
        
        <div class="meal-card">
            <div class="meal-info-grid">
                <div class="info-box">
                    <div class="info-label">Calories</div>
                    <div class="info-value">{{ meal.totalCalories }}</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Protein</div>
                    <div class="info-value">{{ foodEntries|reduce((sum, entry) => sum + entry.proteins, 0)|round }}g</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Carbs</div>
                    <div class="info-value">{{ foodEntries|reduce((sum, entry) => sum + entry.carbs, 0)|round }}g</div>
                </div>
                <div class="info-box">
                    <div class="info-label">Fats</div>
                    <div class="info-value">{{ foodEntries|reduce((sum, entry) => sum + entry.fats, 0)|round }}g</div>
                </div>
            </div>
            
            <div class="food-list">
                <h3 class="food-list-title">Food Items</h3>
                {% for entry in foodEntries %}
                    <div class="food-item">
                        <div class="food-main">
                            <div class="food-name">{{ entry.name }}</div>
                            <div class="food-quantity">{{ entry.quantity }} {{ entry.unit }}</div>
                        </div>
                        <div class="food-macros">
                            <div class="macro-item">
                                <div class="macro-value">{{ entry.proteins }}g</div>
                                <div class="macro-label">P</div>
                            </div>
                            <div class="macro-item">
                                <div class="macro-value">{{ entry.carbs }}g</div>
                                <div class="macro-label">C</div>
                            </div>
                            <div class="macro-item">
                                <div class="macro-value">{{ entry.fats }}g</div>
                                <div class="macro-label">F</div>
                            </div>
                        </div>
                        <div class="food-calories">{{ entry.calories }} cal</div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
        <div class="serving-reference">
            <h3 class="reference-title">Serving Size Reference</h3>
            <div class="reference-grid">
                {% for ref in servingVisualReferences %}
                    <div class="reference-item" data-size="{{ ref.name }}">
                        <div class="reference-icon">{{ ref.icon }}</div>
                        <div class="reference-name">{{ ref.name }}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
        
        <div class="meal-notes">
            <h3 class="notes-title">Meal Context</h3>
            <div class="notes-grid">
                <div class="form-group">
                    <label class="form-label">Hunger Level</label>
                    <div class="hunger-selector" id="hungerSelector">
                        {% for level in hungerLevels %}
                            <div class="hunger-option" data-level="{{ level }}" onclick="selectHunger('{{ level }}')">
                                <div class="hunger-emoji">
                                    {% if level == 'very-low' %}üòî{% elseif level == 'low' %}üòï{% elseif level == 'medium' %}üòê{% elseif level == 'high' %}üôÇ{% elseif level == 'very-high' %}üòã{% endif %}
                                </div>
                                <div class="hunger-label">{{ level|capitalize }}</div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Mood</label>
                    <div class="mood-selector" id="moodSelector">
                        {% for mood in moods %}
                            <div class="mood-option" data-mood="{{ mood }}" onclick="selectMood('{{ mood }}')">
                                <div class="mood-emoji">
                                    {% if mood == 'sad' %}üòî{% elseif mood == 'neutral' %}üòê{% elseif mood == 'happy' %}üòä{% elseif mood == 'stressed' %}üò∞{% elseif mood == 'energetic' %}‚ö°{% elseif mood == 'tired' %}üò¥{% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Preparation Method</label>
                    <div class="preparation-methods" id="prepMethods">
                        {% for method in preparationMethods %}
                            <div class="prep-method" data-method="{{ method|lower }}" onclick="selectPrepMethod('{{ method|lower }}')">
                                {{ method }}
                            </div>
                        {% endfor %}
                    </div>
                </div>
                
                <div class="form-group">
                    <label class="form-label">Location</label>
                    <input type="text" class="form-input" id="location" placeholder="e.g., Home, Restaurant, Office" value="{{ meal.location }}">
                </div>
                
                <div class="form-group full-width">
                    <label class="form-label">Notes</label>
                    <textarea class="form-textarea" id="notes" placeholder="Add any notes about this meal...">{{ meal.notes }}</textarea>
                </div>
            </div>
        </div>
        
        <div class="meal-actions">
            <button class="meal-btn secondary" onclick="deleteMeal()">üóëÔ∏è Delete Meal</button>
            <button class="meal-btn primary" onclick="saveMealDetails()">üíæ Save Changes</button>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        let selectedHunger = '{{ meal.hungerLevel }}';
        let selectedMood = '{{ meal.mood }}';
        let selectedPrepMethod = '{{ meal.preparationMethod }}';
        
        function selectHunger(level) {
            selectedHunger = level;
            document.querySelectorAll('.hunger-option').forEach(opt => {
                opt.classList.toggle('active', opt.dataset.level === level);
            });
        }
        
        function selectMood(mood) {
            selectedMood = mood;
            document.querySelectorAll('.mood-option').forEach(opt => {
                opt.classList.toggle('active', opt.dataset.mood === mood);
            });
        }
        
        function selectPrepMethod(method) {
            selectedPrepMethod = method;
            document.querySelectorAll('.prep-method').forEach(opt => {
                opt.classList.toggle('active', opt.dataset.method === method);
            });
        }
        
        function saveMealDetails() {
            const mealData = {
                id: {{ meal.id }},
                hungerLevel: selectedHunger,
                mood: selectedMood,
                preparationMethod: selectedPrepMethod,
                location: document.getElementById('location').value,
                notes: document.getElementById('notes').value
            };
            
            // Save to localStorage
            const logKey = `meal_{{ meal.id }}_details`;
            localStorage.setItem(logKey, JSON.stringify(mealData));
            
            alert('Meal details saved!');
        }
        
        function deleteMeal() {
            if (confirm('Are you sure you want to delete this meal? This action cannot be undone.')) {
                // In production, send delete request to server
                window.location.href = '{{ path('nutrition_food_logger') }}';
            }
        }
        
        // Initialize selections
        document.addEventListener('DOMContentLoaded', function() {
            if (selectedHunger) {
                selectHunger(selectedHunger);
            }
            if (selectedMood) {
                selectMood(selectedMood);
            }
            if (selectedPrepMethod) {
                selectPrepMethod(selectedPrepMethod);
            }
        });
    </script>
{% endblock %}
