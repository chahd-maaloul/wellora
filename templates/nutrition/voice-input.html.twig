{% block javascripts %}
    {{ parent() }}
    <script>
        let isRecording = false;
        let recognition = null;
        let finalTranscript = '';
        
        function initSpeechRecognition() {
            if ('webkitSpeechRecognition' in window) {
                recognition = new webkitSpeechRecognition();
            } else if ('SpeechRecognition' in window) {
                recognition = new SpeechRecognition();
            } else {
                document.getElementById('voiceStatus').textContent = 'Speech recognition not supported';
                document.getElementById('voiceButton').disabled = true;
                return;
            }
            
            recognition.continuous = true;
            recognition.interimResults = true;
            recognition.lang = 'fr-FR';
            
            recognition.onstart = function() {
                isRecording = true;
                document.getElementById('voiceButton').classList.add('listening');
                document.getElementById('recordingIndicator').classList.add('active');
                document.getElementById('voiceStatus').textContent = 'Listening...';
                document.getElementById('voiceHint').textContent = 'Speak now, describe your meal';
            };
            
            recognition.onresult = function(event) {
                let interimTranscript = '';
                
                for (let i = event.resultIndex; i < event.results.length; i++) {
                    if (event.results[i].isFinal) {
                        finalTranscript += event.results[i][0].transcript;
                    } else {
                        interimTranscript += event.results[i][0].transcript;
                    }
                }
                
                document.getElementById('voiceTranscript').value = finalTranscript + interimTranscript;
            };
            
            recognition.onerror = function(event) {
                console.error('Speech recognition error:', event.error);
                stopRecording();
                document.getElementById('voiceStatus').textContent = 'Error: ' + event.error;
            };
            
            recognition.onend = function() {
                if (isRecording) {
                    // Restart if still should be recording
                    recognition.start();
                }
            };
        }
        
        function toggleRecording() {
            if (!recognition) {
                initSpeechRecognition();
            }
            
            if (isRecording) {
                stopRecording();
            } else {
                startRecording();
            }
        }
        
        function startRecording() {
            finalTranscript = document.getElementById('voiceTranscript').value;
            recognition.start();
        }
        
        function stopRecording() {
            isRecording = false;
            recognition.stop();
            document.getElementById('voiceButton').classList.remove('listening');
            document.getElementById('recordingIndicator').classList.remove('active');
            document.getElementById('voiceStatus').textContent = 'Tap to start speaking';
            document.getElementById('voiceHint').textContent = 'Describe your meal naturally';
        }
        
        function clearTranscript() {
            document.getElementById('voiceTranscript').value = '';
            finalTranscript = '';
            document.getElementById('parsedResults').style.display = 'none';
        }
        
        function loadEntry(text) {
            document.getElementById('voiceTranscript').value = text;
            finalTranscript = text;
        }
        
        function processTranscript() {
            const transcript = document.getElementById('voiceTranscript').value.trim();
            
            if (!transcript) {
                alert('Please speak or type what you ate first.');
                return;
            }
            
            document.getElementById('voiceStatus').textContent = 'Processing...';
            
            // Simulated NLP processing - replace with actual NLP service
            setTimeout(() => {
                const parsedFoods = parseFoodDescription(transcript);
                displayParsedResults(parsedFoods);
                document.getElementById('voiceStatus').textContent = 'Processing complete';
            }, 1000);
        }
        
        function parseFoodDescription(text) {
            // Simulated NLP - in production, use a proper NLP service
            const commonFoods = {
                'caf√©': { calories: 5, proteins: 0.3, carbs: 0, fats: 0 },
                'coffee': { calories: 5, proteins: 0.3, carbs: 0, fats: 0 },
                'pain': { calories: 80, proteins: 3, carbs: 15, fats: 1 },
                'bread': { calories: 80, proteins: 3, carbs: 15, fats: 1 },
                'oeuf': { calories: 78, proteins: 6, carbs: 0.6, fats: 5 },
                'egg': { calories: 78, proteins: 6, carbs: 0.6, fats: 5 },
                'pomme': { calories: 95, proteins: 0.5, carbs: 25, fats: 0.3 },
                'apple': { calories: 95, proteins: 0.5, carbs: 25, fats: 0.3 },
                'banane': { calories: 105, proteins: 1.3, carbs: 27, fats: 0.4 },
                'banana': { calories: 105, proteins: 1.3, carbs: 27, fats: 0.4 },
                'yaourt': { calories: 120, proteins: 10, carbs: 6, fats: 6 },
                'yogurt': { calories: 120, proteins: 10, carbs: 6, fats: 6 },
                'poulet': { calories: 165, proteins: 31, carbs: 0, fats: 3.6 },
                'chicken': { calories: 165, proteins: 31, carbs: 0, fats: 3.6 },
                'riz': { calories: 130, proteins: 2.7, carbs: 28, fats: 0.3 },
                'rice': { calories: 130, proteins: 2.7, carbs: 28, fats: 0.3 },
                'salade': { calories: 20, proteins: 1, carbs: 3, fats: 0.2 },
                'salad': { calories: 20, proteins: 1, carbs: 3, fats: 0.2 }
            };
            
            // Detect meal type
            let mealType = 'snack';
            const lowerText = text.toLowerCase();
            
            if (lowerText.includes('breakfast') || lowerText.includes('d√©jeuner') || lowerText.includes('petit-d√©jeuner')) {
                mealType = 'breakfast';
            } else if (lowerText.includes('lunch') || lowerText.includes('d√©jeuner')) {
                mealType = 'lunch';
            } else if (lowerText.includes('dinner') || lowerText.includes('d√Æner') || lowerText.includes('diner')) {
                mealType = 'dinner';
            }
            
            // Detect quantities
            const numberMap = {
                'un': 1, 'une': 1, 'one': 1,
                'deux': 2, 'two': 2,
                'trois': 3, 'three': 3,
                'quatre': 4, 'four': 4,
                'cinq': 5, 'five': 5,
                'six': 6, 'six': 6,
                'sept': 7, 'seven': 7,
                'huit': 8, 'eight': 8,
                'neuf': 9, 'nine': 9,
                'dix': 10, 'ten': 10
            };
            
            // Parse foods from text (simplified)
            const words = text.toLowerCase().split(/\s+/);
            const foods = [];
            let i = 0;
            
            while (i < words.length) {
                // Check for quantity
                let quantity = 1;
                if (numberMap[words[i]]) {
                    quantity = numberMap[words[i]];
                    i++;
                } else if (/^\d+$/.test(words[i])) {
                    quantity = parseInt(words[i]);
                    i++;
                }
                
                // Check for unit
                let unit = 'serving';
                const units = ['tasse', 'cup', 'verre', 'glass', 'assiette', 'plate', 'portion', 'slice', 'tranche', 'piece', 'morceau'];
                if (units.includes(words[i])) {
                    unit = words[i];
                    i++;
                }
                
                // Find food name
                let foodName = '';
                while (i < words.length && !numberMap[words[i]] && !/^\d+$/.test(words[i])) {
                    foodName += words[i] + ' ';
                    i++;
                }
                
                foodName = foodName.trim();
                
                // Check if it's a known food
                for (const [key, data] of Object.entries(commonFoods)) {
                    if (foodName.includes(key) || key.includes(foodName)) {
                        foods.push({
                            name: foodName || key,
                            quantity: quantity,
                            unit: unit,
                            calories: Math.round(data.calories * quantity),
                            proteins: (data.proteins * quantity).toFixed(1),
                            carbs: (data.carbs * quantity).toFixed(1),
                            fats: (data.fats * quantity).toFixed(1),
                            mealType: mealType
                        });
                        break;
                    }
                }
            }
            
            // Default entry if nothing parsed
            if (foods.length === 0) {
                foods.push({
                    name: text.substring(0, 30) + '...',
                    quantity: 1,
                    unit: 'serving',
                    calories: 0,
                    proteins: 0,
                    carbs: 0,
                    fats: 0,
                    mealType: mealType
                });
            }
            
            return foods;
        }
        
        function displayParsedResults(foods) {
            const container = document.getElementById('parsedItems');
            const resultsSection = document.getElementById('parsedResults');
            
            container.innerHTML = foods.map((food, index) => `
                <div class="parsed-item">
                    <div class="parsed-header">
                        <span class="parsed-text">"{{ food.name }}"</span>
                        <span class="parsed-status success">‚úì Parsed</span>
                    </div>
                    <div class="parsed-entries">
                        <div class="parsed-entry">
                            <span class="entry-name">${food.quantity} ${food.unit} ${food.name}</span>
                            <div class="entry-details">
                                <span class="entry-calories">${food.calories} cal</span>
                                <span class="entry-meal">${food.mealType}</span>
                            </div>
                        </div>
                    </div>
                </div>
            `).join('');
            
            resultsSection.style.display = 'block';
            
            // Save to localStorage
            saveParsedFoods(foods);
        }
        
        function saveParsedFoods(foods) {
            const logKey = `foodLog_${new Date().toISOString().split('T')[0]}`;
            let foodLog = JSON.parse(localStorage.getItem(logKey) || '{}');
            
            foods.forEach(food => {
                const mealType = food.mealType;
                if (!foodLog[mealType]) {
                    foodLog[mealType] = [];
                }
                foodLog[mealType].push({
                    name: food.name,
                    quantity: food.quantity,
                    unit: food.unit,
                    calories: food.calories,
                    proteins: food.proteins,
                    carbs: food.carbs,
                    fats: food.fats
                });
            });
            
            localStorage.setItem(logKey, JSON.stringify(foodLog));
        }
        
        // Initialize speech recognition on page load
        document.addEventListener('DOMContentLoaded', function() {
            initSpeechRecognition();
        });
    </script>
