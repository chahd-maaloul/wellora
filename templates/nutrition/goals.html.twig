{% extends 'layouts/app.html.twig' %}

{% block title %}Objectifs Nutritionnels - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('nutrition-css') }}
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    {# Page Header #}
    <div class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-4 py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
                <div>
                    <h1 class="flex items-center gap-3 text-2xl font-bold text-gray-900 dark:text-white">
                        <i class="text-3xl fas fa-bullseye text-wellcare-500"></i>
                        Objectifs Nutritionnels
                    </h1>
                    <p class="mt-1 text-gray-600 dark:text-gray-400">Définissez et suivez vos objectifs alimentaires</p>
                </div>
                <div class="flex items-center gap-3">
                    <a href="{{ path('nutrition_dashboard') }}" 
                       class="inline-flex items-center px-4 py-2 text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                        <i class="mr-2 fas fa-arrow-left"></i>
                        Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    <main class="px-4 py-8 mx-auto max-w-7xl sm:px-6 lg:px-8">
        {# Form Section - Uses Symfony Form #}
        <div class="grid grid-cols-1 gap-8 mb-8">
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-sliders-h text-wellcare-500"></i>
                    Définir vos objectifs
                </h2>
                
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                
                {# Calories and Water #}
                <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                    <div>
                        {{ form_label(form.caloriesTarget, 'Calories (kcal)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.caloriesTarget, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wellcare-500 focus:border-wellcare-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                        {{ form_errors(form.caloriesTarget, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                        <p class="mt-1 text-xs text-gray-500">Apport calorique quotidien recommandé</p>
                    </div>
                    
                    <div>
                        {{ form_label(form.waterTarget, "Verres d'eau", {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.waterTarget, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                        {{ form_errors(form.waterTarget, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                        <p class="mt-1 text-xs text-gray-500">Nombre de verres d'eau par jour</p>
                    </div>
                </div>
                
                {# Macronutrients #}
                <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                    <div>
                        {{ form_label(form.proteinTarget, 'Protéines (g)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.proteinTarget, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500 focus:border-amber-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                        {{ form_errors(form.proteinTarget, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.carbsTarget, 'Glucides (g)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.carbsTarget, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                        {{ form_errors(form.carbsTarget, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.fatsTarget, 'Lipides (g)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.fatsTarget, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-purple-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                        {{ form_errors(form.fatsTarget, {'attr': {'class': 'mt-1 text-sm text-red-600'}}) }}
                    </div>
                </div>
                
                {# Additional nutrients #}
                <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                    <div>
                        {{ form_label(form.fiberTarget, 'Fibres (g)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.fiberTarget, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.sugarTarget, 'Sucre (g)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.sugarTarget, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.sodiumTarget, 'Sodium (mg)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.sodiumTarget, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                    </div>
                </div>
                
                {# Weight tracking #}
                <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                    <div>
                        {{ form_label(form.startWeight, 'Poids de départ (kg)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.startWeight, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wellcare-500 focus:border-wellcare-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.currentWeight, 'Poids actuel (kg)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.currentWeight, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wellcare-500 focus:border-wellcare-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                    </div>
                    
                    <div>
                        {{ form_label(form.weightTarget, 'Poids objectif (kg)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.weightTarget, {'attr': {'class': 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wellcare-500 focus:border-wellcare-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white'}}) }}
                    </div>
                </div>
                
                {# Activity Level #}
                <div>
                    {{ form_label(form.activityLevel, "Niveau d'activité", {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                    <select name="activityLevel" id="activityLevel" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-wellcare-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white">
                        <option value="sedentary" {% if nutritionGoal.activityLevel == 'sedentary' %}selected{% endif %}>Sédentaire (peu ou pas d'exercice)</option>
                        <option value="light" {% if nutritionGoal.activityLevel == 'light' %}selected{% endif %}>Légèrement actif (1-3 jours/semaine)</option>
                        <option value="moderate" {% if nutritionGoal.activityLevel == 'moderate' %}selected{% endif %}>Modérément actif (3-5 jours/semaine)</option>
                        <option value="active" {% if nutritionGoal.activityLevel == 'active' %}selected{% endif %}>Très actif (6-7 jours/semaine)</option>
                        <option value="very_active" {% if nutritionGoal.activityLevel == 'very_active' %}selected{% endif %}>Extrêmement actif (exercice intense)</option>
                    </select>
                </div>
                
                {# Submit #}
                <div class="flex justify-end pt-4 border-t border-gray-200 dark:border-gray-700">
                    {{ form_widget(form.save, {'attr': {'class': 'px-6 py-3 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600'}}) }}
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>

        {# Current Goals Summary #}
        <div class="grid grid-cols-1 gap-6 mb-8 md:grid-cols-2 lg:grid-cols-4">
            {# Calories #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-500">Calories</span>
                    <i class="fas fa-fire text-wellcare-500"></i>
                </div>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">
                    {{ nutritionGoal.caloriesTarget|default(2000) }} <span class="text-sm font-normal text-gray-500">kcal</span>
                </p>
                <div class="w-full h-2 mt-3 bg-gray-200 rounded-full dark:bg-gray-700">
                    <div class="h-2 rounded-full bg-wellcare-500" style="width: 100%"></div>
                </div>
            </div>
            
            {# Water #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-500">Eau</span>
                    <i class="text-blue-500 fas fa-glass-water"></i>
                </div>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">
                    {{ nutritionGoal.waterTarget|default(8) }} <span class="text-sm font-normal text-gray-500">verres</span>
                </p>
                <p class="mt-1 text-xs text-gray-500">2L recommandés</p>
            </div>
            
            {# Proteins #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-500">Protéines</span>
                    <i class="text-amber-500 fas fa-drumstick-bite"></i>
                </div>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">
                    {{ nutritionGoal.proteinTarget|default(120) }} <span class="text-sm font-normal text-gray-500">g</span>
                </p>
            </div>
            
            {# Carbs #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <div class="flex items-center justify-between mb-2">
                    <span class="text-sm font-medium text-gray-500">Glucides</span>
                    <i class="text-green-500 fas fa-bread-slice"></i>
                </div>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">
                    {{ nutritionGoal.carbsTarget|default(200) }} <span class="text-sm font-normal text-gray-500">g</span>
                </p>
            </div>
        </div>

        {# Weight Progress #}
        {% if nutritionGoal.startWeight and nutritionGoal.currentWeight and nutritionGoal.weightTarget %}
        <div class="p-6 mb-8 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
                <i class="mr-2 text-blue-500 fas fa-weight-scale"></i>
                Progression du poids
            </h2>
            
            <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
                <div class="text-center">
                    <p class="text-sm text-gray-500">Poids de départ</p>
                    <p class="text-2xl font-bold text-gray-900 dark:text-white">{{ nutritionGoal.startWeight }} kg</p>
                </div>
                <div class="text-center">
                    <p class="text-sm text-gray-500">Poids actuel</p>
                    <p class="text-2xl font-bold text-wellcare-500">{{ nutritionGoal.currentWeight }} kg</p>
                </div>
                <div class="text-center">
                    <p class="text-sm text-gray-500">Poids objectif</p>
                    <p class="text-2xl font-bold text-green-500">{{ nutritionGoal.weightTarget }} kg</p>
                </div>
            </div>
            
            {% set weightLost = (nutritionGoal.startWeight - nutritionGoal.currentWeight)|abs %}
            {% set weightToGo = (nutritionGoal.currentWeight - nutritionGoal.weightTarget)|abs %}
            {% set progress = ((nutritionGoal.startWeight - nutritionGoal.currentWeight) / (nutritionGoal.startWeight - nutritionGoal.weightTarget) * 100)|round %}
            
            <div class="mt-6">
                <div class="flex justify-between text-sm mb-2">
                    <span class="text-gray-500">{{ weightLost }} kg perdus</span>
                    <span class="text-gray-500">{{ weightToGo }} kg restants</span>
                </div>
                <div class="w-full h-4 bg-gray-200 rounded-full dark:bg-gray-700">
                    <div class="h-4 rounded-full bg-wellcare-500" style="width: {{ progress }}%"></div>
                </div>
                <p class="mt-2 text-sm text-center text-gray-500">{{ progress }}% de progression</p>
            </div>
        </div>
        {% endif %}

        {# Streaks & Achievements #}
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
            {# Streaks #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 text-orange-500 fas fa-fire"></i>
                    Series et succès
                </h2>
                
                <div class="grid grid-cols-3 gap-4">
                    <div class="p-4 text-center rounded-lg bg-orange-50 dark:bg-orange-900/20">
                        <p class="text-3xl font-bold text-orange-600">{{ streaks.logging|default(7) }}</p>
                        <p class="text-xs text-gray-500">Jours consécutifs</p>
                        <i class="mt-2 text-orange-500 fas fa-check-circle"></i>
                    </div>
                    <div class="p-4 text-center rounded-lg bg-blue-50 dark:bg-blue-900/20">
                        <p class="text-3xl font-bold text-blue-600">{{ streaks.water|default(5) }}</p>
                        <p class="text-xs text-gray-500">Jours hydraté</p>
                        <i class="mt-2 text-blue-500 fas fa-glass-water"></i>
                    </div>
                    <div class="p-4 text-center rounded-lg bg-green-50 dark:bg-green-900/20">
                        <p class="text-3xl font-bold text-green-600">{{ streaks.veggies|default(3) }}</p>
                        <p class="text-xs text-gray-500">Jours légumes</p>
                        <i class="mt-2 text-green-500 fas fa-carrot"></i>
                    </div>
                </div>
            </div>
            
            {# Info Card #}
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-info-circle text-wellcare-500"></i>
                    Conseils nutritionnels
                </h2>
                
                <ul class="space-y-3 text-sm text-gray-600 dark:text-gray-400">
                    <li class="flex items-start">
                        <i class="mt-1 mr-2 text-wellcare-500 fas fa-check"></i>
                        <span>Buvez au moins 8 verres d'eau par jour</span>
                    </li>
                    <li class="flex items-start">
                        <i class="mt-1 mr-2 text-wellcare-500 fas fa-check"></i>
                        <span>Mangez 5 portions de fruits et légumes</span>
                    </li>
                    <li class="flex items-start">
                        <i class="mt-1 mr-2 text-wellcare-500 fas fa-check"></i>
                        <span>Limitez le sucre à moins de 25g par jour</span>
                    </li>
                    <li class="flex items-start">
                        <i class="mt-1 mr-2 text-wellcare-500 fas fa-check"></i>
                        <span>Consommez des protéines à chaque repas</span>
                    </li>
                    <li class="flex items-start">
                        <i class="mt-1 mr-2 text-wellcare-500 fas fa-check"></i>
                        <span>Évitez les aliments transformés</span>
                    </li>
                </ul>
            </div>
        </div>
    </main>
</div>

{# Floating AI Chat Button #}
{% include 'nutrition/_ai-floating-button.html.twig' %}
{% endblock %}
