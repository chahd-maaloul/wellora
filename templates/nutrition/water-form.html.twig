{% extends 'layouts/app.html.twig' %}

{% block title %}Ajouter de l'eau - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('nutrition-css') }}
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    {# Page Header #}
    <div class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-4 py-6 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
                <div>
                    <h1 class="flex items-center gap-3 text-2xl font-bold text-gray-900 dark:text-white">
                        <i class="text-3xl fas fa-glass-water text-blue-500"></i>
                        Ajouter de l'eau
                    </h1>
                    <p class="mt-1 text-gray-600 dark:text-gray-400">Suivez votre hydratation quotidienne</p>
                </div>
                <div class="flex items-center gap-3">
                    <a href="{{ path('nutrition_dashboard') }}" 
                       class="inline-flex items-center px-4 py-2 text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                        <i class="mr-2 fas fa-arrow-left"></i>
                        Retour
                    </a>
                </div>
            </div>
        </div>
    </div>

    <main class="px-4 py-8 mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="max-w-md mx-auto">
            {# Current Water Intake Display #}
            <div class="mb-8 text-center">
                <div class="inline-flex items-center justify-center w-32 h-32 mb-4 bg-blue-100 rounded-full dark:bg-blue-900/30">
                    <div class="text-center">
                        <span class="text-4xl font-bold text-blue-600 dark:text-blue-400">{{ currentGlasses|default(0) }}</span>
                        <span class="block text-sm text-blue-600 dark:text-blue-400">verres</span>
                    </div>
                </div>
                <p class="text-gray-600 dark:text-gray-400">
                    {% if currentGlasses|default(0) < 8 %}
                        Il vous reste {{ 8 - currentGlasses|default(0) }} verres à boire aujourd'hui
                    {% elseif currentGlasses|default(0) == 8 %}
                        Vous avez atteint votre objectif quotidien!
                    {% else %}
                        Vous avez dépassé votre objectif quotidien!
                    {% endif %}
                </p>
            </div>

            {# Water Form #}
            <div class="bg-white border border-gray-100 shadow-sm dark:bg-gray-800 dark:border-gray-700 rounded-xl">
                <div class="p-6">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    
                    {# Glasses Field #}
                    <div>
                        {{ form_label(form.glasses, 'Nombre de verres', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        {{ form_widget(form.glasses, {'attr': {'class': 'w-full px-4 py-2 text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                        {{ form_errors(form.glasses, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
                        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                            <i class="mr-1 fas fa-info-circle"></i>
                            Un verre = environ 250ml
                        </p>
                    </div>

                    {# Milliliters Field (Optional) #}
                    <div>
                        {{ form_label(form.milliliters, 'Millilitres (optionnel)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2'}}) }}
                        <div class="relative">
                            {{ form_widget(form.milliliters, {'attr': {'class': 'w-full px-4 py-2 pr-12 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500', 'placeholder': 'Quantité supplémentaire en ml'}}) }}
                            <span class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400 text-sm">
                                ml
                            </span>
                        </div>
                        {{ form_errors(form.milliliters, {'attr': {'class': 'mt-1 text-sm text-red-600 dark:text-red-400'}}) }}
                    </div>

                    {# Quick Add Links - No JavaScript Version #}
                    <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
                        <p class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">Ajout rapide:</p>
                        <div class="flex flex-wrap gap-2">
                            <a href="{{ path('nutrition_water_set', { glasses: (currentGlasses|default(0) + 1) }) }}" 
                               class="px-4 py-2 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/30">
                                +1 verre
                            </a>
                            <a href="{{ path('nutrition_water_set', { glasses: (currentGlasses|default(0) + 2) }) }}" 
                               class="px-4 py-2 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/30">
                                +2 verres
                            </a>
                            <a href="{{ path('nutrition_water_set', { glasses: (currentGlasses|default(0) + 3) }) }}" 
                               class="px-4 py-2 text-sm font-medium text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 rounded-lg hover:bg-blue-100 dark:hover:bg-blue-900/30">
                                +3 verres
                            </a>
                        </div>
                    </div>

                    {# Submit Button #}
                    <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
                        <div class="flex items-center gap-4">
                            <a href="{{ path('nutrition_dashboard') }}" 
                               class="flex-1 px-6 py-3 text-center text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                                Annuler
                            </a>
                            {{ form_widget(form.save, {'attr': {'class': 'flex-1 px-6 py-3 text-white transition-colors text-center rounded-lg bg-blue-500 hover:bg-blue-600 focus:ring-4 focus:ring-blue-300 dark:focus:ring-blue-800'}}) }}
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>

            {# Hydration Tips #}
            <div class="mt-6 p-4 bg-blue-50 dark:bg-blue-900/20 rounded-xl">
                <h3 class="font-semibold text-blue-800 dark:text-blue-300 mb-2">
                    <i class="mr-2 fas fa-lightbulb"></i>
                    Conseils d'hydratation
                </h3>
                <ul class="text-sm text-blue-700 dark:text-blue-400 space-y-1">
                    <li>• Buvez un verre d'eau au réveil</li>
                    <li>• Buvez avant chaque repas</li>
                    <li>• Gardez une bouteille d'eau à portée de main</li>
                    <li>• Ajoutez des citron ou concombre pour plus de goût</li>
                </ul>
            </div>
        </div>
    </main>
</div>

{% endblock %}
