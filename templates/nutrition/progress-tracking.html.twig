{% extends 'layouts/app.html.twig' %}

{% block title %}Suivi de progression - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8">
    <div class="max-w-6xl px-4 mx-auto">
        {# Header #}
        <div class="mb-8">
            <a href="{{ path('nutrition_goals') }}" class="inline-flex items-center mb-4 text-gray-500 transition-colors dark:text-gray-400 hover:text-wellcare-500">
                <i class="mr-2 fas fa-arrow-left"></i>Retour aux objectifs
            </a>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Suivi de progression</h1>
            <p class="mt-1 text-gray-500 dark:text-gray-400">{{ nutritionGoal.name|default('Objectif Nutritionnel') }}</p>
        </div>

        {# Overview Cards #}
        <div class="grid grid-cols-1 gap-4 mb-8 md:grid-cols-2 lg:grid-cols-4">
            {# Weight Progress #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                        <i class="text-xl fas fa-weight text-wellcare-500"></i>
                    </div>
                    <span class="px-2 py-1 text-xs font-medium text-green-600 bg-green-100 rounded-full dark:bg-green-900/30 dark:text-green-400">
                        -3.5 kg
                    </span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Poids</h3>
                <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-bold text-wellcare-500">{{ weeklyData[6].calories|default(0) }}</span>
                    <span class="text-gray-500 dark:text-gray-400">kcal aujourd'hui</span>
                </div>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Objectif: {{ nutritionGoal.caloriesTarget|default(2000) }} kcal</p>
            </div>

            {# Adherence #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full dark:bg-blue-900/30">
                        <i class="text-xl text-blue-500 fas fa-chart-pie"></i>
                    </div>
                    <span class="px-2 py-1 text-xs font-medium text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900/30 dark:text-blue-400">
                        {{ ((averages.calories / max(nutritionGoal.caloriesTarget|default(2000), 1)) * 100)|round }}%
                    </span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Adh√©sion</h3>
                <div class="mt-2">
                    <div class="flex items-baseline gap-2">
                        <span class="text-3xl font-bold text-blue-500">{{ averages.caloriesPercent|default(87) }}</span>
                        <span class="text-gray-500 dark:text-gray-400">%</span>
                    </div>
                </div>
                <div class="flex gap-1 mt-2">
                    {% for day in weeklyData|default([]) %}
                    {% set dayAdherence = ((day.calories / (day.calorieTarget > 0 ? day.calorieTarget : 1)) * 100)|round %}
                    <div class="w-6 h-2 rounded-full {% if dayAdherence >= 80 %}bg-wellcare-500{% elseif dayAdherence >= 60 %}bg-yellow-500{% else %}bg-red-500{% endif %}" 
                         title="{{ dayAdherence }}%"></div>
                    {% endfor %}
                </div>
            </div>

            {# Calories Average #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-amber-100 dark:bg-amber-900/30">
                        <i class="text-xl fas fa-fire text-amber-500"></i>
                    </div>
                    <span class="text-xs font-medium px-2 py-1 rounded-full bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400">
                        {{ ((averages.calories / max(nutritionGoal.caloriesTarget|default(2000), 1)) * 100)|round }}%
                    </span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Calories</h3>
                <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-bold text-amber-500">{{ averages.calories|default(0) }}</span>
                    <span class="text-gray-500 dark:text-gray-400">kcal/jour</span>
                </div>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Objectif: {{ nutritionGoal.caloriesTarget|default(2000) }} kcal</p>
            </div>

            {# Streak #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center justify-center w-12 h-12 bg-orange-100 rounded-full dark:bg-orange-900/30">
                        <i class="text-xl text-orange-500 fas fa-fire"></i>
                    </div>
                    <span class="px-2 py-1 text-xs font-medium text-orange-600 bg-orange-100 rounded-full dark:bg-orange-900/30 dark:text-orange-400">
                        Record: {{ max(streaks.logging, streaks.water)|default(0) }}j
                    </span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">S√©rie actuelle</h3>
                <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-bold text-orange-500">{{ streaks.logging|default(0) }}</span>
                    <span class="text-gray-500 dark:text-gray-400">jours</span>
                </div>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">üî• Continuez comme √ßa !</p>
            </div>
        </div>

        {# Charts Row #}
        <div class="grid grid-cols-1 gap-6 mb-8 lg:grid-cols-2">
            {# Weight Evolution Chart #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">√âvolution du poids</h2>
                <div class="h-64 flex items-end justify-around gap-2 px-4">
                    {% for day in weeklyData|default([]) %}
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-full bg-gray-100 dark:bg-gray-700 rounded-t-lg relative" style="height: 150px;">
                            <div class="absolute bottom-0 w-full bg-wellcare-500 rounded-t-lg" style="height: {{ min([((day.calories / (day.calorieTarget > 0 ? day.calorieTarget : 1)) * 100), 100]) }}%"></div>
                        </div>
                        <span class="text-xs mt-2 text-gray-500 dark:text-gray-400">{{ day.dayShort|default('') }}</span>
                    </div>
                    {% endfor %}
                </div>
                <div class="flex justify-center gap-6 mt-4 text-sm">
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 rounded-full bg-wellcare-500"></div>
                        <span class="text-gray-600 dark:text-gray-300">Calories</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 bg-gray-300 rounded-full dark:bg-gray-600"></div>
                        <span class="text-gray-600 dark:text-gray-300">Objectif</span>
                    </div>
                </div>
            </div>

            {# Calories Chart #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Calories quotidiennes</h2>
                <div class="h-64 flex items-end justify-around gap-2 px-4">
                    {% for day in weeklyData|default([]) %}
                    <div class="flex flex-col items-center flex-1">
                        <div class="w-full bg-gray-100 dark:bg-gray-700 rounded-t-lg relative" style="height: 150px;">
                            <div class="absolute bottom-0 w-full bg-blue-500 rounded-t-lg" style="height: {{ min([((day.calories / (day.calorieTarget > 0 ? day.calorieTarget : 1)) * 100), 100]) }}%"></div>
                            <div class="absolute bottom-0 w-full h-1 bg-gray-400 opacity-30" style="top: {{ max([(100 - ((nutritionGoal.caloriesTarget|default(2000) / (day.calorieTarget > 0 ? day.calorieTarget : 1)) * 100)), 0]) }}%"></div>
                        </div>
                        <span class="text-xs mt-2 text-gray-500 dark:text-gray-400">{{ day.calories|default(0) }}</span>
                        <span class="text-xs text-gray-400 dark:text-gray-500">{{ day.dayShort|default('') }}</span>
                    </div>
                    {% endfor %}
                </div>
                <div class="flex justify-center gap-6 mt-4 text-sm">
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                        <span class="text-gray-600 dark:text-gray-300">Consomm√©</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 bg-gray-300 rounded-full dark:bg-gray-600"></div>
                        <span class="text-gray-600 dark:text-gray-300">Objectif ({{ nutritionGoal.caloriesTarget|default(2000) }} kcal)</span>
                    </div>
                </div>
            </div>
        </div>

        {# Macro Breakdown #}
        <div class="p-6 mb-8 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">R√©partition des macronutriments</h2>
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
                {# Protein #}
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-3">
                        <svg class="w-24 h-24 transform -rotate-90">
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-700"/>
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" 
                                    stroke-dasharray="{{ (averages.proteinPercent|default(75) * 2.51)|round }} 251"
                                    class="text-wellcare-500"/>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ averages.proteinPercent|default(75) }}%</span>
                        </div>
                    </div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Prot√©ines</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ averages.proteinAvg|default(85) }} / {{ nutritionGoal.proteinTarget|default(120) }}g</p>
                </div>

                {# Carbs #}
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-3">
                        <svg class="w-24 h-24 transform -rotate-90">
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-700"/>
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" 
                                    stroke-dasharray="{{ (averages.carbsPercent|default(82) * 2.51)|round }} 251"
                                    class="text-blue-500"/>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ averages.carbsPercent|default(82) }}%</span>
                        </div>
                    </div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Glucides</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ averages.carbsAvg|default(165) }} / {{ nutritionGoal.carbsTarget|default(200) }}g</p>
                </div>

                {# Fats #}
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-3">
                        <svg class="w-24 h-24 transform -rotate-90">
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-700"/>
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" 
                                    stroke-dasharray="{{ (averages.fatsPercent|default(68) * 2.51)|round }} 251"
                                    class="text-amber-500"/>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ averages.fatsPercent|default(68) }}%</span>
                        </div>
                    </div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Lipides</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ averages.fatsAvg|default(41) }} / {{ nutritionGoal.fatsTarget|default(60) }}g</p>
                </div>

                {# Water #}
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-3">
                        <svg class="w-24 h-24 transform -rotate-90">
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-700"/>
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" 
                                    stroke-dasharray="{{ (averages.waterPercent|default(75) * 2.51)|round }} 251"
                                    class="text-cyan-500"/>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ averages.waterPercent|default(75) }}%</span>
                        </div>
                    </div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Hydratation</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ averages.waterAvg|default(6) }} / {{ nutritionGoal.waterTarget|default(8) }} verres</p>
                </div>
            </div>
        </div>

        {# Timeline Progress #}
        <div class="p-6 mb-8 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Chronologie</h2>
            <div class="relative">
                {# Progress Line #}
                <div class="absolute top-0 bottom-0 w-1 bg-gray-200 left-8 dark:bg-gray-700"></div>
                <div class="absolute top-0 w-1 left-8 bg-wellcare-500" style="height: {{ averages.caloriesPercent|default(40) }}%"></div>
                
                <div class="space-y-8">
                    {# Start #}
                    <div class="flex items-start gap-6">
                        <div class="z-10 flex items-center justify-center w-16 h-16 text-sm font-bold text-white rounded-full bg-wellcare-500">
                            D√©part
                        </div>
                        <div class="pt-2">
                            <p class="font-medium text-gray-900 dark:text-white">{{ '-30 days'|date('d/m/Y') }}</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">{{ nutritionGoal.weightTarget|default(72) }} kg - Lancement de l'objectif</p>
                        </div>
                    </div>

                    {# Today #}
                    <div class="flex items-start gap-6">
                        <div class="z-10 flex items-center justify-center w-16 h-16 text-sm font-bold text-white bg-blue-500 rounded-full">
                            Aujourd'hui
                        </div>
                        <div class="pt-2">
                            <p class="font-medium text-gray-900 dark:text-white">{{ 'now'|date('d/m/Y') }}</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">{{ averages.weightAvg|default(78) }} kg - {{ streaks.current|default(30) }} jours √©coul√©s</p>
                            <div class="inline-block px-3 py-1 mt-2 text-sm text-green-600 bg-green-100 rounded-full dark:bg-green-900/30 dark:text-green-400">
                                <i class="mr-1 fas fa-check"></i>{{ averages.caloriesPercent|default(75) }}% de progression
                            </div>
                        </div>
                    </div>

                    {# Target #}
                    <div class="flex items-start gap-6">
                        <div class="z-10 flex items-center justify-center w-16 h-16 text-sm font-bold text-gray-500 bg-gray-200 rounded-full dark:bg-gray-700 dark:text-gray-400">
                            Objectif
                        </div>
                        <div class="pt-2">
                            <p class="font-medium text-gray-900 dark:text-white">{{ '+45 days'|date('d/m/Y') }}</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">{{ nutritionGoal.weightTarget|default(72) }} kg - {{ streaks.remaining|default(45) }} jours restants</p>
                            <div class="inline-block px-3 py-1 mt-2 text-sm text-gray-600 bg-gray-100 rounded-full dark:bg-gray-700 dark:text-gray-300">
                                <i class="mr-1 fas fa-clock"></i>Projection: {{ nutritionGoal.weightTarget|default(72) }} kg
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Record Progress Button #}
        <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Enregistrer votre progression</h2>
            <form class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4">
                <div>
                    <label class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Poids du jour</label>
                    <input type="number" step="0.1" placeholder="78.5" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-wellcare-500">
                </div>
                <div>
                    <label class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Calories consomm√©es</label>
                    <input type="number" placeholder="1850" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-wellcare-500">
                </div>
                <div>
                    <label class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Prot√©ines</label>
                    <input type="number" placeholder="115" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-wellcare-500">
                </div>
                <div class="flex items-end">
                    <a href="{{ path('nutrition_dashboard') }}" 
                       class="w-full px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600 text-center block">
                        <i class="mr-2 fas fa-save"></i>Retour au tableau de bord
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
