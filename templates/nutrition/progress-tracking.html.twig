{% extends 'layouts/app.html.twig' %}

{% block title %}Suivi de progression - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8" x-data="progressTracking()">
    <div class="max-w-6xl px-4 mx-auto">
        {# Header #}
        <div class="mb-8">
            <a href="{{ path('nutrition_goals_detail', {'id': goal.id|default(1)}) }}" class="inline-flex items-center mb-4 text-gray-500 transition-colors dark:text-gray-400 hover:text-wellcare-500">
                <i class="mr-2 fas fa-arrow-left"></i>Retour √† l'objectif
            </a>
            <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Suivi de progression</h1>
            <p class="mt-1 text-gray-500 dark:text-gray-400">{{ goal.name|default('Perte de poids √©t√© 2024') }}</p>
        </div>

        {# Overview Cards #}
        <div class="grid grid-cols-1 gap-4 mb-8 md:grid-cols-2 lg:grid-cols-4">
            {# Weight Progress #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                        <i class="text-xl fas fa-weight text-wellcare-500"></i>
                    </div>
                    <span class="px-2 py-1 text-xs font-medium text-green-600 bg-green-100 rounded-full dark:bg-green-900/30 dark:text-green-400">
                        -3.5 kg
                    </span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Poids</h3>
                <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-bold text-wellcare-500">{{ progressData.weight.current|default(78.5) }}</span>
                    <span class="text-gray-500 dark:text-gray-400">kg actuel</span>
                </div>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Objectif: {{ progressData.weight.target|default(72.0) }} kg</p>
            </div>

            {# Adherence #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full dark:bg-blue-900/30">
                        <i class="text-xl text-blue-500 fas fa-chart-pie"></i>
                    </div>
                    <span class="px-2 py-1 text-xs font-medium text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900/30 dark:text-blue-400">
                        {{ progressData.adherence.weeklyAverage|default(87) }}%
                    </span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Adh√©sion</h3>
                <div class="mt-2">
                    <div class="flex items-baseline gap-2">
                        <span class="text-3xl font-bold text-blue-500">{{ progressData.adherence.weeklyAverage|default(87) }}</span>
                        <span class="text-gray-500 dark:text-gray-400">%</span>
                    </div>
                </div>
                <div class="flex gap-1 mt-2">
                    {% for adherence in progressData.adherence.daily|default([85, 90, 78, 92, 88, 95, 82]) %}
                    <div class="w-6 h-2 rounded-full {% if adherence >= 80 %}bg-wellcare-500{% elseif adherence >= 60 %}bg-yellow-500{% else %}bg-red-500{% endif %}" 
                         title="{{ adherence }}%" data-tooltip></div>
                    {% endfor %}
                </div>
            </div>

            {# Calories #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center justify-center w-12 h-12 rounded-full bg-amber-100 dark:bg-amber-900/30">
                        <i class="text-xl fas fa-fire text-amber-500"></i>
                    </div>
                    <span class="text-xs font-medium px-2 py-1 rounded-full {% if progressData.macros.calories.adherence|default(92) >= 80 %}bg-green-100 dark:bg-green-900/30 text-green-600{% else %}bg-yellow-100 dark:bg-yellow-900/30 text-yellow-600{% endif %}">
                        {{ progressData.macros.calories.adherence|default(92) }}%
                    </span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Calories</h3>
                <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-bold text-amber-500">{{ progressData.macros.calories.current|default(1850) }}</span>
                    <span class="text-gray-500 dark:text-gray-400">/ {{ progressData.macros.calories.target|default(1800) }} kcal</span>
                </div>
            </div>

            {# Streak #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center justify-center w-12 h-12 bg-orange-100 rounded-full dark:bg-orange-900/30">
                        <i class="text-xl text-orange-500 fas fa-fire"></i>
                    </div>
                    <span class="px-2 py-1 text-xs font-medium text-orange-600 bg-orange-100 rounded-full dark:bg-orange-900/30 dark:text-orange-400">
                        Record: 21j
                    </span>
                </div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">S√©rie actuelle</h3>
                <div class="flex items-baseline gap-2 mt-2">
                    <span class="text-3xl font-bold text-orange-500">12</span>
                    <span class="text-gray-500 dark:text-gray-400">jours</span>
                </div>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">üî• Bon d√©but de semaine !</p>
            </div>
        </div>

        {# Charts Row #}
        <div class="grid grid-cols-1 gap-6 mb-8 lg:grid-cols-2">
            {# Weight Trend Chart #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">√âvolution du poids</h2>
                <div class="h-64">
                    <canvas id="weightChart"></canvas>
                </div>
                <div class="flex justify-center gap-6 mt-4 text-sm">
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 rounded-full bg-wellcare-500"></div>
                        <span class="text-gray-600 dark:text-gray-300">Poids actuel</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 bg-gray-300 rounded-full dark:bg-gray-600"></div>
                        <span class="text-gray-600 dark:text-gray-300">Objectif</span>
                    </div>
                </div>
            </div>

            {# Calories Chart #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Calories quotidiennes</h2>
                <div class="h-64">
                    <canvas id="caloriesChart"></canvas>
                </div>
                <div class="flex justify-center gap-6 mt-4 text-sm">
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
                        <span class="text-gray-600 dark:text-gray-300">Consomm√©</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <div class="w-3 h-3 bg-gray-300 rounded-full dark:bg-gray-600"></div>
                        <span class="text-gray-600 dark:text-gray-300">Objectif</span>
                    </div>
                </div>
            </div>
        </div>

        {# Macro Breakdown #}
        <div class="p-6 mb-8 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">R√©partition des macronutriments</h2>
            <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-4">
                {# Protein #}
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-3">
                        <svg class="w-24 h-24 transform -rotate-90">
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-700"/>
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" 
                                    stroke-dasharray="{{ (progressData.macros.protein.adherence|default(88) * 2.51)|round }} 251"
                                    class="text-wellcare-500"/>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ progressData.macros.protein.adherence|default(88) }}%</span>
                        </div>
                    </div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Prot√©ines</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ progressData.macros.protein.current|default(115) }} / {{ progressData.macros.protein.target|default(120) }}g</p>
                </div>

                {# Carbs #}
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-3">
                        <svg class="w-24 h-24 transform -rotate-90">
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-700"/>
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" 
                                    stroke-dasharray="{{ (progressData.macros.carbs.adherence|default(95) * 2.51)|round }} 251"
                                    class="text-blue-500"/>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ progressData.macros.carbs.adherence|default(95) }}%</span>
                        </div>
                    </div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Glucides</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ progressData.macros.carbs.current|default(195) }} / {{ progressData.macros.carbs.target|default(200) }}g</p>
                </div>

                {# Fats #}
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-3">
                        <svg class="w-24 h-24 transform -rotate-90">
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-700"/>
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" 
                                    stroke-dasharray="{{ (progressData.macros.fats.adherence|default(97) * 2.51)|round }} 251"
                                    class="text-amber-500"/>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-gray-900 dark:text-white">{{ progressData.macros.fats.adherence|default(97) }}%</span>
                        </div>
                    </div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Lipides</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ progressData.macros.fats.current|default(58) }} / {{ progressData.macros.fats.target|default(60) }}g</p>
                </div>

                {# Water #}
                <div class="text-center">
                    <div class="relative w-24 h-24 mx-auto mb-3">
                        <svg class="w-24 h-24 transform -rotate-90">
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-700"/>
                            <circle cx="48" cy="48" r="40" stroke="currentColor" stroke-width="8" fill="none" 
                                    stroke-dasharray="188 251"
                                    class="text-cyan-500"/>
                        </svg>
                        <div class="absolute inset-0 flex items-center justify-center">
                            <span class="text-xl font-bold text-gray-900 dark:text-white">75%</span>
                        </div>
                    </div>
                    <h3 class="font-medium text-gray-900 dark:text-white">Hydratation</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">6 / 8 verres</p>
                </div>
            </div>
        </div>

        {# Timeline Progress #}
        <div class="p-6 mb-8 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Chronologie</h2>
            <div class="relative">
                {# Progress Line #}
                <div class="absolute top-0 bottom-0 w-1 bg-gray-200 left-8 dark:bg-gray-700"></div>
                <div class="absolute top-0 w-1 left-8 bg-wellcare-500" style="height: {{ progressData.timeline.progressPercent|default(40) }}%"></div>
                
                <div class="space-y-8">
                    {# Start #}
                    <div class="flex items-start gap-6">
                        <div class="z-10 flex items-center justify-center w-16 h-16 text-sm font-bold text-white rounded-full bg-wellcare-500">
                            D√©part
                        </div>
                        <div class="pt-2">
                            <p class="font-medium text-gray-900 dark:text-white">{{ progressData.timeline.startDate|default('-30 days')|date('d/m/Y') }}</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">82.0 kg - Lancement de l'objectif</p>
                        </div>
                    </div>

                    {# Today #}
                    <div class="flex items-start gap-6">
                        <div class="z-10 flex items-center justify-center w-16 h-16 text-sm font-bold text-white bg-blue-500 rounded-full">
                            Aujourd'hui
                        </div>
                        <div class="pt-2">
                            <p class="font-medium text-gray-900 dark:text-white">{{ 'now'|date('d/m/Y') }}</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">{{ progressData.weight.current|default(78.5) }} kg - {{ progressData.timeline.daysElapsed|default(30) }} jours √©coul√©s</p>
                            <div class="inline-block px-3 py-1 mt-2 text-sm text-green-600 bg-green-100 rounded-full dark:bg-green-900/30 dark:text-green-400">
                                <i class="mr-1 fas fa-check"></i>4.27% de progression
                            </div>
                        </div>
                    </div>

                    {# Target #}
                    <div class="flex items-start gap-6">
                        <div class="z-10 flex items-center justify-center w-16 h-16 text-sm font-bold text-gray-500 bg-gray-200 rounded-full dark:bg-gray-700 dark:text-gray-400">
                            Objectif
                        </div>
                        <div class="pt-2">
                            <p class="font-medium text-gray-900 dark:text-white">{{ progressData.timeline.targetDate|default('+45 days')|date('d/m/Y') }}</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">{{ progressData.weight.target|default(72.0) }} kg - {{ progressData.timeline.daysRemaining|default(45) }} jours restants</p>
                            <div class="inline-block px-3 py-1 mt-2 text-sm text-gray-600 bg-gray-100 rounded-full dark:bg-gray-700 dark:text-gray-300">
                                <i class="mr-1 fas fa-clock"></i>Projection: 71.5 kg
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# Record Progress Button #}
        <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-4 text-xl font-bold text-gray-900 dark:text-white">Enregistrer votre progression</h2>
            <form class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-4">
                <div>
                    <label class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Poids du jour</label>
                    <input type="number" step="0.1" placeholder="78.5" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-wellcare-500">
                </div>
                <div>
                    <label class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Calories consomm√©es</label>
                    <input type="number" placeholder="1850" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-wellcare-500">
                </div>
                <div>
                    <label class="block mb-1 text-sm font-medium text-gray-700 dark:text-gray-300">Prot√©ines</label>
                    <input type="number" placeholder="115" 
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white focus:ring-2 focus:ring-wellcare-500">
                </div>
                <div class="flex items-end">
                    <button type="button" 
                            @click="recordProgress()"
                            class="w-full px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="mr-2 fas fa-save"></i>Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="{{ asset('build/nutrition-goals.js') }}"></script>
{% endblock %}
