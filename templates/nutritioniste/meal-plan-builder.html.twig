{% extends 'base.html.twig' %}

{% block title %}Création de plan nutritionnel - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8">
    <div class="px-4 mx-auto max-w-7xl">
        {# Header #}
        <div class="flex flex-col gap-4 mb-8 lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Création de plan nutritionnel</h1>
                <p class="mt-1 text-gray-500 dark:text-gray-400">Créez des plans personnalisés pour vos patients</p>
            </div>
            <div class="flex items-center gap-3">
                <a href="#" class="px-4 py-2 text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <i class="mr-2 fas fa-save"></i>Enregistrer
                </a>
                <a href="#" class="px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-eye"></i>Aperçu
                </a>
            </div>
        </div>

        {# Patient Selection #}
        <form method="post" action="#" class="p-6 mb-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">Patient</h2>
            <div class="flex flex-col gap-4 md:flex-row">
                <div class="flex-1">
                    <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Sélectionner un patient</label>
                    <select name="patient" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <option value="">Choisir un patient...</option>
                        <option value="1">Marie Dubois - Perte de poids</option>
                        <option value="2">Jean Martin - Musculation</option>
                        <option value="3">Sophie Bernard - Équilibre alimentaire</option>
                        <option value="4">Pierre Lefebvre - Diabète type 2</option>
                        <option value="5">Laura Chen - Perte de poids</option>
                    </select>
                </div>
                <div class="flex-1 p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                    <div class="flex items-center gap-4">
                        <div class="flex items-center justify-center w-12 h-12 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                            <span class="text-lg font-medium text-wellcare-500">MD</span>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900 dark:text-white">Marie Dubois</h3>
                            <p class="text-sm text-gray-500">Objectif: Perte de poids</p>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        {# Plan Settings #}
        <div class="grid grid-cols-1 gap-6 mb-6 lg:grid-cols-3">
            {# Plan Type #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <h2 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">Type de plan</h2>
                <div class="space-y-3">
                    <label class="flex items-center gap-3 p-3 transition-colors cursor-pointer rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <input type="radio" name="planType" value="weight-loss" class="w-4 h-4 text-wellcare-500" checked>
                        <div>
                            <p class="font-medium text-gray-900 dark:text-white">Perte de poids</p>
                            <p class="text-sm text-gray-500">Plan adapté pour perdre du poids</p>
                        </div>
                    </label>
                    <label class="flex items-center gap-3 p-3 transition-colors cursor-pointer rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <input type="radio" name="planType" value="maintenance" class="w-4 h-4 text-wellcare-500">
                        <div>
                            <p class="font-medium text-gray-900 dark:text-white">Maintien</p>
                            <p class="text-sm text-gray-500">Plan pour maintenir le poids actuel</p>
                        </div>
                    </label>
                    <label class="flex items-center gap-3 p-3 transition-colors cursor-pointer rounded-xl hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <input type="radio" name="planType" value="muscle" class="w-4 h-4 text-wellcare-500">
                        <div>
                            <p class="font-medium text-gray-900 dark:text-white">Prise de masse</p>
                            <p class="text-sm text-gray-500">Plan pour construire du muscle</p>
                        </div>
                    </label>
                </div>
            </div>

            {# Duration & Frequency #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <h2 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">Durée & Fréquence</h2>
                <div class="space-y-4">
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Durée du plan</label>
                        <select name="duration" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                            <option value="1">1 semaine</option>
                            <option value="2">2 semaines</option>
                            <option value="4" selected>1 mois</option>
                            <option value="12">3 mois</option>
                            <option value="24">6 mois</option>
                        </select>
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Calories quotidiennes</label>
                        <input type="number" name="calories" value="1800" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Répartition des macros</label>
                        <div class="grid grid-cols-3 gap-2">
                            <div>
                                <label class="text-xs text-gray-500">Protéines</label>
                                <input type="number" name="protein" value="120" class="w-full px-3 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                            </div>
                            <div>
                                <label class="text-xs text-gray-500">Glucides</label>
                                <input type="number" name="carbs" value="180" class="w-full px-3 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                            </div>
                            <div>
                                <label class="text-xs text-gray-500">Lipides</label>
                                <input type="number" name="fats" value="60" class="w-full px-3 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Templates #}
            <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                <h2 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">Modèles prédéfinis</h2>
                <div class="space-y-3">
                    <a href="#" class="w-full block p-4 text-left transition-colors border border-gray-200 rounded-xl dark:border-gray-700 hover:border-wellcare-500 hover:bg-wellcare-50 dark:hover:bg-wellcare-900/20">
                        <div class="flex items-center justify-between mb-2">
                            <h3 class="font-medium text-gray-900 dark:text-white">Équilibré</h3>
                            <span class="text-xs text-wellcare-500">2000 kcal</span>
                        </div>
                        <p class="text-sm text-gray-500">Répartition classique 30/40/30</p>
                    </a>
                    <a href="#" class="w-full block p-4 text-left transition-colors border border-gray-200 rounded-xl dark:border-gray-700 hover:border-wellcare-500 hover:bg-wellcare-50 dark:hover:bg-wellcare-900/20">
                        <div class="flex items-center justify-between mb-2">
                            <h3 class="font-medium text-gray-900 dark:text-white">Hypocalorique</h3>
                            <span class="text-xs text-wellcare-500">1500 kcal</span>
                        </div>
                        <p class="text-sm text-gray-500">Pour perte de poids rapide</p>
                    </a>
                    <a href="#" class="w-full block p-4 text-left transition-colors border border-gray-200 rounded-xl dark:border-gray-700 hover:border-wellcare-500 hover:bg-wellcare-50 dark:hover:bg-wellcare-900/20">
                        <div class="flex items-center justify-between mb-2">
                            <h3 class="font-medium text-gray-900 dark:text-white">Protein Plus</h3>
                            <span class="text-xs text-wellcare-500">2200 kcal</span>
                        </div>
                        <p class="text-sm text-gray-500">Haute protéine pour muscle</p>
                    </a>
                </div>
            </div>
        </div>

        {# Weekly Meal Plan #}
        <div class="p-6 mb-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-lg font-bold text-gray-900 dark:text-white">Plan alimentaire hebdomadaire</h2>
                <div class="flex items-center gap-2">
                    <a href="#" class="px-3 py-1 text-sm text-red-500 transition-colors rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20">
                        <i class="mr-1 fas fa-trash"></i>Tout effacer
                    </a>
                </div>
            </div>

            {# Days Tabs #}
            <div class="flex gap-2 pb-2 mb-6 overflow-x-auto">
                <button class="px-4 py-2 transition-colors rounded-lg whitespace-nowrap bg-wellcare-500 text-white">Lundi</button>
                <button class="px-4 py-2 transition-colors rounded-lg whitespace-nowrap bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600">Mardi</button>
                <button class="px-4 py-2 transition-colors rounded-lg whitespace-nowrap bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600">Mercredi</button>
                <button class="px-4 py-2 transition-colors rounded-lg whitespace-nowrap bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600">Jeudi</button>
                <button class="px-4 py-2 transition-colors rounded-lg whitespace-nowrap bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600">Vendredi</button>
                <button class="px-4 py-2 transition-colors rounded-lg whitespace-nowrap bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600">Samedi</button>
                <button class="px-4 py-2 transition-colors rounded-lg whitespace-nowrap bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600">Dimanche</button>
            </div>

            {# Day Meals #}
            <div class="space-y-6">
                {# Breakfast #}
                <div class="overflow-hidden border border-gray-200 dark:border-gray-700 rounded-xl">
                    <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50">
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-yellow-100">
                                <i class="fas fa-coffee text-yellow-500"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 dark:text-white">Petit-déjeuner</h3>
                                <p class="text-sm text-gray-500">400 kcal recommandées</p>
                            </div>
                        </div>
                        <a href="#" class="px-3 py-1 text-sm text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                            <i class="mr-1 fas fa-plus"></i>Ajouter
                        </a>
                    </div>
                    <div class="p-4 space-y-3">
                        <div class="flex items-center gap-4 p-3 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <div class="flex-1">
                                <p class="font-medium text-gray-900 dark:text-white">Flocons d'avoine aux fruits</p>
                                <p class="text-sm text-gray-500">350 kcal • 12g prot • 50g gluc • 8g lip</p>
                            </div>
                            <div class="flex items-center gap-2">
                                <a href="#" class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="#" class="p-2 text-gray-400 transition-colors hover:text-red-500">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                {# Lunch #}
                <div class="overflow-hidden border border-gray-200 dark:border-gray-700 rounded-xl">
                    <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50">
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-green-100">
                                <i class="fas fa-utensils text-green-500"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 dark:text-white">Déjeuner</h3>
                                <p class="text-sm text-gray-500">600 kcal recommandées</p>
                            </div>
                        </div>
                        <a href="#" class="px-3 py-1 text-sm text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                            <i class="mr-1 fas fa-plus"></i>Ajouter
                        </a>
                    </div>
                    <div class="p-4 space-y-3">
                        <div class="flex items-center gap-4 p-3 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <div class="flex-1">
                                <p class="font-medium text-gray-900 dark:text-white">Poulet grillé avec légumes</p>
                                <p class="text-sm text-gray-500">520 kcal • 45g prot • 30g gluc • 20g lip</p>
                            </div>
                            <div class="flex items-center gap-2">
                                <a href="#" class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="#" class="p-2 text-gray-400 transition-colors hover:text-red-500">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                {# Dinner #}
                <div class="overflow-hidden border border-gray-200 dark:border-gray-700 rounded-xl">
                    <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50">
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-blue-100">
                                <i class="fas fa-moon text-blue-500"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 dark:text-white">Dîner</h3>
                                <p class="text-sm text-gray-500">500 kcal recommandées</p>
                            </div>
                        </div>
                        <a href="#" class="px-3 py-1 text-sm text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                            <i class="mr-1 fas fa-plus"></i>Ajouter
                        </a>
                    </div>
                    <div class="p-4">
                        <div class="py-4 text-center text-gray-400">
                            <i class="mb-2 text-2xl fas fa-utensils"></i>
                            <p>Aucun repas prévu</p>
                        </div>
                    </div>
                </div>

                {# Snacks #}
                <div class="overflow-hidden border border-gray-200 dark:border-gray-700 rounded-xl">
                    <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50">
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-purple-100">
                                <i class="fas fa-apple-alt text-purple-500"></i>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 dark:text-white">Collation</h3>
                                <p class="text-sm text-gray-500">200 kcal recommandées</p>
                            </div>
                        </div>
                        <a href="#" class="px-3 py-1 text-sm text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                            <i class="mr-1 fas fa-plus"></i>Ajouter
                        </a>
                    </div>
                    <div class="p-4">
                        <div class="py-4 text-center text-gray-400">
                            <i class="mb-2 text-2xl fas fa-utensils"></i>
                            <p>Aucun repas prévu</p>
                        </div>
                    </div>
                </div>
            </div>

            {# Daily Summary #}
            <div class="p-4 mt-6 bg-wellcare-50 dark:bg-wellcare-900/20 rounded-xl">
                <h3 class="mb-3 font-semibold text-gray-900 dark:text-white">Résumé nutritionnel - Lundi</h3>
                <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
                    <div class="text-center">
                        <p class="text-2xl font-bold text-wellcare-500">870 kcal</p>
                        <p class="text-sm text-gray-500">Calories</p>
                    </div>
                    <div class="text-center">
                        <p class="text-2xl font-bold text-blue-500">57g</p>
                        <p class="text-sm text-gray-500">Protéines</p>
                    </div>
                    <div class="text-center">
                        <p class="text-2xl font-bold text-amber-500">80g</p>
                        <p class="text-sm text-gray-500">Glucides</p>
                    </div>
                    <div class="text-center">
                        <p class="text-2xl font-bold text-red-500">28g</p>
                        <p class="text-sm text-gray-500">Lipides</p>
                    </div>
                </div>
            </div>
        </div>

        {# Recipe Library Sidebar #}
        <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">Bibliothèque de recettes</h2>
            <form method="get" action="#" class="flex gap-2 mb-4">
                <input type="text" name="recipe-search" placeholder="Rechercher une recette..."
                       class="flex-1 px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                <select name="recipe-category" class="px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                    <option value="">Toutes catégories</option>
                    <option value="breakfast">Petit-déjeuner</option>
                    <option value="lunch">Déjeuner</option>
                    <option value="dinner">Dîner</option>
                    <option value="snack">Collation</option>
                </select>
                <button type="submit" class="px-4 py-2 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="fas fa-search"></i>
                </button>
            </form>
            <div class="grid grid-cols-1 gap-3 md:grid-cols-2 lg:grid-cols-3">
                {# Recipe 1 #}
                <a href="#" class="p-3 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:border-wellcare-500">
                    <div class="flex items-center gap-3">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-carrot text-wellcare-500"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">Salade composée</p>
                            <p class="text-xs text-gray-500">250 kcal</p>
                        </div>
                        <button class="p-1 text-wellcare-500">
                            <i class="fas fa-plus-circle"></i>
                        </button>
                    </div>
                </a>
                {# Recipe 2 #}
                <a href="#" class="p-3 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:border-wellcare-500">
                    <div class="flex items-center gap-3">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-drumstick-bite text-wellcare-500"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">Poulet rôti</p>
                            <p class="text-xs text-gray-500">320 kcal</p>
                        </div>
                        <button class="p-1 text-wellcare-500">
                            <i class="fas fa-plus-circle"></i>
                        </button>
                    </div>
                </a>
                {# Recipe 3 #}
                <a href="#" class="p-3 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:border-wellcare-500">
                    <div class="flex items-center gap-3">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-fish text-wellcare-500"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">Saumon grillé</p>
                            <p class="text-xs text-gray-500">380 kcal</p>
                        </div>
                        <button class="p-1 text-wellcare-500">
                            <i class="fas fa-plus-circle"></i>
                        </button>
                    </div>
                </a>
                {# Recipe 4 #}
                <a href="#" class="p-3 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:border-wellcare-500">
                    <div class="flex items-center gap-3">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-egg text-wellcare-500"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">Omelette aux légumes</p>
                            <p class="text-xs text-gray-500">280 kcal</p>
                        </div>
                        <button class="p-1 text-wellcare-500">
                            <i class="fas fa-plus-circle"></i>
                        </button>
                    </div>
                </a>
                {# Recipe 5 #}
                <a href="#" class="p-3 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:border-wellcare-500">
                    <div class="flex items-center gap-3">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-bowl-rice text-wellcare-500"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">Bowl de quinoa</p>
                            <p class="text-xs text-gray-500">420 kcal</p>
                        </div>
                        <button class="p-1 text-wellcare-500">
                            <i class="fas fa-plus-circle"></i>
                        </button>
                    </div>
                </a>
                {# Recipe 6 #}
                <a href="#" class="p-3 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:border-wellcare-500">
                    <div class="flex items-center gap-3">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-apple-alt text-wellcare-500"></i>
                        </div>
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">Yaourt aux fruits</p>
                            <p class="text-xs text-gray-500">150 kcal</p>
                        </div>
                        <button class="p-1 text-wellcare-500">
                            <i class="fas fa-plus-circle"></i>
                        </button>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
