{% extends 'base.html.twig' %}

{% block title %}Rapports - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8">
    <div class="px-4 mx-auto max-w-7xl">
        {# Header #}
        <div class="flex flex-col gap-4 mb-8 lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Rapports et documentation</h1>
                <p class="mt-1 text-gray-500 dark:text-gray-400">Générez des rapports détaillés pour vos patients</p>
            </div>
            <div class="flex items-center gap-3">
                <a href="#" class="px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-plus"></i>Nouveau rapport
                </a>
            </div>
        </div>

        {# Report Types #}
        <div class="grid grid-cols-1 gap-4 mb-8 md:grid-cols-2 lg:grid-cols-4">
            <a href="#" class="p-6 transition-all bg-white border-2 border-transparent shadow-lg cursor-pointer dark:bg-gray-800 rounded-2xl hover:shadow-xl hover:border-wellcare-500">
                <div class="flex items-center justify-center mb-4 w-14 h-14 rounded-2xl bg-blue-100">
                    <i class="fas fa-file-medical text-2xl text-blue-500"></i>
                </div>
                <h3 class="mb-1 font-bold text-gray-900 dark:text-white">Bilan nutritionnel</h3>
                <p class="text-sm text-gray-500">Analyse complète de l'état nutritionnel</p>
            </a>
            <a href="#" class="p-6 transition-all bg-white border-2 border-transparent shadow-lg cursor-pointer dark:bg-gray-800 rounded-2xl hover:shadow-xl hover:border-wellcare-500">
                <div class="flex items-center justify-center mb-4 w-14 h-14 rounded-2xl bg-green-100">
                    <i class="fas fa-chart-line text-2xl text-green-500"></i>
                </div>
                <h3 class="mb-1 font-bold text-gray-900 dark:text-white">Progression</h3>
                <p class="text-sm text-gray-500">Suivi de l'évolution dans le temps</p>
            </a>
            <a href="#" class="p-6 transition-all bg-white border-2 border-transparent shadow-lg cursor-pointer dark:bg-gray-800 rounded-2xl hover:shadow-xl hover:border-wellcare-500">
                <div class="flex items-center justify-center mb-4 w-14 h-14 rounded-2xl bg-purple-100">
                    <i class="fas fa-utensils text-2xl text-purple-500"></i>
                </div>
                <h3 class="mb-1 font-bold text-gray-900 dark:text-white">Plan alimentaire</h3>
                <p class="text-sm text-gray-500">Résumé du plan nutritionnel</p>
            </a>
            <a href="#" class="p-6 transition-all bg-white border-2 border-transparent shadow-lg cursor-pointer dark:bg-gray-800 rounded-2xl hover:shadow-xl hover:border-wellcare-500">
                <div class="flex items-center justify-center mb-4 w-14 h-14 rounded-2xl bg-amber-100">
                    <i class="fas fa-balance-scale text-2xl text-amber-500"></i>
                </div>
                <h3 class="mb-1 font-bold text-gray-900 dark:text-white">Équilibre</h3>
                <p class="text-sm text-gray-500">Analyse de l'équilibre alimentaire</p>
            </a>
        </div>

        {# Report Configuration #}
        <form method="post" action="#" class="p-6 mb-8 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white">Générer un nouveau rapport</h2>
                <a href="#" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times"></i>
                </a>
            </div>

            <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2 lg:grid-cols-4">
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Patient</label>
                    <select name="patient" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <option value="">Sélectionner un patient...</option>
                        <option value="1">Marie Dubois</option>
                        <option value="2">Jean Martin</option>
                        <option value="3">Sophie Bernard</option>
                        <option value="4">Pierre Lefebvre</option>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Période</label>
                    <select name="period" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <option value="7">7 derniers jours</option>
                        <option value="30" selected>30 derniers jours</option>
                        <option value="90">3 derniers mois</option>
                        <option value="180">6 derniers mois</option>
                        <option value="365">12 derniers mois</option>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Date de début</label>
                    <input type="date" name="start_date" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                </div>
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Date de fin</label>
                    <input type="date" name="end_date" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                </div>
            </div>

            {# Report Sections #}
            <div class="mb-6">
                <label class="block mb-3 text-sm font-medium text-gray-700 dark:text-gray-300">Sections du rapport</label>
                <div class="flex flex-wrap gap-3">
                    <label class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <input type="checkbox" name="sections[]" value="summary" class="w-4 h-4 rounded text-wellcare-500" checked>
                        <span class="text-sm text-gray-700 dark:text-gray-300">Résumé</span>
                    </label>
                    <label class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <input type="checkbox" name="sections[]" value="weight" class="w-4 h-4 rounded text-wellcare-500" checked>
                        <span class="text-sm text-gray-700 dark:text-gray-300">Poids</span>
                    </label>
                    <label class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <input type="checkbox" name="sections[]" value="nutrition" class="w-4 h-4 rounded text-wellcare-500" checked>
                        <span class="text-sm text-gray-700 dark:text-gray-300">Nutrition</span>
                    </label>
                    <label class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <input type="checkbox" name="sections[]" value="goals" class="w-4 h-4 rounded text-wellcare-500">
                        <span class="text-sm text-gray-700 dark:text-gray-300">Objectifs</span>
                    </label>
                    <label class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <input type="checkbox" name="sections[]" value="recommendations" class="w-4 h-4 rounded text-wellcare-500">
                        <span class="text-sm text-gray-700 dark:text-gray-300">Recommandations</span>
                    </label>
                </div>
            </div>

            <div class="flex justify-end gap-3">
                <a href="#" class="px-4 py-2 text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                    <i class="mr-2 fas fa-eye"></i>Aperçu
                </a>
                <button type="submit" class="px-4 py-2 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-download"></i>Générer PDF
                </button>
            </div>
        </form>

        {# Recent Reports #}
        <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Rapports récents</h2>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="text-sm text-left text-gray-500 border-b border-gray-200 dark:text-gray-400 dark:border-gray-700">
                            <th class="pb-3 font-medium">Date</th>
                            <th class="pb-3 font-medium">Type</th>
                            <th class="pb-3 font-medium">Patient</th>
                            <th class="pb-3 font-medium">Période</th>
                            <th class="pb-3 font-medium">Statut</th>
                            <th class="pb-3 font-medium">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                            <td class="py-3 text-sm text-gray-900 dark:text-white">17/02/2026</td>
                            <td class="py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-700">Bilan</span>
                            </td>
                            <td class="py-3 text-sm text-gray-900 dark:text-white">Marie Dubois</td>
                            <td class="py-3 text-sm text-gray-500">Janvier 2026</td>
                            <td class="py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700">Terminé</span>
                            </td>
                            <td class="py-3">
                                <div class="flex items-center gap-2">
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Télécharger">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Partager">
                                        <i class="fas fa-share-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                            <td class="py-3 text-sm text-gray-900 dark:text-white">15/02/2026</td>
                            <td class="py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700">Progression</span>
                            </td>
                            <td class="py-3 text-sm text-gray-900 dark:text-white">Jean Martin</td>
                            <td class="py-3 text-sm text-gray-500">6 mois</td>
                            <td class="py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700">Terminé</span>
                            </td>
                            <td class="py-3">
                                <div class="flex items-center gap-2">
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Télécharger">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Partager">
                                        <i class="fas fa-share-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                            <td class="py-3 text-sm text-gray-900 dark:text-white">10/02/2026</td>
                            <td class="py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-purple-100 text-purple-700">Plan</span>
                            </td>
                            <td class="py-3 text-sm text-gray-900 dark:text-white">Sophie Bernard</td>
                            <td class="py-3 text-sm text-gray-500">Février 2026</td>
                            <td class="py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-amber-100 text-amber-700">En cours</span>
                            </td>
                            <td class="py-3">
                                <div class="flex items-center gap-2">
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Télécharger">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Partager">
                                        <i class="fas fa-share-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                            <td class="py-3 text-sm text-gray-900 dark:text-white">05/02/2026</td>
                            <td class="py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-700">Bilan</span>
                            </td>
                            <td class="py-3 text-sm text-gray-900 dark:text-white">Pierre Lefebvre</td>
                            <td class="py-3 text-sm text-gray-500">Janvier 2026</td>
                            <td class="py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-700">Terminé</span>
                            </td>
                            <td class="py-3">
                                <div class="flex items-center gap-2">
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Voir">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Télécharger">
                                        <i class="fas fa-download"></i>
                                    </a>
                                    <a href="#" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Partager">
                                        <i class="fas fa-share-alt"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        {# Templates Section #}
        <div class="p-6 mt-8 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Modèles de rapports</h2>
            <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
                {# Template 1 #}
                <div class="p-4 transition-colors border border-gray-200 cursor-pointer dark:border-gray-700 rounded-xl hover:border-wellcare-500">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-file-medical text-wellcare-500"></i>
                        </div>
                        <button class="p-1 text-gray-400 hover:text-wellcare-500">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                    <h3 class="mb-1 font-medium text-gray-900 dark:text-white">Bilan mensuel</h3>
                    <p class="mb-3 text-sm text-gray-500">Modèle de bilan nutritionnel mensuel</p>
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-400">24 utilisations</span>
                        <a href="#" class="text-sm text-wellcare-500 hover:text-wellcare-600">
                            <i class="mr-1 fas fa-copy"></i>Utiliser
                        </a>
                    </div>
                </div>
                {# Template 2 #}
                <div class="p-4 transition-colors border border-gray-200 cursor-pointer dark:border-gray-700 rounded-xl hover:border-wellcare-500">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-chart-line text-wellcare-500"></i>
                        </div>
                        <button class="p-1 text-gray-400 hover:text-wellcare-500">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                    <h3 class="mb-1 font-medium text-gray-900 dark:text-white">Suivi trimestriel</h3>
                    <p class="mb-3 text-sm text-gray-500">Analyse de progression sur 3 mois</p>
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-400">18 utilisations</span>
                        <a href="#" class="text-sm text-wellcare-500 hover:text-wellcare-600">
                            <i class="mr-1 fas fa-copy"></i>Utiliser
                        </a>
                    </div>
                </div>
                {# Template 3 #}
                <div class="p-4 transition-colors border border-gray-200 cursor-pointer dark:border-gray-700 rounded-xl hover:border-wellcare-500">
                    <div class="flex items-start justify-between mb-3">
                        <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-utensils text-wellcare-500"></i>
                        </div>
                        <button class="p-1 text-gray-400 hover:text-wellcare-500">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                    </div>
                    <h3 class="mb-1 font-medium text-gray-900 dark:text-white">Plan hebdomadaire</h3>
                    <p class="mb-3 text-sm text-gray-500">Résumé du plan alimentaire</p>
                    <div class="flex items-center justify-between">
                        <span class="text-xs text-gray-400">12 utilisations</span>
                        <a href="#" class="text-sm text-wellcare-500 hover:text-wellcare-600">
                            <i class="mr-1 fas fa-copy"></i>Utiliser
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
