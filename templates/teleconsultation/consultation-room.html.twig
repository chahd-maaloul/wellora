{# templates/teleconsultation/consultation-room.html.twig #}
{# Video Consultation Room #}

{% extends 'layouts/app.html.twig' %}

{% block title %}Video Consultation - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/teleconsultation.css') }}">
{% endblock %}

{% block body %}
<div class="flex flex-col h-screen bg-gray-900 consultation-room dark:bg-gray-950" x-data="consultationRoom()" x-init="init()">
    
    {# Header #}
    <div class="flex items-center justify-between px-4 py-3 bg-gray-800 border-b border-gray-700 dark:bg-gray-900">
        <div class="flex items-center gap-4">
            <div class="flex items-center gap-2">
                <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
                <span class="text-sm font-medium text-white">Live</span>
            </div>
            <span class="text-gray-400">|</span>
            <span class="text-sm text-gray-300">Dr. Jean Martin - Marie Dupont</span>
        </div>
        
        <div class="flex items-center gap-4">
            <div 
                class="connection-quality"
                :class="connectionQuality"
            >
                <i class="fa-solid fa-signal"></i>
                <span x-text="connectionQuality === 'good' ? 'Excellent' : connectionQuality === 'fair' ? 'Good' : 'Poor'"></span>
            </div>
            
            <div class="flex items-center gap-2 text-white">
                <i class="fa-regular fa-clock"></i>
                <span class="font-mono" x-text="elapsedTime"></span>
            </div>
            
            <button 
                @click="toggleFullscreen()"
                class="p-2 text-gray-400 transition-colors hover:text-white"
            >
                <i class="fa-solid fa-expand"></i>
            </button>
        </div>
    </div>
    
    {# Main Content - Video Grid #}
    <div class="flex flex-1 overflow-hidden">
        
        {# Video Area #}
        <div class="relative flex-1">
            
            {# Main Video (Patient) #}
            <div class="h-full video-container main">
                <div class="absolute inset-0 flex items-center justify-center bg-gradient-to-br from-gray-800 to-gray-900">
                    <div class="text-center">
                        <img 
                            src="https://ui-avatars.com/api/?name=Marie+Dupont&background=00A790&color=fff&size=200" 
                            alt="Marie Dupont"
                            class="w-32 h-32 mx-auto mb-4 rounded-full"
                        >
                        <p class="text-xl font-medium text-white">Marie Dupont</p>
                        <p class="text-sm text-gray-400">Patient</p>
                    </div>
                </div>
                
                <div class="video-overlay">
                    <div class="video-overlay-info">
                        <p class="font-medium">Marie Dupont</p>
                        <p class="text-sm opacity-80">Waiting for connection...</p>
                    </div>
                </div>
            </div>
            
            {# Self Video (Doctor) - Picture in Picture #}
            <div 
                class="absolute shadow-2xl cursor-move video-container self bottom-4 right-4"
                :class="{ 'ring-2 ring-wellcare-500': isSpeaking }"
                @mousedown="startDrag($event)"
            >
                <div class="flex items-center justify-center w-full h-full bg-gray-800">
                    <img 
                        src="https://ui-avatars.com/api/?name=Jean+Martin&background=00A790&color=fff&size=150" 
                        alt="Dr. Jean Martin"
                        class="object-cover w-full h-full"
                    >
                </div>
                <div class="absolute flex items-center justify-between bottom-2 left-2 right-2">
                    <span class="text-xs text-white bg-black/50 px-2 py-0.5 rounded">You</span>
                    <template x-if="isMuted">
                        <span class="flex items-center justify-center w-6 h-6 bg-red-500 rounded-full">
                            <i class="text-xs text-white fa-solid fa-microphone-slash"></i>
                        </span>
                    </template>
                </div>
            </div>
            
            <div class="absolute bottom-0 left-0 right-0 p-4">
                <div class="video-controls-bar">
                    <button 
                        @click="toggleMute()"
                        class="video-control-btn"
                        :class="isMuted ? 'muted' : 'secondary'"
                        :title="isMuted ? 'Enable microphone' : 'Disable microphone'"
                    >
                        <i :class="isMuted ? 'fa-solid fa-microphone-slash' : 'fa-solid fa-microphone'"></i>
                    </button>
                    
                    <button 
                        @click="toggleVideo()"
                        class="video-control-btn"
                        :class="isVideoOff ? 'muted' : 'secondary'"
                        :title="isVideoOff ? 'Enable camera' : 'Disable camera'"
                    >
                        <i :class="isVideoOff ? 'fa-solid fa-video-slash' : 'fa-solid fa-video'"></i>
                    </button>
                    
                    <button 
                        @click="shareScreen()"
                        class="video-control-btn secondary"
                        :class="{ 'active': isSharingScreen }"
                        title="Share screen"
                    >
                        <i class="fa-solid fa-desktop"></i>
                    </button>
                    
                    <button 
                        @click="openMedicalTools()"
                        class="video-control-btn secondary"
                        title="Medical tools"
                    >
                        <i class="fa-solid fa-stethoscope"></i>
                    </button>
                    
                    <button 
                        @click="toggleChat()"
                        class="video-control-btn secondary"
                        :class="{ 'active': showChat }"
                        title="Chat"
                    >
                        <i class="fa-regular fa-comment-dots"></i>
                        <template x-if="unreadMessages > 0">
                            <span class="absolute flex items-center justify-center w-5 h-5 text-xs text-white bg-red-500 rounded-full -top-1 -right-1" x-text="unreadMessages"></span>
                        </template>
                    </button>
                    
                    <div class="w-px h-8 mx-2 bg-gray-600"></div>
                    
                    <button 
                        @click="endCall()"
                        class="video-control-btn danger"
                        title="End call"
                    >
                        <i class="fa-solid fa-phone-slash"></i>
                    </button>
                </div>
            </div>
        </div>
        
        <div 
            class="consultation-sidebar"
            :class="sidebarOpen ? 'expanded' : 'collapsed'"
        >
            <div class="flex border-b border-gray-700">
                <button 
                    @click="activeTab = 'info'"
                    class="flex-1 py-3 text-sm font-medium transition-colors"
                    :class="activeTab === 'info' ? 'text-wellcare-400 border-b-2 border-wellcare-500' : 'text-gray-400 hover:text-white'"
                >
                    <i class="mr-1 fa-solid fa-user-injured"></i>
                    Patient
                </button>
                <button 
                    @click="activeTab = 'notes'"
                    class="flex-1 py-3 text-sm font-medium transition-colors"
                    :class="activeTab === 'notes' ? 'text-wellcare-400 border-b-2 border-wellcare-500' : 'text-gray-400 hover:text-white'"
                >
                    <i class="mr-1 fa-solid fa-file-medical"></i>
                    Notes
                </button>
                <button 
                    @click="activeTab = 'tools'"
                    class="flex-1 py-3 text-sm font-medium transition-colors"
                    :class="activeTab === 'tools' ? 'text-wellcare-400 border-b-2 border-wellcare-500' : 'text-gray-400 hover:text-white'"
                >
                    <i class="mr-1 fa-solid fa-tools"></i>
                    Tools
                </button>
                <button 
                    @click="sidebarOpen = false"
                    class="p-3 text-gray-400 hover:text-white"
                >
                    <i class="fa-solid fa-times"></i>
                </button>
            </div>
            
            <div class="flex-1 overflow-y-auto bg-gray-800 dark:bg-gray-900">
                <div x-show="activeTab === 'info'" class="p-4 space-y-4">
                    <div class="flex items-center gap-4">
                        <img 
                            src="https://ui-avatars.com/api/?name=Marie+Dupont&background=00A790&color=fff" 
                            alt="Patient"
                            class="w-16 h-16 rounded-full"
                        >
                        <div>
                            <h3 class="text-lg font-semibold text-white">Marie Dupont</h3>
                            <p class="text-sm text-gray-400">42 years - F</p>
                        </div>
                    </div>
                    
                    <div class="grid grid-cols-2 gap-3">
                        <div class="p-3 bg-gray-700 rounded-lg">
                            <p class="text-xs text-gray-400">Weight</p>
                            <p class="font-medium text-white">68 kg</p>
                        </div>
                        <div class="p-3 bg-gray-700 rounded-lg">
                            <p class="text-xs text-gray-400">Height</p>
                            <p class="font-medium text-white">165 cm</p>
                        </div>
                        <div class="p-3 bg-gray-700 rounded-lg">
                            <p class="text-xs text-gray-400">BMI</p>
                            <p class="font-medium text-white">25.0</p>
                        </div>
                        <div class="p-3 bg-gray-700 rounded-lg">
                            <p class="text-xs text-gray-400">BP</p>
                            <p class="font-medium text-white">120/80</p>
                        </div>
                    </div>
                    
                    <div>
                        <h4 class="mb-2 text-sm font-medium text-gray-300">Medical History</h4>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-2 py-1 text-xs text-gray-300 bg-gray-700 rounded">Hypertension</span>
                            <span class="px-2 py-1 text-xs text-gray-300 bg-gray-700 rounded">Type 2 Diabetes</span>
                        </div>
                    </div>
                    
                    <div>
                        <h4 class="mb-2 text-sm font-medium text-gray-300">Allergies</h4>
                        <div class="flex flex-wrap gap-2">
                            <span class="px-2 py-1 text-xs text-red-300 rounded bg-red-900/50">Penicillin</span>
                        </div>
                    </div>
                </div>
                
                <div x-show="activeTab === 'notes'" class="p-4">
                    <div class="space-y-4">
                        <div>
                            <label class="block mb-1 text-sm font-medium text-gray-300">Subjective</label>
                            <textarea 
                                x-model="soapNotes.subjective"
                                class="w-full px-3 py-2 text-white placeholder-gray-400 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-wellcare-500 focus:border-wellcare-500"
                                rows="3"
                                placeholder="Patient reported symptoms..."
                            ></textarea>
                        </div>
                        
                        <div>
                            <label class="block mb-1 text-sm font-medium text-gray-300">Objective</label>
                            <textarea 
                                x-model="soapNotes.objective"
                                class="w-full px-3 py-2 text-white placeholder-gray-400 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-wellcare-500 focus:border-wellcare-500"
                                rows="3"
                                placeholder="Clinical observations..."
                            ></textarea>
                        </div>
                        
                        <div>
                            <label class="block mb-1 text-sm font-medium text-gray-300">Assessment</label>
                            <select 
                                x-model="soapNotes.assessment"
                                class="w-full px-3 py-2 text-white bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-wellcare-500"
                            >
                                <option value="">Select diagnosis...</option>
                                <option value="I10">Essential hypertension</option>
                                <option value="E11">Type 2 diabetes</option>
                            </select>
                        </div>
                        
                        <div>
                            <label class="block mb-1 text-sm font-medium text-gray-300">Plan</label>
                            <textarea 
                                x-model="soapNotes.plan"
                                class="w-full px-3 py-2 text-white placeholder-gray-400 bg-gray-700 border border-gray-600 rounded-lg focus:ring-2 focus:ring-wellcare-500 focus:border-wellcare-500"
                                rows="3"
                                placeholder="Treatment plan..."
                            ></textarea>
                        </div>
                    </div>
                </div>
                
                <div x-show="activeTab === 'tools'" class="p-4">
                    <div class="grid grid-cols-2 gap-3">
                        <button 
                            @click="openTool('bodyMap')"
                            class="p-4 text-center transition-colors bg-gray-700 rounded-lg hover:bg-gray-600"
                        >
                            <i class="mb-2 text-2xl fa-solid fa-child text-wellcare-400"></i>
                            <p class="text-sm text-white">Body Map</p>
                        </button>
                        <button 
                            @click="openTool('whiteboard')"
                            class="p-4 text-center transition-colors bg-gray-700 rounded-lg hover:bg-gray-600"
                        >
                            <i class="mb-2 text-2xl fa-solid fa-palette text-wellcare-400"></i>
                            <p class="text-sm text-white">Whiteboard</p>
                        </button>
                        <button 
                            @click="openTool('prescription')"
                            class="p-4 text-center transition-colors bg-gray-700 rounded-lg hover:bg-gray-600"
                        >
                            <i class="mb-2 text-2xl fa-solid fa-prescription text-wellcare-400"></i>
                            <p class="text-sm text-white">Prescription</p>
                        </button>
                        <button 
                            @click="openTool('labOrder')"
                            class="p-4 text-center transition-colors bg-gray-700 rounded-lg hover:bg-gray-600"
                        >
                            <i class="mb-2 text-2xl fa-solid fa-flask text-wellcare-400"></i>
                            <p class="text-sm text-white">Lab Order</p>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div 
        x-show="showChat"
        x-cloak
        class="fixed top-0 bottom-0 right-0 z-50 flex flex-col bg-gray-800 border-l border-gray-700 w-80 dark:bg-gray-900"
    >
        <div class="flex items-center justify-between p-4 border-b border-gray-700">
            <h3 class="font-medium text-white">Chat</h3>
            <button @click="showChat = false" class="text-gray-400 hover:text-white">
                <i class="fa-solid fa-times"></i>
            </button>
        </div>
        
        <div class="flex-1 p-4 space-y-3 overflow-y-auto">
            <template x-for="msg in chatMessages" :key="msg.id">
                <div 
                    class="chat-message"
                    :class="msg.sender === 'doctor' ? 'doctor' : 'patient'"
                >
                    <p x-text="msg.text"></p>
                    <p class="mt-1 text-xs opacity-70" x-text="msg.time"></p>
                </div>
            </template>
        </div>
        
        <div class="p-4 border-t border-gray-700">
            <div class="flex items-center gap-2">
                <input 
                    type="text" 
                    x-model="newMessage"
                    @keyup.enter="sendMessage()"
                    class="flex-1 px-4 py-2 text-white placeholder-gray-400 bg-gray-700 border border-gray-600 rounded-full focus:ring-2 focus:ring-wellcare-500"
                    placeholder="Type a message..."
                >
                <button 
                    @click="sendMessage()"
                    class="p-2 text-white transition-colors rounded-full bg-wellcare-500 hover:bg-wellcare-600"
                >
                    <i class="fa-solid fa-paper-plane"></i>
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}
