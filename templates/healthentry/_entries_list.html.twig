{#
    Health Entries List Partial - Used for AJAX updates
#}
{% if healthentries|length > 0 %}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for entry in healthentries %}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5 hover:shadow-lg transition-shadow">
            {# Header #}
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                        <i class="fa-solid fa-calendar-day text-wellcare-600 dark:text-wellcare-400"></i>
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-900 dark:text-white">
                            {{ entry.date|date('d/m/Y') }}
                        </h3>
                        <p class="text-xs text-gray-500 dark:text-gray-400">
                            {{ entry.date|date('l')|trans }}
                        </p>
                    </div>
                </div>
                
                {# Actions Dropdown #}
                <div class="relative" x-data="{ open: false }">
                    <button @click="open = !open" class="p-2 text-gray-500 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800">
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </button>
                    <div x-show="open" @click.away="open = false" class="absolute right-0 mt-2 w-36 bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 py-2 z-10" style="display: none;">
                        <a href="/healthentry/{{ entry.id }}" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                            <i class="fa-solid fa-eye text-wellcare-500"></i>
                            {{ 'Voir'|trans }}
                        </a>
                        <a href="/healthentry/{{ entry.id }}/edit" class="flex items-center gap-2 px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                            <i class="fa-solid fa-pen text-blue-500"></i>
                            {{ 'Modifier'|trans }}
                        </a>
                        <form action="/healthentry/{{ entry.id }}" method="POST" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette entrée?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entry.id) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="flex items-center gap-2 w-full px-4 py-2 text-sm text-red-600 dark:text-red-400 hover:bg-gray-100 dark:hover:bg-gray-700">
                                <i class="fa-solid fa-trash"></i>
                                {{ 'Supprimer'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
            
            {# Metrics #}
            <div class="grid grid-cols-2 gap-3 mb-4">
                <div class="p-3 bg-gray-50 dark:bg-gray-800 rounded-lg text-center">
                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Poids'|trans }}</p>
                    <p class="font-bold text-gray-900 dark:text-white">{{ entry.poids|default('-') }} <span class="text-xs font-normal">kg</span></p>
                </div>
                <div class="p-3 bg-gray-50 dark:bg-gray-800 rounded-lg text-center">
                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Glycémie'|trans }}</p>
                    <p class="font-bold text-gray-900 dark:text-white">{{ entry.glycemie|default('-') }} <span class="text-xs font-normal">g/l</span></p>
                </div>
                <div class="p-3 bg-gray-50 dark:bg-gray-800 rounded-lg text-center">
                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Tension'|trans }}</p>
                    <p class="font-bold text-gray-900 dark:text-white">{{ entry.tension|default('-') }}</p>
                </div>
                <div class="p-3 bg-gray-50 dark:bg-gray-800 rounded-lg text-center">
                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Sommeil'|trans }}</p>
                    <p class="font-bold text-gray-900 dark:text-white">{{ entry.sommeil|default('-') }} <span class="text-xs font-normal">h</span></p>
                </div>
            </div>
            
            {# Symptoms Summary #}
            {% if entry.symptoms|length > 0 %}
                <div class="pt-3 border-t border-gray-200 dark:border-gray-700">
                    <p class="text-xs text-gray-500 dark:text-gray-400 mb-2">
                        <i class="fa-solid fa-notes-medical mr-1"></i>
                        {{ entry.symptoms|length }} {{ 'symptôme(s)'|trans }}
                    </p>
                    <div class="flex flex-wrap gap-1">
                        {% for symptom in entry.symptoms|slice(0, 3) %}
                            <span class="px-2 py-1 bg-wellcare-100 dark:bg-wellcare-900/30 text-wellcare-700 dark:text-wellcare-300 rounded-full text-xs">
                                {{ symptom.type|title }}
                            </span>
                        {% endfor %}
                        {% if entry.symptoms|length > 3 %}
                            <span class="px-2 py-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400 rounded-full text-xs">
                                +{{ entry.symptoms|length - 3 }}
                            </span>
                        {% endif %}
                    </div>
                </div>
            {% endif %}
        </div>
        {% endfor %}
    </div>
{% else %}
    <div class="text-center py-12">
        <div class="flex flex-col items-center justify-center">
            <div class="w-16 h-16 bg-gray-100 dark:bg-gray-800 rounded-full flex items-center justify-center mb-4">
                <i class="fa-solid fa-clipboard-list text-2xl text-gray-400"></i>
            </div>
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-2">{{ 'Aucune entrée'|trans }}</h3>
            <p class="text-gray-500 dark:text-gray-400 mb-4">{{ 'Commencez par ajouter votre première entrée de santé'|trans }}</p>
            <a href="{{ path('app_health_journal_accessible') }}" class="btn-primary">
                <i class="fa-solid fa-plus mr-2"></i>{{ 'Ajouter une entrée'|trans }}
            </a>
        </div>
    </div>
{% endif %}
