{% extends 'layouts/app.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('coach') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('coach') }}
{% endblock %}

{% block body %}
<div x-data="coachDashboard()" class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-chalkboard-teacher text-wellcare-500"></i>
                            {{ 'Coach Dashboard' }}
                        </h1>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            {{ 'Welcome back! Here\'s your coaching overview.' }}
                        </p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <button @click="openNewClientModal()" class="flex items-center gap-2 px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="fas fa-user-plus"></i>
                        {{ 'Add New Client' }}
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main class="p-6">
        <!-- Stats Cards -->
        <div class="grid grid-cols-1 gap-6 mb-6 md:grid-cols-2 lg:grid-cols-4">
            <!-- Total Clients -->
            <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'Total Clients' }}</p>
                        <p class="mt-1 text-3xl font-bold text-gray-900 dark:text-white">{{ stats.totalClients }}</p>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                        <i class="text-xl fas fa-users text-wellcare-500"></i>
                    </div>
                </div>
                <div class="flex items-center mt-4">
                    <span class="text-sm font-medium text-green-500">
                        <i class="mr-1 fas fa-arrow-up"></i>+3
                    </span>
                    <span class="ml-2 text-sm text-gray-500 dark:text-gray-400">{{ 'this month' }}</span>
                </div>
            </div>

            <!-- Active Programs -->
            <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'Active Programs' }}</p>
                        <p class="mt-1 text-3xl font-bold text-gray-900 dark:text-white">{{ stats.activePrograms }}</p>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 bg-blue-100 rounded-lg dark:bg-blue-900/30">
                        <i class="text-xl text-blue-500 fas fa-clipboard-list"></i>
                    </div>
                </div>
                <div class="flex items-center mt-4">
                    <span class="text-sm text-gray-500 dark:text-gray-400">{{ stats.sessionsThisWeek }} {{ 'sessions this week' }}</span>
                </div>
            </div>

            <!-- Pending Reviews -->
            <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'Pending Reviews' }}</p>
                        <p class="mt-1 text-3xl font-bold text-gray-900 dark:text-white">{{ stats.pendingReviews }}</p>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 rounded-lg bg-amber-100 dark:bg-amber-900/30">
                        <i class="text-xl fas fa-clock text-amber-500"></i>
                    </div>
                </div>
                <div class="flex items-center mt-4">
                    <span class="text-sm text-gray-500 dark:text-gray-400">{{ 'videos & check-ins' }}</span>
                </div>
            </div>

            <!-- Avg Adherence -->
            <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'Avg Adherence' }}</p>
                        <p class="mt-1 text-3xl font-bold text-gray-900 dark:text-white">{{ stats.avgAdherenceRate }}%</p>
                    </div>
                    <div class="flex items-center justify-center w-12 h-12 bg-green-100 rounded-lg dark:bg-green-900/30">
                        <i class="text-xl text-green-500 fas fa-chart-line"></i>
                    </div>
                </div>
                <div class="w-full h-2 mt-4 bg-gray-200 rounded-full dark:bg-gray-700">
                    <div class="h-2 bg-green-500 rounded-full" style="width: {{ stats.avgAdherenceRate }}%"></div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
            <!-- Left Column - Activity & Sessions -->
            <div class="space-y-6 lg:col-span-2">
                <!-- Upcoming Sessions -->
                <div class="bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                                <i class="mr-2 fas fa-calendar-alt text-wellcare-500"></i>
                                {{ 'Upcoming Sessions' }}
                            </h2>
                            <a href="#" class="text-sm font-medium text-wellcare-500 hover:text-wellcare-600">
                                {{ 'View All' }}
                            </a>
                        </div>
                    </div>
                    <div class="p-4 space-y-4">
                        {% for session in upcomingSessions %}
                        <div class="flex items-center gap-4 p-4 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                <span class="font-medium text-wellcare-600 dark:text-wellcare-400">{{ session.avatar }}</span>
                            </div>
                            <div class="flex-1">
                                <p class="font-medium text-gray-900 dark:text-white">{{ session.client }}</p>
                                <p class="text-sm text-gray-500 dark:text-gray-400">{{ session.time }}</p>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="px-3 py-1 text-xs font-medium text-blue-600 bg-blue-100 rounded-full dark:bg-blue-900/30 dark:text-blue-400">
                                    {{ session.type }}
                                </span>
                                <button class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="fas fa-video"></i>
                                </button>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Recent Activity -->
                <div class="bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-history text-wellcare-500"></i>
                            {{ 'Recent Activity' }}
                        </h2>
                    </div>
                    <div class="p-4">
                        <div class="space-y-4">
                            {% for activity in recentActivity %}
                            <div class="flex items-start gap-4">
                                <div class="flex-shrink-0">
                                    <div class="flex items-center justify-center w-10 h-10 bg-gray-100 rounded-full dark:bg-gray-700">
                                        <i class="fas {{ activity.icon }} {{ activity.color }}"></i>
                                    </div>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="text-sm font-medium text-gray-900 dark:text-white">
                                        {{ activity.client }}
                                    </p>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ activity.message }}</p>
                                </div>
                                <span class="text-xs text-gray-400 dark:text-gray-500">{{ activity.time }}</span>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Client Progress -->
            <div class="space-y-6">
                <!-- Client Progress -->
                <div class="bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                                <i class="mr-2 fas fa-chart-pie text-wellcare-500"></i>
                                {{ 'Client Progress' }}
                            </h2>
                            <a href="{{ path('coach_clients') }}" class="text-sm font-medium text-wellcare-500 hover:text-wellcare-600">
                                {{ 'View All' }}
                            </a>
                        </div>
                    </div>
                    <div class="p-4 space-y-4">
                        {% for client in clientProgress %}
                        <div class="p-4 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <div class="flex items-center gap-3 mb-3">
                                <div class="flex items-center justify-center w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                    <span class="font-medium text-wellcare-600 dark:text-wellcare-400">{{ client.avatar }}</span>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <p class="font-medium text-gray-900 truncate dark:text-white">{{ client.name }}</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ client.goal }}</p>
                                </div>
                                <span class="px-2 py-1 text-xs font-medium rounded-full
                                    {% if client.status == 'excellent' %}
                                        bg-green-100 text-green-600 dark:bg-green-900/30 dark:text-green-400
                                    {% elseif client.status == 'on_track' %}
                                        bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400
                                    {% else %}
                                        bg-amber-100 text-amber-600 dark:bg-amber-900/30 dark:text-amber-400
                                    {% endif %}
                                ">
                                    {% if client.status == 'excellent' %}
                                        {{ 'Excellent' }}
                                    {% elseif client.status == 'on_track' %}
                                        {{ 'On Track' }}
                                    {% else %}
                                        {{ 'Needs Attention' }}
                                    {% endif %}
                                </span>
                            </div>
                            <div class="w-full h-2 bg-gray-200 rounded-full dark:bg-gray-600">
                                <div class="h-2 rounded-full
                                    {% if client.status == 'excellent' %}
                                        bg-green-500
                                    {% elseif client.status == 'on_track' %}
                                        bg-blue-500
                                    {% else %}
                                        bg-amber-500
                                    {% endif %}
                                " style="width: {{ client.progress }}%"></div>
                            </div>
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">{{ client.progress }}% complete</p>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-bolt text-wellcare-500"></i>
                            {{ 'Quick Actions' }}
                        </h2>
                    </div>
                    <div class="p-4 space-y-2">
                        <button @click="openNewProgramModal()" class="flex items-center w-full gap-3 p-3 text-left transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700">
                            <div class="flex items-center justify-center w-10 h-10 bg-blue-100 rounded-lg dark:bg-blue-900/30">
                                <i class="text-blue-500 fas fa-plus-circle"></i>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">{{ 'Create New Program' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Design a workout plan' }}</p>
                            </div>
                        </button>
                        <button @click="openMessageModal()" class="flex items-center w-full gap-3 p-3 text-left transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700">
                            <div class="flex items-center justify-center w-10 h-10 bg-green-100 rounded-lg dark:bg-green-900/30">
                                <i class="text-green-500 fas fa-comment-medical"></i>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">{{ 'Send Broadcast' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Message all clients' }}</p>
                            </div>
                        </button>
                        <button @click="openReportModal()" class="flex items-center w-full gap-3 p-3 text-left transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700">
                            <div class="flex items-center justify-center w-10 h-10 bg-purple-100 rounded-lg dark:bg-purple-900/30">
                                <i class="text-purple-500 fas fa-file-alt"></i>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">{{ 'Generate Report' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Export client progress' }}</p>
                            </div>
                        </button>
                        <button @click="openReviewQueue()" class="flex items-center w-full gap-3 p-3 text-left transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700">
                            <div class="relative flex items-center justify-center w-10 h-10 rounded-lg bg-amber-100 dark:bg-amber-900/30">
                                <i class="fas fa-exclamation-circle text-amber-500"></i>
                                <span class="absolute flex items-center justify-center w-5 h-5 text-xs font-bold text-white bg-red-500 rounded-full -top-1 -right-1">{{ stats.pendingReviews }}</span>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">{{ 'Review Queue' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Pending items to review' }}</p>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

