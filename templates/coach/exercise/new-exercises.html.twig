        if (datetimeInput && !datetimeInput.value) {
            const now = new Date();
            datetimeInput.value = now.toISOString().slice(0, 16);
        }
        
        // Setup event listeners for stats calculation
        const durationField = document.getElementById('{{ form.duration.vars.id }}');
