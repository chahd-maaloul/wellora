{% extends 'layouts/app.html.twig' %}

{% block title %}Create New Exercise{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    :root {
        --primary-color: #00b894;      /* vert principal (comme le bouton) */
--primary-hover: #00997a;      /* hover plus fonc√© */
--secondary-color: #00d1a0;    /* accent clair */

--success-color: #00c896;

--light-bg: #f0fdfa;           /* fond tr√®s l√©ger mint */
--border-color: #ccfbf1;

--text-primary: #0f172a;
--text-secondary: #64748b;

--shadow: 0 4px 6px rgba(0, 184, 148, 0.15);
--shadow-hover: 0 10px 15px rgba(0, 184, 148, 0.25);

    }
    
    .exercise-form-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 0 1rem;
    }
    
    .form-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 2rem;
        border-radius: 12px 12px 0 0;
        margin-bottom: 0;
    }
    
    .form-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    
    .form-header p {
        opacity: 0.9;
        font-size: 1.1rem;
    }
    
    .form-card {
        background: white;
        border-radius: 0 0 12px 12px;
        box-shadow: var(--shadow);
        overflow: hidden;
    }
    
    .form-body {
        padding: 2rem;
    }
    
    .form-section {
        margin-bottom: 2.5rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--border-color);
    }
    
    .form-section:last-of-type {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    
    .section-title {
        color: var(--text-primary);
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .section-title i {
        color: var(--primary-color);
        font-size: 1.5rem;
    }
    
    .form-grid-2 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    .form-grid-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
    }
    
    .form-grid-4 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    @media (min-width: 768px) {
        .form-grid-4 {
            grid-template-columns: repeat(4, 1fr);
        }
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        display: block;
        color: var(--text-primary);
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }
    
    .form-control, .form-select {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid var(--border-color);
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: white;
    }
    
    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
    }
    
    .form-control:hover, .form-select:hover {
        border-color: #cbd5e0;
    }
    
    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }
    
    .form-help {
        display: block;
        color: var(--text-secondary);
        font-size: 0.875rem;
        margin-top: 0.5rem;
        line-height: 1.4;
    }
    
    .form-check {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem;
        background: var(--light-bg);
        border-radius: 8px;
        border: 1px solid var(--border-color);
    }
    
    .form-check-input {
        width: 1.25rem;
        height: 1.25rem;
        cursor: pointer;
    }
    
    .form-check-label {
        color: var(--text-primary);
        font-weight: 500;
        cursor: pointer;
    }
    
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        padding: 2rem;
        background: var(--light-bg);
        border-top: 1px solid var(--border-color);
    }
    
    .btn {
        padding: 0.875rem 2rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        text-decoration: none;
    }
    
    .btn-primary {
        background: var(--primary-color);
        color: white;
    }
    
    .btn-primary:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-hover);
    }
    
    .btn-secondary {
        background: white;
        color: var(--text-primary);
        border: 2px solid var(--border-color);
    }
    
    .btn-secondary:hover {
        background: var(--light-bg);
        border-color: #cbd5e0;
    }
    
    .btn-icon {
        font-size: 1.25rem;
    }
    
    .error-message {
        color: #e53e3e;
        font-size: 0.875rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .datetime-wrapper {
        position: relative;
    }
    
    .datetime-wrapper .form-control {
        padding-right: 3rem;
    }
    
    .datetime-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-secondary);
        pointer-events: none;
    }
    
    .badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: var(--light-bg);
        color: var(--text-secondary);
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
        margin-left: 0.5rem;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        background: #f8fafc;
        padding: 1.5rem;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }
    
    .stat-item {
        display: flex;
        flex-direction: column;
    }
    
    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-color);
    }
    
    .stat-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }
    
    /* Styles pour VichUploader */
    .vich-file {
        display: block;
        width: 100%;
    }
    
    .vich-file .form-control[type="file"] {
        padding: 0.75rem;
        border: 2px dashed var(--border-color);
        background: var(--light-bg);
        cursor: pointer;
    }
    
    .vich-file .form-control[type="file"]:hover {
        border-color: var(--primary-color);
        background: rgba(67, 97, 238, 0.05);
    }
    
    .vich-file .form-check {
        margin-top: 1rem;
        padding: 0.75rem;
    }
    
    .video-preview {
        margin-top: 1rem;
        padding: 1rem;
        background: white;
        border: 1px solid var(--border-color);
        border-radius: 8px;
    }
    
    .video-player-container {
        position: relative;
        width: 100%;
        border-radius: 8px;
        overflow: hidden;
        background: #000;
    }
    
    .video-player-container video {
        width: 100%;
        height: auto;
        max-height: 300px;
        display: block;
    }
    
    .youtube-thumbnail {
        width: 100%;
        height: 200px;
        border-radius: 8px;
        background-size: cover;
        background-position: center;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        background-color: #f0f0f0;
    }
    
    .youtube-thumbnail::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.4);
        border-radius: 8px;
    }
    
    .youtube-thumbnail i {
        position: relative;
        z-index: 2;
        font-size: 3rem;
        color: white;
    }
    
    @media (max-width: 768px) {
        .exercise-form-container {
            margin: 1rem auto;
        }
        
        .form-header {
            padding: 1.5rem;
        }
        
        .form-header h1 {
            font-size: 1.5rem;
        }
        
        .form-body {
            padding: 1.5rem;
        }
        
        .form-grid-2,
        .form-grid-3,
        .form-grid-4 {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .form-actions {
            flex-direction: column;
            padding: 1.5rem;
        }
        
        .btn {
            width: 100%;
            justify-content: center;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .video-player-container video {
            max-height: 200px;
        }
    }
</style>
{% endblock %}

{% block body %}

<div class="exercise-form-container">
    {{ form_start(form, {'attr': {'class': 'exercise-form', 'enctype': 'multipart/form-data'}}) }}
    
    <div class="form-header">
        <h1>Create New Exercise</h1>
        <p>Add a new exercise to your fitness library. Fill in all required fields marked with <span style="color: #e53e3e">*</span></p>
    </div>
    
    <div class="form-card">
        <div class="form-body">
            <!-- Basic Information Section -->
            <div class="form-section">
                <h2 class="section-title">
                    <i class="fas fa-info-circle"></i>
                    Basic Information
                    <span class="badge">Required</span>
                </h2>
                
                <div class="form-grid-3">
                    <div class="form-group">
                        {{ form_label(form.name, 'Exercise Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        <span class="form-help">Enter a clear, descriptive name for the exercise</span>
                        {{ form_errors(form.name) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.category, 'Category', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                        <span class="form-help">Select the primary category for this exercise</span>
                        {{ form_errors(form.category) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.createdAt, 'Created Date', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="datetime-wrapper">
                            {{ form_widget(form.createdAt, {'attr': {'class': 'form-control datetimepicker'}}) }}
                            <i class="fas fa-calendar-alt datetime-icon"></i>
                        </div>
                        <span class="form-help">When was this exercise created?</span>
                        {{ form_errors(form.createdAt) }}
                    </div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                    <span class="form-help">Describe how to perform the exercise and its benefits</span>
                    {{ form_errors(form.description) }}
                </div>
            </div>
            
            <!-- Exercise Details Section -->
            <div class="form-section">
                <h2 class="section-title">
                    <i class="fas fa-cogs"></i>
                    Exercise Settings
                </h2>
                
                <div class="form-grid-2">
                    <div class="form-group">
                        {{ form_label(form.difficulty_level, 'Difficulty Level', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.difficulty_level, {'attr': {'class': 'form-select'}}) }}
                        <span class="form-help">Choose the appropriate difficulty level</span>
                        {{ form_errors(form.difficulty_level) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.defaultUnit, 'Default Unit', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.defaultUnit, {'attr': {'class': 'form-select'}}) }}
                        <span class="form-help">Select how this exercise is typically measured</span>
                        {{ form_errors(form.defaultUnit) }}
                    </div>
                </div>
            </div>
            
            <!-- Performance Metrics Section -->
            <div class="form-section">
                <h2 class="section-title">
                    <i class="fas fa-chart-line"></i>
                    Performance Metrics
                    <span class="badge">Optional</span>
                </h2>
                
                <div class="form-grid-4">
                    <div class="form-group">
                        {{ form_label(form.duration, 'Duration (min)', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.duration, {'attr': {'class': 'form-control', 'placeholder': 'e.g., 30'}}) }}
                        <span class="form-help">Average duration</span>
                        {{ form_errors(form.duration) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.calories, 'Calories/min', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.calories, {'attr': {'class': 'form-control', 'placeholder': 'e.g., 10'}}) }}
                        <span class="form-help">Calories burned per minute</span>
                        {{ form_errors(form.calories) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.sets, 'Sets', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.sets, {'attr': {'class': 'form-control', 'placeholder': 'e.g., 3'}}) }}
                        <span class="form-help">Recommended sets</span>
                        {{ form_errors(form.sets) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.reps, 'Reps', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.reps, {'attr': {'class': 'form-control', 'placeholder': 'e.g., 12'}}) }}
                        <span class="form-help">Repetitions per set</span>
                        {{ form_errors(form.reps) }}
                    </div>
                </div>
                
                <!-- Calculated Stats Preview -->
                <div class="stats-grid" id="stats-preview" style="display: none;">
                    <div class="stat-item">
                        <span class="stat-value" id="total-calories">0</span>
                        <span class="stat-label">Total Calories</span>
                    </div>
                    <div class="stat-item">
                        <span class="stat-value" id="total-reps">0</span>
                        <span class="stat-label">Total Repetitions</span>
                    </div>
                </div>
            </div>
            
            <!-- Media & Settings Section -->
            <div class="form-section">
                <h2 class="section-title">
                    <i class="fas fa-photo-video"></i>
                    Media & Settings
                </h2>
                
                <!-- Video Upload Option (VichUploader) -->
                <div class="form-group">
                    <label class="form-label">Video Upload</label>
                    <div class="vich-file">
                        {{ form_widget(form.videoFile, {'attr': {
    'class': 'form-control',
    'accept': 'video/*',
    'onchange': 'handleVideoUpload(this)'
}}) }}

                        {% if form.videoFile.delete is defined %}
                        <div class="form-check">
                            {{ form_widget(form.videoFile.delete, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(form.videoFile.delete, 'Remove current video', {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>
                        {% endif %}
                    </div>
                    {{ form_errors(form.videoFile) }}
                    <span class="form-help">Max 100MB. Supported formats: MP4, AVI, MOV, WMV, WebM</span>
                    
                    <!-- Video Preview -->
                    <div class="video-preview" id="videoPreview" style="display: none;">
                        <div class="video-player-container">
                            <video id="videoPlayer" controls>
                                Your browser does not support the video tag.
                            </video>
                        </div>
                        <div class="mt-2 text-center">
                            <button type="button" onclick="removeUploadedVideo()" class="btn btn-secondary btn-sm">
                                <i class="fas fa-times"></i> Remove Video
                            </button>
                        </div>
                    </div>
                </div>
                
                <!-- YouTube URL Option -->
                <div class="form-group">
                    {{ form_label(form.videoUrl, 'OR: YouTube/Vimeo URL', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.videoUrl, {'attr': {
                        'class': 'form-control',
                        'placeholder': 'https://youtube.com/watch?v=...',
                        'id': 'videoUrlInput',
                        'oninput': 'previewYouTubeUrl(this.value)'
                    }}) }}
                    <span class="form-help">Paste a YouTube or Vimeo link</span>
                    {{ form_errors(form.videoUrl) }}
                    
                    <!-- YouTube Preview -->
                    <div class="video-preview" id="youtubePreview" style="display: none;">
                        <div class="youtube-thumbnail" id="youtubeThumbnail">
                            <i class="fab fa-youtube"></i>
                        </div>
                        <div class="mt-2 text-center">
                            <button type="button" onclick="removeYouTubeUrl()" class="btn btn-secondary btn-sm">
                                <i class="fas fa-times"></i> Remove URL
                            </button>
                        </div>
                    </div>
                </div>
                
                <div class="form-check">
                    {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.isActive, 'Make this exercise available in the library', {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
                {{ form_errors(form.isActive) }}
            </div>
        </div>
        
        <!-- Form Actions -->
        <div class="form-actions">
            <a href="{{ path('exercises_show') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left btn-icon"></i>
                Cancel
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-plus-circle btn-icon"></i>
                Create Exercise
            </button>
        </div>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}

