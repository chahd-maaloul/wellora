        const repsField = document.getElementById('{{ form.reps.vars.id }}');
        
        if (durationField) durationField.addEventListener('input', updateStatsPreview);
        if (caloriesField) caloriesField.addEventListener('input', updateStatsPreview);
        if (setsField) setsField.addEventListener('input', updateStatsPreview);
        if (repsField) repsField.addEventListener('input', updateStatsPreview);
        
        // Initialize stats preview
        updateStatsPreview();
        
        // Check for existing video URL
        const videoUrlInput = document.getElementById('videoUrlInput');
        if (videoUrlInput && videoUrlInput.value) {
            previewYouTubeUrl(videoUrlInput.value);
        }
    });

    // Function to calculate and update stats
    function updateStatsPreview() {
        const durationField = document.getElementById('{{ form.duration.vars.id }}');
        const caloriesField = document.getElementById('{{ form.calories.vars.id }}');
        const setsField = document.getElementById('{{ form.sets.vars.id }}');
        const repsField = document.getElementById('{{ form.reps.vars.id }}');
        
        if (!durationField || !caloriesField || !setsField || !repsField) return;
        
        // Calculate total calories (duration * calories per minute)
        const duration = parseFloat(durationField.value) || 0;
        const caloriesPerMin = parseFloat(caloriesField.value) || 0;
        const totalCalories = duration * caloriesPerMin;
        
        // Calculate total reps (sets * reps)
        const sets = parseInt(setsField.value) || 0;
        const reps = parseInt(repsField.value) || 0;
        const totalReps = sets * reps;
        
        // Update display
        const totalCaloriesEl = document.getElementById('total-calories');
        const totalRepsEl = document.getElementById('total-reps');
        const statsPreview = document.getElementById('stats-preview');
        
        if (totalCaloriesEl) totalCaloriesEl.textContent = totalCalories.toFixed(0);
        if (totalRepsEl) totalRepsEl.textContent = totalReps;
        
        if (statsPreview) {
            if (duration > 0 || caloriesPerMin > 0 || sets > 0 || reps > 0) {
                statsPreview.style.display = 'grid';
            } else {
                statsPreview.style.display = 'none';
            }
        }
    }

    // Handle video file upload
    function handleVideoUpload(input) {
        if (!input || !input.files || !input.files[0]) {
            // Hide preview if no file
            document.getElementById('videoPreview').style.display = 'none';
            return;
        }
        
        const file = input.files[0];
        
        // Validate file type
        if (!file.type.startsWith('video/')) {
            alert('Please select a video file (MP4, AVI, MOV, WebM, etc.)');
            input.value = '';
            return;
        }
        
        // Validate file size (max 100MB)
        if (file.size > 100 * 1024 * 1024) {
            alert('File size must be less than 100MB');
            input.value = '';
            return;
        }
        
        // Show preview
        const videoPreview = document.getElementById('videoPreview');
        const videoPlayer = document.getElementById('videoPlayer');
        
        if (videoPlayer) {
            const videoURL = URL.createObjectURL(file);
            videoPlayer.src = videoURL;
        }
        
        videoPreview.style.display = 'block';
        
        // Clear YouTube URL if exists
        const youtubeInput = document.getElementById('videoUrlInput');
        if (youtubeInput) {
            youtubeInput.value = '';
        }
        const youtubePreview = document.getElementById('youtubePreview');
        if (youtubePreview) {
            youtubePreview.style.display = 'none';
        }
    }

    // Remove uploaded video
    function removeUploadedVideo() {
        const fileInput = document.querySelector('input[type="file"]');
        if (fileInput) {
            fileInput.value = '';
        }
        
        const videoPreview = document.getElementById('videoPreview');
        const videoPlayer = document.getElementById('videoPlayer');
        
        if (videoPreview) videoPreview.style.display = 'none';
        if (videoPlayer) {
            videoPlayer.src = '';
            videoPlayer.pause();
        }
        
        // Also uncheck delete checkbox if exists
        const deleteCheckbox = document.querySelector('input[name$="[delete]"]');
        if (deleteCheckbox) {
            deleteCheckbox.checked = false;
        }
    }

    // YouTube URL preview
    function previewYouTubeUrl(url) {
        if (!url) {
            const youtubePreview = document.getElementById('youtubePreview');
            if (youtubePreview) youtubePreview.style.display = 'none';
            return;
        }
        
        // Extract YouTube video ID
        let videoId = null;
        if (url.includes('youtube.com/watch?v=')) {
            videoId = url.split('v=')[1]?.split('&')[0];
        } else if (url.includes('youtu.be/')) {
            videoId = url.split('youtu.be/')[1]?.split('?')[0];
        } else if (url.includes('vimeo.com/')) {
            videoId = url.split('vimeo.com/')[1]?.split('/')[0];
        }
        
        if (videoId) {
            const previewDiv = document.getElementById('youtubePreview');
            const thumbnailDiv = document.getElementById('youtubeThumbnail');
            
            if (previewDiv) previewDiv.style.display = 'block';
            
            if (thumbnailDiv) {
                if (url.includes('youtube.com') || url.includes('youtu.be')) {
                    thumbnailDiv.style.backgroundImage = `url(https://img.youtube.com/vi/${videoId}/hqdefault.jpg)`;
                    thumbnailDiv.innerHTML = '<i class="fab fa-youtube"></i>';
                } else if (url.includes('vimeo.com')) {
                    thumbnailDiv.style.backgroundImage = 'linear-gradient(135deg, #00adef, #00a3ff)';
                    thumbnailDiv.innerHTML = '<i class="fab fa-vimeo-v"></i>';
                }
            }
            
            // Clear file input
            const fileInput = document.querySelector('input[type="file"]');
            if (fileInput) {
                fileInput.value = '';
            }
            removeUploadedVideo();
        } else {
            const youtubePreview = document.getElementById('youtubePreview');
            if (youtubePreview) youtubePreview.style.display = 'none';
        }
    }

    function removeYouTubeUrl() {
        const youtubeInput = document.getElementById('videoUrlInput');
        const youtubePreview = document.getElementById('youtubePreview');
        
        if (youtubeInput) youtubeInput.value = '';
        if (youtubePreview) youtubePreview.style.display = 'none';
    }

    // Form validation
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.querySelector('.exercise-form');
        if (form) {
            form.addEventListener('submit', function(e) {
                const fileInput = document.querySelector('input[type="file"]');
                const youtubeInput = document.getElementById('videoUrlInput');
                
                // Check if both video file and URL are filled (conflict)
                const hasVideoFile = fileInput && fileInput.files && fileInput.files.length > 0;
                const hasYouTubeUrl = youtubeInput && youtubeInput.value.trim();
                
                if (hasVideoFile && hasYouTubeUrl) {
                    e.preventDefault();
                    showErrorMessage('Please choose either video upload OR video URL, not both.');
                    return false;
                }
                
                return true;
            });
        }
    });

    function showErrorMessage(message) {
        // Create error message element
        const errorDiv = document.createElement('div');
        errorDiv.className = 'error-message';
        errorDiv.style.cssText = 'margin-top: 1rem; padding: 1rem; background: #fee; border: 1px solid #fcc; border-radius: 8px;';
        errorDiv.innerHTML = `<i class="fas fa-exclamation-circle"></i> ${message}`;
        
        // Insert before form actions
        const formActions = document.querySelector('.form-actions');
        if (formActions) {
            formActions.parentNode.insertBefore(errorDiv, formActions);
            errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
    }
</script>
