{% extends 'base.html.twig' %}

{% block title %}Edit Exercise - {{ exercise.name }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    :root {
        --primary-color: #4361ee;
        --primary-hover: #3a56d4;
        --secondary-color: #7209b7;
        --success-color: #2ecc71;
        --light-bg: #f8f9fa;
        --border-color: #e9ecef;
        --text-primary: #2d3748;
        --text-secondary: #718096;
        --shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        --shadow-hover: 0 10px 15px rgba(0, 0, 0, 0.1);
    }
    
    .edit-exercise-container {
        max-width: 900px;
        margin: 2rem auto;
        padding: 0 1rem;
    }
    
    .form-header {
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 2rem;
        border-radius: 12px 12px 0 0;
        margin-bottom: 0;
    }
    
    .form-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }
    
    .form-header p {
        opacity: 0.9;
        font-size: 1.1rem;
    }
    
    .form-card {
        background: white;
        border-radius: 0 0 12px 12px;
        box-shadow: var(--shadow);
        overflow: hidden;
    }
    
    .form-body {
        padding: 2rem;
    }
    
    .form-section {
        margin-bottom: 2.5rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--border-color);
    }
    
    .form-section:last-of-type {
        border-bottom: none;
        margin-bottom: 0;
        padding-bottom: 0;
    }
    
    .section-title {
        color: var(--text-primary);
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }
    
    .section-title i {
        color: var(--primary-color);
        font-size: 1.5rem;
    }
    
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
    }
    
    .form-grid-2 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    .form-grid-3 {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1.5rem;
    }
    
    .form-grid-4 {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
    }
    
    @media (min-width: 768px) {
        .form-grid-4 {
            grid-template-columns: repeat(4, 1fr);
        }
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        display: block;
        color: var(--text-primary);
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }
    
    .form-label .required {
        color: #e53e3e;
        margin-left: 2px;
    }
    
    .form-control, .form-select {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 2px solid var(--border-color);
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s ease;
        background-color: white;
    }
    
    .form-control:focus, .form-select:focus {
        outline: none;
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
    }
    
    .form-control:hover, .form-select:hover {
        border-color: #cbd5e0;
    }
    
    textarea.form-control {
        min-height: 120px;
        resize: vertical;
    }
    
    .form-help {
        display: block;
        color: var(--text-secondary);
        font-size: 0.875rem;
        margin-top: 0.5rem;
        line-height: 1.4;
    }
    
    .form-check {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 1rem;
        background: var(--light-bg);
        border-radius: 8px;
        border: 1px solid var(--border-color);
    }
    
    .form-check-input {
        width: 1.25rem;
        height: 1.25rem;
        cursor: pointer;
    }
    
    .form-check-label {
        color: var(--text-primary);
        font-weight: 500;
        cursor: pointer;
    }
    
    .form-actions {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        padding: 2rem;
        background: var(--light-bg);
        border-top: 1px solid var(--border-color);
    }
    
    .btn {
        padding: 0.875rem 2rem;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        text-decoration: none;
    }
    
    .btn-primary {
        background: var(--primary-color);
        color: white;
    }
    
    .btn-primary:hover {
        background: var(--primary-hover);
        transform: translateY(-2px);
        box-shadow: var(--shadow-hover);
    }
    
    .btn-secondary {
        background: white;
        color: var(--text-primary);
        border: 2px solid var(--border-color);
    }
    
    .btn-secondary:hover {
        background: var(--light-bg);
        border-color: #cbd5e0;
    }
    
    .btn-danger {
        background: #e53e3e;
        color: white;
    }
    
    .btn-danger:hover {
        background: #c53030;
        transform: translateY(-2px);
        box-shadow: var(--shadow-hover);
    }
    
    .btn-icon {
        font-size: 1.25rem;
    }
    
    .error-message {
        color: #e53e3e;
        font-size: 0.875rem;
        margin-top: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .datetime-wrapper {
        position: relative;
    }
    
    .datetime-wrapper .form-control {
        padding-right: 3rem;
    }
    
    .datetime-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: var(--text-secondary);
        pointer-events: none;
    }
    
    .badge {
        display: inline-block;
        padding: 0.25rem 0.75rem;
        background: var(--light-bg);
        color: var(--text-secondary);
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
        margin-left: 0.5rem;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem;
        background: #f8fafc;
        padding: 1.5rem;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }
    
    .stat-item {
        display: flex;
        flex-direction: column;
    }
    
    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-color);
    }
    
    .stat-label {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }
    
    /* Current Video Preview */
    .current-video-preview {
        margin-top: 1rem;
        padding: 1.5rem;
        background: var(--light-bg);
        border-radius: 8px;
        border: 1px solid var(--border-color);
    }
    
    .current-video-header {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .current-video-header i {
        font-size: 2rem;
        color: var(--primary-color);
    }
    
    .current-video-title {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 1.1rem;
    }
    
    .video-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: var(--primary-color);
        color: white;
        border-radius: 20px;
        font-size: 0.875rem;
        font-weight: 500;
        margin-left: 1rem;
    }
    
    .video-badge.youtube {
        background: #FF0000;
    }
    
    .video-player-container {
        width: 100%;
        border-radius: 8px;
        overflow: hidden;
        background: #000;
        margin-bottom: 1rem;
    }
    
    .video-player {
        width: 100%;
        height: auto;
        max-height: 300px;
        display: block;
    }
    
    .video-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        background: white;
        border-radius: 8px;
        border: 1px solid var(--border-color);
    }
    
    .video-file-name {
        font-weight: 500;
        color: var(--text-primary);
        word-break: break-all;
    }
    
    .video-link {
        color: var(--primary-color);
        text-decoration: none;
        font-weight: 500;
    }
    
    .video-link:hover {
        text-decoration: underline;
    }
    
    .no-video {
        text-align: center;
        padding: 3rem 1rem;
        color: var(--text-secondary);
    }
    
    .no-video i {
        font-size: 4rem;
        margin-bottom: 1rem;
        opacity: 0.3;
    }
    
    .no-video p {
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }
    
    /* Replace Video Section */
    .replace-video-section {
        margin-top: 2rem;
        padding: 1.5rem;
        background: #f8fafc;
        border-radius: 8px;
        border: 1px dashed var(--border-color);
    }
    
    .replace-video-title {
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    
    .replace-video-title i {
        color: var(--primary-color);
    }
    
    .video-replace-options {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }
    
    .video-replace-btn {
        flex: 1;
        padding: 1rem;
        border: 2px solid var(--border-color);
        border-radius: 8px;
        background: white;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }
    
    .video-replace-btn:hover {
        border-color: var(--primary-color);
        background: rgba(67, 97, 238, 0.05);
    }
    
    .video-replace-btn i {
        font-size: 2rem;
        color: var(--primary-color);
    }
    
    .video-replace-btn.upload i {
        color: var(--primary-color);
    }
    
    .video-replace-btn.youtube i {
        color: #FF0000;
    }
    
    .video-replace-btn.remove i {
        color: #e53e3e;
    }
    
    .video-replace-btn .btn-text {
        font-weight: 500;
        color: var(--text-primary);
    }
    
    .video-replace-btn .btn-help {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }
    
    /* Hidden form fields */
    .hidden-form-fields {
        display: none;
    }
    
    .file-upload-wrapper {
        position: relative;
        width: 100%;
        margin-top: 1rem;
    }
    
    .file-upload-input {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
        z-index: 2;
    }
    
    .upload-area {
        border: 2px dashed var(--border-color);
        border-radius: 8px;
        padding: 2rem;
        text-align: center;
        background: white;
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .upload-area:hover {
        border-color: var(--primary-color);
        background: rgba(67, 97, 238, 0.05);
    }
    
    .upload-icon {
        font-size: 2.5rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }
    
    .upload-text {
        font-size: 1.1rem;
        font-weight: 600;
        color: var(--text-primary);
        margin-bottom: 0.5rem;
    }
    
    .upload-subtext {
        color: var(--text-secondary);
        margin-bottom: 0.5rem;
    }
    
    .upload-formats {
        font-size: 0.875rem;
        color: var(--text-secondary);
    }
    
    @media (max-width: 768px) {
        .edit-exercise-container {
            margin: 1rem auto;
        }
        
        .form-header {
            padding: 1.5rem;
        }
        
        .form-header h1 {
            font-size: 1.5rem;
        }
        
        .form-body {
            padding: 1.5rem;
        }
        
        .form-grid,
        .form-grid-2,
        .form-grid-3,
        .form-grid-4 {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .form-actions {
            flex-direction: column;
            padding: 1.5rem;
        }
        
        .btn {
            width: 100%;
            justify-content: center;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .video-replace-options {
            flex-direction: column;
        }
        
        .video-player {
            max-height: 200px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="edit-exercise-container">
    {{ form_start(form, {'attr': {'class': 'exercise-form'}}) }}
    
    <div class="form-header">
        <h1>Edit Exercise: {{ exercise.name }}</h1>
        <p>Update exercise details. Fill in all required fields marked with <span style="color: #e53e3e">*</span></p>
    </div>
    
    <div class="form-card">
        <div class="form-body">
            <!-- Basic Information Section -->
            <div class="form-section">
                <h2 class="section-title">
                    <i class="fas fa-info-circle"></i>
                    Basic Information
                    <span class="badge">Required</span>
                </h2>
                
                <div class="form-grid-3">
                    <div class="form-group">
                        {{ form_label(form.name, 'Exercise Name', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        <span class="form-help">Enter a clear, descriptive name for the exercise</span>
                        {% if form.name.vars.errors %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ form_errors(form.name) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.category, 'Category', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.category, {'attr': {'class': 'form-select'}}) }}
                        <span class="form-help">Select the primary category for this exercise</span>
                        {% if form.category.vars.errors %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ form_errors(form.category) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.createdAt, 'Created Date', {'label_attr': {'class': 'form-label'}}) }}
                        <div class="datetime-wrapper">
                            {{ form_widget(form.createdAt, {'attr': {'class': 'form-control datetimepicker'}}) }}
                            <i class="fas fa-calendar-alt datetime-icon"></i>
                        </div>
                        <span class="form-help">When was this exercise created?</span>
                        {% if form.createdAt.vars.errors %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ form_errors(form.createdAt) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
                
                <div class="form-group">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 4}}) }}
                    <span class="form-help">Describe how to perform the exercise and its benefits</span>
                    {% if form.description.vars.errors %}
                        <div class="error-message">
                            <i class="fas fa-exclamation-circle"></i>
                            {{ form_errors(form.description) }}
                        </div>
                    {% endif %}
                </div>
            </div>
            
            <!-- Exercise Details Section -->
            <div class="form-section">
                <h2 class="section-title">
                    <i class="fas fa-cogs"></i>
                    Exercise Settings
                </h2>
                
                <div class="form-grid-2">
                    <div class="form-group">
                        {{ form_label(form.difficulty_level, 'Difficulty Level', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.difficulty_level, {'attr': {'class': 'form-select'}}) }}
                        <span class="form-help">Choose the appropriate difficulty level</span>
                        {% if form.difficulty_level.vars.errors %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ form_errors(form.difficulty_level) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.defaultUnit, 'Default Unit', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.defaultUnit, {'attr': {'class': 'form-select'}}) }}
                        <span class="form-help">Select how this exercise is typically measured</span>
                        {% if form.defaultUnit.vars.errors %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ form_errors(form.defaultUnit) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- Performance Metrics Section -->
            <div class="form-section">
                <h2 class="section-title">
                    <i class="fas fa-chart-line"></i>
                    Performance Metrics
                    <span class="badge">Optional</span>
                </h2>
                
                <div class="form-grid-4">
                    <div class="form-group">
                        {{ form_label(form.duration, 'Duration (min)', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.duration, {'attr': {'class': 'form-control', 'placeholder': 'e.g., 30'}}) }}
                        <span class="form-help">Average duration</span>
                        {% if form.duration.vars.errors %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ form_errors(form.duration) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.calories, 'Calories/min', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.calories, {'attr': {'class': 'form-control', 'placeholder': 'e.g., 10'}}) }}
                        <span class="form-help">Calories burned per minute</span>
                        {% if form.calories.vars.errors %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ form_errors(form.calories) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.sets, 'Sets', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.sets, {'attr': {'class': 'form-control', 'placeholder': 'e.g., 3'}}) }}
                        <span class="form-help">Recommended sets</span>
                        {% if form.sets.vars.errors %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ form_errors(form.sets) }}
                            </div>
                        {% endif %}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.reps, 'Reps', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(form.reps, {'attr': {'class': 'form-control', 'placeholder': 'e.g., 12'}}) }}
                        <span class="form-help">Repetitions per set</span>
                        {% if form.reps.vars.errors %}
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle"></i>
                                {{ form_errors(form.reps) }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            
            <!-- Video Section - Display Only -->
            <div class="form-section">
                <h2 class="section-title">
                    <i class="fas fa-video"></i>
                    Video Demonstration
                </h2>
                
                <!-- Current Video Preview -->
                <div class="current-video-preview">
                    <div class="current-video-header">
                        <i class="fas fa-video"></i>
                        <div>
                            <div class="current-video-title">Current Video</div>
                            {% if exercise.videoFileName %}
                                <span class="video-badge">
                                    <i class="fas fa-upload mr-1"></i> Uploaded Video
                                </span>
                            {% elseif exercise.videoUrl %}
                                <span class="video-badge youtube">
                                    <i class="fab fa-youtube mr-1"></i> YouTube Video
                                </span>
                            {% endif %}
                        </div>
                    </div>
                    
                    {% if exercise.videoFileName %}
                        <div class="video-player-container">
                            <video controls class="video-player">
                                <source src="{{ asset('uploads/exercises/videos/' ~ exercise.videoFileName) }}" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                        </div>
                        <div class="video-info">
                            <div class="video-file-name">{{ exercise.videoFileName }}</div>
                            <a href="{{ asset('uploads/exercises/videos/' ~ exercise.videoFileName) }}" 
                               target="_blank" 
                               class="video-link">
                                <i class="fas fa-external-link-alt mr-1"></i> Open Video
                            </a>
                        </div>
                    {% elseif exercise.videoUrl %}
                        <div class="video-player-container">
                            {% if 'youtube.com' in exercise.videoUrl or 'youtu.be' in exercise.videoUrl %}
                                {% set videoId = exercise.videoUrl|split('v=')[1]|default('')|split('&')[0] %}
                                {% if videoId %}
                                    <iframe src="https://www.youtube.com/embed/{{ videoId }}?rel=0" 
                                            style="width: 100%; height: 300px; border: none;" 
                                            frameborder="0" 
                                            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                            allowfullscreen>
                                    </iframe>
                                {% endif %}
                            {% elseif 'vimeo.com' in exercise.videoUrl %}
                                {% set videoId = exercise.videoUrl|split('vimeo.com/')[1] %}
                                {% if videoId %}
                                    <iframe src="https://player.vimeo.com/video/{{ videoId }}" 
                                            style="width: 100%; height: 300px; border: none;" 
                                            frameborder="0" 
                                            allow="autoplay; fullscreen; picture-in-picture" 
                                            allowfullscreen>
                                    </iframe>
                                {% endif %}
                            {% else %}
                                <div style="height: 200px; display: flex; align-items: center; justify-content: center; color: white;">
                                    <i class="fas fa-video fa-3x"></i>
                                </div>
                            {% endif %}
                        </div>
                        <div class="video-info">
                            <div class="video-file-name">{{ exercise.videoUrl }}</div>
                            <a href="{{ exercise.videoUrl }}" target="_blank" class="video-link">
                                <i class="fas fa-external-link-alt mr-1"></i> Open in New Tab
                            </a>
                        </div>
                    {% else %}
                        <div class="no-video">
                            <i class="fas fa-video-slash"></i>
                            <p>No video available for this exercise</p>
                        </div>
                    {% endif %}
                </div>
                
                <!-- Hidden form fields for video -->
                <div class="hidden-form-fields">
                    {{ form_widget(form.videoFile) }}
                    {{ form_widget(form.videoUrl) }}
                </div>
                
                <!-- Note about video modification -->
                <div class="form-help" style="margin-top: 1rem; padding: 1rem; background: #f8f9fa; border-radius: 8px;">
                    <i class="fas fa-info-circle mr-2"></i>
                    <strong>Note:</strong> To change the video, please delete this exercise and create a new one with the correct video.
                </div>
            </div>
            
            <!-- Status Section -->
            <div class="form-section">
                <h2 class="section-title">
                    <i class="fas fa-toggle-on"></i>
                    Status
                </h2>
                
                <div class="form-check">
                    {{ form_widget(form.isActive, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(form.isActive, 'Make this exercise available in the library', {'label_attr': {'class': 'form-check-label'}}) }}
                </div>
                {% if form.isActive.vars.errors %}
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle"></i>
                        {{ form_errors(form.isActive) }}
                    </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Form Actions -->
        <div class="form-actions">
            <div class="flex gap-2">
                <a href="{{ path('exercises_show') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left btn-icon"></i>
                    Back to List
                </a>
                <a href="{{ path('delete_exercise', {'id': exercise.id}) }}" 
                   onclick="return confirm('⚠️ Are you sure you want to delete this exercise?\n\nThis action cannot be undone and will permanently remove:\n• Exercise: {{ exercise.name }}\n• Associated video\n• All related data')"
                   class="btn btn-danger">
                    <i class="fas fa-trash btn-icon"></i>
                    Delete Exercise
                </a>
            </div>
            <div class="flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save btn-icon"></i>
                    Save Changes
                </button>
            </div>
        </div>
    </div>
    
    {{ form_end(form) }}
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialize datetime picker
        const datetimeInput = document.querySelector('.datetimepicker');
        if (datetimeInput) {
            if (!datetimeInput.value) {
                const now = new Date();
                datetimeInput.value = now.toISOString().slice(0, 16);
            }
        }
        
        // Real-time character counter for description
        const descriptionField = document.getElementById('{{ form.description.vars.id }}');
        if (descriptionField) {
            const counter = document.createElement('div');
            counter.className = 'char-counter';
            counter.style.cssText = 'text-align: right; font-size: 0.875rem; color: var(--text-secondary); margin-top: 0.25rem;';
            descriptionField.parentNode.appendChild(counter);
            
            function updateCounter() {
                const length = descriptionField.value.length;
                const max = 255;
                counter.textContent = `${length}/${max} characters`;
                
                if (length > max * 0.9) {
                    counter.style.color = '#e53e3e';
                } else if (length > max * 0.75) {
                    counter.style.color = '#f39c12';
                } else {
                    counter.style.color = 'var(--text-secondary)';
                }
            }
            
            descriptionField.addEventListener('input', updateCounter);
            updateCounter();
        }
        
        // Disable video modification
        const videoFileInput = document.getElementById('{{ form.videoFile.vars.id }}');
        const videoUrlInput = document.getElementById('{{ form.videoUrl.vars.id }}');
        
        if (videoFileInput) {
            videoFileInput.disabled = true;
            videoFileInput.style.display = 'none';
        }
        
        if (videoUrlInput) {
            videoUrlInput.disabled = true;
            videoUrlInput.style.display = 'none';
        }
    });
</script>
{% endblock %}