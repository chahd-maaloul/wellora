{% extends 'layouts/app.html.twig' %}

{% block title %}Exercises - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fitness') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fitness') }}
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <header class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-dumbbell text-wellcare-500"></i>
                        Exercises
                    </h1>
                </div>
                <div>
                    <a href="{{ path('coach_exercise_new') }}" class="px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="mr-2 fas fa-plus"></i>Add New Exercise
                    </a>
                </div>
            </div>
        </div>
    </header>

    <main class="p-6">
        {% for message in app.flashes('success') %}
            <div class="p-4 mb-4 text-green-700 bg-green-100 border border-green-300 rounded-lg dark:bg-green-900/30 dark:text-green-400">
                {{ message }}
            </div>
        {% endfor %}

        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for exercise in exercises %}
                <div class="p-6 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{{ exercise.name }}</h3>
                        <span class="px-2 py-1 text-xs font-medium rounded
                            {% if exercise.difficultyLevel == 'Beginner' %}bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400
                            {% elseif exercise.difficultyLevel == 'Intermediate' %}bg-yellow-100 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400
                            {% else %}bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400{% endif %}">
                            {{ exercise.difficultyLevel }}
                        </span>
                    </div>
                    
                    <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">{{ exercise.description }}</p>
                    
                    <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                        <span class="px-2 py-1 bg-gray-100 rounded dark:bg-gray-700">{{ exercise.category }}</span>
                        <span>{{ exercise.defaultUnit }}</span>
                    </div>
                    
                    <div class="flex gap-2 mt-4">
                        <a href="{{ path('coach_exercise_show', {'id': exercise.id}) }}" class="flex-1 px-3 py-1 text-center text-blue-600 transition-colors border border-blue-300 rounded hover:bg-blue-50 dark:text-blue-400 dark:border-blue-700">
                            View
                        </a>
                        <a href="{{ path('coach_exercise_edit', {'id': exercise.id}) }}" class="flex-1 px-3 py-1 text-center text-yellow-600 transition-colors border border-yellow-300 rounded hover:bg-yellow-50 dark:text-yellow-400 dark:border-yellow-700">
                            Edit
                        </a>
                        <form method="post" action="{{ path('coach_exercise_delete', {'id': exercise.id}) }}" class="flex-1" onsubmit="return confirm('Are you sure you want to delete this exercise?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exercise.id) }}">
                            <button type="submit" class="w-full px-3 py-1 text-red-600 transition-colors border border-red-300 rounded hover:bg-red-50 dark:text-red-400 dark:border-red-700">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            {% else %}
                <div class="col-span-3 p-8 text-center bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
                    <i class="text-4xl text-gray-400 fas fa-dumbbell"></i>
                    <h3 class="mt-4 text-xl font-semibold text-gray-900 dark:text-white">No exercises yet</h3>
                    <p class="mt-2 text-gray-600 dark:text-gray-400">
                        Start by creating your first exercise.
                    </p>
                    <a href="{{ path('coach_exercise_new') }}" class="inline-block px-6 py-2 mt-4 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="mr-2 fas fa-plus"></i>Create First Exercise
                    </a>
                </div>
            {% endfor %}
        </div>
    </main>
</div>
{% endblock %}