{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <script>
        $(document).ready(function() {
            const goalsData = {
                {% if coachGoals is defined and coachGoals|length > 0 %}
                    {% for goal in coachGoals %}
                {{ goal.id }}: {
                    title: "{{ goal.title|e('js') }}",
                    patientName: "{{ goal.patientName|e('js') }}"
                },
                    {% endfor %}
                {% endif %}
            };
            
            let selectedGoal = null;
            
            $('.form-step').hide();
            $('#step-1-content').show();
            
            $('.pro-step').on('click', function() {
                const step = $(this).data('step');
                goToStep(step);
            });
            
            function getCurrentStep() {
                const visibleStep = $('.form-step:visible').attr('id');
                return parseInt(visibleStep.replace('step-', '').replace('-content', ''));
            }
            
            $('.next-step-btn').on('click', function() {
                const nextStep = $(this).data('next');
                const currentStep = getCurrentStep();
                
                if (currentStep === 1 && !selectedGoal) {
                    if (!confirm('No goal selected. Continue with general rest day?')) {
                        return;
                    }
                }
                
                if (currentStep === 2) {
                    if (!$('#{{ form.titre.vars.id }}').val()) {
                        alert('Please enter a title for the rest day');
                        return;
                    }
                    if (!$('#{{ form.date.vars.id }}').val()) {
                        alert('Please select a date for the rest day');
                        return;
                    }
                }
                
                goToStep(nextStep);
            });
            
            $('.prev-step-btn').on('click', function() {
                const prevStep = $(this).data('prev');
                goToStep(prevStep);
            });
            
            function goToStep(step) {
                $('.pro-step').removeClass('active completed');
                $(`.pro-step[data-step="${step}"]`).addClass('active');
                
                for (let i = 1; i < step; i++) {
                    $(`.pro-step[data-step="${i}"]`).addClass('completed');
                }
                
                $('.form-step').hide();
                $(`#step-${step}-content`).show();
                
                if (step === 2) {
                    updateSummary();
                } else if (step === 3) {
                    updateFinalSummary();
                }
            }
            
            $('.goal-card, .no-goal-card').on('click', function() {
                $('.goal-card, .no-goal-card').removeClass('selected');
                $(this).addClass('selected');
                
                const goalId = $(this).data('goal-id');
                selectedGoal = goalId;
                $('#selected-goal').val(goalId);
                
                if (goalId && goalsData[goalId]) {
                    const goal = goalsData[goalId];
                    $('#summary-goal').text(goal.title);
                    $('#summary-patient').text(goal.patientName);
                } else {
                    $('#summary-goal').text('General Rest Day');
                    $('#summary-patient').text('-');
                }
            });
            
            function updateSummary() {
                const date = $('#{{ form.date.vars.id }}').val();
                if (date) {
                    $('#summary-date').text(date);
                }
                
                const status = $('#{{ form.status.vars.id }} option:selected').text();
                $('#summary-status').text(status);
            }
            
            function updateFinalSummary() {
                if (selectedGoal && goalsData[selectedGoal]) {
                    const goal = goalsData[selectedGoal];
                    $('#final-goal-title').text(goal.title);
                    $('#final-patient-name').text(goal.patientName);
                } else {
                    $('#final-goal-title').text('General Rest Day');
                    $('#final-patient-name').text('-');
                }
                
                $('#final-plan-title').text($('#{{ form.titre.vars.id }}').val() || 'Rest Day');
                $('#final-plan-date').text($('#{{ form.date.vars.id }}').val() || '-');
                
                const status = $('#{{ form.status.vars.id }} option:selected').text();
                $('#final-plan-status').text(status);
                
                const notes = $('#{{ form.notes.vars.id }}').val();
                $('#final-plan-notes').text(notes || 'No specific instructions provided.');
            }
            
            $('#{{ form.date.vars.id }}').on('change', function() {
                const date = $(this).val();
                if (date) {
                    $('#summary-date').text(date);
                }
            });
            
            $('#{{ form.status.vars.id }}').on('change', function() {
                const status = $(this).val();
                $('#summary-status').text($(this).find('option:selected').text());
            });
            
            $('#{{ form.titre.vars.id }}').on('input', function() {
                if (!$(this).val()) {
                    $(this).val('Rest Day');
                }
            });
            
            $('#{{ form.notes.vars.id }}').on('input', function() {
                $('#final-plan-notes').text($(this).val() || 'No specific instructions provided.');
            });
            
            $('#rest-day-form').on('submit', function(e) {
                if (!$('#{{ form.titre.vars.id }}').val()) {
                    e.preventDefault();
                    alert('Please enter a title for the rest day');
                    goToStep(2);
                    return false;
                }
                
                if (!$('#{{ form.date.vars.id }}').val()) {
                    e.preventDefault();
                    alert('Please select a date for the rest day');
                    goToStep(2);
                    return false;
                }
                
                return true;
            });
            
            const today = new Date().toISOString().split('T')[0];
            if (!$('#{{ form.date.vars.id }}').val()) {
                $('#{{ form.date.vars.id }}').val(today);
            }
            
            $('#summary-date').text($('#{{ form.date.vars.id }}').val() || today);
            $('#final-plan-date').text($('#{{ form.date.vars.id }}').val() || today);
            
            if (!$('#{{ form.titre.vars.id }}').val()) {
                $('#{{ form.titre.vars.id }}').val('Rest Day');
            }
            
            // Initialiser les champs cachés
            $('#{{ form.calories.vars.id }}').val('0');
            $('#{{ form.duree_min.vars.id }}').val('0');
        });
    </script>
{% endblock %}