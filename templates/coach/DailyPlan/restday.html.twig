{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Data
            const usersData = {
                1: { name: 'John Doe', email: 'john@email.com' },
                2: { name: 'Mary Smith', email: 'mary@email.com' },
                3: { name: 'Peter Johnson', email: 'peter@email.com' }
            };
            
            const goalsData = {
                {% if form.goal.vars.choices %}
                    {% for goal in form.goal.vars.choices %}
                {{ goal.value }}: "{{ goal.label|e('js') }}",
                    {% endfor %}
                {% endif %}
            };
            
            let selectedUser = null;
            
            // Step Management - maintenant 3 étapes
            $('.pro-step').on('click', function() {
                const step = $(this).data('step');
                goToStep(step);
            });
            
            $('.next-step-btn').on('click', function() {
                const nextStep = $(this).data('next');
                goToStep(nextStep);
            });
            
            $('.prev-step-btn').on('click', function() {
                const prevStep = $(this).data('prev');
                goToStep(prevStep);
            });
            
            function goToStep(step) {
                // Update stepper
                $('.pro-step').removeClass('active completed');
                $(`.pro-step[data-step="${step}"]`).addClass('active');
                
                for (let i = 1; i < step; i++) {
                    $(`.pro-step[data-step="${i}"]`).addClass('completed');
                }
                
                // Show content
                $('.form-step').removeClass('active');
                $(`#step-${step}-content`).addClass('active');
                
                // Update summaries
                if (step === 2) {
                    updateSummary();
                } else if (step === 3) {
                    updateFinalSummary();
                }
            }
            
            // Client selection
            $('.user-card').on('click', function() {
                const userId = $(this).data('user-id');
                $('.user-card').removeClass('selected');
                $(this).addClass('selected');
                
                selectedUser = userId;
                const user = usersData[userId];
                $('#selected-user').val(user.name);
                $('#summary-client').text(user.name);
                $('#final-client-name').text(user.name);
                $('#final-client-email').text(user.email);
            });
            
            // Update summary
            function updateSummary() {
                const date = $('#{{ form.date.vars.id }}').val();
                if (date) {
                    $('#summary-date').text(date);
                }
                
                // Auto-fill title if empty
                if (!$('#{{ form.titre.vars.id }}').val()) {
                    $('#{{ form.titre.vars.id }}').val('Rest Day');
                }
                
                // Update notes preview
                const notes = $('#{{ form.notes.vars.id }}').val();
                $('#final-plan-notes').text(notes || 'No specific instructions provided.');
            }
            
            // Update final summary
            function updateFinalSummary() {
                // Client info
                if (selectedUser) {
                    const user = usersData[selectedUser];
                    $('#final-client-name').text(user.name);
                    $('#final-client-email').text(user.email);
                }
                
                // Plan info
                $('#final-plan-title').text($('#{{ form.titre.vars.id }}').val() || 'Rest Day');
                $('#final-plan-date').text($('#{{ form.date.vars.id }}').val() || '-');
                
                // Status/Type
                const statusText = $('#rest-status option:selected').text();
                $('#final-plan-type').text(statusText || 'Rest Day');
                $('#final-plan-type-display').text(statusText || 'Rest Day');
                
                // Goal
                const goalId = $('#{{ form.goal.vars.id }}').val();
                $('#final-plan-goal').text(goalsData[goalId] || '-');
                
                // Update notes preview
                const notes = $('#{{ form.notes.vars.id }}').val();
                $('#final-plan-notes').text(notes || 'No specific instructions provided.');
            }
            
            // Event listeners
            $('#{{ form.date.vars.id }}').on('change', function() {
                const date = $(this).val();
                if (date) {
                    $('#summary-date').text(date);
                }
            });
            
            $('#{{ form.titre.vars.id }}').on('input', function() {
                if (!$(this).val()) {
                    $(this).val('Rest Day');
                }
            });
            
            $('#{{ form.notes.vars.id }}').on('input', function() {
                $('#final-plan-notes').text($(this).val() || 'No specific instructions provided.');
            });
            
            $('#rest-status').on('change', function() {
                $('#final-plan-type').text($(this).find('option:selected').text());
                $('#final-plan-type-display').text($(this).find('option:selected').text());
            });
            
            // Form submission
            $('#rest-day-form').on('submit', function(e) {
                e.preventDefault();
                
                // Validation
                if (!selectedUser) {
                    alert('Please select a client');
                    goToStep(1);
                    return;
                }
                
                if (!$('#{{ form.date.vars.id }}').val()) {
                    alert('Please select a date for the rest day');
                    goToStep(2);
                    return;
                }
                
                // Set default title if empty
                if (!$('#{{ form.titre.vars.id }}').val()) {
                    $('#{{ form.titre.vars.id }}').val('Rest Day');
                }
                
                // Ensure calories and duree_min are 0
                $('#{{ form.calories.vars.id }}').val('0');
                $('#{{ form.duree_min.vars.id }}').val('0');
                
                // Show confirmation
                if (confirm('Are you sure you want to schedule this rest day?')) {
                    this.submit();
                }
            });
            
            // Initialize
            updateSummary();
            
            // Set initial values for hidden fields
            $('#{{ form.calories.vars.id }}').val('0');
            $('#{{ form.duree_min.vars.id }}').val('0');
        });
    </script>
{% endblock %}