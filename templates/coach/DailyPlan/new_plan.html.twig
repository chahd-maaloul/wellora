{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <script>
        $(document).ready(function() {
            // Récupérer les IDs des exercices du coach depuis le tableau PHP
            const coachExerciseIds = [
                {% for exercise in exercises %}
                    {{ exercise.id }},
                {% endfor %}
            ];
            
            // Filtrer les options du select pour ne garder que celles du coach
            $('.exercises-select option').each(function() {
                const optionValue = $(this).val();
                if (optionValue && !coachExerciseIds.includes(parseInt(optionValue))) {
                    $(this).remove(); // Supprimer les exercices qui ne sont pas du coach
                }
            });
            
            // Initialiser Select2
            $('.exercises-select').select2({
                theme: 'default',
                placeholder: 'Search for exercises...',
                width: '100%',
                allowClear: true
            });
            
            // Construire les données des exercices à partir des exercices du coach
            const exercisesData = {
                {% for exercise in exercises %}
                {{ exercise.id }}: {
                    name: "{{ exercise.name|e('js') }}",
                    duration: {{ exercise.duration ?? 0 }},
                    calories: {{ exercise.calories ?? 0 }},
                    category: "{{ exercise.category ?? 'General'|e('js') }}",
                    difficulty: "{{ exercise.difficultyLevel ?? 'Medium'|e('js') }}"
                },
                {% endfor %}
            };
            
            // Données des goals
            const goalsData = {
                {% for goal in coachGoals %}
                {{ goal.id }}: {
                    title: "{{ goal.title|e('js') }}",
                    patientName: "{{ goal.patientName|e('js') }}",
                    progress: {{ goal.progress }}
                },
                {% endfor %}
            };
            
            let selectedGoal = null;
            
            // Gestion des étapes
            $('.form-step').hide();
            $('#step-1-content').show();
            
            $('.pro-step').on('click', function() {
                const step = $(this).data('step');
                goToStep(step);
            });
            
            function getCurrentStep() {
                const visibleStep = $('.form-step:visible').attr('id');
                return parseInt(visibleStep.replace('step-', '').replace('-content', ''));
            }
            
            $('.next-step-btn').on('click', function() {
                const nextStep = $(this).data('next');
                const currentStep = getCurrentStep();
                
                if (currentStep === 1 && !selectedGoal) {
                    if (!confirm('No goal selected. Continue with general plan?')) {
                        return;
                    }
                }
                
                if (currentStep === 2) {
                    if (!$('#{{ form.titre.vars.id }}').val()) {
                        alert('Please enter a plan title');
                        return;
                    }
                }
                
                if (currentStep === 3) {
                    const exercises = $('.exercises-select').val() || [];
                    if (exercises.length === 0) {
                        alert('Please select at least one exercise');
                        return;
                    }
                }
                
                goToStep(nextStep);
            });
            
            $('.prev-step-btn').on('click', function() {
                const prevStep = $(this).data('prev');
                goToStep(prevStep);
            });
            
            function goToStep(step) {
                $('.pro-step').removeClass('active completed');
                $(`.pro-step[data-step="${step}"]`).addClass('active');
                
                for (let i = 1; i < step; i++) {
                    $(`.pro-step[data-step="${i}"]`).addClass('completed');
                }
                
                $('.form-step').hide();
                $(`#step-${step}-content`).show();
                
                if (step === 2) {
                    updateSummary();
                } else if (step === 4) {
                    updateFinalSummary();
                }
            }
            
            // Sélection des goals
            $('.goal-card, .no-goal-card').on('click', function() {
                $('.goal-card, .no-goal-card').removeClass('selected');
                $(this).addClass('selected');
                
                const goalId = $(this).data('goal-id');
                selectedGoal = goalId;
                $('#selected-goal').val(goalId);
                
                if (goalId && goalsData[goalId]) {
                    const goal = goalsData[goalId];
                    $('#summary-goal').text(goal.title);
                    $('#summary-patient').text(goal.patientName);
                } else {
                    $('#summary-goal').text('General Plan');
                    $('#summary-patient').text('-');
                }
            });
            
            // Calcul des totaux
            function calculateTotals() {
                const selectedExercises = $('.exercises-select').val() || [];
                let totalDuration = 0;
                let totalCalories = 0;
                let exercisesHTML = '';
                
                selectedExercises.forEach(function(id) {
                    const exercise = exercisesData[id];
                    if (exercise) {
                        const duration = parseInt(exercise.duration) || 0;
                        const caloriesPerMin = parseInt(exercise.calories) || 0;
                        const exerciseCalories = Math.round(duration * caloriesPerMin);
                        
                        totalDuration += duration;
                        totalCalories += exerciseCalories;
                        
                        exercisesHTML += `
                            <div class="exercise-card">
                                <div class="exercise-icon">
                                    <i class="fas fa-dumbbell"></i>
                                </div>
                                <div class="exercise-info">
                                    <h5>${exercise.name}</h5>
                                    <div class="exercise-meta">
                                        <span class="exercise-tag">${exercise.category}</span>
                                        <span class="exercise-tag">${exercise.difficulty}</span>
                                    </div>
                                    <div class="exercise-stats">
                                        <div class="exercise-stat">
                                            <div class="exercise-stat-value">${duration}</div>
                                            <div class="exercise-stat-label">minutes</div>
                                        </div>
                                        <div class="exercise-stat">
                                            <div class="exercise-stat-value">${exerciseCalories}</div>
                                            <div class="exercise-stat-label">calories</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        `;
                    }
                });
                
                $('#total-duration').text(totalDuration);
                $('#total-calories').text(Math.round(totalCalories));
                $('#summary-exercises-count').text(selectedExercises.length);
                $('#summary-duration').text(totalDuration + ' min');
                $('#summary-calories').text(Math.round(totalCalories) + ' cal');
                
                $('.total-duration-field').val(totalDuration);
                $('.total-calories-field').val(Math.round(totalCalories));
                
                if (selectedExercises.length > 0) {
                    $('#exercises-preview').html(exercisesHTML);
                } else {
                    $('#exercises-preview').html(`
                        <div class="col-12 text-center py-5">
                            <i class="fas fa-dumbbell fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No exercises selected</h5>
                            <p class="text-muted">Start typing in the field above to search for exercises</p>
                        </div>
                    `);
                }
            }
            
            function updateSummary() {
                $('#summary-date').text($('#{{ form.date.vars.id }}').val());
            }
            
            function updateFinalSummary() {
                if (selectedGoal && goalsData[selectedGoal]) {
                    const goal = goalsData[selectedGoal];
                    $('#final-goal-title').text(goal.title);
                    $('#final-patient-name').text(goal.patientName);
                } else {
                    $('#final-goal-title').text('General Plan');
                    $('#final-patient-name').text('-');
                }
                
                $('#final-plan-title').text($('#{{ form.titre.vars.id }}').val() || '-');
                $('#final-plan-date').text($('#{{ form.date.vars.id }}').val() || '-');
                $('#final-plan-status').text($('#{{ form.status.vars.id }} option:selected').text() || '-');
                
                const selectedExercises = $('.exercises-select').val() || [];
                $('#final-total-exercises').text(selectedExercises.length);
                $('#final-total-duration').text($('#total-duration').text() + ' min');
                $('#final-total-calories').text($('#total-calories').text() + ' cal');
                
                let finalListHTML = '';
                selectedExercises.forEach(function(id) {
                    const exercise = exercisesData[id];
                    if (exercise) {
                        const duration = parseInt(exercise.duration) || 0;
                        const caloriesPerMin = parseInt(exercise.calories) || 0;
                        const exerciseCalories = Math.round(duration * caloriesPerMin);
                        
                        finalListHTML += `
                            <div class="summary-item">
                                <span class="summary-label">${exercise.name}</span>
                                <span class="summary-value">${duration} min • ${exerciseCalories} cal</span>
                            </div>
                        `;
                    }
                });
                
                if (finalListHTML) {
                    $('#final-exercises-list').html(finalListHTML);
                } else {
                    $('#final-exercises-list').html('<div class="text-center py-3"><p class="text-muted">No exercises selected</p></div>');
                }
            }
            
            $('.exercises-select').on('change', calculateTotals);
            
            $('#{{ form.date.vars.id }}').on('change', function() {
                const date = $(this).val();
                if (date) {
                    $('#summary-date').text(date);
                }
            });
            
            $('#daily-plan-form').on('submit', function(e) {
                if (!$('#{{ form.titre.vars.id }}').val()) {
                    e.preventDefault();
                    alert('Please enter a plan title');
                    goToStep(2);
                    return false;
                }
                
                const exercises = $('.exercises-select').val() || [];
                if (exercises.length === 0) {
                    e.preventDefault();
                    alert('Please select at least one exercise');
                    goToStep(3);
                    return false;
                }
                
                return true;
            });
            
            // Initialisation
            calculateTotals();
            
            if (!$('#{{ form.date.vars.id }}').val()) {
                const today = new Date().toISOString().split('T')[0];
                $('#{{ form.date.vars.id }}').val(today);
                $('#summary-date').text(today);
            }
        });
    </script>

{% endblock %}