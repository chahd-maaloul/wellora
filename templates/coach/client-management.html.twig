{# templates/coach/client-management.html.twig #}

{% extends 'layouts/app.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('coach') }}
    <style>
        [x-cloak] { display: none !important; }
        
        /* Animation pour la modale */
        .modal-enter-active, .modal-leave-active {
            transition: all 0.3s ease;
        }
        .modal-enter-from, .modal-leave-to {
            opacity: 0;
            transform: scale(0.95);
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('coach') }}
{% endblock %}

{% block body %}
<div x-data="clientManagement()" class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <a href="{{ path('coach_dashboard') }}" class="p-2 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="text-gray-600 fas fa-arrow-left dark:text-gray-400"></i>
                    </a>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-users text-wellcare-500"></i>
                            {{ 'Client Management' }}
                        </h1>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            {{ 'Manage your clients and their programs' }}
                        </p>
                    </div>
                </div>
                <div class="flex items-center gap-3">
                    <!-- Stats rapides -->
                    <div class="flex items-center gap-4 px-4 py-2 bg-gray-50 rounded-lg dark:bg-gray-700">
                        <div class="text-center">
                            <span class="text-xs text-gray-500 dark:text-gray-400">Total</span>
                            <p class="font-semibold text-gray-900 dark:text-white">{{ clients|length }}</p>
                        </div>
                        <div class="w-px h-8 bg-gray-200 dark:bg-gray-600"></div>
                        <div class="text-center">
                            <span class="text-xs text-gray-500 dark:text-gray-400">Actifs</span>
                            <p class="font-semibold text-green-600 dark:text-green-400">
                                {% set activeCount = clients|filter(c => c.isActive)|length %}
                                {{ activeCount }}
                            </p>
                        </div>
                        <div class="w-px h-8 bg-gray-200 dark:bg-gray-600"></div>
                        <div class="text-center">
                            <span class="text-xs text-gray-500 dark:text-gray-400">Objectifs</span>
                            <p class="font-semibold text-wellcare-600 dark:text-wellcare-400">
                                {% set totalGoals = 0 %}
                                {% for client in clients %}
                                    {% set totalGoals = totalGoals + goalsByClient[client.uuid]|default([])|length %}
                                {% endfor %}
                                {{ totalGoals }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="p-6">
        
        <!-- Client Grid -->
        <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for client in clients %}
            {% set clientGoals = goalsByClient[client.uuid]|default([]) %}
            {% set clientGoalsInProgress = clientGoals|filter(g => g.status != 'completed') %}
            {% set clientGoalsCompleted = clientGoals|filter(g => g.status == 'completed') %}
            
            <div class="transition-shadow bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700 hover:shadow-md">
                <div class="p-6">
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-12 h-12 text-lg font-semibold text-white rounded-full bg-wellcare-500">
                                {{ client.firstname|first|upper }}{{ client.lastname|first|upper }}
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 dark:text-white">{{ client.firstname }} {{ client.lastname }}</h3>
                                <p class="text-sm text-gray-500 dark:text-gray-400">{{ client.email }}</p>
                            </div>
                        </div>
                        <span class="px-2 py-1 text-xs font-medium rounded-full
                            {% if client.isActive %}
                                bg-green-100 text-green-600 dark:bg-green-900/30 dark:text-green-400
                            {% else %}
                                bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400
                            {% endif %}
                        ">
                            {% if client.isActive %}Active{% else %}Inactive{% endif %}
                        </span>
                    </div>

                    <!-- Objectifs du client -->
                    <div class="mb-4">
                        <h4 class="mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">
                            <i class="mr-1 fas fa-bullseye text-wellcare-500"></i>
                            Objectifs en cours:
                        </h4>
                        
                        {% if clientGoalsInProgress|length > 0 %}
                            <div class="space-y-2">
                                {% for goal in clientGoalsInProgress %}
                                    <div class="p-2 bg-gray-50 rounded-lg dark:bg-gray-700/50">
                                        <div class="flex items-center justify-between mb-1">
                                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">
                                                {{ goal.title }}
                                            </span>
                                            <span class="text-xs px-2 py-0.5 rounded-full 
                                                {% if goal.category == 'weight_loss' %}bg-blue-100 text-blue-600 dark:bg-blue-900/30 dark:text-blue-400
                                                {% elseif goal.category == 'strength' %}bg-purple-100 text-purple-600 dark:bg-purple-900/30 dark:text-purple-400
                                                {% elseif goal.category == 'endurance' %}bg-green-100 text-green-600 dark:bg-green-900/30 dark:text-green-400
                                                {% elseif goal.category == 'flexibility' %}bg-yellow-100 text-yellow-600 dark:bg-yellow-900/30 dark:text-yellow-400
                                                {% elseif goal.category == 'rehabilitation' %}bg-red-100 text-red-600 dark:bg-red-900/30 dark:text-red-400
                                                {% else %}bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400
                                                {% endif %}">
                                                {{ goal.category|replace({'_': ' '})|title }}
                                            </span>
                                        </div>
                                        
                                        {% if goal.targetValue and goal.currentValue is defined %}
                                        <div class="flex items-center gap-2">
                                            <div class="flex-1 h-1.5 bg-gray-200 rounded-full dark:bg-gray-600">
                                                {% set progress = (goal.currentValue / goal.targetValue * 100)|round %}
                                                <div class="h-1.5 rounded-full bg-wellcare-500" style="width: {{ progress }}%"></div>
                                            </div>
                                            <span class="text-xs text-gray-500 dark:text-gray-400">{{ progress }}%</span>
                                        </div>
                                        <div class="flex justify-between mt-1 text-xs text-gray-500 dark:text-gray-400">
                                            <span>{{ goal.currentValue|default(0) }} {{ goal.unit }}</span>
                                            <span>{{ goal.targetValue }} {{ goal.unit }}</span>
                                        </div>
                                        {% endif %}
                                        
                                        <div class="flex justify-between mt-2 text-xs text-gray-400 dark:text-gray-500">
                                            <span>
                                                <i class="mr-1 fas fa-calendar-alt"></i>
                                                Début: {{ goal.startDate|date('d/m/Y') }}
                                            </span>
                                            {% if goal.endDate %}
                                            <span>
                                                <i class="mr-1 fas fa-flag-checkered"></i>
                                                Fin: {{ goal.endDate|date('d/m/Y') }}
                                            </span>
                                            {% endif %}
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <p class="text-sm text-gray-400 dark:text-gray-500 italic">
                                Aucun objectif en cours
                            </p>
                        {% endif %}
                    </div>

                    <!-- Objectifs complétés -->
                    {% if clientGoalsCompleted|length > 0 %}
                    <div class="mt-2">
                        <details class="text-sm">
                            <summary class="cursor-pointer text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400">
                                <i class="mr-1 fas fa-check-circle"></i>
                                {{ clientGoalsCompleted|length }} objectif(s) complété(s)
                            </summary>
                            <div class="mt-2 space-y-1">
                                {% for goal in clientGoalsCompleted %}
                                <div class="flex items-center justify-between text-xs text-gray-600 dark:text-gray-400">
                                    <span>{{ goal.title }}</span>
                                    <span class="text-green-600 dark:text-green-400">
                                        <i class="fas fa-check"></i>
                                    </span>
                                </div>
                                {% endfor %}
                            </div>
                        </details>
                    </div>
                    {% endif %}

                    <!-- Actions -->
                    <div class="flex justify-end gap-2 mt-4 pt-3 border-t border-gray-100 dark:border-gray-700">
                        <!-- Icône œil pour voir tous les plans du client en popup -->
                        <button 
                            @click="showClientPlans('{{ client.uuid }}', '{{ client.firstname }} {{ client.lastname }}')" 
                            class="p-2 text-gray-500 transition-colors rounded-lg hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700" 
                            title="Voir tous les plans de {{ client.firstname }}">
                            <i class="fas fa-eye"></i>
                        </button>
                        
                        <!-- Icône chat pour la messagerie -->
                        {% if clientGoals|length > 0 %}
                            {% set firstGoal = clientGoals|first %}
                            <a href="{{ path('app_chat_coach') }}?openConversationWith={{ firstGoal.id }}" 
                               class="p-2 text-gray-500 transition-colors rounded-lg hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700" 
                               title="Envoyer un message à {{ client.firstname }}">
                                <i class="fas fa-comment"></i>
                            </a>
                        {% else %}
                            <span class="p-2 text-gray-300 cursor-not-allowed" title="Pas de conversation disponible (créez d'abord un objectif pour {{ client.firstname }})">
                                <i class="fas fa-comment"></i>
                            </span>
                        {% endif %}
                        
                        <!-- Menu contextuel -->
                        <div class="relative" x-data="{ open: false }">
                            <button @click="open = !open" class="p-2 text-gray-500 transition-colors rounded-lg hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-700">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                            <div x-show="open" @click.away="open = false" class="absolute right-0 z-10 mt-2 w-48 bg-white rounded-lg shadow-lg dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
                                <a href="{{ path('coach_programs') }}?client={{ client.id }}" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700">
                                    <i class="mr-2 fas fa-dumbbell"></i> Assign Program
                                </a>
                               
                                <hr class="my-1 border-gray-200 dark:border-gray-700">
                                <button class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-red-50 dark:text-red-400 dark:hover:bg-red-900/20">
                                    <i class="mr-2 fas fa-user-minus"></i> Remove Client
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>

        <!-- Client Summary -->
        <div class="mt-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
            <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-chart-bar text-wellcare-500"></i>
                    {{ 'Client Summary' }}
                </h2>
            </div>
            <div class="p-4">
                <div class="grid grid-cols-1 gap-6 md:grid-cols-4">
                    <div class="text-center">
                        <p class="text-3xl font-bold text-gray-900 dark:text-white">{{ clients|length }}</p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Total Clients' }}</p>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-3xl font-bold text-gray-900 dark:text-white">
                            {% set totalGoals = 0 %}
                            {% for client in clients %}
                                {% set totalGoals = totalGoals + goalsByClient[client.uuid]|default([])|length %}
                            {% endfor %}
                            {{ totalGoals }}
                        </p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Total Objectifs' }}</p>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-3xl font-bold text-green-600 dark:text-green-400">
                            {% set completedGoals = 0 %}
                            {% for client in clients %}
                                {% set completedGoals = completedGoals + goalsByClient[client.uuid]|default([])|filter(g => g.status == 'completed')|length %}
                            {% endfor %}
                            {{ completedGoals }}
                        </p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Objectifs Complétés' }}</p>
                    </div>
                    
                    <div class="text-center">
                        <p class="text-3xl font-bold text-wellcare-600 dark:text-wellcare-400">
                            {% set activeGoals = 0 %}
                            {% for client in clients %}
                                {% set activeGoals = activeGoals + goalsByClient[client.uuid]|default([])|filter(g => g.status != 'completed')|length %}
                            {% endfor %}
                            {{ activeGoals }}
                        </p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Objectifs en Cours' }}</p>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- MODALE POUR AFFICHER LES PLANS DU CLIENT -->
    <div x-show="showPlansModal" 
         x-cloak
         x-transition:enter="transition ease-out duration-300"
         x-transition:enter-start="opacity-0"
         x-transition:enter-end="opacity-100"
         x-transition:leave="transition ease-in duration-200"
         x-transition:leave-start="opacity-100"
         x-transition:leave-end="opacity-0"
         @keydown.escape.window="showPlansModal = false"
         class="fixed inset-0 z-50 overflow-y-auto"
         style="display: none;">
        
        <!-- Overlay -->
        <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity" @click="showPlansModal = false"></div>
        
        <!-- Modal content -->
        <div class="relative min-h-screen flex items-center justify-center p-4">
            <div class="relative bg-white dark:bg-gray-800 rounded-xl shadow-xl max-w-4xl w-full max-h-[90vh] overflow-hidden"
                 x-transition:enter="transition ease-out duration-300"
                 x-transition:enter-start="scale-95 opacity-0"
                 x-transition:enter-end="scale-100 opacity-100"
                 x-transition:leave="transition ease-in duration-200"
                 x-transition:leave-start="scale-100 opacity-100"
                 x-transition:leave-end="scale-95 opacity-0">
                
                <!-- Header -->
                <div class="flex items-center justify-between p-6 border-b border-gray-200 dark:border-gray-700">
                    <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                        <i class="fas fa-calendar-alt text-wellcare-500 mr-2"></i>
                        Plans de <span x-text="selectedClientName"></span>
                    </h3>
                    <button @click="showPlansModal = false" class="text-gray-400 hover:text-gray-500 dark:hover:text-gray-300">
                        <i class="fas fa-times text-xl"></i>
                    </button>
                </div>
                
                <!-- Body - Liste des plans -->
                <div class="p-6 overflow-y-auto" style="max-height: calc(90vh - 180px);">
                    <!-- Loading spinner -->
                    <template x-if="loadingPlans">
                        <div class="flex flex-col items-center justify-center py-12">
                            <div class="w-12 h-12 border-4 border-wellcare-500 border-t-transparent rounded-full animate-spin mb-4"></div>
                            <p class="text-gray-500 dark:text-gray-400">Chargement des plans...</p>
                        </div>
                    </template>
                    
                    <!-- Aucun plan -->
                    <template x-if="!loadingPlans && clientPlans.length === 0">
                        <div class="text-center py-12">
                            <div class="inline-flex items-center justify-center w-20 h-20 bg-gray-100 dark:bg-gray-700 rounded-full mb-4">
                                <i class="fas fa-calendar-times text-3xl text-gray-400 dark:text-gray-500"></i>
                            </div>
                            <h4 class="text-lg font-medium text-gray-900 dark:text-white mb-2">Aucun plan trouvé</h4>
                            <p class="text-gray-500 dark:text-gray-400">Ce client n'a pas encore de plans d'entraînement.</p>
                            <a :href="'/coach/daily-plan/new?clientId=' + selectedClientId" 
                               class="inline-flex items-center gap-2 mt-4 px-4 py-2 bg-wellcare-500 text-white rounded-lg hover:bg-wellcare-600">
                                <i class="fas fa-plus"></i>
                                Créer un plan
                            </a>
                        </div>
                    </template>
                    
                    <!-- Liste des plans -->
                    <template x-for="plan in clientPlans" :key="plan.id">
                        <div class="mb-4 p-5 border border-gray-200 dark:border-gray-700 rounded-lg hover:shadow-lg transition-all hover:border-wellcare-200 dark:hover:border-wellcare-700">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <div class="flex items-center gap-3 mb-2">
                                        <h4 class="text-lg font-semibold text-gray-900 dark:text-white" x-text="plan.title"></h4>
                                        <span class="px-2 py-1 text-xs font-medium rounded-full"
                                              :class="{
                                                  'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400': plan.status === 'completed',
                                                  'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400': plan.status === 'active',
                                                  'bg-yellow-100 text-yellow-700 dark:bg-yellow-900/30 dark:text-yellow-400': plan.status === 'planned',
                                                  'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400': plan.status === 'rest',
                                                  'bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-400': !plan.status
                                              }"
                                              x-text="plan.status || 'draft'">
                                        </span>
                                    </div>
                                    
                                    <div class="flex flex-wrap items-center gap-4 mt-2 text-sm text-gray-500 dark:text-gray-400">
                                        <span><i class="far fa-calendar mr-1"></i> <span x-text="plan.date"></span></span>
                                        <span><i class="far fa-clock mr-1"></i> <span x-text="plan.duration + ' min'"></span></span>
                                        <span><i class="fas fa-fire mr-1 text-orange-500"></i> <span x-text="plan.calories + ' cal'"></span></span>
                                        <span><i class="fas fa-dumbbell mr-1"></i> <span x-text="plan.exercises.length + ' exercices'"></span></span>
                                    </div>
                                    
                                    <!-- Objectif associé -->
                                    <div x-show="plan.goal" class="mt-3">
                                        <span class="inline-flex items-center px-3 py-1 text-xs rounded-full bg-wellcare-50 text-wellcare-700 dark:bg-wellcare-900/20 dark:text-wellcare-300">
                                            <i class="fas fa-bullseye mr-1"></i>
                                            <span x-text="plan.goal.title"></span>
                                        </span>
                                    </div>
                                    
                                    <!-- Liste des exercices -->
                                    <div x-show="plan.exercises && plan.exercises.length > 0" class="mt-3">
                                        <p class="text-xs font-medium text-gray-500 dark:text-gray-400 mb-2">Exercices:</p>
                                        <div class="flex flex-wrap gap-2">
                                            <template x-for="exercise in plan.exercises.slice(0, 5)" :key="exercise.id">
                                                <span class="px-2 py-1 text-xs bg-gray-100 dark:bg-gray-700 rounded-full flex items-center gap-1">
                                                    <i class="fas fa-dumbbell text-gray-400"></i>
                                                    <span x-text="exercise.name"></span>
                                                </span>
                                            </template>
                                            <span x-show="plan.exercises.length > 5" class="px-2 py-1 text-xs bg-gray-100 dark:bg-gray-700 rounded-full">
                                                +<span x-text="plan.exercises.length - 5"></span>
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <!-- Notes -->
                                    <div x-show="plan.notes" class="mt-3 p-3 bg-gray-50 dark:bg-gray-700/50 rounded-lg text-sm text-gray-600 dark:text-gray-300">
                                        <i class="fas fa-sticky-note mr-1 text-gray-400"></i>
                                        <span x-text="plan.notes"></span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Actions rapides -->
                            <div class="mt-4 flex justify-end gap-2 pt-2 border-t border-gray-100 dark:border-gray-700">
                                <a :href="'/coach/daily-plan/' + plan.id + '/edit'" 
                                   class="p-2 text-gray-400 hover:text-wellcare-500 transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700"
                                   title="Modifier le plan">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <button @click="viewPlanDetails(plan)" 
                                        class="p-2 text-gray-400 hover:text-wellcare-500 transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700"
                                        title="Voir détails">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button @click="duplicatePlan(plan)" 
                                        class="p-2 text-gray-400 hover:text-wellcare-500 transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700"
                                        title="Dupliquer le plan">
                                    <i class="fas fa-copy"></i>
                                </button>
                            </div>
                        </div>
                    </template>
                </div>
                
                <!-- Footer -->
                <div class="p-6 border-t border-gray-200 dark:border-gray-700 flex justify-between items-center">
                    <a :href="'/coach/daily-plan/new?clientId=' + selectedClientId" 
                       class="px-4 py-2 bg-wellcare-500 text-white rounded-lg hover:bg-wellcare-600 inline-flex items-center gap-2">
                        <i class="fas fa-plus"></i>
                        Nouveau plan
                    </a>
                    <button @click="showPlansModal = false" 
                            class="px-4 py-2 bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">
                        Fermer
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function clientManagement() {
    return {
        // Données existantes
        clients: {{ clients|json_encode|raw }},
        goalsByClient: {{ goalsByClient|json_encode|raw }},
        searchQuery: '',
        statusFilter: 'all',
        goalFilter: 'all',
        sortBy: 'name',
        
        // Nouvelles propriétés pour la modale
        showPlansModal: false,
        selectedClientId: null,
        selectedClientName: '',
        clientPlans: [],
        loadingPlans: false,
        
        // Getter pour les clients filtrés
        get filteredClients() {
            let filtered = this.clients;
            
            // Filtre par recherche
            if (this.searchQuery) {
                const query = this.searchQuery.toLowerCase();
                filtered = filtered.filter(c => 
                    (c.firstname && c.firstname.toLowerCase().includes(query)) ||
                    (c.lastname && c.lastname.toLowerCase().includes(query)) ||
                    (c.email && c.email.toLowerCase().includes(query))
                );
            }
            
            // Filtre par statut
            if (this.statusFilter !== 'all') {
                filtered = filtered.filter(c => 
                    this.statusFilter === 'active' ? c.isActive : !c.isActive
                );
            }
            
            // Filtre par type d'objectif
            if (this.goalFilter !== 'all') {
                filtered = filtered.filter(c => {
                    const clientGoals = this.goalsByClient[c.uuid] || [];
                    return clientGoals.some(g => g.category === this.goalFilter);
                });
            }
            
            // Tri
            if (this.sortBy === 'name') {
                filtered.sort((a, b) => (a.lastname || '').localeCompare(b.lastname || ''));
            } else if (this.sortBy === 'recent') {
                filtered.sort((a, b) => (b.lastActive || 0) - (a.lastActive || 0));
            } else if (this.sortBy === 'goals') {
                filtered.sort((a, b) => {
                    const aGoals = (this.goalsByClient[a.uuid] || []).length;
                    const bGoals = (this.goalsByClient[b.uuid] || []).length;
                    return bGoals - aGoals;
                });
