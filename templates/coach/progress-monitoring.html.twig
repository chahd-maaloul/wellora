{% extends 'layouts/app.html.twig' %}

{% block title %}{{ pageTitle }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('coach') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('coach') }}
{% endblock %}

{% block body %}
<div x-data="progressMonitoring()" class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <a href="{{ path('coach_dashboard') }}" class="p-2 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="text-gray-600 fas fa-arrow-left dark:text-gray-400"></i>
                    </a>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-chart-line text-wellcare-500"></i>
                            {{ 'Progress Monitoring' }}
                        </h1>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            {{ 'Track client progress and performance' }}
                        </p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <select x-model="timeRange" class="px-4 py-2 text-gray-900 border border-gray-300 rounded-lg dark:border-gray-600 bg-gray-50 dark:bg-gray-700 dark:text-white focus:ring-wellcare-500 focus:border-wellcare-500">
                        <option value="week">{{ 'This Week' }}</option>
                        <option value="month">{{ 'This Month' }}</option>
                        <option value="quarter">{{ 'This Quarter' }}</option>
                        <option value="year">{{ 'This Year' }}</option>
                    </select>
                    <button @click="generateReport()" class="flex items-center gap-2 px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="fas fa-file-download"></i>
                        {{ 'Export Report' }}
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main class="p-6">
        <!-- Analytics Overview -->
        <div class="grid grid-cols-1 gap-6 mb-6 md:grid-cols-2 lg:grid-cols-5">
            <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'Workouts Completed' }}</p>
                        <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ analytics.totalWorkoutsCompleted }}</p>
                    </div>
                    <div class="flex items-center justify-center w-10 h-10 bg-blue-100 rounded-lg dark:bg-blue-900/30">
                        <i class="text-blue-500 fas fa-check-circle"></i>
                    </div>
                </div>
            </div>

            <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'Hours Trained' }}</p>
                        <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ analytics.totalHoursTrained }}</p>
                    </div>
                    <div class="flex items-center justify-center w-10 h-10 bg-green-100 rounded-lg dark:bg-green-900/30">
                        <i class="text-green-500 fas fa-clock"></i>
                    </div>
                </div>
            </div>

            <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'Avg Session' }}</p>
                        <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ analytics.avgSessionDuration }}</p>
                    </div>
                    <div class="flex items-center justify-center w-10 h-10 bg-purple-100 rounded-lg dark:bg-purple-900/30">
                        <i class="text-purple-500 fas fa-stopwatch"></i>
                    </div>
                </div>
            </div>

            <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'Calories Burned' }}</p>
                        <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ analytics.caloriesBurned|number_format }}</p>
                    </div>
                    <div class="flex items-center justify-center w-10 h-10 bg-orange-100 rounded-lg dark:bg-orange-900/30">
                        <i class="text-orange-500 fas fa-fire"></i>
                    </div>
                </div>
            </div>

            <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-sm font-medium text-gray-500 dark:text-gray-400">{{ 'Improvement' }}</p>
                        <p class="mt-1 text-2xl font-bold text-green-500">+{{ analytics.improvementRate }}%</p>
                    </div>
                    <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-emerald-100 dark:bg-emerald-900/30">
                        <i class="fas fa-trending-up text-emerald-500"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
            <!-- Client Progress Cards -->
            <div class="lg:col-span-2">
                <div class="bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                                <i class="mr-2 fas fa-users text-wellcare-500"></i>
                                {{ 'Client Progress' }}
                            </h2>
                            <div class="flex items-center gap-2">
                                <select x-model="filterStatus" class="px-3 py-1 text-sm text-gray-900 border border-gray-300 rounded-lg dark:border-gray-600 bg-gray-50 dark:bg-gray-700 dark:text-white">
                                    <option value="all">{{ 'All Clients' }}</option>
                                    <option value="on_track">{{ 'On Track' }}</option>
                                    <option value="needs_attention">{{ 'Needs Attention' }}</option>
                                    <option value="excellent">{{ 'Excellent' }}</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="p-4 space-y-4">
                        {% for client in clients %}
                        <div class="p-4 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <div class="flex items-center gap-4 mb-4">
                                <div class="flex items-center justify-center w-12 h-12 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                    <span class="font-medium text-wellcare-600 dark:text-wellcare-400">{{ client.avatar }}</span>
                                </div>
                                <div class="flex-1">
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <h3 class="font-semibold text-gray-900 dark:text-white">{{ client.name }}</h3>
                                            <p class="text-sm text-gray-500 dark:text-gray-400">{{ client.goal }}</p>
                                        </div>
                                        <span class="px-3 py-1 text-xs font-medium rounded-full
                                            {% if client.trend == 'up' %}
                                                bg-green-100 text-green-600 dark:bg-green-900/30 dark:text-green-400
                                            {% elseif client.trend == 'down' %}
                                                bg-red-100 text-red-600 dark:bg-red-900/30 dark:text-red-400
                                            {% else %}
                                                bg-gray-100 text-gray-600 dark:bg-gray-700 dark:text-gray-400
                                            {% endif %}
                                        ">
                                            {% if client.trend == 'up' %}
                                                <i class="mr-1 fas fa-arrow-up"></i>{{ 'Improving' }}
                                            {% elseif client.trend == 'down' %}
                                                <i class="mr-1 fas fa-arrow-down"></i>{{ 'Declining' }}
                                            {% else %}
                                                <i class="mr-1 fas fa-minus"></i>{{ 'Stable' }}
                                            {% endif %}
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Progress Bar -->
                            <div class="mb-3">
                                <div class="flex items-center justify-between mb-1">
                                    <span class="text-xs text-gray-500 dark:text-gray-400">{{ 'Program Progress' }}</span>
                                    <span class="text-xs font-medium text-gray-700 dark:text-gray-300">{{ client.progress }}%</span>
                                </div>
                                <div class="w-full h-2 bg-gray-200 rounded-full dark:bg-gray-600">
                                    <div class="h-2 rounded-full 
                                        {% if client.progress >= 80 %}
                                            bg-green-500
                                        {% elseif client.progress >= 50 %}
                                            bg-blue-500
                                        {% elseif client.progress >= 25 %}
                                            bg-amber-500
                                        {% else %}
                                            bg-red-500
                                        {% endif %}
                                    " style="width: {{ client.progress }}%"></div>
                                </div>
                            </div>
                            
                            <!-- Stats Row -->
                            <div class="grid grid-cols-3 gap-4 mb-3">
                                <div class="text-center">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Adherence' }}</p>
                                    <p class="font-semibold text-gray-900 dark:text-white">{{ client.adherenceRate }}%</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Next Milestone' }}</p>
                                    <p class="text-sm font-semibold text-gray-900 truncate dark:text-white">{{ client.nextMilestone }}</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Days Left' }}</p>
                                    <p class="font-semibold text-gray-900 dark:text-white">{{ client.daysRemaining }}</p>
                                </div>
                            </div>
                            
                            <!-- Actions -->
                            <div class="flex items-center gap-2 pt-3 border-t border-gray-200 dark:border-gray-600">
                                <a href="{{ path('coach_client_detail', {'id': 1}) }}" class="flex-1 px-3 py-1.5 text-xs font-medium text-center text-white transition-colors rounded bg-wellcare-500 hover:bg-wellcare-600">
                                    <i class="mr-1 fas fa-eye"></i>{{ 'View Details' }}
                                </a>
                                <button class="px-3 py-1.5 text-xs font-medium text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <i class="mr-1 fas fa-comment-alt"></i>{{ 'Message' }}
                                </button>
                                <button class="px-3 py-1.5 text-xs font-medium text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Right Sidebar - Charts & Stats -->
            <div class="space-y-6">
                <!-- Performance Chart Placeholder -->
                <div class="bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-chart-area text-wellcare-500"></i>
                            {{ 'Performance Trends' }}
                        </h2>
                    </div>
                    <div class="p-4">
                        <div class="flex items-center justify-center h-48 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <div class="text-center">
                                <i class="mb-2 text-4xl text-gray-300 fas fa-chart-line dark:text-gray-600"></i>
                                <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Chart visualization' }}</p>
                                <p class="text-xs text-gray-400 dark:text-gray-500">{{ 'Integrate with Chart.js' }}</p>
                            </div>
                        </div>
                        <div class="flex items-center justify-center gap-6 mt-4">
                            <div class="flex items-center gap-2">
                                <span class="w-3 h-3 rounded-full bg-wellcare-500"></span>
                                <span class="text-xs text-gray-600 dark:text-gray-400">{{ 'Progress' }}</span>
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="w-3 h-3 bg-green-500 rounded-full"></span>
                                <span class="text-xs text-gray-600 dark:text-gray-400">{{ 'Target' }}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Adherence Chart -->
                <div class="bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-chart-pie text-wellcare-500"></i>
                            {{ 'Adherence Distribution' }}
                        </h2>
                    </div>
                    <div class="p-4">
                        <div class="flex items-center justify-center h-40 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <div class="text-center">
                                <div class="flex items-center justify-center gap-4">
                                    <div class="text-center">
                                        <div class="flex items-center justify-center w-20 h-20 border-4 border-green-500 rounded-full">
                                            <span class="text-lg font-bold text-gray-900 dark:text-white">70%</span>
                                        </div>
                                        <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">{{ 'High' }}</p>
                                    </div>
                                    <div class="text-center">
                                        <div class="flex items-center justify-center w-20 h-20 border-4 rounded-full border-amber-500">
                                            <span class="text-lg font-bold text-gray-900 dark:text-white">20%</span>
                                        </div>
                                        <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">{{ 'Medium' }}</p>
                                    </div>
                                    <div class="text-center">
                                        <div class="flex items-center justify-center w-20 h-20 border-4 border-red-500 rounded-full">
                                            <span class="text-lg font-bold text-gray-900 dark:text-white">10%</span>
                                        </div>
                                        <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">{{ 'Low' }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Risk Factors -->
                <div class="bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-exclamation-triangle text-wellcare-500"></i>
                            {{ 'Attention Required' }}
                        </h2>
                    </div>
                    <div class="p-4 space-y-3">
                        <div class="flex items-center gap-3 p-3 rounded-lg bg-red-50 dark:bg-red-900/20">
                            <div class="flex items-center justify-center w-8 h-8 bg-red-100 rounded-full dark:bg-red-900/30">
                                <i class="text-red-500 fas fa-exclamation-circle"></i>
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900 dark:text-white">{{ '2 clients at risk of plateau' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Review their program' }}</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 p-3 rounded-lg bg-amber-50 dark:bg-amber-900/20">
                            <div class="flex items-center justify-center w-8 h-8 rounded-full bg-amber-100 dark:bg-amber-900/30">
                                <i class="fas fa-user-clock text-amber-500"></i>
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900 dark:text-white">{{ '3 clients missed sessions' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Send reminder' }}</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 p-3 rounded-lg bg-blue-50 dark:bg-blue-900/20">
                            <div class="flex items-center justify-center w-8 h-8 bg-blue-100 rounded-full dark:bg-blue-900/30">
                                <i class="text-blue-500 fas fa-trophy"></i>
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900 dark:text-white">{{ '5 milestones achieved' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Send congratulations' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
function progressMonitoring() {
    return {
        clients: {{ clients|json_encode|raw }},
        analytics: {{ analytics|json_encode|raw }},
        timeRange: 'month',
        filterStatus: 'all',
        
        generateReport() {
            console.log('Generate report for time range:', this.timeRange);
        }
    }
}
</script>
{% endblock %}
