{% extends 'layouts/app.html.twig' %}

{% block title %}Trail Analytics Dashboard - WellCare Connect Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('trail-analytics-css') }}
{% endblock %}

{% block body %}
<div class="py-4 mb-6 -mx-4 -mt-4 bg-gradient-to-r from-wellcare-600 to-wellcare-500">
    <div class="px-4 mx-auto">
        <div class="flex flex-col items-start justify-between md:flex-row md:items-center">
            <div>
                <h1 class="mb-1 text-xl font-bold text-white font-display">
                    <i class="mr-2 fa-solid fa-chart-line"></i>Trail Analytics
                </h1>
                <p class="text-sm text-white/80">Monitor trail usage, engagement, and community health</p>
            </div>
            <div class="flex gap-2 mt-3 md:mt-0">
                <select class="px-3 py-1.5 text-sm bg-white/20 border-none rounded-lg text-white focus:ring-2 focus:ring-white/50">
                    <option class="text-gray-800">Last 7 Days</option>
                    <option class="text-gray-800">Last 30 Days</option>
                    <option class="text-gray-800">Last 90 Days</option>
                    <option class="text-gray-800">This Year</option>
                </select>
                <button class="px-3 py-1.5 text-sm transition bg-white rounded-lg text-wellcare-600 hover:bg-gray-100">
                    <i class="mr-1 fa-solid fa-download"></i>Export
                </button>
            </div>
        </div>
    </div>
</div>

<div class="px-4 mx-auto">
    {# Quick Stats #}
    <div class="grid grid-cols-2 gap-3 mb-6 md:grid-cols-4">
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Total Trails</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">156</p>
                    <p class="text-xs text-green-500">+12 this month</p>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                    <i class="text-lg fa-solid fa-route text-wellcare-500"></i>
                </div>
            </div>
        </div>
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Total Users</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">2,847</p>
                    <p class="text-xs text-green-500">+234 this month</p>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-full bg-sky-100 dark:bg-sky-900/30">
                    <i class="text-lg fa-solid fa-users text-sky-500"></i>
                </div>
            </div>
        </div>
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Publications</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">1,234</p>
                    <p class="text-xs text-green-500">+89 this month</p>
                </div>
                <div class="flex items-center justify-center w-10 h-10 bg-purple-100 rounded-full dark:bg-purple-900/30">
                    <i class="text-lg text-purple-500 fa-solid fa-pen-to-square"></i>
                </div>
            </div>
        </div>
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Safety Reports</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">23</p>
                    <p class="text-xs text-amber-500">-5 from last month</p>
                </div>
                <div class="flex items-center justify-center w-10 h-10 bg-red-100 rounded-full dark:bg-red-900/30">
                    <i class="text-lg text-red-500 fa-solid fa-triangle-exclamation"></i>
                </div>
            </div>
        </div>
    </div>

    {# Charts Row #}
    <div class="grid grid-cols-1 gap-4 mb-6 lg:grid-cols-2">
        {# Trail Usage Over Time #}
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h2 class="font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-chart-area text-wellcare-500"></i>Trail Usage Over Time
                </h2>
                <div class="flex gap-2">
                    <button class="px-2 py-1 text-xs rounded bg-wellcare-100 text-wellcare-600">Daily</button>
                    <button class="px-2 py-1 text-xs text-gray-500 rounded hover:bg-gray-100">Weekly</button>
                    <button class="px-2 py-1 text-xs text-gray-500 rounded hover:bg-gray-100">Monthly</button>
                </div>
            </div>
            <div class="flex items-end justify-between h-64 px-2 pb-2 rounded-lg bg-gradient-to-b from-wellcare-50 to-transparent dark:from-wellcare-900/20">
                {% for i in 1..12 %}
                <div class="w-6 rounded-t bg-wellcare-500" style="height: {{ 30 + random(50) }}%"></div>
                {% endfor %}
            </div>
            <div class="flex justify-between mt-2 text-xs text-gray-500">
                <span>Jan</span><span>Feb</span><span>Mar</span><span>Apr</span><span>May</span><span>Jun</span>
                <span>Jul</span><span>Aug</span><span>Sep</span><span>Oct</span><span>Nov</span><span>Dec</span>
            </div>
        </div>

        {# Top Trails #}
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h2 class="font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-trophy text-amber-500"></i>Top Performing Trails
                </h2>
                <a href="#" class="text-xs text-wellcare-500 hover:text-wellcare-600">View All</a>
            </div>
            <div class="space-y-3">
                {% for trail in [
                    {name: 'Mountain View Trail', views: 1234, rating: 4.8},
                    {name: 'Forest Path Loop', views: 987, rating: 4.6},
                    {name: 'Lakeside Walk', views: 876, rating: 4.7},
                    {name: 'Sunset Ridge', views: 765, rating: 4.5},
                    {name: 'Canyon Trail', views: 654, rating: 4.4}
                ] %}
                <div class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50">
                    <div class="flex items-center justify-center w-8 h-8 font-bold text-white rounded-lg bg-wellcare-500">
                        {{ loop.index }}
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="font-medium text-gray-900 truncate dark:text-white">{{ trail.name }}</p>
                        <p class="text-xs text-gray-500">{{ trail.views }} views • {{ trail.rating }} rating</p>
                    </div>
                    <div class="flex items-center gap-1 text-amber-500">
                        <i class="text-xs fa-solid fa-star"></i>
                        <span class="text-sm font-medium">{{ trail.rating }}</span>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>

    {# Additional Analytics #}
    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3">
        {# User Activity #}
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h2 class="font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-user-clock text-sky-500"></i>User Activity
                </h2>
            </div>
            <div class="space-y-4">
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm text-gray-600 dark:text-gray-400">Active Users</span>
                        <span class="text-sm font-medium text-gray-900 dark:text-white">1,234</span>
                    </div>
                    <div class="w-full h-2 bg-gray-200 rounded-full dark:bg-gray-700">
                        <div class="h-2 rounded-full bg-wellcare-500" style="width: 75%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm text-gray-600 dark:text-gray-400">New Signups</span>
                        <span class="text-sm font-medium text-gray-900 dark:text-white">234</span>
                    </div>
                    <div class="w-full h-2 bg-gray-200 rounded-full dark:bg-gray-700">
                        <div class="h-2 rounded-full bg-sky-500" style="width: 60%"></div>
                    </div>
                </div>
                <div>
                    <div class="flex justify-between mb-1">
                        <span class="text-sm text-gray-600 dark:text-gray-400">Retained Users</span>
                        <span class="text-sm font-medium text-gray-900 dark:text-white">89%</span>
                    </div>
                    <div class="w-full h-2 bg-gray-200 rounded-full dark:bg-gray-700">
                        <div class="h-2 bg-green-500 rounded-full" style="width: 89%"></div>
                    </div>
                </div>
            </div>
        </div>

        {# Trail Categories #}
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h2 class="font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 text-purple-500 fa-solid fa-layer-group"></i>Trail Categories
                </h2>
            </div>
            <div class="space-y-3">
                {% for category, percent in {'Easy': 35, 'Moderate': 28, 'Difficult': 22, 'Expert': 15} %}
                <div class="flex items-center gap-3">
                    <div class="w-24 text-sm text-gray-600 dark:text-gray-400">{{ category }}</div>
                    <div class="flex-1 h-3 bg-gray-200 rounded-full dark:bg-gray-700">
                        <div class="h-3 rounded-full {% if category == 'Easy' %}bg-green-500{% elseif category == 'Moderate' %}bg-sky-500{% elseif category == 'Difficult' %}bg-amber-500{% else %}bg-red-500{% endif %}" style="width: {{ percent }}%"></div>
                    </div>
                    <div class="w-10 text-sm text-right text-gray-900 dark:text-white">{{ percent }}%</div>
                </div>
                {% endfor %}
            </div>
        </div>

        {# Recent Publications #}
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between mb-4">
                <h2 class="font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-newspaper text-sky-500"></i>Recent Publications
                </h2>
                <a href="/admin/trail-analytics/content" class="text-xs text-wellcare-500 hover:text-wellcare-600">View All</a>
            </div>
            <div class="space-y-3">
                {% for publication in [
                    {user: 'John D.', trail: 'Mountain View', date: '2 hours ago'},
                    {user: 'Sarah M.', trail: 'Forest Path', date: '5 hours ago'},
                    {user: 'Mike R.', trail: 'Lakeside Walk', date: '1 day ago'},
                    {user: 'Emma L.', trail: 'Sunset Ridge', date: '2 days ago'}
                ] %}
                <div class="flex items-center gap-3 p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50">
                    <div class="flex items-center justify-center w-8 h-8 font-bold text-white rounded-full bg-gradient-to-br from-wellcare-400 to-wellcare-600">
                        {{ publication.user|first }}
                    </div>
                    <div class="flex-1 min-w-0">
                        <p class="text-sm font-medium text-gray-900 truncate dark:text-white">{{ publication.trail }}</p>
                        <p class="text-xs text-gray-500">{{ publication.user }} • {{ publication.date }}</p>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
