{% extends 'layouts/app.html.twig' %}

{% block title %}Health Trail Overview - WellCare Connect Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('trail-analytics-css') }}
{% endblock %}

{% block body %}
<div class="py-4 mb-6 -mx-4 -mt-4 bg-gradient-to-r from-red-600 to-orange-600">
    <div class="px-4 mx-auto">
        <div class="flex flex-col items-start justify-between md:flex-row md:items-center">
            <div>
                <h1 class="mb-1 text-xl font-bold text-white font-display">
                    <i class="mr-2 fa-solid fa-shield-halved"></i>Health Trail Overview
                </h1>
                <p class="text-sm text-white/80">Monitor and review all Parcours de Sante records in one place</p>
            </div>
            <div class="mt-4 md:mt-0">
                <a href="{{ path('admin_trail_content') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white border rounded-lg bg-white/20 border-white/30 hover:bg-white/30 backdrop-blur-sm">
                    <i class="mr-2 fa-solid fa-arrow-up-right-from-square"></i>View Publications
                </a>
            </div>
        </div>
    </div>
</div>

<div class="px-4 mx-auto">
    <!-- Overview -->
    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2 lg:grid-cols-4">
        <div class="p-4 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Parcours</p>
                    <p class="text-2xl font-bold text-gray-900 dark:text-white">{{ stats.totalParcours }}</p>
                </div>
                <div class="p-3 bg-blue-100 rounded-lg dark:bg-blue-900/30">
                    <i class="text-xl text-blue-600 fa-solid fa-route"></i>
                </div>
            </div>
            <div class="mt-2 text-sm text-gray-500">
                Active records in database
            </div>
        </div>

        <div class="p-4 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Publications</p>
                    <p class="text-2xl font-bold text-gray-900 dark:text-white">{{ stats.totalPublications }}</p>
                </div>
                <div class="p-3 bg-emerald-100 rounded-lg dark:bg-emerald-900/30">
                    <i class="text-xl text-emerald-600 fa-solid fa-newspaper"></i>
                </div>
            </div>
            <div class="mt-2 text-sm text-gray-500">
                Linked to all parcours combined
            </div>
        </div>

        <div class="p-4 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">New in 30 Days</p>
                    <p class="text-2xl font-bold text-gray-900 dark:text-white">{{ stats.newParcoursLast30Days }}</p>
                </div>
                <div class="p-3 bg-orange-100 rounded-lg dark:bg-orange-900/30">
                    <i class="text-xl text-orange-600 fa-solid fa-calendar-plus"></i>
                </div>
            </div>
            <div class="mt-2 text-sm text-gray-500">
                Created in the last month
            </div>
        </div>

        <div class="p-4 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Average Distance</p>
                    <p class="text-2xl font-bold text-gray-900 dark:text-white">{{ stats.averageDistance|number_format(1, '.', '') }} km</p>
                </div>
                <div class="p-3 rounded-lg bg-purple-100 dark:bg-purple-900/30">
                    <i class="text-xl text-purple-600 fa-solid fa-ruler"></i>
                </div>
            </div>
            <div class="mt-2 text-sm text-gray-500">
                Longest route: {{ stats.longestDistance|number_format(1, '.', '') }} km
            </div>
        </div>
    </div>

    <!-- Parcours Table -->
    <div class="p-6 mb-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">Parcours de Sante List</h2>
            <span class="px-3 py-1 text-xs font-semibold text-red-800 bg-red-100 rounded-full dark:bg-red-900/30 dark:text-red-400">
                {{ stats.totalParcours }} records
            </span>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead>
                    <tr class="border-b border-gray-200 dark:border-gray-700">
                        <th class="px-4 py-3 text-left">ID</th>
                        <th class="px-4 py-3 text-left">Parcours</th>
                        <th class="px-4 py-3 text-left">Location</th>
                        <th class="px-4 py-3 text-left">Distance</th>
                        <th class="px-4 py-3 text-left">Created</th>
                        <th class="px-4 py-3 text-left">Publications</th>
                        <th class="px-4 py-3 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for row in parcoursRows %}
                    {% set parcours = row.parcours %}
                    <tr class="border-b border-gray-100 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <td class="px-4 py-3 text-sm text-gray-900 dark:text-white">#PRC-{{ parcours.id }}</td>
                        <td class="px-4 py-3 text-sm font-medium text-gray-900 dark:text-white">{{ parcours.nomParcours }}</td>
                        <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">
                            <i class="mr-1 fa-solid fa-location-dot text-red-500"></i>{{ parcours.localisationParcours }}
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-900 dark:text-white">
                            <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-blue-800 bg-blue-100 rounded-full dark:bg-blue-900/30 dark:text-blue-400">
                                {{ parcours.distanceParcours|number_format(1, '.', '') }} km
                            </span>
                        </td>
                        <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400">
                            {{ parcours.dateCreation ? parcours.dateCreation|date('M d, Y') : 'N/A' }}
                        </td>
                        <td class="px-4 py-3 text-sm">
                            {% if row.publicationCount > 0 %}
                                <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-green-800 bg-green-100 rounded-full dark:bg-green-900/30 dark:text-green-400">{{ row.publicationCount }}</span>
                            {% else %}
                                <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-gray-700 bg-gray-100 rounded-full dark:bg-gray-900/30 dark:text-gray-300">0</span>
                            {% endif %}
                        </td>
                        <td class="px-4 py-3 text-sm whitespace-nowrap">
                            <form method="post" action="{{ path('app_parcours_de_sante_delete', {'id': parcours.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this parcours?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ parcours.id) }}">
                                <button type="submit" class="inline-flex items-center px-2 py-1 text-xs font-medium text-white bg-red-600 rounded hover:bg-red-700">
                                    <i class="mr-1 fa-solid fa-trash"></i>Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="7" class="px-4 py-8 text-sm text-center text-gray-500 dark:text-gray-400">
                            No parcours found.
                            <a href="{{ path('app_parcours_de_sante_new') }}" class="font-medium text-wellcare-600 hover:text-wellcare-800 dark:text-wellcare-400">
                                Create one now
                            </a>.
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <!-- Highlights -->
    <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
        <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
            <i class="mr-2 fa-solid fa-bell"></i>Most Active Parcours
        </h2>
        <div class="space-y-3">
            {% for row in topPublishedParcours %}
            {% set parcours = row.parcours %}
            {% set color = loop.index == 1 ? 'red' : (loop.index == 2 ? 'yellow' : 'blue') %}
            <div class="flex items-start p-4 border-l-4 rounded-r-lg {{ color == 'red' ? 'border-red-500 bg-red-50 dark:bg-red-900/20' : (color == 'yellow' ? 'border-yellow-500 bg-yellow-50 dark:bg-yellow-900/20' : 'border-blue-500 bg-blue-50 dark:bg-blue-900/20') }}">
                <i class="mt-1 mr-3 {{ color == 'red' ? 'text-red-500 fa-solid fa-medal' : (color == 'yellow' ? 'text-yellow-500 fa-solid fa-award' : 'text-blue-500 fa-solid fa-circle-info') }}"></i>
                <div>
                    <h4 class="font-medium {{ color == 'red' ? 'text-red-800 dark:text-red-400' : (color == 'yellow' ? 'text-yellow-800 dark:text-yellow-400' : 'text-blue-800 dark:text-blue-400') }}">
                        {{ parcours.nomParcours }}
                    </h4>
                    <p class="mt-1 text-sm {{ color == 'red' ? 'text-red-700 dark:text-red-300' : (color == 'yellow' ? 'text-yellow-700 dark:text-yellow-300' : 'text-blue-700 dark:text-blue-300') }}">
                        {{ row.publicationCount }} publications • {{ parcours.distanceParcours|number_format(1, '.', '') }} km • {{ parcours.localisationParcours }}
                    </p>
                    <p class="mt-2 text-xs {{ color == 'red' ? 'text-red-600 dark:text-red-400' : (color == 'yellow' ? 'text-yellow-600 dark:text-yellow-400' : 'text-blue-600 dark:text-blue-400') }}">
                        Created {{ parcours.dateCreation ? parcours.dateCreation|date('M d, Y') : 'N/A' }}
                    </p>
                </div>
            </div>
            {% else %}
            <div class="flex items-start p-4 border-l-4 border-gray-400 rounded-r-lg bg-gray-50 dark:bg-gray-900/20">
                <i class="mt-1 mr-3 text-gray-500 fa-solid fa-info-circle"></i>
                <div>
                    <h4 class="font-medium text-gray-800 dark:text-gray-300">No Parcours Data Yet</h4>
                    <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">Create parcours records to display activity highlights in this section.</p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}



