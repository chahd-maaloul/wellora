{% extends 'layouts/app.html.twig' %}

{% block title %}Publication Comments - WellCare Connect Admin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('trail-analytics-css') }}
{% endblock %}

{% block body %}
<div
    class="py-4 mb-6 -mx-4 -mt-4 bg-gradient-to-r from-cyan-600 to-sky-700"
    style="background-color: #0e7490; background-image: linear-gradient(90deg, #0891b2 0%, #0369a1 100%);"
>
    <div class="px-4 mx-auto">
        <div class="flex flex-col items-start justify-between gap-3 md:flex-row md:items-center">
            <div>
                <h1 class="mb-1 text-xl font-bold text-white font-display">
                    <i class="mr-2 fa-solid fa-comments"></i>Publication Comments
                </h1>
                <p class="text-sm text-white/80">Review all trail publication comments in one place.</p>
            </div>
            <a href="{{ path('admin_trail_content') }}" class="inline-flex items-center px-4 py-2 text-sm font-medium text-white border rounded-lg bg-white/20 border-white/30 hover:bg-white/30 backdrop-blur-sm">
                <i class="mr-2 fa-solid fa-arrow-left"></i>Back to Content
            </a>
        </div>
    </div>
</div>

<div class="px-4 mx-auto">
    <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-3">
        <div class="p-4 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Total Comments</p>
            <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ commentStats.totalComments }}</p>
        </div>
        <div class="p-4 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Trails With Comments</p>
            <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ commentStats.trailsWithComments }}</p>
        </div>
        <div class="p-4 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
            <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Latest Comment</p>
            <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">
                {{ commentStats.latestCommentDate ? commentStats.latestCommentDate|date('M d, Y') : 'N/A' }}
            </p>
        </div>
    </div>

    <div class="p-6 bg-white border border-gray-100 shadow-sm rounded-xl dark:bg-gray-800 dark:border-gray-700">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                <i class="mr-2 fa-solid fa-list"></i>Comments Feed
            </h2>
            <span class="px-2 py-1 text-xs font-medium text-cyan-800 bg-cyan-100 rounded-full dark:bg-cyan-900/30 dark:text-cyan-300">
                {{ comments|length }} visible
            </span>
        </div>

        <div class="space-y-3">
            {% for comment in comments %}
                {% set publication = comment.publicationParcours %}
                {% set trail = publication ? publication.parcoursDeSante : null %}
                <article class="p-4 border border-gray-100 rounded-xl bg-gray-50 dark:bg-gray-700/40 dark:border-gray-700">
                    <div class="flex items-start gap-3">
                        <div class="flex items-center justify-center flex-shrink-0 w-10 h-10 rounded-full bg-cyan-100 text-cyan-700 dark:bg-cyan-900/30 dark:text-cyan-300">
                            <i class="fa-solid fa-comment-dots"></i>
                        </div>
                        <div class="flex-1 min-w-0">
                            <div class="flex flex-wrap items-center justify-between gap-2">
                                <p class="text-sm font-semibold text-gray-900 dark:text-white">
                                    {{ trail ? trail.nomParcours : 'Unknown trail' }}
                                </p>
                                <span class="text-xs text-gray-500 dark:text-gray-400">
                                    {{ comment.dateCommentaire ? comment.dateCommentaire|date('M d, Y') : 'N/A' }}
                                </span>
                            </div>
                            <div class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                Comment #CMT-{{ comment.id }} - {{ publication ? '#PUB-' ~ publication.id : 'N/A' }}
                            </div>
                            <p class="mt-2 text-sm leading-6 text-gray-700 whitespace-pre-line dark:text-gray-200">
                                {{ comment.commentaire|default('No comment text.') }}
                            </p>
                            <div class="mt-3">
                                {% if publication %}
                                    <form method="post" action="{{ path('app_publication_parcours_comment_delete', {'id': publication.id, 'commentId': comment.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete_comment' ~ comment.id) }}">
                                        <input type="hidden" name="redirectTo" value="admin_user_behavior">
                                        <button type="submit" class="inline-flex items-center px-3 py-1 text-xs font-medium text-white bg-red-600 rounded-lg hover:bg-red-700">
                                            <i class="mr-1 fa-solid fa-trash"></i>Delete
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="inline-flex items-center px-2 py-1 text-xs font-medium text-gray-600 bg-gray-100 rounded-lg dark:bg-gray-800 dark:text-gray-300">
                                        <i class="mr-1 fa-solid fa-ban"></i>Cannot delete (no publication)
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </article>
            {% else %}
                <div class="py-10 text-sm text-center text-gray-500 dark:text-gray-400">
                    No comments found.
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
