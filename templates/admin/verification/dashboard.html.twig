{% extends 'layouts/app.html.twig' %}

{% block title %}Vérification des Professionnels - WellCare Connect{% endblock %}

{% block body %}
<div class="space-y-6">
    {# Header #}
    <div class="flex items-center justify-between">
        <div>
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                Vérification des Professionnels
            </h1>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                Gestion de la vérification automatique et manuelle des diplômes
            </p>
        </div>
        <a href="{{ path('admin_verification_process_all') }}" 
           class="inline-flex items-center px-4 py-2 text-sm font-medium text-white rounded-lg bg-wellcare-600 hover:bg-wellcare-700">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
            </svg>
            Traiter tout
        </a>
    </div>

    {# Statistics Cards #}
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-5">
        <div class="p-6 bg-white rounded-lg shadow-sm dark:bg-gray-800">
            <div class="flex items-center">
                <div class="flex items-center justify-center w-12 h-12 bg-yellow-100 rounded-full dark:bg-yellow-900/30">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">En attente</p>
                    <p class="text-2xl font-semibold text-gray-900 dark:text-white">{{ statistics.pending }}</p>
                </div>
            </div>
        </div>

        <div class="p-6 bg-white rounded-lg shadow-sm dark:bg-gray-800">
            <div class="flex items-center">
                <div class="flex items-center justify-center w-12 h-12 bg-blue-100 rounded-full dark:bg-blue-900/30">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">En cours</p>
                    <p class="text-2xl font-semibold text-gray-900 dark:text-white">{{ statistics.processing }}</p>
                </div>
            </div>
        </div>

        <div class="p-6 bg-white rounded-lg shadow-sm dark:bg-gray-800">
            <div class="flex items-center">
                <div class="flex items-center justify-center w-12 h-12 bg-orange-100 rounded-full dark:bg-orange-900/30">
                    <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Revision manuelle</p>
                    <p class="text-2xl font-semibold text-gray-900 dark:text-white">{{ statistics.manual_review }}</p>
                </div>
            </div>
        </div>

        <div class="p-6 bg-white rounded-lg shadow-sm dark:bg-gray-800">
            <div class="flex items-center">
                <div class="flex items-center justify-center w-12 h-12 bg-green-100 rounded-full dark:bg-green-900/30">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Approuvés</p>
                    <p class="text-2xl font-semibold text-gray-900 dark:text-white">{{ statistics.verified }}</p>
                </div>
            </div>
        </div>

        <div class="p-6 bg-white rounded-lg shadow-sm dark:bg-gray-800">
            <div class="flex items-center">
                <div class="flex items-center justify-center w-12 h-12 bg-red-100 rounded-full dark:bg-red-900/30">
                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium text-gray-500 dark:text-gray-400">Rejetés</p>
                    <p class="text-2xl font-semibold text-gray-900 dark:text-white">{{ statistics.rejected }}</p>
                </div>
            </div>
        </div>
    </div>

    {# Filters #}
    <div class="flex gap-2">
        <a href="{{ path('admin_verification_dashboard', {status: 'all'}) }}" 
           class="px-4 py-2 text-sm font-medium rounded-lg {{ current_status == 'all' ? 'bg-wellcare-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600' }}">
            Tous
        </a>
        <a href="{{ path('admin_verification_dashboard', {status: 'pending'}) }}" 
           class="px-4 py-2 text-sm font-medium rounded-lg {{ current_status == 'pending' ? 'bg-yellow-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600' }}">
            En attente
        </a>
        <a href="{{ path('admin_verification_dashboard', {status: 'manual_review'}) }}" 
           class="px-4 py-2 text-sm font-medium rounded-lg {{ current_status == 'manual_review' ? 'bg-orange-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600' }}">
            Revision manuelle
        </a>
        <a href="{{ path('admin_verification_dashboard', {status: 'verified'}) }}" 
           class="px-4 py-2 text-sm font-medium rounded-lg {{ current_status == 'verified' ? 'bg-green-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600' }}">
            Approuvés
        </a>
        <a href="{{ path('admin_verification_dashboard', {status: 'rejected'}) }}" 
           class="px-4 py-2 text-sm font-medium rounded-lg {{ current_status == 'rejected' ? 'bg-red-600 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600' }}">
            Rejetés
        </a>
    </div>

    {# Verifications Table #}
    <div class="overflow-hidden bg-white rounded-lg shadow-sm dark:bg-gray-800">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
            <thead class="bg-gray-50 dark:bg-gray-900">
                <tr>
                    <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-gray-400">
                        Professionnel
                    </th>
                    <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-gray-400">
                        Spécialité
                    </th>
                    <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-gray-400">
                        Statut
                    </th>
                    <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-gray-400">
                        Score
                    </th>
                    <th class="px-6 py-3 text-xs font-medium tracking-wider text-left text-gray-500 uppercase dark:text-gray-400">
                        Date
                    </th>
                    <th class="px-6 py-3 text-xs font-medium tracking-wider text-right text-gray-500 uppercase dark:text-gray-400">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-800 dark:divide-gray-700">
                {% for item in verificationsWithUsers %}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 w-10 h-10">
                                <div class="flex items-center justify-center w-10 h-10 font-medium text-white rounded-full bg-gradient-to-br from-wellcare-500 to-wellcare-light-500">
                                    {{ item.user ? item.user.firstName|first ~ item.user.lastName|first : item.verification.professionalUuid[:2]|upper }}
                                </div>
                            </div>
                            <div class="ml-4">
                                <div class="text-sm font-medium text-gray-900 dark:text-white">
                                    {{ item.user ? item.user.firstName ~ ' ' ~ item.user.lastName : item.verification.professionalUuid[:8] ~ '...' }}
                                </div>
                                <div class="text-sm text-gray-500 dark:text-gray-400">
                                    {{ item.user ? item.user.email : '' }}
                                </div>
                            </div>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300">
                            {{ item.verification.specialty ?: 'N/A' }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% set statusColors = {
                            'pending': 'yellow',
                            'processing': 'blue',
                            'verified': 'green',
                            'rejected': 'red',
                            'manual_review': 'orange'
                        } %}
                        {% set color = statusColors[item.verification.status] | default('gray') %}
                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-{{ color }}-100 text-{{ color }}-800 dark:bg-{{ color }}-900/30 dark:text-{{ color }}-300">
                            {{ item.verification.statusLabel }}
                        </span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        {% if item.verification.confidenceScore is not null %}
                        <div class="flex items-center">
                            <div class="w-16 h-2 mr-2 bg-gray-200 rounded-full dark:bg-gray-700">
                                <div class="bg-{{ item.verification.confidenceScore >= 80 ? 'green' : item.verification.confidenceScore >= 60 ? 'orange' : 'red' }}-600 h-2 rounded-full" style="width: {{ item.verification.confidenceScore }}%"></div>
                            </div>
                            <span class="text-sm text-gray-900 dark:text-white">{{ item.verification.confidenceScore }}/100</span>
                        </div>
                        {% else %}
                        <span class="text-sm text-gray-500 dark:text-gray-400">-</span>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500 whitespace-nowrap dark:text-gray-400">
                        {{ item.verification.createdAt|date('d/m/Y H:i') }}
                    </td>
                    <td class="px-6 py-4 text-sm font-medium text-right whitespace-nowrap">
                        <a href="{{ path('admin_verification_view', {id: item.verification.id}) }}" 
                           class="text-wellcare-600 hover:text-wellcare-900 dark:text-wellcare-400 dark:hover:text-wellcare-300">
                            Voir détails
                        </a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-12 text-center text-gray-500 dark:text-gray-400">
                        <svg class="w-12 h-12 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        <p class="mt-2">Aucune vérification trouvée</p>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
