{% extends 'layouts/app.html.twig' %}

{% block title %}My Appointments - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('appointment') }}
{% endblock %}

{% block scripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('appointment-booking') }}
{% endblock %}

{% block body %}
<div class="min-h-screen py-8 bg-gray-50 dark:bg-gray-900" x-data="patientDashboard()" x-init="init()">
    <div class="max-w-6xl container-wellcare">
        
        {# Header #}
        <div class="flex flex-col gap-4 mb-8 lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900 lg:text-3xl dark:text-white">My Appointments</h1>
                <p class="mt-1 text-gray-600 dark:text-gray-400">Manage your upcoming and past appointments</p>
            </div>
            <a href="/doctors" class="btn-primary">
                <i class="mr-2 fas fa-plus"></i>Book New Appointment
            </a>
        </div>
        
        {# Stats Cards #}
        <div class="grid grid-cols-1 gap-4 mb-8 sm:grid-cols-2 lg:grid-cols-4">
            <div class="p-4 card">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-wellcare-100 dark:bg-wellcare-900/30">
                        <i class="text-2xl fas fa-calendar-check text-wellcare-600"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Upcoming</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="upcomingCount"></p>
                    </div>
                </div>
            </div>
            <div class="p-4 card">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 bg-green-100 rounded-xl dark:bg-green-900/30">
                        <i class="text-2xl text-green-600 fas fa-check-circle"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Completed</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="completedCount"></p>
                    </div>
                </div>
            </div>
            <div class="p-4 card">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 bg-yellow-100 rounded-xl dark:bg-yellow-900/30">
                        <i class="text-2xl text-yellow-600 fas fa-clock"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Pending</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="pendingCount"></p>
                    </div>
                </div>
            </div>
            <div class="p-4 card">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 bg-red-100 rounded-xl dark:bg-red-900/30">
                        <i class="text-2xl text-red-600 fas fa-times-circle"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Cancelled</p>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="cancelledCount"></p>
                    </div>
                </div>
            </div>
        </div>
        
        {# Tabs #}
        <div class="mb-6 card">
            <div class="border-b border-gray-200 dark:border-gray-700">
                <nav class="flex -mb-px">
                    <button 
                        @click="activeTab = 'upcoming'"
                        :class="activeTab === 'upcoming' ? 'border-wellcare-500 text-wellcare-600 dark:text-wellcare-400' : 'border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400'"
                        class="px-6 py-4 text-sm font-medium transition-colors border-b-2"
                    >
                        Upcoming
                        <span class="ml-2 px-2 py-0.5 bg-wellcare-100 dark:bg-wellcare-900 text-wellcare-700 dark:text-wellcare-300 rounded-full text-xs" x-text="upcomingCount"></span>
                    </button>
                    <button 
                        @click="activeTab = 'past'"
                        :class="activeTab === 'past' ? 'border-wellcare-500 text-wellcare-600 dark:text-wellcare-400' : 'border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400'"
                        class="px-6 py-4 text-sm font-medium transition-colors border-b-2"
                    >
                        Past
                    </button>
                    <button 
                        @click="activeTab = 'cancelled'"
                        :class="activeTab === 'cancelled' ? 'border-wellcare-500 text-wellcare-600 dark:text-wellcare-400' : 'border-transparent text-gray-500 hover:text-gray-700 dark:text-gray-400'"
                        class="px-6 py-4 text-sm font-medium transition-colors border-b-2"
                    >
                        Cancelled
                    </button>
                </nav>
            </div>
            
            <div class="p-6">
                {# Upcoming Appointments #}
                <div x-show="activeTab === 'upcoming'">
                    <div x-show="upcomingAppointments.length === 0" class="py-12 text-center">
                        <div class="inline-flex items-center justify-center w-16 h-16 mb-4 bg-gray-100 rounded-full dark:bg-gray-800">
                            <i class="text-2xl text-gray-400 fas fa-calendar"></i>
                        </div>
                        <h3 class="mb-2 text-lg font-medium text-gray-900 dark:text-white">No upcoming appointments</h3>
                        <p class="mb-4 text-gray-500 dark:text-gray-400">You don't have any upcoming appointments scheduled.</p>
                        <a href="/doctors" class="btn-primary">Book an Appointment</a>
                    </div>
                    
                    <div class="space-y-4">
                        <template x-for="appointment in upcomingAppointments" :key="appointment.id">
                            <div class="p-4 transition-shadow border border-gray-200 dark:border-gray-700 rounded-xl hover:shadow-md">
                                <div class="flex flex-col gap-4 lg:flex-row">
                                    {# Date Column #}
                                    <div class="flex-shrink-0 w-20 text-center">
                                        <div class="p-3 bg-wellcare-50 dark:bg-wellcare-900/20 rounded-xl">
                                            <p class="text-sm font-medium text-wellcare-600 dark:text-wellcare-400" x-text="appointment.month"></p>
                                            <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="appointment.day"></p>
                                            <p class="text-xs text-gray-500 dark:text-gray-400" x-text="appointment.weekday"></p>
                                        </div>
                                    </div>
                                    
                                    {# Info Column #}
                                    <div class="flex-1">
                                        <div class="flex flex-col gap-2 lg:flex-row lg:items-start lg:justify-between">
                                            <div>
                                                <div class="flex items-center gap-2 mb-1">
                                                    <h3 class="font-semibold text-gray-900 dark:text-white" x-text="'Dr. ' + appointment.doctorName"></h3>
                                                    <span 
                                                        class="px-2 py-0.5 rounded-full text-xs font-medium"
                                                        :class="getStatusClass(appointment.status)"
                                                        x-text="appointment.status"
                                                    ></span>
                                                </div>
                                                <p class="text-sm text-wellcare-600 dark:text-wellcare-400" x-text="appointment.specialty"></p>
                                                <div class="flex flex-wrap items-center gap-3 mt-2 text-sm text-gray-600 dark:text-gray-400">
                                                    <span><i class="mr-1 fas fa-clock"></i> <span x-text="appointment.time"></span></span>
                                                    <span><i class="mr-1 fas fa-hourglass-half"></i> <span x-text="appointment.duration"></span></span>
                                                    <span :class="appointment.type === 'video' ? 'text-wellcare-600' : ''">
                                                        <i class="mr-1 fas" :class="getTypeIcon(appointment.type)"></i>
                                                        <span class="capitalize" x-text="appointment.type"></span>
                                                    </span>
                                                </div>
                                                <p class="mt-2 text-sm text-gray-500 dark:text-gray-400" x-show="appointment.location">
                                                    <i class="mr-1 fas fa-map-marker-alt"></i> <span x-text="appointment.location"></span>
                                                </p>
                                            </div>
                                            
                                            {# Actions #}
                                            <div class="flex flex-wrap gap-2">
                                                <button 
                                                    x-show="appointment.canJoin"
                                                    @click="joinConsultation(appointment)"
                                                    class="text-sm btn-primary"
                                                >
                                                    <i class="mr-1 fas fa-video"></i> Join
                                                </button>
                                                <button 
                                                    @click="viewDetails(appointment)"
                                                    class="text-sm btn-outline"
                                                >
                                                    <i class="mr-1 fas fa-eye"></i> Details
                                                </button>
                                                <button 
                                                    @click="rescheduleAppointment(appointment)"
                                                    class="text-sm btn-ghost"
                                                >
                                                    <i class="mr-1 fas fa-calendar-alt"></i> Reschedule
                                                </button>
                                                <button 
                                                    @click="cancelAppointment(appointment)"
                                                    class="text-sm text-red-600 btn-ghost hover:text-red-700"
                                                >
                                                    <i class="mr-1 fas fa-times"></i> Cancel
                                                </button>
                                            </div>
                                        </div>
                                        
                                        {# Preparation Reminder #}
                                        <div x-show="appointment.isSoon" class="p-3 mt-4 border border-yellow-200 rounded-lg bg-yellow-50 dark:bg-yellow-900/20 dark:border-yellow-800">
                                            <div class="flex items-start gap-2">
                                                <i class="fas fa-exclamation-triangle text-yellow-500 mt-0.5"></i>
                                                <div>
                                                    <p class="text-sm font-medium text-yellow-900 dark:text-yellow-300">Coming up soon!</p>
                                                    <p class="text-xs text-yellow-700 dark:text-yellow-400">Don't forget to bring your ID and insurance card.</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
                
                {# Past Appointments #}
                <div x-show="activeTab === 'past'" style="display: none;">
                    <div x-show="pastAppointments.length === 0" class="py-12 text-center">
                        <div class="inline-flex items-center justify-center w-16 h-16 mb-4 bg-gray-100 rounded-full dark:bg-gray-800">
                            <i class="text-2xl text-gray-400 fas fa-history"></i>
                        </div>
                        <h3 class="mb-2 text-lg font-medium text-gray-900 dark:text-white">No past appointments</h3>
                        <p class="text-gray-500 dark:text-gray-400">Your appointment history will appear here.</p>
                    </div>
                    
                    <div class="space-y-4">
                        <template x-for="appointment in pastAppointments" :key="appointment.id">
                            <div class="p-4 transition-shadow border border-gray-200 dark:border-gray-700 rounded-xl hover:shadow-md">
                                <div class="flex flex-col gap-4 lg:flex-row">
                                    {# Date Column #}
                                    <div class="flex-shrink-0 w-20 text-center">
                                        <div class="p-3 bg-gray-50 dark:bg-gray-800 rounded-xl">
                                            <p class="text-sm font-medium text-gray-500 dark:text-gray-400" x-text="appointment.month"></p>
                                            <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="appointment.day"></p>
                                            <p class="text-xs text-gray-500 dark:text-gray-400" x-text="appointment.weekday"></p>
                                        </div>
                                    </div>
                                    
                                    {# Info Column #}
                                    <div class="flex-1">
                                        <div class="flex flex-col gap-2 lg:flex-row lg:items-start lg:justify-between">
                                            <div>
                                                <div class="flex items-center gap-2 mb-1">
                                                    <h3 class="font-semibold text-gray-900 dark:text-white" x-text="'Dr. ' + appointment.doctorName"></h3>
                                                    <span class="badge-success">Completed</span>
                                                </div>
                                                <p class="text-sm text-wellcare-600 dark:text-wellcare-400" x-text="appointment.specialty"></p>
                                                <div class="flex flex-wrap items-center gap-3 mt-2 text-sm text-gray-600 dark:text-gray-400">
                                                    <span><i class="mr-1 fas fa-clock"></i> <span x-text="appointment.time"></span></span>
                                                    <span class="capitalize"><i class="mr-1 fas" :class="getTypeIcon(appointment.type)"></i> <span x-text="appointment.type"></span></span>
                                                </div>
                                            </div>
                                            
                                            {# Actions #}
                                            <div class="flex flex-wrap gap-2">
                                                <button 
                                                    x-show="!appointment.hasReview"
                                                    @click="openReviewModal(appointment)"
                                                    class="text-sm btn-primary"
                                                >
                                                    <i class="mr-1 fas fa-star"></i> Rate
                                                </button>
                                                <button 
                                                    @click="viewPrescription(appointment)"
                                                    class="text-sm btn-outline"
                                                >
                                                    <i class="mr-1 fas fa-file-prescription"></i> Prescription
                                                </button>
                                                <button 
                                                    @click="downloadSummary(appointment)"
                                                    class="text-sm btn-ghost"
                                                >
                                                    <i class="mr-1 fas fa-download"></i> Summary
                                                </button>
                                                <button 
                                                    @click="bookFollowUp(appointment)"
                                                    class="text-sm btn-ghost"
                                                >
                                                    <i class="mr-1 fas fa-redo"></i> Follow-up
                                                </button>
                                            </div>
                                        </div>
                                        
                                        {# Doctor Notes Preview #}
                                        <div x-show="appointment.notes" class="p-3 mt-4 rounded-lg bg-gray-50 dark:bg-gray-800">
                                            <p class="text-sm text-gray-600 dark:text-gray-400">
                                                <i class="mr-1 fas fa-sticky-note text-wellcare-500"></i>
                                                <span x-text="appointment.notes"></span>
                                            </p>
                                        </div>
                                        
                                        {# Review Display #}
                                        <div x-show="appointment.hasReview" class="flex items-center gap-2 mt-4">
                                            <div class="flex text-yellow-400">
                                                <template x-for="i in 5" :key="i">
                                                    <i :class="i <= appointment.rating ? 'fas fa-star' : 'far fa-star'"></i>
                                                </template>
                                            </div>
                                            <span class="text-sm text-gray-500 dark:text-gray-400">You rated this appointment</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
                
                {# Cancelled Appointments #}
                <div x-show="activeTab === 'cancelled'" style="display: none;">
                    <div x-show="cancelledAppointments.length === 0" class="py-12 text-center">
                        <div class="inline-flex items-center justify-center w-16 h-16 mb-4 bg-gray-100 rounded-full dark:bg-gray-800">
                            <i class="text-2xl text-gray-400 fas fa-check"></i>
                        </div>
                        <h3 class="mb-2 text-lg font-medium text-gray-900 dark:text-white">No cancelled appointments</h3>
                        <p class="text-gray-500 dark:text-gray-400">Good news! You don't have any cancelled appointments.</p>
                    </div>
                    
                    <div class="space-y-4">
                        <template x-for="appointment in cancelledAppointments" :key="appointment.id">
                            <div class="p-4 border border-gray-200 opacity-75 dark:border-gray-700 rounded-xl">
                                <div class="flex flex-col gap-4 lg:flex-row">
                                    <div class="flex-shrink-0 w-20 text-center">
                                        <div class="p-3 bg-red-50 dark:bg-red-900/20 rounded-xl">
                                            <p class="text-sm font-medium text-red-500 dark:text-red-400" x-text="appointment.month"></p>
                                            <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="appointment.day"></p>
                                        </div>
                                    </div>
                                    <div class="flex-1">
                                        <div class="flex items-center gap-2 mb-1">
                                            <h3 class="font-semibold text-gray-900 dark:text-white" x-text="'Dr. ' + appointment.doctorName"></h3>
                                            <span class="badge-danger">Cancelled</span>
                                        </div>
                                        <p class="text-sm text-gray-500 dark:text-gray-400" x-text="appointment.specialty"></p>
                                        <p class="mt-2 text-sm text-red-600 dark:text-red-400">
                                            <i class="mr-1 fas fa-info-circle"></i>
                                            Cancelled on <span x-text="appointment.cancelledDate"></span>
                                        </p>
                                        <p x-show="appointment.cancellationReason" class="mt-1 text-sm text-gray-500 dark:text-gray-400" x-text="'Reason: ' + appointment.cancellationReason"></p>
                                    </div>
                                </div>
                            </div>
                        </template>
                    </div>
                </div>
            </div>
        </div>
        
        {# Teleconsultation Widget #}
        <div x-show="hasUpcomingVideoCall" class="mb-6 border-2 card border-wellcare-500">
            <div class="p-6">
                <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
                    <div class="flex items-center gap-4">
                        <div class="flex items-center justify-center w-14 h-14 rounded-xl bg-wellcare-100 dark:bg-wellcare-900/30 animate-pulse">
                            <i class="text-2xl fas fa-video text-wellcare-600"></i>
                        </div>
                        <div>
                            <h3 class="font-semibold text-gray-900 dark:text-white">Upcoming Video Consultation</h3>
                            <p class="text-wellcare-600 dark:text-wellcare-400">Dr. Ahmed Ben Ali - Today at 2:00 PM</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">You can join 15 minutes before the appointment</p>
                        </div>
                    </div>
                    <div class="flex items-center gap-3">
                        <div class="text-right">
                            <p class="text-sm text-gray-500 dark:text-gray-400">Starts in</p>
                            <p class="text-xl font-bold text-wellcare-600 dark:text-wellcare-400">45 min</p>
                        </div>
                        <button class="btn-primary">
                            <i class="mr-2 fas fa-video"></i>Join Call
                        </button>
                    </div>
                </div>
            </div>
        </div>
        
        {# Quick Actions #}
        <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
            <a href="/doctors" class="p-6 transition-shadow card hover:shadow-lg group">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 transition-colors rounded-xl bg-wellcare-100 dark:bg-wellcare-900/30 group-hover:bg-wellcare-200">
                        <i class="text-2xl fas fa-user-md text-wellcare-600"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-white">Find a Doctor</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Book a new appointment</p>
                    </div>
                </div>
            </a>
            
            <a href="#" class="p-6 transition-shadow card hover:shadow-lg group">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 transition-colors bg-green-100 rounded-xl dark:bg-green-900/30 group-hover:bg-green-200">
                        <i class="text-2xl text-green-600 fas fa-file-medical"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-white">Medical Records</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">View your history</p>
                    </div>
                </div>
            </a>
            
            <a href="#" class="p-6 transition-shadow card hover:shadow-lg group">
                <div class="flex items-center gap-4">
                    <div class="flex items-center justify-center w-12 h-12 transition-colors bg-blue-100 rounded-xl dark:bg-blue-900/30 group-hover:bg-blue-200">
                        <i class="text-2xl text-blue-600 fas fa-headset"></i>
                    </div>
                    <div>
                        <h3 class="font-semibold text-gray-900 dark:text-white">Support</h3>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Get help</p>
                    </div>
                </div>
            </a>
        </div>
    </div>
    
    {# Cancel Modal #}
    <div 
        x-show="showCancelModal" 
        style="display: none;"
        class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-gray-900/50 backdrop-blur-sm"
        x-transition:enter="transition ease-out duration-300" 
        x-transition:enter-start="opacity-0" 
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-200" 
        x-transition:leave-start="opacity-100" 
        x-transition:leave-end="opacity-0"
    >
        <div 
            class="w-full max-w-md p-6 bg-white shadow-xl dark:bg-gray-800 rounded-2xl"
            @click.away="showCancelModal = false"
            x-transition:enter="transition ease-out duration-300" 
            x-transition:enter-start="opacity-0 scale-95" 
            x-transition:enter-end="opacity-100 scale-100"
        >
            <h3 class="mb-2 text-xl font-semibold text-gray-900 dark:text-white">Cancel Appointment</h3>
            <p class="mb-4 text-gray-600 dark:text-gray-400">Are you sure you want to cancel this appointment?</p>
            
            <div class="mb-4">
                <label class="form-label">Cancellation Reason</label>
                <select x-model="cancellationReason" class="input">
                    <option value="">Select a reason</option>
                    <option value="medical">Medical emergency</option>
                    <option value="schedule">Schedule conflict</option>
                    <option value="travel">Travel issues</option>
                    <option value="other">Other</option>
                </select>
            </div>
            
            <div x-show="cancellationReason === 'medical'" class="p-3 mb-4 rounded-lg bg-green-50 dark:bg-green-900/20">
                <p class="text-sm text-green-700 dark:text-green-400">
                    <i class="mr-1 fas fa-info-circle"></i> Medical emergencies are exempt from cancellation fees.
                </p>
            </div>
            
            <div class="flex gap-3">
                <button @click="showCancelModal = false" class="flex-1 btn-outline">Keep Appointment</button>
                <button @click="confirmCancel()" class="flex-1 btn-danger">Cancel Appointment</button>
            </div>
        </div>
    </div>
    
    {# Review Modal #}
    <div 
        x-show="showReviewModal" 
        style="display: none;"
        class="fixed inset-0 z-50 flex items-center justify-center p-4 bg-gray-900/50 backdrop-blur-sm"
        x-transition:enter="transition ease-out duration-300" 
        x-transition:enter-start="opacity-0" 
        x-transition:enter-end="opacity-100"
    >
        <div 
            class="w-full max-w-md p-6 bg-white shadow-xl dark:bg-gray-800 rounded-2xl"
            @click.away="showReviewModal = false"
        >
            <h3 class="mb-2 text-xl font-semibold text-gray-900 dark:text-white">Rate Your Experience</h3>
            <p class="mb-4 text-gray-600 dark:text-gray-400">How was your appointment with <span x-text="reviewDoctorName"></span>?</p>
            
            <div class="flex justify-center gap-2 mb-4">
                <template x-for="i in 5" :key="i">
                    <button @click="reviewRating = i" class="text-3xl transition-colors" :class="i <= reviewRating ? 'text-yellow-400' : 'text-gray-300 dark:text-gray-600'">
                        <i :class="i <= reviewRating ? 'fas fa-star' : 'far fa-star'"></i>
                    </button>
                </template>
            </div>
            
            <div class="mb-4">
                <label class="form-label">Your Review</label>
                <textarea x-model="reviewText" rows="3" class="input" placeholder="Share your experience..."></textarea>
            </div>
            
            <div class="flex gap-3">
                <button @click="showReviewModal = false" class="flex-1 btn-outline">Skip</button>
                <button @click="submitReview()" class="flex-1 btn-primary">Submit Review</button>
            </div>
        </div>
    </div>
</div>

<script>
function patientDashboard() {
    return {
        activeTab: 'upcoming',
        showCancelModal: false,
        showReviewModal: false,
        cancellationReason: '',
        reviewRating: 0,
        reviewText: '',
        reviewDoctorName: '',
        selectedAppointment: null,
        hasUpcomingVideoCall: true,
        
        upcomingAppointments: [
            {
                id: 1,
                doctorName: 'Ahmed Ben Ali',
                specialty: 'Cardiologist',
                month: 'Feb',
                day: '03',
                weekday: 'Mon',
                time: '10:00 AM',
                duration: '45 min',
                type: 'in-person',
                location: '123 Avenue Habib Bourguiba, Tunis',
                status: 'confirmed',
                canJoin: false,
