        ],
        
        init() {
            this.selectedDate = this.availableDates[0];
            this.selectedTime = this.availableTimes[0];
            
            const saved = localStorage.getItem('favoriteDoctor_1');
            if (saved) {
                this.isFavorite = JSON.parse(saved);
            }
        },
        
        toggleFavorite() {
            this.isFavorite = !this.isFavorite;
            localStorage.setItem('favoriteDoctor_1', JSON.stringify(this.isFavorite));
        },
        
        getPrice() {
            const prices = {
                'in-person': 120,
                'video': 90,
                'phone': 70
            };
            return prices[this.selectedType] || 120;
        }
    }
