{% extends 'layouts/app.html.twig' %}

{% block title %}Booking Confirmed - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('appointment') }}
{% endblock %}

{% block body %}
<div class="min-h-screen py-12 bg-gray-50 dark:bg-gray-900" x-data="confirmation()" x-init="init()">
    <div class="max-w-3xl container-wellcare">
        
        {# Success Animation #}
        <div class="mb-8 text-center">
            <div class="inline-flex items-center justify-center w-24 h-24 mb-4 bg-green-100 rounded-full dark:bg-green-900/30 animate-bounce">
                <i class="text-4xl text-green-500 fas fa-check"></i>
            </div>
            <h1 class="mb-2 text-2xl font-bold text-gray-900 lg:text-3xl dark:text-white">Booking Confirmed!</h1>
            <p class="text-gray-600 dark:text-gray-400">Your appointment has been successfully scheduled</p>
        </div>
        
        {# Confirmation Card #}
        <div class="mb-6 card">
            <div class="p-6 lg:p-8">
                {# Appointment ID #}
                <div class="flex items-center justify-between pb-6 mb-6 border-b border-gray-200 dark:border-gray-700">
                    <div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">Appointment ID</p>
                        <p class="font-mono text-lg font-semibold text-gray-900 dark:text-white">#WC-2024-034567</p>
                    </div>
                    <span class="badge-success px-3 py-1.5">
                        <i class="mr-1 fas fa-check-circle"></i> Confirmed
                    </span>
                </div>
                
                {# Doctor Info #}
                <div class="flex items-start gap-4 mb-6">
                    <div class="flex items-center justify-center flex-shrink-0 w-20 h-20 rounded-xl bg-wellcare-100 dark:bg-wellcare-800">
                        <i class="text-3xl fas fa-user-md text-wellcare-600"></i>
                    </div>
                    <div class="flex-1">
                        <h2 class="text-xl font-semibold text-gray-900 dark:text-white">Dr. Ahmed Ben Ali</h2>
                        <p class="text-wellcare-600 dark:text-wellcare-400">Cardiologist</p>
                        <div class="flex items-center gap-4 mt-2 text-sm text-gray-600 dark:text-gray-400">
                            <span><i class="mr-1 text-yellow-400 fas fa-star"></i> 4.8 (127 reviews)</span>
                            <span><i class="mr-1 fas fa-map-marker-alt"></i> Tunis</span>
                        </div>
                    </div>
                </div>
                
                {# Appointment Details #}
                <div class="p-6 mb-6 bg-wellcare-50 dark:bg-wellcare-900/20 rounded-xl">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">Appointment Details</h3>
                    
                    <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-10 h-10 bg-white rounded-lg dark:bg-gray-800">
                                <i class="fas fa-calendar-alt text-wellcare-500"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Date</p>
                                <p class="font-medium text-gray-900 dark:text-white">Monday, February 3, 2025</p>
                            </div>
                        </div>
                        
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-10 h-10 bg-white rounded-lg dark:bg-gray-800">
                                <i class="fas fa-clock text-wellcare-500"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Time</p>
                                <p class="font-medium text-gray-900 dark:text-white">10:00 AM</p>
                            </div>
                        </div>
                        
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-10 h-10 bg-white rounded-lg dark:bg-gray-800">
                                <i class="fas fa-hospital text-wellcare-500"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Type</p>
                                <p class="font-medium text-gray-900 dark:text-white">In-Person Consultation</p>
                            </div>
                        </div>
                        
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-10 h-10 bg-white rounded-lg dark:bg-gray-800">
                                <i class="fas fa-hourglass-half text-wellcare-500"></i>
                            </div>
                            <div>
                                <p class="text-sm text-gray-500 dark:text-gray-400">Duration</p>
                                <p class="font-medium text-gray-900 dark:text-white">45 minutes</p>
                            </div>
                        </div>
                    </div>
                </div>
                
                {# Location / Video Link #}
                <div class="p-4 mb-6 border border-gray-200 dark:border-gray-700 rounded-xl">
                    <div class="flex items-start gap-3">
                        <div class="flex items-center justify-center flex-shrink-0 w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                            <i class="fas fa-map-marker-alt text-wellcare-600"></i>
                        </div>
                        <div class="flex-1">
                            <h4 class="font-medium text-gray-900 dark:text-white">Clinic Location</h4>
                            <p class="text-gray-600 dark:text-gray-400">123 Avenue Habib Bourguiba, Tunis 1000</p>
                            <div class="flex gap-3 mt-2">
                                <a href="#" class="text-sm text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400">
                                    <i class="mr-1 fas fa-directions"></i> Get Directions
                                </a>
                                <a href="#" class="text-sm text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400">
                                    <i class="mr-1 fas fa-phone"></i> +216 71 123 456
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                
                {# Payment Summary #}
                <div class="pt-6 border-t border-gray-200 dark:border-gray-700">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">Payment Summary</h3>
                    <div class="space-y-2">
                        <div class="flex justify-between">
                            <span class="text-gray-600 dark:text-gray-400">Consultation Fee</span>
                            <span class="text-gray-900 dark:text-white">120 TND</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-gray-600 dark:text-gray-400">Platform Fee</span>
                            <span class="text-gray-900 dark:text-white">5 TND</span>
                        </div>
                        <div class="flex justify-between pt-2 border-t border-gray-200 dark:border-gray-700">
                            <span class="font-semibold text-gray-900 dark:text-white">Total Paid</span>
                            <span class="text-xl font-bold text-wellcare-600 dark:text-wellcare-400">125 TND</span>
                        </div>
                    </div>
                    <div class="p-3 mt-4 rounded-lg bg-green-50 dark:bg-green-900/20">
                        <div class="flex items-center gap-2 text-green-700 dark:text-green-400">
                            <i class="fas fa-check-circle"></i>
                            <span class="text-sm font-medium">Payment successful - Paid via Credit Card</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        {# Preparation Checklist #}
        <div class="mb-6 card">
            <div class="p-6">
                <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-clipboard-list text-wellcare-500"></i>Preparation Checklist
                </h3>
                <div class="space-y-3">
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" class="w-5 h-5 mt-0.5 text-wellcare-600 border-gray-300 rounded focus:ring-wellcare-500">
                        <span class="text-gray-700 dark:text-gray-300">Bring your ID card or passport</span>
                    </label>
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" class="w-5 h-5 mt-0.5 text-wellcare-600 border-gray-300 rounded focus:ring-wellcare-500">
                        <span class="text-gray-700 dark:text-gray-300">Bring previous medical reports or test results</span>
                    </label>
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" class="w-5 h-5 mt-0.5 text-wellcare-600 border-gray-300 rounded focus:ring-wellcare-500">
                        <span class="text-gray-700 dark:text-gray-300">List of current medications</span>
                    </label>
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" class="w-5 h-5 mt-0.5 text-wellcare-600 border-gray-300 rounded focus:ring-wellcare-500">
                        <span class="text-gray-700 dark:text-gray-300">Insurance card (if applicable)</span>
                    </label>
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input type="checkbox" class="w-5 h-5 mt-0.5 text-wellcare-600 border-gray-300 rounded focus:ring-wellcare-500">
                        <span class="text-gray-700 dark:text-gray-300">Arrive 15 minutes before your appointment</span>
                    </label>
                </div>
            </div>
        </div>
        
        {# Add to Calendar #}
        <div class="mb-6 card">
            <div class="p-6">
                <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-calendar-plus text-wellcare-500"></i>Add to Calendar
                </h3>
                <div class="flex flex-wrap gap-3">
                    <a href="#" class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800">
                        <i class="text-red-500 fab fa-google"></i>
                        <span class="text-gray-700 dark:text-gray-300">Google Calendar</span>
                    </a>
                    <a href="#" class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800">
                        <i class="text-gray-800 fab fa-apple dark:text-gray-200"></i>
                        <span class="text-gray-700 dark:text-gray-300">Apple Calendar</span>
                    </a>
                    <a href="#" class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800">
                        <i class="text-blue-500 fab fa-microsoft"></i>
                        <span class="text-gray-700 dark:text-gray-300">Outlook</span>
                    </a>
                    <button @click="downloadICS()" class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800">
                        <i class="fas fa-download text-wellcare-500"></i>
                        <span class="text-gray-700 dark:text-gray-300">Download .ics</span>
                    </button>
                </div>
            </div>
        </div>
        
        {# Share & Actions #}
        <div class="mb-6 card">
            <div class="p-6">
                <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-share-alt text-wellcare-500"></i>Share Appointment
                </h3>
                <div class="flex flex-wrap gap-3">
                    <button @click="shareVia('whatsapp')" class="flex items-center gap-2 px-4 py-2 text-white transition-colors bg-green-500 rounded-lg hover:bg-green-600">
                        <i class="fab fa-whatsapp"></i> WhatsApp
                    </button>
                    <button @click="shareVia('email')" class="flex items-center gap-2 px-4 py-2 text-white transition-colors bg-gray-600 rounded-lg hover:bg-gray-700">
                        <i class="fas fa-envelope"></i> Email
                    </button>
                    <button @click="copyDetails()" class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-800">
                        <i class="fas fa-copy"></i> Copy Details
                    </button>
                </div>
            </div>
        </div>
        
        {# Important Information #}
        <div class="grid grid-cols-1 gap-6 mb-6 md:grid-cols-2">
            <div class="card">
                <div class="p-6">
                    <h3 class="mb-3 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 text-blue-500 fas fa-info-circle"></i>Need to Reschedule?
                    </h3>
                    <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">
                        You can reschedule or cancel your appointment up to 24 hours before the scheduled time at no cost.
                    </p>
                    <a href="/appointment/dashboard" class="text-sm font-medium text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400">
                        Manage Appointment <i class="ml-1 fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
            
            <div class="card">
                <div class="p-6">
                    <h3 class="mb-3 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-question-circle text-wellcare-500"></i>Have Questions?
                    </h3>
                    <p class="mb-4 text-sm text-gray-600 dark:text-gray-400">
                        Our support team is available 24/7 to assist you with any questions about your appointment.
                    </p>
                    <a href="#" class="text-sm font-medium text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400">
                        Contact Support <i class="ml-1 fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
        
        {# Action Buttons #}
        <div class="flex flex-col gap-4 sm:flex-row">
            <a href="/appointment/dashboard" class="flex-1 text-center btn-primary">
                <i class="mr-2 fas fa-calendar-alt"></i>View My Appointments
            </a>
            <a href="/doctors" class="flex-1 text-center btn-outline">
                <i class="mr-2 fas fa-search"></i>Book Another Appointment
            </a>
        </div>
        
        {# Confirmation Email Notice #}
        <div class="mt-8 text-center">
            <p class="text-sm text-gray-500 dark:text-gray-400">
                <i class="mr-1 fas fa-envelope"></i> A confirmation email has been sent to <strong>john.doe@example.com</strong>
            </p>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                <i class="mr-1 fas fa-sms"></i> An SMS confirmation has been sent to <strong>+216 12 345 678</strong>
            </p>
        </div>
    </div>
</div>

<script>
function confirmation() {
    return {
        init() {
            // Any initialization logic
        },
        
        downloadICS() {
            // Generate and download .ics file
            const event = {
                title: 'Doctor Appointment - Dr. Ahmed Ben Ali',
                start: '20250203T100000',
                end: '20250203T104500',
                location: '123 Avenue Habib Bourguiba, Tunis 1000',
                description: 'Cardiology consultation with Dr. Ahmed Ben Ali'
            };
            
            const icsContent = `BEGIN:VCALENDAR
VERSION:2.0
BEGIN:VEVENT
DTSTART:${event.start}
DTEND:${event.end}
SUMMARY:${event.title}
LOCATION:${event.location}
DESCRIPTION:${event.description}
END:VEVENT
END:VCALENDAR`;
            
            const blob = new Blob([icsContent], { type: 'text/calendar' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'appointment.ics';
            a.click();
        },
        
        shareVia(method) {
            const details = `Appointment with Dr. Ahmed Ben Ali on Monday, February 3, 2025 at 10:00 AM`;
            
            if (method === 'whatsapp') {
                window.open(`https://wa.me/?text=${encodeURIComponent(details)}`, '_blank');
            } else if (method === 'email') {
                window.open(`mailto:?subject=My Doctor Appointment&body=${encodeURIComponent(details)}`, '_blank');
            }
        },
        
        copyDetails() {
            const details = `Appointment Confirmation
Doctor: Dr. Ahmed Ben Ali
Specialty: Cardiologist
Date: Monday, February 3, 2025
Time: 10:00 AM
Location: 123 Avenue Habib Bourguiba, Tunis 1000
Appointment ID: #WC-2024-034567`;
            
            navigator.clipboard.writeText(details).then(() => {
                alert('Appointment details copied to clipboard!');
            });
        }
    }
}
</script>
{% endblock %}