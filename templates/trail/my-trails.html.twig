{% extends 'layouts/app.html.twig' %}

{% block title %}My Trails - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('trail-css') }}
{% endblock %}

{% block body %}
{# Page Header #}
<div class="py-4 mb-4 -mx-4 -mt-4 bg-gradient-to-r from-wellcare-500 to-wellcare-light-500">
    <div class="px-4 mx-auto">
        <div class="flex flex-col items-start justify-between md:flex-row md:items-center">
            <div>
                <h1 class="mb-1 text-xl font-bold text-white font-display">
                    <i class="mr-2 fa-solid fa-route"></i>My Trails
                </h1>
                <p class="text-sm text-white/80">Manage and track your created trails</p>
            </div>
            <div class="mt-3 md:mt-0">
                <a href="/trail/create" class="px-3 py-1.5 text-sm transition bg-white rounded-lg text-wellcare-600 hover:bg-gray-100">
                    <i class="mr-1 fa-solid fa-plus"></i>Create New Trail
                </a>
            </div>
        </div>
    </div>
</div>

{# Main Content #}
<div class="px-4 mx-auto">
    <!-- Stats Overview -->
    <div class="grid grid-cols-2 gap-3 mb-6 md:grid-cols-4">
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Total Trails</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">8</p>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                    <i class="text-lg fa-solid fa-route text-wellcare-500"></i>
                </div>
            </div>
        </div>
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Published</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">6</p>
                </div>
                <div class="flex items-center justify-center w-10 h-10 bg-green-100 rounded-full dark:bg-green-900/30">
                    <i class="text-lg text-green-500 fa-solid fa-check"></i>
                </div>
            </div>
        </div>
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Total Views</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">1.2k</p>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-full bg-sky-100 dark:bg-sky-900/30">
                    <i class="text-lg fa-solid fa-eye text-sky-500"></i>
                </div>
            </div>
        </div>
        <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">Avg. Rating</p>
                    <p class="text-xl font-bold text-gray-900 dark:text-white">4.7</p>
                </div>
                <div class="flex items-center justify-center w-10 h-10 rounded-full bg-amber-100 dark:bg-amber-900/30">
                    <i class="text-lg fa-solid fa-star text-amber-500"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- View Toggle & Filter -->
    <div class="flex flex-col gap-3 mb-4 sm:flex-row sm:items-center sm:justify-between">
        <div class="flex items-center gap-2">
            <div class="flex p-1 bg-gray-100 rounded-lg dark:bg-gray-800">
                <button @click="viewMode = 'grid'" 
                    class="p-1.5 rounded-md transition"
                    :class="viewMode === 'grid' ? 'bg-white dark:bg-gray-700 shadow-sm text-wellcare-500' : 'text-gray-500 hover:text-gray-700'">
                    <i class="fa-solid fa-grid-2"></i>
                </button>
                <button @click="viewMode = 'list'" 
                    class="p-1.5 rounded-md transition"
                    :class="viewMode === 'list' ? 'bg-white dark:bg-gray-700 shadow-sm text-wellcare-500' : 'text-gray-500 hover:text-gray-700'">
                    <i class="fa-solid fa-list"></i>
                </button>
            </div>
            <select class="py-1.5 px-3 text-sm border border-gray-200 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                <option value="all">All Trails</option>
                <option value="published">Published</option>
                <option value="draft">Drafts</option>
                <option value="archived">Archived</option>
            </select>
        </div>
        <div class="relative">
            <input type="text" placeholder="Search trails..." 
                class="py-1.5 pl-8 pr-3 text-sm border border-gray-200 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
            <i class="absolute left-2.5 top-1/2 transform -translate-y-1/2 text-gray-400 fa-solid fa-search"></i>
        </div>
    </div>

    <!-- Trails Grid -->
    <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
        <!-- Trail Card 1 -->
        <div class="overflow-hidden bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="relative h-36">
                <img src="https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=400&h=200&fit=crop" alt="Forest Trail" class="object-cover w-full h-full">
                <div class="absolute top-2 right-2">
                    <span class="px-2 py-0.5 text-xs font-medium bg-green-500 text-white rounded-full">Published</span>
                </div>
            </div>
            <div class="p-4">
                <h3 class="mb-1 font-semibold text-gray-900 dark:text-white">Forest Wellness Path</h3>
                <p class="mb-3 text-xs text-gray-500"><i class="mr-1 fa-solid fa-location-dot"></i>Central Park, Downtown</p>
                
                <div class="flex items-center gap-4 mb-3 text-xs text-gray-500">
                    <span><i class="mr-1 fa-solid fa-ruler"></i>5.2 km</span>
                    <span><i class="mr-1 fa-solid fa-eye"></i>234</span>
                    <span><i class="mr-1 fa-solid fa-star text-amber-400"></i>4.9</span>
                </div>

                <div class="flex gap-2">
                    <a href="/trail/detail" class="flex-1 px-3 py-1.5 text-xs font-medium text-center text-wellcare-600 bg-wellcare-50 dark:bg-wellcare-900/30 dark:text-wellcare-400 rounded-lg hover:bg-wellcare-100">
                        <i class="mr-1 fa-solid fa-eye"></i>View
                    </a>
                    <button class="px-3 py-1.5 text-xs font-medium text-gray-600 bg-gray-100 dark:bg-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">
                        <i class="fa-solid fa-pen"></i>
                    </button>
                    <button class="px-3 py-1.5 text-xs font-medium text-gray-600 bg-gray-100 dark:bg-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">
                        <i class="fa-solid fa-archive"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Trail Card 2 -->
        <div class="overflow-hidden bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="relative h-36">
                <img src="https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=400&h=200&fit=crop" alt="Mountain Trail" class="object-cover w-full h-full">
                <div class="absolute top-2 right-2">
                    <span class="px-2 py-0.5 text-xs font-medium bg-green-500 text-white rounded-full">Published</span>
                </div>
            </div>
            <div class="p-4">
                <h3 class="mb-1 font-semibold text-gray-900 dark:text-white">Summit View Trail</h3>
                <p class="mb-3 text-xs text-gray-500"><i class="mr-1 fa-solid fa-location-dot"></i>Mountain Ridge, North</p>
                
                <div class="flex items-center gap-4 mb-3 text-xs text-gray-500">
                    <span><i class="mr-1 fa-solid fa-ruler"></i>8.4 km</span>
                    <span><i class="mr-1 fa-solid fa-eye"></i>189</span>
                    <span><i class="mr-1 fa-solid fa-star text-amber-400"></i>4.7</span>
                </div>

                <div class="flex gap-2">
                    <a href="/trail/detail" class="flex-1 px-3 py-1.5 text-xs font-medium text-center text-wellcare-600 bg-wellcare-50 dark:bg-wellcare-900/30 dark:text-wellcare-400 rounded-lg hover:bg-wellcare-100">
                        <i class="mr-1 fa-solid fa-eye"></i>View
                    </a>
                    <button class="px-3 py-1.5 text-xs font-medium text-gray-600 bg-gray-100 dark:bg-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">
                        <i class="fa-solid fa-pen"></i>
                    </button>
                    <button class="px-3 py-1.5 text-xs font-medium text-gray-600 bg-gray-100 dark:bg-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">
                        <i class="fa-solid fa-archive"></i>
                    </button>
                </div>
            </div>
        </div>

        <!-- Draft Trail Card -->
        <div class="overflow-hidden bg-white border border-gray-100 shadow-sm opacity-75 dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <div class="relative bg-gray-200 h-36 dark:bg-gray-700">
                <div class="absolute inset-0 flex items-center justify-center">
                    <i class="text-3xl text-gray-400 fa-solid fa-image"></i>
                </div>
                <div class="absolute top-2 right-2">
                    <span class="px-2 py-0.5 text-xs font-medium bg-amber-500 text-white rounded-full">Draft</span>
                </div>
            </div>
            <div class="p-4">
                <h3 class="mb-1 font-semibold text-gray-900 dark:text-white">Hidden Valley Trail</h3>
                <p class="mb-3 text-xs text-gray-500"><i class="mr-1 fa-solid fa-location-dot"></i>Valley Road, East</p>
                
                <div class="flex items-center gap-4 mb-3 text-xs text-gray-500">
                    <span><i class="mr-1 fa-solid fa-ruler"></i>6.8 km</span>
                    <span><i class="mr-1 fa-solid fa-eye"></i>--</span>
                    <span><i class="mr-1 text-gray-300 fa-solid fa-star"></i>--</span>
                </div>

                <div class="flex gap-2">
                    <button class="flex-1 px-3 py-1.5 text-xs font-medium text-center text-wellcare-600 bg-wellcare-50 dark:bg-wellcare-900/30 dark:text-wellcare-400 rounded-lg hover:bg-wellcare-100">
                        <i class="mr-1 fa-solid fa-pen"></i>Continue
                    </button>
                    <button class="px-3 py-1.5 text-xs font-medium text-gray-600 bg-gray-100 dark:bg-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-200 dark:hover:bg-gray-600">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
function myTrails() {
    return {
        viewMode: 'grid'
    }
}
</script>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
