<div class="elevation-profile" x-data="elevationProfile()" x-init="initChart()">
    <!-- Chart Container -->
    <div class="elevation-chart" x-show="chartReady" style="height: 200px;">
        <canvas id="elevationChart"></canvas>
    </div>
    
    <!-- Loading State -->
    <div class="elevation-loading" x-show="!chartReady" style="height: 200px; display: flex; align-items: center; justify-content: center;">
        <div style="text-align: center; color: #6b7280;">
            <span style="font-size: 2rem;">üìà</span>
            <p>Loading elevation data...</p>
        </div>
    </div>
    
    <!-- Elevation Stats -->
    <div class="elevation-stats">
        <div class="stat-card">
            <div class="stat-icon">‚¨ÜÔ∏è</div>
            <div class="stat-content">
                <div class="stat-value" x-text="maxElevation + ' m'"></div>
                <div class="stat-label">Highest Point</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">‚¨áÔ∏è</div>
            <div class="stat-content">
                <div class="stat-value" x-text="minElevation + ' m'"></div>
                <div class="stat-label">Lowest Point</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">üìä</div>
            <div class="stat-content">
                <div class="stat-value" x-text="totalAscent + ' m'"></div>
                <div class="stat-label">Total Ascent</div>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon">üìâ</div>
            <div class="stat-content">
                <div class="stat-value" x-text="totalDescent + ' m'"></div>
                <div class="stat-label">Total Descent</div>
            </div>
        </div>
    </div>
    
    <!-- Interactive Elevation Points -->
    <div class="elevation-points" x-show="showPoints">
        <h4 class="points-title">üìç Key Elevation Points</h4>
        <div class="points-list">
            <template x-for="(point, index) in elevationPoints" :key="index">
                <div class="elevation-point" @click="focusPoint(index)">
                    <div class="point-marker" :style="'background: ' + getPointColor(point.type)">
                        <span x-text="point.icon"></span>
                    </div>
                    <div class="point-info">
                        <div class="point-name" x-text="point.name"></div>
                        <div class="point-elevation" x-text="point.elevation + ' m'"></div>
                        <div class="point-distance" x-text="point.distance + ' km from start'"></div>
                    </div>
                </div>
            </template>
        </div>
    </div>
    
    <!-- Chart Controls -->
    <div class="chart-controls">
        <button class="chart-btn" @click="toggleFullscreen()" title="Fullscreen">
            <span x-text="isFullscreen ? '‚õ∂' : '‚õ∂'"></span>
        </button>
        <button class="chart-btn" @click="exportData()" title="Export Data">
            üì•
        </button>
        <button class="chart-btn" @click="togglePoints()" :title="showPoints ? 'Hide Points' : 'Show Points'">
            üìç
        </button>
    </div>
</div>

