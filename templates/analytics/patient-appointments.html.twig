{# templates/analytics/patient-appointments.html.twig #}
{# Patient Appointment Analytics Dashboard #}

{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Analyses des Rendez-vous'|trans }} - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/analytics.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/chart.js">
{% endblock %}

{% block body %}
<div class="min-h-screen p-6 bg-gray-50 dark:bg-gray-950" x-data="patientAppointmentAnalytics()" x-init="init()">
    
    {# Header #}
    <div class="mx-auto mb-6 max-w-7xl">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-chart-line text-wellcare-500"></i>
                    {{ "Analyses des Rendez-vous"|trans }}
                </h1>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                    {{ "Statistiques et analyses des consultations"|trans }}
                </p>
            </div>
            
            <div class="flex items-center gap-3">
                <select 
                    x-model="dateRange"
                    @change="loadData()"
                    class="px-4 py-2 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-800 dark:text-white"
                >
                    <option value="7d">{{ "7 derniers jours"|trans }}</option>
                    <option value="30d">{{ "30 derniers jours"|trans }}</option>
                    <option value="90d">{{ "3 derniers mois"|trans }}</option>
                    <option value="1y">{{ "Année en cours"|trans }}</option>
                </select>
                
                <button 
                    @click="exportReport()"
                    class="px-4 py-2 text-sm font-medium text-gray-700 transition-colors bg-white border border-gray-300 rounded-lg dark:text-gray-300 dark:bg-gray-800 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700"
                >
                    <i class="mr-2 fa-solid fa-download"></i>
                    {{ "Exporter"|trans }}
                </button>
                
                <button 
                    @click="printReport()"
                    class="px-4 py-2 text-sm font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600"
                >
                    <i class="mr-2 fa-solid fa-print"></i>
                    {{ "Imprimer"|trans }}
                </button>
            </div>
        </div>
    </div>
    
    {# Summary Cards #}
    <div class="grid grid-cols-1 gap-6 mx-auto mb-6 max-w-7xl md:grid-cols-2 lg:grid-cols-4">
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ "Total Rendez-vous"|trans }}</p>
                    <p class="mt-1 text-3xl font-bold text-gray-900 dark:text-white" x-text="summary.totalAppointments.toLocaleString()"></p>
                </div>
                <div class="flex items-center justify-center w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-xl">
                    <i class="text-xl text-blue-600 fa-solid fa-calendar-check dark:text-blue-400"></i>
                </div>
            </div>
            <div class="flex items-center gap-2 mt-4">
                <span class="text-sm text-emerald-600 dark:text-emerald-400">
                    <i class="fa-solid fa-arrow-up"></i> 12%
                </span>
                <span class="text-sm text-gray-500">{{ "vs période précédente"|trans }}</span>
            </div>
        </div>
        
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ "Taux de Présence"|trans }}</p>
                    <p class="mt-1 text-3xl font-bold text-gray-900 dark:text-white" x-text="summary.attendanceRate + '%'"></p>
                </div>
                <div class="flex items-center justify-center w-12 h-12 bg-emerald-100 dark:bg-emerald-900/30 rounded-xl">
                    <i class="text-xl fa-solid fa-user-check text-emerald-600 dark:text-emerald-400"></i>
                </div>
            </div>
            <div class="flex items-center gap-2 mt-4">
                <span class="text-sm text-emerald-600 dark:text-emerald-400">
                    <i class="fa-solid fa-arrow-up"></i> 3%
                </span>
                <span class="text-sm text-gray-500">{{ "amélioration"|trans }}</span>
            </div>
        </div>
        
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ "Taux d'Annulation"|trans }}</p>
                    <p class="mt-1 text-3xl font-bold text-gray-900 dark:text-white" x-text="summary.cancellationRate + '%'"></p>
                </div>
                <div class="flex items-center justify-center w-12 h-12 bg-amber-100 dark:bg-amber-900/30 rounded-xl">
                    <i class="text-xl fa-solid fa-calendar-xmark text-amber-600 dark:text-amber-400"></i>
                </div>
            </div>
            <div class="flex items-center gap-2 mt-4">
                <span class="text-sm text-red-600 dark:text-red-400">
                    <i class="fa-solid fa-arrow-up"></i> 2%
                </span>
                <span class="text-sm text-gray-500">{{ "à surveiller"|trans }}</span>
            </div>
        </div>
        
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm text-gray-500 dark:text-gray-400">{{ "Nouveaux Patients"|trans }}</p>
                    <p class="mt-1 text-3xl font-bold text-gray-900 dark:text-white" x-text="summary.newPatients.toLocaleString()"></p>
                </div>
                <div class="flex items-center justify-center w-12 h-12 bg-purple-100 dark:bg-purple-900/30 rounded-xl">
                    <i class="text-xl text-purple-600 fa-solid fa-user-plus dark:text-purple-400"></i>
                </div>
            </div>
            <div class="flex items-center gap-2 mt-4">
                <span class="text-sm text-emerald-600 dark:text-emerald-400">
                    <i class="fa-solid fa-arrow-up"></i> 8%
                </span>
                <span class="text-sm text-gray-500">{{ "croissance"|trans }}</span>
            </div>
        </div>
    </div>
    
    {# Charts Row #}
    <div class="grid grid-cols-1 gap-6 mx-auto mb-6 max-w-7xl lg:grid-cols-2">
        
        {# Appointments Trend Chart #}
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <div class="flex items-center justify-between mb-4">
                <h2 class="font-semibold text-gray-900 dark:text-white">{{ "Tendance des Rendez-vous"|trans }}</h2>
                <div class="flex items-center gap-2">
                    <button 
                        @click="chartPeriod = 'day'; loadData()"
                        class="px-3 py-1 text-xs font-medium transition-colors rounded-lg"
                        :class="chartPeriod === 'day' ? 'bg-wellcare-500 text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600'"
                    >
                        {{ "Jour"|trans }}
                    </button>
                    <button 
                        @click="chartPeriod = 'week'; loadData()"
                        class="px-3 py-1 text-xs font-medium transition-colors rounded-lg"
                        :class="chartPeriod === 'week' ? 'bg-wellcare-500 text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600'"
                    >
                        {{ "Semaine"|trans }}
                    </button>
                    <button 
                        @click="chartPeriod = 'month'; loadData()"
                        class="px-3 py-1 text-xs font-medium transition-colors rounded-lg"
                        :class="chartPeriod === 'month' ? 'bg-wellcare-500 text-white' : 'bg-gray-100 dark:bg-gray-800 text-gray-600'"
                    >
                        {{ "Mois"|trans }}
                    </button>
                </div>
            </div>
            <canvas id="appointmentsTrendChart" class="w-full h-64"></canvas>
        </div>
        
        {# Appointment Types Distribution #}
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <div class="flex items-center justify-between mb-4">
                <h2 class="font-semibold text-gray-900 dark:text-white">{{ "Types de Rendez-vous"|trans }}</h2>
            </div>
            <canvas id="appointmentTypesChart" class="w-full h-64"></canvas>
        </div>
    </div>
    
    {# Detailed Analysis #}
    <div class="grid grid-cols-1 gap-6 mx-auto mb-6 max-w-7xl lg:grid-cols-3">
        
        {# Peak Hours Heatmap #}
        <div class="p-6 bg-white border border-gray-200 lg:col-span-2 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <h2 class="mb-4 font-semibold text-gray-900 dark:text-white">{{ "Heures de Pointe"|trans }}</h2>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr>
                            <th class="py-2 text-xs font-medium text-left text-gray-500 uppercase"></th>
                            <template x-for="hour in hours" :key="hour">
                                <th class="py-2 text-xs font-medium text-center text-gray-500 uppercase" x-text="hour + 'h'"></th>
                            </template>
                        </tr>
                    </thead>
                    <tbody>
                        <template x-for="day in days" :key="day">
                            <tr>
                                <td class="py-2 text-xs font-medium text-gray-500" x-text="day"></td>
                                <template x-for="hour in hours" :key="hour">
                                    <td 
                                        class="p-1"
                                        :style="'background-color: ' + getHeatmapColor(day, hour)"
                                        @mouseenter="showHeatmapTooltip($event, day, hour)"
                                    >
                                        <div class="flex items-center justify-center h-8">
                                            <span 
                                                class="text-xs font-medium"
                                                :class="getHeatmapTextColor(day, hour)"
                                                x-text="getHeatmapValue(day, hour)"
                                            ></span>
                                        </div>
                                    </td>
                                </template>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>
            <div class="flex items-center justify-end gap-2 mt-4">
                <span class="text-xs text-gray-500">{{ "Moins"|trans }}</span>
                <div class="flex gap-0.5">
                    <div class="w-6 h-4 bg-emerald-100"></div>
                    <div class="w-6 h-4 bg-emerald-300"></div>
                    <div class="w-6 h-4 bg-emerald-500"></div>
                    <div class="w-6 h-4 bg-emerald-700"></div>
                    <div class="w-6 h-4 bg-emerald-900"></div>
                </div>
                <span class="text-xs text-gray-500">{{ "Plus"|trans }}</span>
            </div>
        </div>
        
        {# Doctor Performance #}
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <h2 class="mb-4 font-semibold text-gray-900 dark:text-white">{{ "Performance par Médecin"|trans }}</h2>
            <div class="space-y-4">
                <template x-for="doctor in doctorPerformance" :key="doctor.id">
                    <div class="flex items-center gap-4">
                        <img 
                            :src="'https://ui-avatars.com/api/?name=' + doctor.name + '&background=random'" 
                            :alt="doctor.name"
                            class="w-10 h-10 rounded-full"
                        >
                        <div class="flex-1">
                            <p class="text-sm font-medium text-gray-900 dark:text-white" x-text="doctor.name"></p>
                            <p class="text-xs text-gray-500" x-text="doctor.specialty"></p>
                        </div>
                        <div class="text-right">
                            <p class="font-semibold text-gray-900 dark:text-white" x-text="doctor.appointments"></p>
                            <p class="text-xs text-gray-500">{{ "consultations"|trans }}</p>
                        </div>
                    </div>
                    <div class="w-full h-2 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-800">
                        <div 
                            class="h-full rounded-full bg-wellcare-500"
                            :style="{ width: (doctor.appointments / maxDoctorAppointments * 100) + '%' }"
                        ></div>
                    </div>
                </template>
            </div>
        </div>
    </div>
    
    {# Additional Metrics #}
    <div class="grid grid-cols-1 gap-6 mx-auto max-w-7xl lg:grid-cols-3">
        
        {# No-Show Analysis #}
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <h2 class="mb-4 font-semibold text-gray-900 dark:text-white">{{ "Analyse des Absences"|trans }}</h2>
            <div class="space-y-4">
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600 dark:text-gray-400">{{ "Patients présents"|trans }}</span>
                    <span class="font-semibold text-emerald-600 dark:text-emerald-400" x-text="noShowStats.present + '%'"></span>
                </div>
                <div class="w-full h-3 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-800">
                    <div class="h-full rounded-full bg-emerald-500" :style="{ width: noShowStats.present + '%' }"></div>
                </div>
                
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600 dark:text-gray-400">{{ "Absentés"|trans }}</span>
                    <span class="font-semibold text-red-600 dark:text-red-400" x-text="noShowStats.noShow + '%'"></span>
                </div>
                <div class="w-full h-3 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-800">
                    <div class="h-full bg-red-500 rounded-full" :style="{ width: noShowStats.noShow + '%' }"></div>
                </div>
                
                <div class="flex items-center justify-between">
                    <span class="text-sm text-gray-600 dark:text-gray-400">{{ "Annulés"|trans }}</span>
                    <span class="font-semibold text-amber-600 dark:text-amber-400" x-text="noShowStats.cancelled + '%'"></span>
                </div>
                <div class="w-full h-3 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-800">
                    <div class="h-full rounded-full bg-amber-500" :style="{ width: noShowStats.cancelled + '%' }"></div>
                </div>
                
                <div class="pt-4 border-t border-gray-200 dark:border-gray-700">
                    <h3 class="mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">{{ "Motifs d'annulation"|trans }}</h3>
                    <div class="space-y-2">
                        <template x-for="reason in cancellationReasons" :key="reason.label">
                            <div class="flex items-center gap-2">
                                <span class="w-24 text-xs text-gray-500 truncate" x-text="reason.label"></span>
                                <div class="flex-1 h-2 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-800">
                                    <div class="h-full bg-gray-400 rounded-full" :style="{ width: reason.percentage + '%' }"></div>
                                </div>
                                <span class="w-8 text-xs text-right text-gray-500" x-text="reason.percentage + '%'"></span>
                            </div>
                        </template>
                    </div>
                </div>
            </div>
        </div>
        
        {# Appointment Duration Analysis #}
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <h2 class="mb-4 font-semibold text-gray-900 dark:text-white">{{ "Durée des Consultations"|trans }}</h2>
            <canvas id="durationChart" class="w-full h-48"></canvas>
            <div class="grid grid-cols-2 gap-4 mt-4">
                <div class="p-3 text-center rounded-lg bg-gray-50 dark:bg-gray-800">
                    <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="avgDuration + ' min'"></p>
                    <p class="text-xs text-gray-500">{{ "Durée Moyenne"|trans }}</p>
                </div>
                <div class="p-3 text-center rounded-lg bg-gray-50 dark:bg-gray-800">
                    <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="overTimePercentage + '%'"></p>
                    <p class="text-xs text-gray-500">{{ "Dépassements"|trans }}</p>
                </div>
            </div>
        </div>
        
        {# Specialty Distribution #}
        <div class="p-6 bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
            <h2 class="mb-4 font-semibold text-gray-900 dark:text-white">{{ "Répartition par Spécialité"|trans }}</h2>
            <canvas id="specialtyChart" class="w-full h-48"></canvas>
            <div class="mt-4 space-y-2">
                <template x-for="specialty in specialtyDistribution" :key="specialty.name">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <div class="w-3 h-3 rounded-full" :style="{ backgroundColor: specialty.color }"></div>
                            <span class="text-sm text-gray-600 dark:text-gray-400" x-text="specialty.name"></span>
                        </div>
                        <span class="text-sm font-medium text-gray-900 dark:text-white" x-text="specialty.percentage + '%'"></span>
                    </div>
                </template>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="{{ asset('build/analytics.js') }}"></script>
{% endblock %}
