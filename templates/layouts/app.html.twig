                            <span x-show="$store.theme.isDark" style="display: none;">
                                <svg class="w-4 h-4 text-wellcare-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
                                </svg>
                            </span>
                        </button>

                        {# Notifications #}
                        <button class="relative p-2 text-gray-500 transition-all duration-300 bg-white border border-gray-200 rounded-lg shadow-sm hover:bg-gray-50 hover:shadow-md hover:-translate-y-0.5 dark:border-gray-800 dark:bg-gray-950 dark:text-gray-400 dark:hover:bg-gray-900">
                            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                            </svg>
                            <span class="absolute w-2 h-2 bg-red-500 rounded-full top-1 right-1"></span>
                        </button>
                    </div>
                </div>
            </header>

            {# Page Content #}
            <main id="main-content" class="flex-1 p-4 overflow-y-auto sm:p-6 lg:p-8 page-content" tabindex="-1">
                {# Flash Messages #}
                {% for type, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="mb-4 p-4 rounded-lg flash-message flash-{{ type }}" style="background-color: {% if type == 'success' %}#dcfce7{% elseif type == 'error' %}#fee2e2{% elseif type == 'warning' %}#fef3c7{% else %}#dbeafe{% endif %}; border: 1px solid {% if type == 'success' %}#22c55e{% elseif type == 'error' %}#ef4444{% elseif type == 'warning' %}#f59e0b{% else %}#3b82f6{% endif %};" role="alert">
                            <div class="flex items-center gap-3">
                                <i class="fa-solid {% if type == 'success' %}fa-check-circle text-green-600{% elseif type == 'error' %}fa-exclamation-circle text-red-600{% elseif type == 'warning' %}fa-exclamation-triangle text-yellow-600{% else %}fa-info-circle text-blue-600{% endif %}"></i>
                                <p class="text-sm font-medium" style="color: {% if type == 'success' %}#166534{% elseif type == 'error' %}#991b1b{% elseif type == 'warning' %}#92400e{% else %}#1e40af{% endif %};">{{ message }}</p>
                            </div>
                        </div>
                    {% endfor %}
                {% endfor %}
                
                {% block body %}
                {% endblock %}
            </main>
        </div>
    </div>

    {# Sidebar State Management Script #}
    <script>
        function sidebarApp() {
            return {
                mobileOpen: false,
                collapsed: false,
                activePath: window.location.pathname,
                
                init() {
                    // Load collapsed state from localStorage
                    const savedState = localStorage.getItem('sidebarCollapsed');
                    if (savedState !== null) {
                        this.collapsed = savedState === 'true';
                    }
                    
                    // Close mobile menu on escape key
                    document.addEventListener('keydown', (e) => {
                        if (e.key === 'Escape') this.mobileOpen = false;
                    });
                    
                    // Watch for window resize to handle mobile/desktop transitions
                    window.addEventListener('resize', () => {
                        if (window.innerWidth >= 1024) {
                            this.mobileOpen = false;
                        }
                    });
                },
                
                toggleCollapsed() {
                    this.collapsed = !this.collapsed;
                    localStorage.setItem('sidebarCollapsed', this.collapsed);
                },
                
                isActive(path) {
                    return this.activePath === path;
                },
                
                isGroupActive(paths) {
                    return paths.some(path => this.activePath.startsWith(path));
                },
                
                setActive(path) {
                    this.activePath = path;
                    this.mobileOpen = false;
                }
            }
        }
    </script>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
