{% extends 'layouts/app.html.twig' %}

{% block title %}Gestion des patients - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8" x-data="patientList()" x-init="init()">
    <div class="px-4 mx-auto max-w-7xl">
        {# Header #}
        <div class="flex flex-col gap-4 mb-8 lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Patients</h1>
                <p class="mt-1 text-gray-500 dark:text-gray-400">Gestion et suivi des dossiers patients</p>
            </div>
            <div class="flex items-center gap-3">
                <button @click="exportPatients()" class="px-4 py-2 text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <i class="mr-2 fas fa-download"></i>Exporter
                </button>
                <button @click="showNewPatientModal = true" class="px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-plus"></i>Nouveau patient
                </button>
            </div>
        </div>

        {# Stats Summary #}
        <div class="grid grid-cols-2 gap-4 mb-6 lg:grid-cols-4">
            <div class="p-4 bg-white shadow dark:bg-gray-800 rounded-xl">
                <p class="text-sm text-gray-500">Total patients</p>
                <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="stats.total"></p>
            </div>
            <div class="p-4 bg-white shadow dark:bg-gray-800 rounded-xl">
                <p class="text-sm text-gray-500">Actifs</p>
                <p class="text-2xl font-bold text-green-500" x-text="stats.active"></p>
            </div>
            <div class="p-4 bg-white shadow dark:bg-gray-800 rounded-xl">
                <p class="text-sm text-gray-500">En attente</p>
                <p class="text-2xl font-bold text-amber-500" x-text="stats.pending"></p>
            </div>
            <div class="p-4 bg-white shadow dark:bg-gray-800 rounded-xl">
                <p class="text-sm text-gray-500">Nouveaux (30j)</p>
                <p class="text-2xl font-bold text-blue-500" x-text="stats.newThisMonth"></p>
            </div>
        </div>

        {# Filters #}
        <div class="p-4 mb-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <div class="flex flex-col gap-4 lg:flex-row">
                <div class="relative flex-1">
                    <input type="text" x-model="search" placeholder="Rechercher par nom, email, téléphone..."
                           class="w-full py-3 pl-10 pr-4 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                    <i class="absolute text-gray-400 transform -translate-y-1/2 fas fa-search left-3 top-1/2"></i>
                </div>
                <div class="flex flex-wrap gap-3">
                    <select x-model="filterStatus" class="px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <option value="">Tous statuts</option>
                        <option value="active">Actif</option>
                        <option value="pending">En attente</option>
                        <option value="inactive">Inactif</option>
                    </select>
                    <select x-model="filterGoal" class="px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <option value="">Tous objectifs</option>
                        <option value="weight-loss">Perte de poids</option>
                        <option value="weight-gain">Prise de masse</option>
                        <option value="diabetes">Diabète</option>
                        <option value="cardio">Cardiovasculaire</option>
                        <option value="general">Bien-être général</option>
                    </select>
                    <select x-model="sortBy" class="px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <option value="name">Trier par nom</option>
                        <option value="date">Date d'inscription</option>
                        <option value="progress">Progression</option>
                        <option value="lastVisit">Dernière visite</option>
                    </select>
                </div>
            </div>
        </div>

        {# Patient Grid #}
        <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
            <template x-for="patient in filteredPatients" :key="patient.id">
                <div class="p-6 transition-shadow bg-white shadow-lg cursor-pointer dark:bg-gray-800 rounded-2xl hover:shadow-xl"
                     @click="viewPatient(patient.id)">
                    {# Header #}
                    <div class="flex items-start justify-between mb-4">
                        <div class="flex items-center gap-3">
                            <div class="flex items-center justify-center w-12 h-12 bg-gray-200 rounded-full dark:bg-gray-600">
                                <span class="text-lg font-medium text-gray-600 dark:text-gray-300" x-text="patient.initials"></span>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 dark:text-white" x-text="patient.name"></h3>
                                <p class="text-sm text-gray-500" x-text="patient.age + ' ans • ' + patient.gender"></p>
                            </div>
                        </div>
                        <span class="px-2 py-1 text-xs font-medium rounded-full"
                              :class="patient.status === 'active' ? 'bg-green-100 text-green-700' : (patient.status === 'pending' ? 'bg-amber-100 text-amber-700' : 'bg-gray-100 text-gray-700')"
                              x-text="patient.statusDisplay"></span>
                    </div>

                    {# Goals #}
                    <div class="mb-4">
                        <p class="mb-1 text-sm text-gray-500">Objectif principal</p>
                        <p class="font-medium text-gray-900 dark:text-white" x-text="patient.goal"></p>
                    </div>

                    {# Progress #}
                    <div class="mb-4">
                        <div class="flex items-center justify-between mb-1 text-sm">
                            <span class="text-gray-500">Progression</span>
                            <span class="font-medium text-wellcare-500" x-text="patient.progress + '%'"></span>
                        </div>
                        <div class="h-2 overflow-hidden bg-gray-200 rounded-full dark:bg-gray-700">
                            <div class="h-full transition-all rounded-full bg-wellcare-500"
                                 :style="'width: ' + patient.progress + '%'"></div>
                        </div>
                    </div>

                    {# Stats Row #}
                    <div class="grid grid-cols-3 gap-2 mb-4 text-center">
                        <div class="p-2 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <p class="text-xs text-gray-500">IMC</p>
                            <p class="font-semibold text-gray-900 dark:text-white" x-text="patient.bmi"></p>
                        </div>
                        <div class="p-2 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <p class="text-xs text-gray-500">Consultations</p>
                            <p class="font-semibold text-gray-900 dark:text-white" x-text="patient.consultations"></p>
                        </div>
                        <div class="p-2 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <p class="text-xs text-gray-500">Jours actifs</p>
                            <p class="font-semibold text-gray-900 dark:text-white" x-text="patient.activeDays"></p>
                        </div>
                    </div>

                    {# Quick Actions #}
                    <div class="flex items-center justify-between pt-4 border-t border-gray-100 dark:border-gray-700">
                        <div class="flex items-center gap-2 text-sm text-gray-500">
                            <i class="fas fa-calendar"></i>
                            <span x-text="'Dernière visite: ' + patient.lastVisit"></span>
                        </div>
                        <div class="flex items-center gap-2">
                            <button @click.stop="messagePatient(patient.id)" class="p-2 text-gray-400 transition-colors hover:text-wellcare-500" title="Message">
                                <i class="fas fa-envelope"></i>
                            </button>
                            <button @click.stop="scheduleAppointment(patient.id)" class="p-2 text-gray-400 transition-colors hover:text-wellcare-500" title="Rendez-vous">
                                <i class="fas fa-calendar-plus"></i>
                            </button>
                            <button @click.stop="viewPlan(patient.id)" class="p-2 text-gray-400 transition-colors hover:text-wellcare-500" title="Voir le plan">
                                <i class="fas fa-clipboard-list"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </template>
        </div>

        {# Empty State #}
        <div x-show="filteredPatients.length === 0" class="py-12 text-center">
            <i class="mb-4 text-6xl text-gray-300 fas fa-users dark:text-gray-600"></i>
            <h3 class="mb-2 text-xl font-semibold text-gray-900 dark:text-white">Aucun patient trouvé</h3>
            <p class="text-gray-500 dark:text-gray-400">Essayez de modifier vos critères de recherche</p>
        </div>

        {# Pagination #}
        <div class="flex items-center justify-between mt-6">
            <p class="text-sm text-gray-500">Affichage de <span x-text="filteredPatients.length"></span> patients</p>
            <div class="flex items-center gap-2">
                <button class="px-3 py-1 text-gray-700 border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 disabled:opacity-50" disabled>
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="px-3 py-1 text-white rounded-lg bg-wellcare-500">1</button>
                <button class="px-3 py-1 text-gray-700 border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">2</button>
                <button class="px-3 py-1 text-gray-700 border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/nutrition.js') }}"></script>
{% endblock %}
