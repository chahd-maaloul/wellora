{% extends 'base.html.twig' %}

{% block title %}Communication - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8" x-data="nutritionistCommunication()" x-init="init()">
    <div class="px-4 mx-auto max-w-7xl">
        {# Header #}
        <div class="flex flex-col gap-4 mb-8 lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Communication</h1>
                <p class="mt-1 text-gray-500 dark:text-gray-400">Échangez avec vos patients et collaborez avec d'autres professionnels</p>
            </div>
            <div class="flex items-center gap-3">
                <button @click="showNewMessage = true" class="px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-plus"></i>Nouveau message
                </button>
            </div>
        </div>

        {# Tabs #}
        <div class="flex gap-2 mb-6">
            <button @click="activeTab = 'messages'"
                    class="px-4 py-2 transition-colors rounded-lg"
                    :class="activeTab === 'messages' ? 'bg-wellcare-500 text-white' : 'bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'">
                <i class="mr-2 fas fa-envelope"></i>Messages
                <span x-show="unreadMessages > 0" class="ml-2 px-2 py-0.5 rounded-full bg-red-500 text-white text-xs" x-text="unreadMessages"></span>
            </button>
            <button @click="activeTab = 'patients'"
                    class="px-4 py-2 transition-colors rounded-lg"
                    :class="activeTab === 'patients' ? 'bg-wellcare-500 text-white' : 'bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'">
                <i class="mr-2 fas fa-users"></i>Mes patients
            </button>
            <button @click="activeTab = 'requests'"
                    class="px-4 py-2 transition-colors rounded-lg"
                    :class="activeTab === 'requests' ? 'bg-wellcare-500 text-white' : 'bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700'">
                <i class="mr-2 fas fa-user-plus"></i>Demandes
                <span x-show="pendingRequests > 0" class="ml-2 px-2 py-0.5 rounded-full bg-amber-500 text-white text-xs" x-text="pendingRequests"></span>
            </button>
        </div>

        {# Messages Tab #}
        <div x-show="activeTab === 'messages'" class="grid grid-cols-1 gap-6 lg:grid-cols-3">
            {# Conversations List #}
            <div class="overflow-hidden bg-white shadow-lg lg:col-span-1 dark:bg-gray-800 rounded-2xl">
                <div class="p-4 border-b border-gray-200 dark:border-gray-700">
                    <div class="relative">
                        <input type="text" x-model="searchConversations" placeholder="Rechercher..."
                               class="w-full py-2 pl-10 pr-4 border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <i class="absolute text-gray-400 transform -translate-y-1/2 fas fa-search left-3 top-1/2"></i>
                    </div>
                </div>
                <div class="overflow-y-auto divide-y divide-gray-100 dark:divide-gray-700 max-h-96">
                    <template x-for="conversation in filteredConversations" :key="conversation.id">
                        <div @click="selectConversation(conversation)"
                             class="p-4 transition-colors cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700/50"
                             :class="{'bg-wellcare-50 dark:bg-wellcare-900/20': selectedConversation?.id === conversation.id}">
                            <div class="flex items-start gap-3">
                                <div class="flex items-center justify-center flex-shrink-0 w-10 h-10 rounded-full"
                                     :class="conversation.unread ? 'bg-wellcare-100 dark:bg-wellcare-900/30' : 'bg-gray-200 dark:bg-gray-600'">
                                    <span class="text-sm font-medium" :class="conversation.unread ? 'text-wellcare-600' : 'text-gray-600 dark:text-gray-300'" x-text="conversation.initials"></span>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <div class="flex items-center justify-between">
                                        <h4 class="font-medium text-gray-900 truncate dark:text-white" x-text="conversation.patientName"></h4>
                                        <span class="text-xs text-gray-400" x-text="conversation.time"></span>
                                    </div>
                                    <p class="text-sm text-gray-500 truncate" x-text="conversation.lastMessage"></p>
                                </div>
                                <div x-show="conversation.unread" class="flex-shrink-0 w-2 h-2 rounded-full bg-wellcare-500"></div>
                            </div>
                        </div>
                    </template>
                </div>
            </div>

            {# Chat Area #}
            <div class="flex flex-col bg-white shadow-lg lg:col-span-2 dark:bg-gray-800 rounded-2xl">
                <template x-if="selectedConversation">
                    <div class="flex flex-col h-full">
                        {# Chat Header #}
                        <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-700">
                            <div class="flex items-center gap-3">
                                <div class="flex items-center justify-center w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                    <span class="text-sm font-medium text-wellcare-500" x-text="selectedConversation.initials"></span>
                                </div>
                                <div>
                                    <h3 class="font-semibold text-gray-900 dark:text-white" x-text="selectedConversation.patientName"></h3>
                                    <p class="text-sm text-gray-500" x-text="'Patient depuis ' + selectedConversation.since"></p>
                                </div>
                            </div>
                            <div class="flex items-center gap-2">
                                <button class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="fas fa-video"></i>
                                </button>
                                <button class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="fas fa-phone"></i>
                                </button>
                                <button class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                            </div>
                        </div>

                        {# Messages #}
                        <div class="flex-1 p-4 space-y-4 overflow-y-auto">
                            <template x-for="message in selectedConversation.messages" :key="message.id">
                                <div class="flex" :class="message.sender === 'me' ? 'justify-end' : 'justify-start'">
                                    <div class="max-w-[70%] rounded-2xl px-4 py-2"
                                         :class="message.sender === 'me' ? 'bg-wellcare-500 text-white rounded-br-md' : 'bg-gray-100 dark:bg-gray-700 rounded-bl-md'">
                                        <p class="text-sm" x-text="message.content"></p>
                                        <p class="mt-1 text-xs opacity-70" :class="message.sender === 'me' ? 'text-white/80' : 'text-gray-400'" x-text="message.time"></p>
                                    </div>
                                </div>
                            </template>
                        </div>

                        {# Message Input #}
                        <div class="p-4 border-t border-gray-200 dark:border-gray-700">
                            <div class="flex items-center gap-3">
                                <button class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="fas fa-paperclip"></i>
                                </button>
                                <input type="text" x-model="newMessage" placeholder="Écrivez votre message..."
                                       class="flex-1 px-4 py-2 border border-gray-300 rounded-full dark:border-gray-600 dark:bg-gray-700 dark:text-white"
                                       @keyup.enter="sendMessage()">
                                <button @click="sendMessage()" class="p-2 text-white transition-colors rounded-full bg-wellcare-500 hover:bg-wellcare-600">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </template>
                <template x-if="!selectedConversation">
                    <div class="flex items-center justify-center flex-1">
                        <div class="text-center">
                            <i class="mb-4 text-6xl text-gray-300 fas fa-comments dark:text-gray-600"></i>
                            <p class="text-gray-500">Sélectionnez une conversation pour commencer</p>
                        </div>
                    </div>
                </template>
            </div>
        </div>

        {# Patients Tab #}
        <div x-show="activeTab === 'patients'" class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-4 text-lg font-bold text-gray-900 dark:text-white">Mes patients</h2>
            <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
                <template x-for="patient in myPatients" :key="patient.id">
                    <div class="p-4 transition-colors border border-gray-200 cursor-pointer dark:border-gray-700 rounded-xl hover:border-wellcare-500">
                        <div class="flex items-center gap-3 mb-3">
                            <div class="flex items-center justify-center w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                <span class="text-sm font-medium text-wellcare-500" x-text="patient.initials"></span>
                            </div>
                            <div>
                                <h3 class="font-medium text-gray-900 dark:text-white" x-text="patient.name"></h3>
                                <p class="text-xs text-gray-500" x-text="patient.lastVisit"></p>
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <button @click="sendQuickMessage(patient)" class="flex-1 px-3 py-2 text-sm text-gray-700 transition-colors bg-gray-100 rounded-lg dark:bg-gray-700 dark:text-gray-300 hover:bg-wellcare-500 hover:text-white">
                                <i class="mr-1 fas fa-envelope"></i>Message
                            </button>
                            <button class="flex-1 px-3 py-2 text-sm text-gray-700 transition-colors bg-gray-100 rounded-lg dark:bg-gray-700 dark:text-gray-300 hover:bg-wellcare-500 hover:text-white">
                                <i class="mr-1 fas fa-calendar"></i>Rdv
                            </button>
                        </div>
                    </div>
                </template>
            </div>
        </div>

        {# Requests Tab #}
        <div x-show="activeTab === 'requests'" class="space-y-4">
            <template x-for="request in requests" :key="request.id">
                <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
                    <div class="flex items-start justify-between">
                        <div class="flex items-center gap-4">
                            <div class="flex items-center justify-center w-12 h-12 bg-gray-200 rounded-full dark:bg-gray-600">
                                <span class="text-lg font-medium text-gray-600 dark:text-gray-300" x-text="request.initials"></span>
                            </div>
                            <div>
                                <h3 class="font-semibold text-gray-900 dark:text-white" x-text="request.patientName"></h3>
                                <p class="text-sm text-gray-500" x-text="request.message"></p>
                                <p class="mt-1 text-xs text-gray-400" x-text="request.date"></p>
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <button @click="acceptRequest(request)" class="px-4 py-2 text-sm text-white transition-colors bg-green-500 rounded-lg hover:bg-green-600">
                                <i class="mr-1 fas fa-check"></i>Accepter
                            </button>
                            <button @click="declineRequest(request)" class="px-4 py-2 text-sm text-red-500 transition-colors border border-red-500 rounded-lg hover:bg-red-50 dark:hover:bg-red-900/20">
                                <i class="mr-1 fas fa-times"></i>Refuser
                            </button>
                        </div>
                    </div>
                </div>
            </template>
            <div x-show="requests.length === 0" class="py-12 text-center">
                <i class="mb-4 text-6xl text-gray-300 fas fa-inbox dark:text-gray-600"></i>
                <p class="text-gray-500">Aucune demande en attente</p>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/nutrition.js') }}"></script>
{% endblock %}
