{% extends 'layouts/app.html.twig' %}

{% block title %}Rapports - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/nutrition-css.css') }}">
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8" x-data="nutritionistReporting()" x-init="init()">
    <div class="px-4 mx-auto max-w-7xl">
        {# Header #}
        <div class="flex flex-col gap-4 mb-8 lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Rapports et documentation</h1>
                <p class="mt-1 text-gray-500 dark:text-gray-400">Générez des rapports détaillés pour vos patients</p>
            </div>
            <div class="flex items-center gap-3">
                <button @click="createNewReport()" class="px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-plus"></i>Nouveau rapport
                </button>
            </div>
        </div>

        {# Report Types #}
        <div class="grid grid-cols-1 gap-4 mb-8 md:grid-cols-2 lg:grid-cols-4">
            <template x-for="reportType in reportTypes" :key="reportType.id">
                <div @click="selectReportType(reportType)"
                     class="p-6 transition-all bg-white border-2 border-transparent shadow-lg cursor-pointer dark:bg-gray-800 rounded-2xl hover:shadow-xl hover:border-wellcare-500"
                     :class="{'border-wellcare-500': selectedReportType?.id === reportType.id}">
                    <div class="flex items-center justify-center mb-4 w-14 h-14 rounded-2xl"
                         :class="reportType.bgColor">
                        <i :class="reportType.icon + ' text-2xl ' + reportType.iconColor"></i>
                    </div>
                    <h3 class="mb-1 font-bold text-gray-900 dark:text-white" x-text="reportType.name"></h3>
                    <p class="text-sm text-gray-500" x-text="reportType.description"></p>
                </div>
            </template>
        </div>

        {# Report Configuration #}
        <div x-show="selectedReportType" class="p-6 mb-8 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white" x-text="'Générer: ' + selectedReportType?.name"></h2>
                <button @click="clearSelection()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times"></i>
                </button>
            </div>

            <div class="grid grid-cols-1 gap-4 mb-6 md:grid-cols-2 lg:grid-cols-4">
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Patient</label>
                    <select x-model="reportConfig.patientId" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <option value="">Sélectionner un patient...</option>
                        <template x-for="patient in patients" :key="patient.id">
                            <option :value="patient.id" x-text="patient.name"></option>
                        </template>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Période</label>
                    <select x-model="reportConfig.period" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                        <option value="7">7 derniers jours</option>
                        <option value="30">30 derniers jours</option>
                        <option value="90">3 derniers mois</option>
                        <option value="180">6 derniers mois</option>
                        <option value="365">12 derniers mois</option>
                    </select>
                </div>
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Date de début</label>
                    <input type="date" x-model="reportConfig.startDate" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                </div>
                <div>
                    <label class="block mb-2 text-sm font-medium text-gray-700 dark:text-gray-300">Date de fin</label>
                    <input type="date" x-model="reportConfig.endDate" class="w-full px-4 py-3 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-700 dark:text-white">
                </div>
            </div>

            {# Report Sections #}
            <div class="mb-6">
                <label class="block mb-3 text-sm font-medium text-gray-700 dark:text-gray-300">Sections du rapport</label>
                <div class="flex flex-wrap gap-3">
                    <template x-for="section in reportSections" :key="section.id">
                        <label class="flex items-center gap-2 px-4 py-2 transition-colors border border-gray-200 rounded-lg cursor-pointer dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700/50">
                            <input type="checkbox" x-model="reportConfig.sections" :value="section.id" class="w-4 h-4 rounded text-wellcare-500">
                            <span class="text-sm text-gray-700 dark:text-gray-300" x-text="section.name"></span>
                        </label>
                    </template>
                </div>
            </div>

            <div class="flex justify-end gap-3">
                <button @click="previewReport()" class="px-4 py-2 text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                    <i class="mr-2 fas fa-eye"></i>Aperçu
                </button>
                <button @click="generateReport()" class="px-4 py-2 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-download"></i>Générer PDF
                </button>
            </div>
        </div>

        {# Recent Reports #}
        <div class="p-6 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Rapports récents</h2>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="text-sm text-left text-gray-500 border-b border-gray-200 dark:text-gray-400 dark:border-gray-700">
                            <th class="pb-3 font-medium">Date</th>
                            <th class="pb-3 font-medium">Type</th>
                            <th class="pb-3 font-medium">Patient</th>
                            <th class="pb-3 font-medium">Période</th>
                            <th class="pb-3 font-medium">Statut</th>
                            <th class="pb-3 font-medium">Actions</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                        <template x-for="report in recentReports" :key="report.id">
                            <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                                <td class="py-3 text-sm text-gray-900 dark:text-white" x-text="report.date"></td>
                                <td class="py-3">
                                    <span class="px-2 py-1 text-xs font-medium rounded-full"
                                          :class="getReportTypeClass(report.type)"
                                          x-text="report.typeName"></span>
                                </td>
                                <td class="py-3 text-sm text-gray-900 dark:text-white" x-text="report.patientName"></td>
                                <td class="py-3 text-sm text-gray-500" x-text="report.period"></td>
                                <td class="py-3">
                                    <span class="px-2 py-1 text-xs font-medium rounded-full"
                                          :class="report.status === 'completed' ? 'bg-green-100 text-green-700' : 'bg-amber-100 text-amber-700'"
                                          x-text="report.status === 'completed' ? 'Terminé' : 'En cours'"></span>
                                </td>
                                <td class="py-3">
                                    <div class="flex items-center gap-2">
                                        <button @click="viewReport(report)" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Voir">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button @click="downloadReport(report)" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Télécharger">
                                            <i class="fas fa-download"></i>
                                        </button>
                                        <button @click="shareReport(report)" class="p-1 text-gray-400 transition-colors hover:text-wellcare-500" title="Partager">
                                            <i class="fas fa-share-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </template>
                    </tbody>
                </table>
            </div>
        </div>

        {# Templates Section #}
        <div class="p-6 mt-8 bg-white shadow-lg dark:bg-gray-800 rounded-2xl">
            <h2 class="mb-6 text-xl font-bold text-gray-900 dark:text-white">Modèles de rapports</h2>
            <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
                <template x-for="template in reportTemplates" :key="template.id">
                    <div class="p-4 transition-colors border border-gray-200 cursor-pointer dark:border-gray-700 rounded-xl hover:border-wellcare-500">
                        <div class="flex items-start justify-between mb-3">
                            <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                                <i :class="template.icon + ' text-wellcare-500'"></i>
                            </div>
                            <button class="p-1 text-gray-400 hover:text-wellcare-500">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                        <h3 class="mb-1 font-medium text-gray-900 dark:text-white" x-text="template.name"></h3>
                        <p class="mb-3 text-sm text-gray-500" x-text="template.description"></p>
                        <div class="flex items-center justify-between">
                            <span class="text-xs text-gray-400" x-text="template.used + ' utilisations'"></span>
                            <button class="text-sm text-wellcare-500 hover:text-wellcare-600">
                                <i class="mr-1 fas fa-copy"></i>Utiliser
                            </button>
                        </div>
                    </div>
                </template>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/nutrition.js') }}"></script>
{% endblock %}
