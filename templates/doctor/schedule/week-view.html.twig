{# templates/doctor/schedule/week-view.html.twig #}
{# Week View for Doctor Schedule Management #}

{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Agenda Hebdomadaire'|trans }} - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/doctor-schedule.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css">
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-950">
    
    {# Header #}
    <div class="px-6 py-4 bg-white border-b border-gray-200 dark:bg-gray-900 dark:border-gray-800">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-calendar-week text-wellcare-500"></i>
                    {{ "Agenda Hebdomadaire"|trans }}
                </h1>
                <div class="flex items-center gap-2">
                    <button 
                        @click="changeWeek(-1)"
                        class="p-2 text-gray-500 transition-colors rounded-lg hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                    >
                        <i class="fa-solid fa-chevron-left"></i>
                    </button>
                    <span class="text-lg font-medium text-gray-900 dark:text-white whitespace-nowrap" x-text="weekRange"></span>
                    <button 
                        @click="changeWeek(1)"
                        class="p-2 text-gray-500 transition-colors rounded-lg hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                    >
                        <i class="fa-solid fa-chevron-right"></i>
                    </button>
                    <button 
                        @click="goToCurrentWeek()"
                        class="px-3 py-2 text-sm font-medium transition-colors border rounded-lg text-wellcare-600 dark:text-wellcare-400 border-wellcare-200 dark:border-wellcare-800 hover:bg-wellcare-50 dark:hover:bg-wellcare-900/20"
                    >
                        {{ "Cette semaine"|trans }}
                    </button>
                </div>
            </div>
            
            <div class="flex items-center gap-3">
                {# Location Filter #}
                <select 
                    x-model="selectedLocation"
                    @change="loadWeekView()"
                    class="px-3 py-2 text-sm border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-800 dark:text-white"
                >
                    <option value="all">{{ "Tous les lieux"|trans }}</option>
                    <option value="clinic">{{ "Clinique"|trans }}</option>
                    <option value="hospital">{{ "Hôpital"|trans }}</option>
                    <option value="telemedicine">{{ "Téléconsultation"|trans }}
                    </option>
                </select>
                
                {# View Switcher #}
                <div class="flex items-center p-1 bg-gray-100 rounded-lg dark:bg-gray-800">
                    <button 
                        @click="switchView('day')"
                        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors"
                        :class="currentView === 'day' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                    >
                        {{ "Jour"|trans }}
                    </button>
                    <button 
                        @click="switchView('week')"
                        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors"
                        :class="currentView === 'week' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                    >
                        {{ "Semaine"|trans }}
                    </button>
                    <button 
                        @click="switchView('month')"
                        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors"
                        :class="currentView === 'month' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                    >
                        {{ "Mois"|trans }}
                    </button>
                </div>
                
                <button 
                    @click="openNewAppointment()"
                    class="px-4 py-2 text-sm font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600"
                >
                    <i class="mr-2 fa-solid fa-plus"></i>
                    {{ "Nouvel RDV"|trans }}
                </button>
            </div>
        </div>
        
        {# Week Statistics #}
        <div class="flex items-center gap-6 pt-4 mt-4 border-t border-gray-100 dark:border-gray-800">
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-emerald-500"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="weekStats.completed"></span> {{ "patients"|trans }}
                </span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="weekStats.scheduled"></span> {{ "programmés"|trans }}
                </span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 bg-purple-500 rounded-full"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="weekStats.newPatients"></span> {{ "nouveaux"|trans }}
                </span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-cyan-500"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="weekStats.teleconsultations"></span> {{ "téléconsultations"|trans }}
                </span>
            </div>
            <div class="flex items-center gap-4 ml-auto">
                <div class="text-sm">
                    <span class="text-gray-500 dark:text-gray-400">{{ "Heures de travail:"|trans }}</span>
                    <span class="ml-1 font-medium text-gray-900 dark:text-white" x-text="weekStats.workingHours + 'h'"></span>
                </div>
                <div class="text-sm">
                    <span class="text-gray-500 dark:text-gray-400">{{ "Taux de présence:"|trans }}</span>
                    <span class="ml-1 font-medium text-emerald-600 dark:text-emerald-400" x-text="weekStats.attendanceRate + '%'"></span>
                </div>
            </div>
        </div>
    </div>
    
    {# Main Content - Week Grid #}
    <div class="flex h-[calc(100vh-200px)]">
        
        {# Time Column #}
        <div class="flex-shrink-0 w-16 overflow-y-auto bg-white border-r border-gray-200 dark:bg-gray-900 dark:border-gray-800">
            <div class="h-16 border-b border-gray-100 dark:border-gray-800"></div>
            <template x-for="hour in hours" :key="hour">
                <div class="flex items-start justify-center h-16 pt-1 border-b border-gray-100 dark:border-gray-800">
                    <span class="text-xs font-medium text-gray-500 dark:text-gray-400" x-text="hour + 'h'"></span>
                </div>
            </template>
        </div>
        
        {# Days Columns #}
        <div class="flex flex-1 overflow-x-auto">
            <template x-for="(day, index) in weekDays" :key="day.date">
                <div 
                    class="flex-1 min-w-[140px] border-r border-gray-200 dark:border-gray-800"
                    :class="{ 'bg-gray-50 dark:bg-gray-900/50': day.isToday }"
                >
                    {# Day Header #}
                    <div class="sticky top-0 z-10 h-16 p-2 text-center bg-white border-b border-gray-200 dark:border-gray-800 dark:bg-gray-900">
                        <p class="text-xs font-medium text-gray-500 dark:text-gray-400" x-text="day.dayName"></p>
                        <div 
                            class="flex items-center justify-center w-8 h-8 mx-auto mt-1 text-sm font-semibold rounded-full"
                            :class="day.isToday ? 'bg-wellcare-500 text-white' : 'text-gray-900 dark:text-white'"
                            x-text="day.dayNumber"
                        ></div>
                    </div>
                    
                    {# Time Slots #}
                    <div class="relative overflow-y-auto h-[calc(100vh-256px)]">
                        <template x-for="hour in hours" :key="hour">
                            <div 
                                class="h-16 transition-colors border-b border-gray-100 cursor-pointer dark:border-gray-800 hover:bg-gray-50 dark:hover:bg-gray-900/30"
                                @click="openNewAppointmentAtTime(day.date, hour)"
                            >
                                <template x-for="appointment in getAppointmentsForDayAndHour(day.date, hour)" :key="appointment.id">
                                    <div 
                                        class="mx-1 mb-1 appointment-card-week"
                                        :class="appointment.type"
                                        :style="{ height: (appointment.duration / 15) * 4 + 'px' }"
                                        @click.stop="openAppointmentDetails(appointment)"
                                    >
                                        <div class="flex items-center gap-1">
                                            <span class="text-xs font-medium truncate" x-text="appointment.time"></span>
                                            <span 
                                                class="flex-shrink-0 w-2 h-2 rounded-full"
                                                :class="{
                                                    'bg-emerald-500': appointment.status === 'completed',
                                                    'bg-blue-500': appointment.status === 'scheduled',
                                                    'bg-amber-500': appointment.status === 'waiting',
                                                    'bg-red-500': appointment.status === 'urgent'
                                                }"
                                            ></span>
                                        </div>
                                        <p class="text-xs truncate" x-text="appointment.patientName"></p>
                                        <template x-if="appointment.type === 'telemedicine'">
                                            <i class="text-xs fa-solid fa-video text-wellcare-500"></i>
                                        </template>
                                    </div>
                                </template>
                            </div>
                        </template>
                        
                        {# Block Schedules #}
                        <template x-for="block in getBlockSchedulesForDay(day.date)" :key="block.id">
                            <div 
                                class="mx-1 my-2 block-schedule"
                                :class="block.type"
                                :style="{ top: (block.startHour * 4) + 'rem', height: ((block.endHour - block.startHour) * 4) + 'rem' }"
                            >
                                <i :class="block.icon + ' mr-1'"></i>
                                <span class="text-xs font-medium truncate" x-text="block.title"></span>
                            </div>
                        </template>
                    </div>
                </div>
            </template>
        </div>
        
        {# Sidebar - Quick Actions #}
        <div class="flex-shrink-0 w-64 p-4 bg-white border-l border-gray-200 dark:bg-gray-900 dark:border-gray-800">
            <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                <i class="mr-2 fa-solid fa-bolt text-wellcare-500"></i>
                {{ "Actions Rapides"|trans }}
            </h3>
            
            <div class="space-y-3">
                <button 
                    @click="openNewAppointment()"
                    class="w-full px-4 py-3 text-sm font-medium text-left text-gray-700 transition-colors rounded-lg dark:text-gray-300 bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700"
                >
                    <i class="mr-2 fa-solid fa-plus text-wellcare-500"></i>
                    {{ "Nouveau Rendez-vous"|trans }}
                </button>
                
                <button 
                    @click="openBulkScheduling()"
                    class="w-full px-4 py-3 text-sm font-medium text-left text-gray-700 transition-colors rounded-lg dark:text-gray-300 bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700"
                >
                    <i class="mr-2 text-blue-500 fa-solid fa-calendar-plus"></i>
                    {{ "Planification de Masse"|trans }}
                </button>
                
                <button 
                    @click="openLeaveRequest()"
                    class="w-full px-4 py-3 text-sm font-medium text-left text-gray-700 transition-colors rounded-lg dark:text-gray-300 bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700"
                >
                    <i class="mr-2 fa-solid fa-plane text-amber-500"></i>
                    {{ "Demander un Congé"|trans }}
                </button>
                
                <button 
                    @click="openAvailabilitySettings()"
                    class="w-full px-4 py-3 text-sm font-medium text-left text-gray-700 transition-colors rounded-lg dark:text-gray-300 bg-gray-50 dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700"
                >
                    <i class="mr-2 text-purple-500 fa-solid fa-clock"></i>
                    {{ "Configurer Disponibilités"|trans }}
                </button>
            </div>
            
            {# Today's Summary #}
            <div class="p-4 mt-6 bg-wellcare-50 dark:bg-wellcare-900/20 rounded-xl">
                <h4 class="mb-3 text-sm font-semibold text-wellcare-700 dark:text-wellcare-400">
                    <i class="mr-1 fa-solid fa-today"></i>
                    {{ "Aujourd'hui"|trans }}
                </h4>
                <div class="space-y-2">
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600 dark:text-gray-400">{{ "RDV terminés"|trans }}</span>
                        <span class="font-medium text-gray-900 dark:text-white" x-text="todayStats.completed"></span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600 dark:text-gray-400">{{ "RDV restants"|trans }}</span>
                        <span class="font-medium text-gray-900 dark:text-white" x-text="todayStats.remaining"></span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600 dark:text-gray-400">{{ "Patients en salle"|trans }}</span>
                        <span class="font-medium text-gray-900 dark:text-white" x-text="todayStats.inWaitingRoom"></span>
                    </div>
                    <div class="flex justify-between text-sm">
                        <span class="text-gray-600 dark:text-gray-400">{{ "Prochain RDV"|trans }}</span>
                        <span class="font-medium text-wellcare-600 dark:text-wellcare-400" x-text="todayStats.nextAppointment"></span>
                    </div>
                </div>
            </div>
            
            {# Upcoming Appointments #}
            <div class="mt-4">
                <h4 class="mb-3 text-sm font-semibold text-gray-700 dark:text-gray-300">
                    <i class="mr-1 fa-solid fa-arrow-right"></i>
                    {{ "À Venir"|trans }}
                </h4>
                <div class="space-y-2">
                    <template x-for="apt in upcomingAppointments.slice(0, 3)" :key="apt.id">
                        <div class="flex items-center gap-3 p-2 rounded-lg bg-gray-50 dark:bg-gray-800">
                            <div 
                                class="w-2 h-2 rounded-full"
                                :class="{
                                    'bg-blue-500': apt.type === 'follow-up',
                                    'bg-purple-500': apt.type === 'new',
                                    'bg-cyan-500': apt.type === 'procedure',
                                    'bg-wellcare-500': apt.type === 'telemedicine'
                                }"
                            ></div>
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium text-gray-900 truncate dark:text-white" x-text="apt.patientName"></p>
                                <p class="text-xs text-gray-500 dark:text-gray-400" x-text="apt.time"></p>
                            </div>
                        </div>
                    </template>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <script src="{{ asset('build/doctor-schedule.js') }}"></script>
{% endblock %}
