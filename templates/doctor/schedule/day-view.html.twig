{# templates/doctor/schedule/day-view.html.twig #}
{# Day View for Doctor Schedule Management #}

{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Agenda du Jour'|trans }} - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/schedule-css.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css">
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-950">
    
    {# Header #}
    <div class="px-6 py-4 bg-white border-b border-gray-200 dark:bg-gray-900 dark:border-gray-800">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-calendar-day text-wellcare-500"></i>
                    {{ "Agenda du Jour"|trans }}
                </h1>
                <div class="flex items-center gap-2">
                    <button 
                        @click="changeDate(-1)"
                        class="p-2 text-gray-500 transition-colors rounded-lg hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                    >
                        <i class="fa-solid fa-chevron-left"></i>
                    </button>
                    <input 
                        type="date" 
                        x-model="currentDate" 
                        @change="loadDayView()"
                        class="px-3 py-2 text-sm border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-800 dark:text-white"
                    >
                    <button 
                        @click="changeDate(1)"
                        class="p-2 text-gray-500 transition-colors rounded-lg hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                    >
                        <i class="fa-solid fa-chevron-right"></i>
                    </button>
                    <button 
                        @click="goToToday()"
                        class="px-3 py-2 text-sm font-medium transition-colors border rounded-lg text-wellcare-600 dark:text-wellcare-400 border-wellcare-200 dark:border-wellcare-800 hover:bg-wellcare-50 dark:hover:bg-wellcare-900/20"
                    >
                        {{ "Aujourd'hui"|trans }}
                    </button>
                </div>
            </div>
            
            <div class="flex items-center gap-3">
                {# View Switcher #}
                <div class="flex items-center p-1 bg-gray-100 rounded-lg dark:bg-gray-800">
                    <button 
                        @click="switchView('day')"
                        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors"
                        :class="currentView === 'day' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                    >
                        {{ "Jour"|trans }}
                    </button>
                    <button 
                        @click="switchView('week')"
                        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors"
                        :class="currentView === 'week' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                    >
                        {{ "Semaine"|trans }}
                    </button>
                    <button 
                        @click="switchView('month')"
                        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors"
                        :class="currentView === 'month' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                    >
                        {{ "Mois"|trans }}
                    </button>
                </div>
                
                {# Quick Actions #}
                <button 
                    @click="openNewAppointment()"
                    class="px-4 py-2 text-sm font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600"
                >
                    <i class="mr-2 fa-solid fa-plus"></i>
                    {{ "Nouvel RDV"|trans }}
                </button>
                
                <div class="relative" x-data="{ open: false }">
                    <button 
                        @click="open = !open"
                        class="p-2 text-gray-500 transition-colors rounded-lg hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                    >
                        <i class="fa-solid fa-ellipsis-vertical"></i>
                    </button>
                    <div 
                        x-show="open" 
                        @click.away="open = false"
                        x-transition:enter="transition ease-out duration-100"
                        x-transition:enter-start="transform opacity-0 scale-95"
                        x-transition:enter-end="transform opacity-100 scale-100"
                        x-transition:leave="transition ease-in duration-75"
                        x-transition:leave-start="transform opacity-100 scale-100"
                        x-transition:leave-end="transform opacity-0 scale-95"
                        class="absolute right-0 z-50 w-48 mt-2 bg-white border border-gray-200 rounded-lg shadow-lg dark:bg-gray-800 dark:border-gray-700"
                        style="display: none;"
                    >
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                            <i class="mr-2 fa-solid fa-print"></i>
                            {{ "Imprimer l'agenda"|trans }}
                        </a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                            <i class="mr-2 fa-solid fa-file-export"></i>
                            {{ "Exporter en PDF"|trans }}
                        </a>
                        <a href="#" class="block px-4 py-2 text-sm text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                            <i class="mr-2 fa-solid fa-calendar-export"></i>
                            {{ "Exporter en iCal"|trans }}
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        {# Statistics Bar #}
        <div class="flex items-center gap-6 pt-4 mt-4 border-t border-gray-100 dark:border-gray-800">
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-emerald-500"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="stats.completed"></span> {{ "achevés"|trans }}
                </span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="stats.scheduled"></span> {{ "programmés"|trans }}
                </span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-amber-500"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="stats.waiting"></span> {{ "en attente"|trans }}
                </span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 bg-red-500 rounded-full"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="stats.urgent"></span> {{ "urgents"|trans }}
                </span>
            </div>
            <div class="flex items-center gap-2 ml-auto">
                <i class="text-gray-400 fa-solid fa-clock"></i>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    {{ "Total:" |trans }} <span class="font-medium text-gray-900 dark:text-white" x-text="stats.totalHours + 'h'"></span>
                </span>
            </div>
        </div>
    </div>
    
    {# Main Content #}
    <div class="flex h-[calc(100vh-200px)]">
        
        {# Time Column #}
        <div class="flex-shrink-0 w-20 overflow-y-auto bg-white border-r border-gray-200 dark:bg-gray-900 dark:border-gray-800">
            <div class="h-16 border-b border-gray-100 dark:border-gray-800"></div>
            <template x-for="hour in hours" :key="hour">
                <div class="flex items-start justify-center h-20 pt-2 border-b border-gray-100 dark:border-gray-800">
                    <span class="text-xs font-medium text-gray-500 dark:text-gray-400" x-text="hour + ':00'"></span>
                </div>
            </template>
        </div>
        
        {# Schedule Grid #}
        <div class="relative flex-1 overflow-y-auto bg-white dark:bg-gray-950">
            
            {# Current Time Indicator #}
            <div 
                class="absolute left-0 right-0 z-10 flex items-center pointer-events-none"
                :style="'top: ' + (currentTimePosition) + 'px'"
                x-show="isToday"
            >
                <div class="w-3 h-3 bg-red-500 rounded-full -ml-1.5"></div>
                <div class="flex-1 h-0.5 bg-red-500"></div>
            </div>
            
            {# Hour Rows #}
            <div class="relative">
                <template x-for="hour in hours" :key="hour">
                    <div class="flex h-20 border-b border-gray-100 dark:border-gray-800">
                        <template x-for="slot in hourSlots" :key="slot">
                            <div 
                                class="flex-1 transition-colors border-r border-gray-100 cursor-pointer dark:border-gray-800 hover:bg-gray-50 dark:hover:bg-gray-900/50"
                                @click="openNewAppointmentAtTime(hour, slot)"
                            >
                                <template x-if="slot === 0">
                                    <div class="h-full p-1" @drop="handleDrop($event, hour)" @dragover.prevent>
                                        <template x-for="appointment in getAppointmentsAtHour(hour)" :key="appointment.id">
                                            <div 
                                                class="mb-1 appointment-card"
                                                :class="appointment.type"
                                                draggable="true"
                                                @dragstart="handleDragStart($event, appointment)"
                                                @click="openAppointmentDetails(appointment)"
                                            >
                                                <div class="flex items-center justify-between">
                                                    <span class="text-xs font-medium" x-text="appointment.time"></span>
                                                    <span 
                                                        class="w-2 h-2 rounded-full"
                                                        :class="{
                                                            'bg-emerald-500': appointment.status === 'completed',
                                                            'bg-blue-500': appointment.status === 'scheduled',
                                                            'bg-amber-500': appointment.status === 'waiting',
                                                            'bg-red-500': appointment.status === 'urgent'
                                                        }"
                                                    ></span>
                                                </div>
                                                <p class="text-xs mt-0.5 truncate" x-text="appointment.patientName"></p>
                                                <p class="text-xs text-gray-500 truncate" x-text="appointment.reason"></p>
                                            </div>
                                        </template>
                                    </div>
                                </template>
                            </div>
                        </template>
                    </div>
                </template>
            </div>
            
            {# Emergency Slot #}
            <div 
                class="absolute flex flex-col items-center justify-center w-20 h-20 transition-colors border-2 border-red-300 border-dashed cursor-pointer right-4 top-4 bg-red-50 dark:bg-red-900/20 dark:border-red-700 rounded-xl hover:bg-red-100 dark:hover:bg-red-900/30"
                @click="openEmergencySlot()"
            >
                <i class="mb-1 text-xl text-red-500 fa-solid fa-user-plus"></i>
                <span class="text-xs font-medium text-red-600 dark:text-red-400">{{ "Urgence"|trans }}</span>
            </div>
        </div>
        
        {# Sidebar - Patient Queue #}
        <div class="flex-shrink-0 overflow-y-auto bg-white border-l border-gray-200 w-80 dark:bg-gray-900 dark:border-gray-800">
            <div class="p-4 border-b border-gray-200 dark:border-gray-800">
                <h2 class="font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-users text-wellcare-500"></i>
                    {{ "File d'Attente"|trans }}
                </h2>
            </div>
            
            <div class="divide-y divide-gray-100 dark:divide-gray-800">
                <template x-for="patient in patientQueue" :key="patient.id">
                    <div 
                        class="p-4 transition-colors cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-800/50"
                        @click="openPatientQueueItem(patient)"
                    >
                        <div class="flex items-start gap-3">
                            <div class="relative">
                                <img 
                                    :src="'https://ui-avatars.com/api/?name=' + patient.name + '&background=random'" 
                                    :alt="patient.name"
                                    class="w-10 h-10 rounded-full"
                                >
                                <span 
                                    class="absolute -bottom-0.5 -right-0.5 w-4 h-4 rounded-full border-2 border-white dark:border-gray-900 flex items-center justify-center"
                                    :class="{
                                        'bg-red-500': patient.priority === 'urgent',
                                        'bg-amber-500': patient.priority === 'priority',
                                        'bg-blue-500': patient.priority === 'normal',
                                        'bg-emerald-500': patient.priority === 'checked-in'
                                    }"
                                >
                                    <template x-if="patient.priority === 'urgent'">
                                        <i class="fa-solid fa-exclamation text-white text-[8px]"></i>
                                    </template>
                                    <template x-if="patient.priority === 'checked-in'">
                                        <i class="fa-solid fa-check text-white text-[8px]"></i>
                                    </template>
                                </span>
                            </div>
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center justify-between">
                                    <p class="font-medium text-gray-900 truncate dark:text-white" x-text="patient.name"></p>
                                    <span 
                                        class="text-xs font-medium"
                                        :class="{
                                            'text-red-600 dark:text-red-400': patient.waitTime > 30,
                                            'text-amber-600 dark:text-amber-400': patient.waitTime > 15 && patient.waitTime <= 30,
                                            'text-gray-500 dark:text-gray-400': patient.waitTime <= 15
                                        }"
                                        x-text="patient.waitTime + 'min'"
                                    ></span>
                                </div>
                                <p class="text-sm text-gray-500 truncate dark:text-gray-400" x-text="patient.reason"></p>
                                <div class="flex items-center gap-2 mt-1">
                                    <template x-if="patient.type === 'new'">
                                        <span class="px-1.5 py-0.5 text-xs font-medium bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400 rounded">
                                            {{ "Nouveau"|trans }}
                                        </span>
                                    </template>
                                    <template x-if="patient.type === 'follow-up'">
                                        <span class="px-1.5 py-0.5 text-xs font-medium bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400 rounded">
                                            {{ "Suivi"|trans }}
                                        </span>
                                    </template>
                                    <template x-if="patient.type === 'procedure'">
                                        <span class="px-1.5 py-0.5 text-xs font-medium bg-cyan-100 text-cyan-700 dark:bg-cyan-900/30 dark:text-cyan-400 rounded">
                                            {{ "Procédure"|trans }}
                                        </span>
                                    </template>
                                </div>
                            </div>
                        </div>
                    </div>
                </template>
                
                <div x-show="patientQueue.length === 0" class="p-8 text-center text-gray-500 dark:text-gray-400">
                    <i class="mb-2 text-3xl fa-solid fa-users"></i>
                    <p>{{ "Aucun patient en attente"|trans }}</p>
                </div>
            </div>
        </div>
    </div>
    
    {# Appointment Details Modal #}
    <div 
        x-show="showAppointmentModal" 
        x-cloak
        class="fixed inset-0 z-50 flex items-center justify-center bg-black/50"
        style="display: none;"
    >
        <div 
            x-show="showAppointmentModal"
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 transform scale-95"
            x-transition:enter-end="opacity-100 transform scale-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100 transform scale-100"
            x-transition:leave-end="opacity-0 transform scale-95"
            class="w-full max-w-2xl overflow-hidden bg-white shadow-2xl dark:bg-gray-900 rounded-2xl"
        >
            <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-800">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                    {{ "Détails du Rendez-vous"|trans }}
                </h3>
                <button 
                    @click="showAppointmentModal = false"
                    class="p-2 text-gray-400 transition-colors rounded-lg hover:text-gray-600 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                >
                    <i class="fa-solid fa-times"></i>
                </button>
            </div>
            
            <div class="p-6" x-show="selectedAppointment">
                <div class="flex items-start gap-4 mb-6">
                    <img 
                        :src="'https://ui-avatars.com/api/?name=' + selectedAppointment.patientName + '&background=00A790&color=fff'" 
                        :alt="selectedAppointment.patientName"
                        class="w-16 h-16 rounded-full"
                    >
                    <div class="flex-1">
                        <h4 class="text-xl font-semibold text-gray-900 dark:text-white" x-text="selectedAppointment.patientName"></h4>
                        <p class="text-sm text-gray-500 dark:text-gray-400" x-text="'RDV #' + selectedAppointment.id"></p>
                        <div class="flex items-center gap-2 mt-2">
                            <span 
                                class="px-2 py-1 text-xs font-medium rounded-full"
                                :class="{
                                    'bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400': selectedAppointment.status === 'completed',
                                    'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400': selectedAppointment.status === 'scheduled',
                                    'bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400': selectedAppointment.status === 'waiting',
                                    'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400': selectedAppointment.status === 'urgent'
                                }"
                                x-text="selectedAppointment.status"
                            ></span>
                            <span 
                                class="px-2 py-1 text-xs font-medium rounded-full"
                                :class="{
                                    'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400': selectedAppointment.type === 'new',
                                    'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400': selectedAppointment.type === 'follow-up',
                                    'bg-cyan-100 text-cyan-700 dark:bg-cyan-900/30 dark:text-cyan-400': selectedAppointment.type === 'procedure'
                                }"
                                x-text="selectedAppointment.type"
                            ></span>
                        </div>
                    </div>
                </div>
                
                <div class="grid grid-cols-2 gap-4 mb-6">
                    <div class="p-4 bg-gray-50 dark:bg-gray-800 rounded-xl">
                        <p class="mb-1 text-xs text-gray-500 dark:text-gray-400">{{ "Heure"|trans }}</p>
                        <p class="font-semibold text-gray-900 dark:text-white" x-text="selectedAppointment.time"></p>
                    </div>
                    <div class="p-4 bg-gray-50 dark:bg-gray-800 rounded-xl">
                        <p class="mb-1 text-xs text-gray-500 dark:text-gray-400">{{ "Durée"|trans }}</p>
                        <p class="font-semibold text-gray-900 dark:text-white" x-text="selectedAppointment.duration + ' min'"></p>
                    </div>
                </div>
                
                <div class="mb-6">
                    <p class="mb-1 text-xs text-gray-500 dark:text-gray-400">{{ "Motif de la visite"|trans }}</p>
                    <p class="text-gray-900 dark:text-white" x-text="selectedAppointment.reason"></p>
                </div>
                
                <div class="mb-6">
                    <p class="mb-1 text-xs text-gray-500 dark:text-gray-400">{{ "Notes"|trans }}</p>
                    <p class="text-gray-600 dark:text-gray-300" x-text="selectedAppointment.notes || 'Aucune note'"></p>
                </div>
                
                <div class="flex gap-3">
                    <button 
                        @click="startConsultation()"
                        class="flex-1 px-4 py-2 text-sm font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600"
                    >
                        <i class="mr-2 fa-solid fa-play"></i>
                        {{ "Commencer la consultation"|trans }}
                    </button>
                    <button 
                        @click="rescheduleAppointment()"
                        class="px-4 py-2 text-sm font-medium text-gray-700 transition-colors bg-gray-100 rounded-lg dark:text-gray-300 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700"
                    >
                        <i class="mr-2 fa-solid fa-calendar"></i>
                        {{ "Reprogrammer"|trans }}
                    </button>
                    <button 
                        @click="cancelAppointment()"
                        class="px-4 py-2 text-sm font-medium text-red-600 transition-colors rounded-lg dark:text-red-400 bg-red-50 dark:bg-red-900/20 hover:bg-red-100 dark:hover:bg-red-900/30"
                    >
                        <i class="fa-solid fa-times"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
{% endblock %}
