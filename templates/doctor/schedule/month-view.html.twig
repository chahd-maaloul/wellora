{# templates/doctor/schedule/month-view.html.twig #}
{# Month View for Doctor Schedule Management #}

{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Agenda Mensuel'|trans }} - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/doctor-schedule.css') }}">
{% endblock %}

{% block body %}
<div class="min-h-screen p-6 bg-gray-50 dark:bg-gray-950">
    
    {# Header #}
    <div class="mx-auto mb-6 max-w-7xl">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-calendar text-wellcare-500"></i>
                    {{ "Agenda Mensuel"|trans }}
                </h1>
                <div class="flex items-center gap-2">
                    <button 
                        @click="changeMonth(-1)"
                        class="p-2 text-gray-500 transition-colors rounded-lg hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                    >
                        <i class="fa-solid fa-chevron-left"></i>
                    </button>
                    <span class="text-lg font-medium text-gray-900 dark:text-white min-w-[180px] text-center" x-text="monthYearLabel"></span>
                    <button 
                        @click="changeMonth(1)"
                        class="p-2 text-gray-500 transition-colors rounded-lg hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                    >
                        <i class="fa-solid fa-chevron-right"></i>
                    </button>
                    <button 
                        @click="goToCurrentMonth()"
                        class="px-3 py-2 text-sm font-medium transition-colors border rounded-lg text-wellcare-600 dark:text-wellcare-400 border-wellcare-200 dark:border-wellcare-800 hover:bg-wellcare-50 dark:hover:bg-wellcare-900/20"
                    >
                        {{ "Ce mois"|trans }}
                    </button>
                </div>
            </div>
            
            <div class="flex items-center gap-3">
                {# View Switcher #}
                <div class="flex items-center p-1 bg-gray-100 rounded-lg dark:bg-gray-800">
                    <button 
                        @click="switchView('day')"
                        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors"
                        :class="currentView === 'day' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                    >
                        {{ "Jour"|trans }}
                    </button>
                    <button 
                        @click="switchView('week')"
                        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors"
                        :class="currentView === 'week' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                    >
                        {{ "Semaine"|trans }}
                    </button>
                    <button 
                        @click="switchView('month')"
                        class="px-3 py-1.5 text-sm font-medium rounded-md transition-colors"
                        :class="currentView === 'month' ? 'bg-white dark:bg-gray-700 text-gray-900 dark:text-white shadow-sm' : 'text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200'"
                    >
                        {{ "Mois"|trans }}
                    </button>
                </div>
                
                <button 
                    @click="exportMonth()"
                    class="px-4 py-2 text-sm font-medium text-gray-700 transition-colors bg-white border border-gray-300 rounded-lg dark:text-gray-300 dark:bg-gray-800 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700"
                >
                    <i class="mr-2 fa-solid fa-download"></i>
                    {{ "Exporter"|trans }}
                </button>
                
                <button 
                    @click="openNewAppointment()"
                    class="px-4 py-2 text-sm font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600"
                >
                    <i class="mr-2 fa-solid fa-plus"></i>
                    {{ "Nouvel RDV"|trans }}
                </button>
            </div>
        </div>
        
        {# Month Statistics #}
        <div class="grid grid-cols-5 gap-4 mt-6">
            <div class="p-4 bg-white border border-gray-200 dark:bg-gray-900 rounded-xl dark:border-gray-800">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-10 h-10 bg-blue-100 rounded-lg dark:bg-blue-900/30">
                        <i class="text-blue-600 fa-solid fa-calendar-check dark:text-blue-400"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="monthStats.totalAppointments"></p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ "RDV Totaux"|trans }}</p>
                    </div>
                </div>
            </div>
            
            <div class="p-4 bg-white border border-gray-200 dark:bg-gray-900 rounded-xl dark:border-gray-800">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-10 h-10 bg-purple-100 rounded-lg dark:bg-purple-900/30">
                        <i class="text-purple-600 fa-solid fa-user-plus dark:text-purple-400"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="monthStats.newPatients"></p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ "Nouveaux Patients"|trans }}</p>
                    </div>
                </div>
            </div>
            
            <div class="p-4 bg-white border border-gray-200 dark:bg-gray-900 rounded-xl dark:border-gray-800">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-amber-100 dark:bg-amber-900/30">
                        <i class="fa-solid fa-calendar-xmark text-amber-600 dark:text-amber-400"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="monthStats.cancellations"></p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ "Annulations"|trans }}</p>
                    </div>
                </div>
            </div>
            
            <div class="p-4 bg-white border border-gray-200 dark:bg-gray-900 rounded-xl dark:border-gray-800">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-10 h-10 bg-red-100 rounded-lg dark:bg-red-900/30">
                        <i class="text-red-600 fa-solid fa-user-clock dark:text-red-400"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="monthStats.noShows"></p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ "Absentés"|trans }}</p>
                    </div>
                </div>
            </div>
            
            <div class="p-4 bg-white border border-gray-200 dark:bg-gray-900 rounded-xl dark:border-gray-800">
                <div class="flex items-center gap-3">
                    <div class="flex items-center justify-center w-10 h-10 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                        <i class="fa-solid fa-chart-line text-wellcare-600 dark:text-wellcare-400"></i>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-emerald-600 dark:text-emerald-400" x-text="monthStats.attendanceRate + '%'"></p>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ "Taux de Présence"|trans }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    {# Calendar Grid #}
    <div class="mx-auto overflow-hidden bg-white border border-gray-200 max-w-7xl dark:bg-gray-900 rounded-2xl dark:border-gray-800">
        
        {# Day Names Header #}
        <div class="grid grid-cols-7 border-b border-gray-200 dark:border-gray-800">
            <template x-for="dayName in dayNames" :key="dayName">
                <div class="py-3 text-center">
                    <span class="text-sm font-semibold text-gray-700 dark:text-gray-300" x-text="dayName"></span>
                </div>
            </template>
        </div>
        
        {# Calendar Days #}
        <div class="grid grid-cols-7">
            <template x-for="(week, weekIndex) in calendarWeeks" :key="weekIndex">
                <template x-for="(day, dayIndex) in week" :key="day.date">
                    <div 
                        class="min-h-[120px] border-b border-r border-gray-100 dark:border-gray-800 p-2 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-800/30 transition-colors"
                        :class="{ 
                            'bg-gray-50 dark:bg-gray-800/50': !day.isCurrentMonth,
                            'bg-blue-50 dark:bg-blue-900/10': day.isToday,
                            'bg-wellcare-50 dark:bg-wellcare-900/10': day.hasEvents
                        }"
                        @click="openDayDetails(day)"
                    >
                        {# Day Number #}
                        <div class="flex items-center justify-between mb-1">
                            <span 
                                class="flex items-center justify-center text-sm rounded-full w-7 h-7"
                                :class="day.isToday ? 'bg-wellcare-500 text-white font-bold' : day.isCurrentMonth ? 'text-gray-900 dark:text-white' : 'text-gray-400 dark:text-gray-600'"
                                x-text="day.dayNumber"
                            ></span>
                            <template x-if="day.hasEvents">
                                <span class="text-xs text-gray-500 dark:text-gray-400" x-text="day.eventCount + ' RDV'"></span>
                            </template>
                        </div>
                        
                        {# Events #}
                        <div class="space-y-1">
                            <template x-for="event in day.events.slice(0, 3)" :key="event.id">
                                <div 
                                    class="text-xs px-1.5 py-0.5 rounded truncate cursor-pointer"
                                    :class="{
                                        'bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400': event.type === 'scheduled',
                                        'bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400': event.type === 'completed',
                                        'bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400': event.type === 'waiting',
                                        'bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400': event.type === 'new',
                                        'bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400': event.type === 'urgent',
                                        'bg-wellcare-100 text-wellcare-700 dark:bg-wellcare-900/30 dark:text-wellcare-400': event.type === 'telemedicine'
                                    }"
                                    @click.stop="openAppointmentDetails(event)"
                                >
                                    <span x-text="event.time + ' ' + event.patientName"></span>
                                </div>
                            </template>
                            
                            <template x-if="day.events.length > 3">
                                <div class="pl-1 text-xs text-gray-500 dark:text-gray-400">
                                    +<span x-text="day.events.length - 3"></span> {{ "plus"|trans }}
                                </div>
                            </template>
                        </div>
                        
                        {# Leave Indicator #}
                        <template x-if="day.isLeave">
                            <div class="mt-1">
                                <span class="px-1.5 py-0.5 text-xs bg-gray-200 text-gray-600 dark:bg-gray-700 dark:text-gray-400 rounded">
                                    <i class="fa-solid fa-plane mr-0.5"></i>
                                    {{ "Congé"|trans }}
                                </span>
                            </div>
                        </template>
                    </div>
                </template>
            </template>
        </div>
    </div>
    
    {# Month Legend #}
    <div class="flex items-center justify-center gap-6 mx-auto mt-6 max-w-7xl">
        <div class="flex items-center gap-2">
            <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
            <span class="text-sm text-gray-600 dark:text-gray-400">{{ "Programmé"|trans }}</span>
        </div>
        <div class="flex items-center gap-2">
            <span class="w-3 h-3 rounded-full bg-emerald-500"></span>
            <span class="text-sm text-gray-600 dark:text-gray-400">{{ "Terminé"|trans }}</span>
        </div>
        <div class="flex items-center gap-2">
            <span class="w-3 h-3 bg-purple-500 rounded-full"></span>
            <span class="text-sm text-gray-600 dark:text-gray-400">{{ "Nouveau Patient"|trans }}</span>
        </div>
        <div class="flex items-center gap-2">
            <span class="w-3 h-3 rounded-full bg-wellcare-500"></span>
            <span class="text-sm text-gray-600 dark:text-gray-400">{{ "Téléconsultation"|trans }}</span>
        </div>
        <div class="flex items-center gap-2">
            <span class="w-3 h-3 rounded-full bg-amber-500"></span>
            <span class="text-sm text-gray-600 dark:text-gray-400">{{ "En Attente"|trans }}</span>
        </div>
        <div class="flex items-center gap-2">
            <span class="w-3 h-3 bg-red-500 rounded-full"></span>
            <span class="text-sm text-gray-600 dark:text-gray-400">{{ "Urgent"|trans }}</span>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/doctor-schedule.js') }}"></script>
{% endblock %}
