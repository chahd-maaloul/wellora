{# templates/doctor/patient-queue.html.twig #}
{# Patient Queue Management Interface #}

{% extends 'layouts/app.html.twig' %}

{% block title %}Patient Queue - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('build/doctor-schedule.css') }}">
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-950">

    {# Header #}
    <div class="px-6 py-4 bg-white border-b border-gray-200 dark:bg-gray-900 dark:border-gray-800">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-4">
                <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                    <i class="mr-2 fa-solid fa-users text-wellcare-500"></i>
                    Patient Queue
                </h1>
                <div class="flex items-center gap-2">
                    <span class="px-3 py-1 text-sm font-medium rounded-full bg-wellcare-100 dark:bg-wellcare-900/30 text-wellcare-700 dark:text-wellcare-400">
                        <span x-text="queue.length"></span> patients
                    </span>
                    <span class="px-3 py-1 text-sm font-medium text-gray-600 bg-gray-100 rounded-full dark:bg-gray-800 dark:text-gray-400">
                        Waiting Room
                    </span>
                </div>
            </div>

            <div class="flex items-center gap-3">
                <button
                    @click="refreshQueue()"
                    class="px-4 py-2 text-sm font-medium text-gray-700 transition-colors bg-white border border-gray-300 rounded-lg dark:text-gray-300 dark:bg-gray-800 dark:border-gray-600 hover:bg-gray-50 dark:hover:bg-gray-700"
                >
                    <i class="mr-2 fa-solid fa-rotate"></i>
                    Refresh
                </button>
                <button
                    @click="openSettings()"
                    class="p-2 text-gray-500 transition-colors rounded-lg hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                >
                    <i class="fa-solid fa-gear"></i>
                </button>
            </div>
        </div>

        {# Queue Statistics #}
        <div class="flex items-center gap-6 pt-4 mt-4 border-t border-gray-100 dark:border-gray-800">
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 bg-red-500 rounded-full"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="urgentCount"></span> urgent
                </span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 rounded-full bg-amber-500"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="priorityCount"></span> priority
                </span>
            </div>
            <div class="flex items-center gap-2">
                <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
                <span class="text-sm text-gray-600 dark:text-gray-400">
                    <span class="font-medium text-gray-900 dark:text-white" x-text="normalCount"></span> normal
                </span>
            </div>
            <div class="flex items-center gap-4 ml-auto">
                <div class="text-sm">
                    <span class="text-gray-500 dark:text-gray-400">Avg wait time:</span>
                    <span class="ml-1 font-medium text-gray-900 dark:text-white" x-text="averageWaitTime + ' min'"></span>
                </div>
                <div class="text-sm">
                    <span class="text-gray-500 dark:text-gray-400">Next patient:</span>
                    <span class="ml-1 font-medium text-wellcare-600 dark:text-wellcare-400" x-text="nextPatient ? nextPatient.name : '-'"></span>
                </div>
            </div>
        </div>
    </div>

    {# Main Content #}
    <div class="flex h-[calc(100vh-200px)]">

        {# Patient Queue List #}
        <div class="flex-1 p-6 overflow-y-auto">
            <div class="max-w-4xl mx-auto">

                {# Filter Tabs #}
                <div class="flex items-center gap-2 mb-6">
                    <button
                        @click="filter = 'all'"
                        class="px-4 py-2 text-sm font-medium transition-colors rounded-lg"
                        :class="filter === 'all' ? 'bg-wellcare-500 text-white' : 'bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700'"
                    >
                        All <span class="ml-1" x-text="'(' + queue.length + ')'"></span>
                    </button>
                    <button
                        @click="filter = 'urgent'"
                        class="px-4 py-2 text-sm font-medium transition-colors rounded-lg"
                        :class="filter === 'urgent' ? 'bg-red-500 text-white' : 'bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700'"
                    >
                        <i class="mr-1 fa-solid fa-exclamation-circle"></i>
                        Urgent <span class="ml-1" x-text="'(' + urgentCount + ')'"></span>
                    </button>
                    <button
                        @click="filter = 'checked-in'"
                        class="px-4 py-2 text-sm font-medium transition-colors rounded-lg"
                        :class="filter === 'checked-in' ? 'bg-emerald-500 text-white' : 'bg-white dark:bg-gray-800 text-gray-600 dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700'"
                    >
                        <i class="mr-1 fa-solid fa-check-circle"></i>
                        Checked In
                    </button>
                    <div class="flex items-center gap-2 ml-auto">
                        <select
                            x-model="sortBy"
                            class="px-3 py-2 text-sm border border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-800 dark:text-white"
                        >
                            <option value="waitTime">Sort by wait time</option>
                            <option value="priority">Sort by priority</option>
                            <option value="appointmentTime">Sort by appointment time</option>
                        </select>
                    </div>
                </div>

                {# Patient Cards #}
                <div class="space-y-4">
                    <template x-for="patient in filteredQueue" :key="patient.id">
                        <div
                            class="patient-queue-card"
                            :class="{
                                'urgent': patient.priority === 'urgent',
                                'priority': patient.priority === 'priority',
                                'checked-in': patient.status === 'checked-in'
                            }"
                        >
                            <div class="flex items-start gap-4">
                                {# Priority Indicator #}
                                <div
                                    class="absolute top-0 bottom-0 left-0 w-1 h-full rounded-l-xl"
                                    :class="{
                                        'bg-red-500': patient.priority === 'urgent',
                                        'bg-amber-500': patient.priority === 'priority',
                                        'bg-blue-500': patient.priority === 'normal',
                                        'bg-emerald-500': patient.status === 'in-consultation'
                                    }"
                                ></div>

                                {# Patient Info #}
                                <div class="flex items-start flex-1 gap-4 pl-4">
                                    <div class="relative">
                                        <img
                                            :src="getAvatarUrl(patient.name)"
                                            :alt="patient.name"
                                            class="rounded-full w-14 h-14"
                                        >
                                        <template x-if="patient.status === 'checked-in'">
                                            <span class="absolute -bottom-0.5 -right-0.5 w-5 h-5 bg-emerald-500 rounded-full border-2 border-white dark:border-gray-900 flex items-center justify-center">
                                                <i class="fa-solid fa-check text-white text-[10px]"></i>
                                            </span>
                                        </template>
                                    </div>

                                    <div class="flex-1">
                                        <div class="flex items-center gap-2">
                                            <h3 class="text-lg font-semibold text-gray-900 dark:text-white" x-text="patient.name"></h3>
                                            <template x-if="patient.isNewPatient">
                                                <span class="px-2 py-0.5 text-xs font-medium bg-purple-100 text-purple-700 dark:bg-purple-900/30 dark:text-purple-400 rounded">
                                                    New
                                                </span>
                                            </template>
                                            <template x-if="patient.priority === 'urgent'">
                                                <span class="px-2 py-0.5 text-xs font-medium bg-red-100 text-red-700 dark:bg-red-900/30 dark:text-red-400 rounded">
                                                    <i class="mr-1 fa-solid fa-exclamation"></i>
                                                    Urgent
                                                </span>
                                            </template>
                                        </div>

                                        <div class="flex items-center gap-4 mt-1 text-sm text-gray-500 dark:text-gray-400">
                                            <span><i class="mr-1 fa-solid fa-id-card"></i> <span x-text="patient.id"></span></span>
                                            <span><i class="mr-1 fa-solid fa-cake-candles"></i> <span x-text="patient.age + ' yrs'"></span></span>
                                            <span><i class="mr-1 fa-solid fa-venus-mars"></i> <span x-text="patient.gender"></span></span>
                                        </div>

                                        <div class="p-3 mt-3 rounded-lg bg-gray-50 dark:bg-gray-800">
                                            <div class="flex items-start gap-2">
                                                <i class="fa-solid fa-stethoscope text-gray-400 mt-0.5"></i>
                                                <div>
                                                    <p class="text-sm font-medium text-gray-900 dark:text-white">Reason for visit</p>
                                                    <p class="text-sm text-gray-600 dark:text-gray-300" x-text="patient.reason"></p>
                                                    <template x-if="patient.symptoms.length > 0">
                                                        <div class="flex flex-wrap gap-1 mt-2">
                                                            <template x-for="symptom in patient.symptoms" :key="symptom">
                                                                <span class="px-2 py-0.5 text-xs bg-gray-200 dark:bg-gray-700 text-gray-600 dark:text-gray-300 rounded" x-text="symptom"></span>
                                                            </template>
                                                        </div>
                                                    </template>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="flex items-center gap-4 mt-3">
                                            <div class="flex items-center gap-1 text-sm">
                                                <i class="text-gray-400 fa-regular fa-clock"></i>
                                                <span
                                                    class="font-medium"
                                                    :class="{
                                                        'text-red-600 dark:text-red-400': patient.waitTime > 30,
                                                        'text-amber-600 dark:text-amber-400': patient.waitTime > 15 && patient.waitTime <= 30,
                                                        'text-gray-600 dark:text-gray-400': patient.waitTime <= 15
                                                    }"
                                                    x-text="patient.waitTime + ' min'"
                                                ></span>
                                                <span class="text-gray-500">waiting</span>
                                            </div>
                                            <div class="flex items-center gap-1 text-sm text-gray-500">
                                                <i class="fa-regular fa-calendar"></i>
                                                <span x-text="patient.appointmentTime"></span>
                                            </div>
                                            <template x-if="patient.appointmentType === 'telemedicine'">
                                                <span class="flex items-center gap-1 text-sm text-wellcare-600 dark:text-wellcare-400">
                                                    <i class="fa-solid fa-video"></i>
                                                    Telehealth
                                                </span>
                                            </template>
                                        </div>
                                    </div>
                                </div>

                                {# Actions #}
                                <div class="flex flex-col gap-2">
                                    <button
                                        @click="callPatient(patient)"
                                        class="px-4 py-2 text-sm font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600"
                                        :disabled="patient.status === 'in-consultation'"
                                    >
                                        <i class="mr-2 fa-solid fa-bell"></i>
                                        Call
                                    </button>
                                    <button
                                        @click="startConsultation(patient)"
                                        class="px-4 py-2 text-sm font-medium transition-colors rounded-lg text-wellcare-600 dark:text-wellcare-400 bg-wellcare-50 dark:bg-wellcare-900/20 hover:bg-wellcare-100 dark:hover:bg-wellcare-900/30"
                                    >
                                        <i class="mr-2 fa-solid fa-play"></i>
                                        Start
                                    </button>
                                    <div class="flex gap-2">
                                        <button
                                            @click="reschedulePatient(patient)"
                                            class="p-2 text-gray-400 transition-colors rounded-lg hover:text-gray-600 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                                            title="Reschedule"
                                        >
                                            <i class="fa-solid fa-calendar"></i>
                                        </button>
                                        <button
                                            @click="addToWaitlist(patient)"
                                            class="p-2 text-gray-400 transition-colors rounded-lg hover:text-gray-600 dark:hover:text-gray-200 hover:bg-gray-100 dark:hover:bg-gray-800"
                                            title="Add to waitlist"
                                        >
                                            <i class="fa-solid fa-list"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            {# Check-in Time #}
                            <div class="flex items-center justify-between pt-3 mt-3 text-sm border-t border-gray-100 dark:border-gray-800">
                                <div class="flex items-center gap-2 text-gray-500">
                                    <i class="fa-solid fa-sign-in-alt"></i>
                                    <span>Checked in at <span x-text="patient.checkInTime"></span></span>
                                </div>
                                <template x-if="patient.notes">
                                    <div class="flex items-center gap-2 text-amber-600 dark:text-amber-400">
                                        <i class="fa-solid fa-note-sticky"></i>
                                        <span x-text="patient.notes"></span>
                                    </div>
                                </template>
                            </div>
                        </div>
                    </template>

                    <div x-show="filteredQueue.length === 0" class="py-12 text-center">
                        <i class="mb-3 text-4xl text-gray-300 fa-solid fa-users dark:text-gray-600"></i>
                        <p class="text-gray-500 dark:text-gray-400">No patients in the queue</p>
                    </div>
                </div>
            </div>
        </div>

        {# Sidebar - Queue Summary #}
        <div class="p-4 overflow-y-auto bg-white border-l border-gray-200 w-80 dark:bg-gray-900 dark:border-gray-800">
            <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                <i class="mr-2 fa-solid fa-chart-bar text-wellcare-500"></i>
                Summary
            </h3>

            {# Wait Time Distribution #}
            <div class="mb-6">
                <h4 class="mb-3 text-sm font-medium text-gray-700 dark:text-gray-300">Wait Time Distribution</h4>
                <div class="space-y-2">
                    <div class="flex items-center gap-2">
                        <span class="w-16 text-xs text-gray-500">0-15 min</span>
                        <div class="flex-1 h-4 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-800">
                            <div
                                class="h-full rounded-full bg-emerald-500"
                                :style="{ width: (shortWaitCount / queue.length * 100) + '%' }"
                            ></div>
                        </div>
                        <span class="w-8 text-xs text-right text-gray-500" x-text="shortWaitCount"></span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="w-16 text-xs text-gray-500">15-30 min</span>
                        <div class="flex-1 h-4 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-800">
                            <div
                                class="h-full rounded-full bg-amber-500"
                                :style="{ width: (mediumWaitCount / queue.length * 100) + '%' }"
                            ></div>
                        </div>
                        <span class="w-8 text-xs text-right text-gray-500" x-text="mediumWaitCount"></span>
                    </div>
                    <div class="flex items-center gap-2">
                        <span class="w-16 text-xs text-gray-500">30+ min</span>
                        <div class="flex-1 h-4 overflow-hidden bg-gray-100 rounded-full dark:bg-gray-800">
                            <div
                                class="h-full bg-red-500 rounded-full"
                                :style="{ width: (longWaitCount / queue.length * 100) + '%' }"
                            ></div>
                        </div>
                        <span class="w-8 text-xs text-right text-gray-500" x-text="longWaitCount"></span>
                    </div>
                </div>
            </div>

            {# Appointment Types #}
            <div class="mb-6">
                <h4 class="mb-3 text-sm font-medium text-gray-700 dark:text-gray-300">Appointment Types</h4>
                <div class="space-y-2">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <span class="w-3 h-3 bg-blue-500 rounded-full"></span>
                            <span class="text-sm text-gray-600 dark:text-gray-400">Follow-up</span>
                        </div>
                        <span class="text-sm font-medium text-gray-900 dark:text-white" x-text="followUpCount"></span>
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <span class="w-3 h-3 bg-purple-500 rounded-full"></span>
                            <span class="text-sm text-gray-600 dark:text-gray-400">New Patient</span>
                        </div>
                        <span class="text-sm font-medium text-gray-900 dark:text-white" x-text="newPatientCount"></span>
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <span class="w-3 h-3 rounded-full bg-cyan-500"></span>
                            <span class="text-sm text-gray-600 dark:text-gray-400">Procedure</span>
                        </div>
                        <span class="text-sm font-medium text-gray-900 dark:text-white" x-text="procedureCount"></span>
                    </div>
                    <div class="flex items-center justify-between">
                        <div class="flex items-center gap-2">
                            <span class="w-3 h-3 rounded-full bg-wellcare-500"></span>
                            <span class="text-sm text-gray-600 dark:text-gray-400">Telehealth</span>
                        </div>
                        <span class="text-sm font-medium text-gray-900 dark:text-white" x-text="telehealthCount"></span>
                    </div>
                </div>
            </div>

            {# Quick Stats #}
            <div class="p-4 bg-gray-50 dark:bg-gray-800 rounded-xl">
                <h4 class="mb-3 text-sm font-semibold text-gray-700 dark:text-gray-300">
                    <i class="mr-1 fa-solid fa-bolt"></i>
                    Today
                </h4>
                <div class="grid grid-cols-2 gap-3">
                    <div>
                        <p class="text-2xl font-bold text-gray-900 dark:text-white" x-text="todayStats.totalPatients"></p>
                        <p class="text-xs text-gray-500">Total Patients</p>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-emerald-600" x-text="todayStats.completed"></p>
                        <p class="text-xs text-gray-500">Consultations</p>
                    </div>
                    <div>
                        <p class="text-xl font-bold text-gray-900 dark:text-white" x-text="todayStats.remaining"></p>
                        <p class="text-xs text-gray-500">Remaining</p>
                    </div>
                    <div>
                        <p class="text-xl font-bold text-amber-600" x-text="todayStats.avgWait"></p>
                        <p class="text-xs text-gray-500">Avg Wait</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('build/doctor-schedule.js') }}"></script>
{% endblock %}
