{% extends 'layouts/app.html.twig' %}

{% block title %}{{ journal.name }} - Analytics{% endblock %}

{% block body %}
<div class="page-content">
    <div class="container mx-auto px-4 py-8">
        <div class="mb-6">
            <a href="{{ path('app_doctor_analytics_dashboard') }}" class="text-wellcare-600 dark:text-wellcare-400 hover:text-wellcare-800 dark:hover:text-wellcare-300 font-medium">
                <svg class="inline w-4 h-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
                {{ 'Back to Dashboard'|trans }}
            </a>
        </div>

        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">{{ journal.name }}</h1>
                <p class="text-gray-600 dark:text-gray-400 mt-1">
                    {{ stats.startDate }} - {{ stats.endDate }} ({{ stats.entryCount }} {{ 'entries'|trans }})
                </p>
            </div>
            <a href="{{ path('app_doctor_analytics_report', {'id': journal.id}) }}" 
               class="bg-wellcare-600 text-white px-6 py-2 rounded-lg hover:bg-wellcare-700 transition-colors font-medium">
                {{ 'Generate Report'|trans }}
            </a>
        </div>

        <!-- Statistics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Average Weight'|trans }}</p>
                <p class="text-3xl font-bold text-blue-600 dark:text-blue-400">{{ stats.avgWeight }} kg</p>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">
                    {{ 'Min'|trans }}: {{ stats.minWeight }} kg | {{ 'Max'|trans }}: {{ stats.maxWeight }} kg
                </p>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Weight Change'|trans }}</p>
                <p class="text-3xl font-bold {{ stats.weightChange >= 0 ? 'text-red-600 dark:text-red-400' : 'text-green-600 dark:text-green-400' }}">
                    {{ stats.weightChange > 0 ? '+' }}{{ stats.weightChange }} kg
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{{ 'Over the journal period'|trans }}</p>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Average Blood Sugar'|trans }}</p>
                <p class="text-3xl font-bold text-purple-600 dark:text-purple-400">{{ stats.avgGlycemie }} g/l</p>
            </div>

            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Average Sleep'|trans }}</p>
                <p class="text-3xl font-bold text-green-600 dark:text-green-400">{{ stats.avgSleep }} {{ 'hours'|trans }}</p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Entries Table -->
            <div class="lg:col-span-2 bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{{ 'Journal Entries'|trans }}</h2>
                {% if entries and entries|length > 0 %}
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="bg-gray-100 dark:bg-gray-700">
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Date'|trans }}</th>
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Weight'|trans }} (kg)</th>
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Blood Sugar'|trans }} (g/l)</th>
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Blood Pressure'|trans }}</th>
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Sleep'|trans }} (h)</th>
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Symptoms'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entry in entries %}
                                    <tr class="border-b dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">{{ entry.date ? entry.date|date('d/m/Y') : '-' }}</td>
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">{{ entry.poids|default('-') }}</td>
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">{{ entry.glycemie|default('-') }}</td>
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">{{ entry.tension|default('-') }}</td>
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">{{ entry.sommeil|default('-') }}</td>
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">
                                            {% if entry.symptoms is defined and entry.symptoms|length > 0 %}
                                                <span class="text-sm text-gray-600 dark:text-gray-400">
                                                    {{ entry.symptoms|map(s => s.type)|join(', ') }}
                                                </span>
                                            {% else %}
                                                <span class="text-gray-400">-</span>
                                            {% endif %}
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-gray-500 dark:text-gray-400 text-center py-4">{{ 'No entries found in this journal.'|trans }}</p>
                {% endif %}
            </div>

            <!-- Symptoms Sidebar -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{{ 'Symptom Analysis'|trans }}</h2>
                {% if symptoms and symptoms|length > 0 %}
                    <div class="space-y-3">
                        {% for symptom in symptoms %}
                            <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                <span class="font-medium text-gray-700 dark:text-gray-300">{{ symptom.type|default('-') }}</span>
                                <span class="bg-red-100 dark:bg-red-900/30 text-red-800 dark:text-red-300 px-3 py-1 rounded-full text-sm">
                                    {{ symptom.count|default(0) }}
                                </span>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-500 dark:text-gray-400 text-center py-4">{{ 'No symptoms recorded.'|trans }}</p>
                {% endif %}

                <!-- Monthly Trends -->
                {% if monthlyStats and monthlyStats|length > 0 %}
                    <h3 class="text-lg font-bold text-gray-900 dark:text-white mt-8 mb-4">{{ 'Monthly Trends'|trans }}</h3>
                    <div class="space-y-3">
                        {% for month, data in monthlyStats %}
                            <div class="p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                <p class="font-medium text-gray-700 dark:text-gray-300 mb-2">{{ month }}</p>
                                <div class="grid grid-cols-3 gap-2 text-sm">
                                    <div>
                                        <p class="text-gray-500 dark:text-gray-400">{{ 'Weight'|trans }}</p>
                                        <p class="font-medium text-gray-900 dark:text-white">{{ data.avgWeight|default('-') }} kg</p>
                                    </div>
                                    <div>
                                        <p class="text-gray-500 dark:text-gray-400">{{ 'Sugar'|trans }}</p>
                                        <p class="font-medium text-gray-900 dark:text-white">{{ data.avgGlycemie|default('-') }} g/l</p>
                                    </div>
                                    <div>
                                        <p class="text-gray-500 dark:text-gray-400">{{ 'Sleep'|trans }}</p>
                                        <p class="font-medium text-gray-900 dark:text-white">{{ data.avgSleep|default('-') }} h</p>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
