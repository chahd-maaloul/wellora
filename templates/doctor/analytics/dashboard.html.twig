                    <div class="bg-red-100 dark:bg-red-900/30 p-3 rounded-full">
                        <svg class="w-8 h-8 text-red-600 dark:text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Recent Entries -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{{ 'Recent Entries (Last 30 Days)'|trans }}</h2>
                {% if recentEntries and recentEntries|length > 0 %}
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                                <tr class="bg-gray-100 dark:bg-gray-700">
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Date'|trans }}</th>
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Weight'|trans }}</th>
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Blood Sugar'|trans }}</th>
                                    <th class="px-4 py-2 text-left text-gray-700 dark:text-gray-300">{{ 'Sleep'|trans }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entry in recentEntries %}
                                    <tr class="border-b dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-700">
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">{{ entry.date|date('d/m/Y') }}</td>
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">{{ entry.poids|default('-') }} kg</td>
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">{{ entry.glycemie|default('-') }} g/l</td>
                                        <td class="px-4 py-2 text-gray-900 dark:text-white">{{ entry.sommeil|default('-') }} h</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-gray-500 dark:text-gray-400 text-center py-4">{{ 'No recent entries found.'|trans }}</p>
                {% endif %}
            </div>

            <!-- Common Symptoms -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
                <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{{ 'Most Common Symptoms'|trans }}</h2>
                {% if commonSymptoms and commonSymptoms|length > 0 %}
                    <div class="space-y-3">
                        {% for symptom in commonSymptoms %}
                            <div class="flex items-center justify-between p-3 bg-gray-50 dark:bg-gray-700 rounded-lg">
                                <span class="font-medium text-gray-700 dark:text-gray-300">{{ symptom.symptomName|default('-') }}</span>
                                <span class="bg-wellcare-100 dark:bg-wellcare-900/30 text-wellcare-800 dark:text-wellcare-300 px-3 py-1 rounded-full text-sm">
                                    {{ symptom.symptomCount|default(0) }} {{ 'occurrences'|trans }}
                                </span>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-gray-500 dark:text-gray-400 text-center py-4">{{ 'No symptoms recorded yet.'|trans }}</p>
                {% endif %}
            </div>
        </div>

        <!-- Journals List -->
        <div class="mt-8 bg-white dark:bg-gray-800 rounded-lg shadow-md p-6">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{{ 'Health Journals'|trans }}</h2>
            {% if journals and journals|length > 0 %}
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {% for journal in journals %}
                        <div class="border border-gray-200 dark:border-gray-700 rounded-lg p-4 hover:shadow-lg transition-shadow">
                            <h3 class="font-bold text-lg text-gray-900 dark:text-white mb-2">{{ journal.name|default('-') }}</h3>
                            <p class="text-sm text-gray-500 dark:text-gray-400 mb-2">
                                {{ journal.datedebut ? journal.datedebut|date('d/m/Y') : '-' }} - 
                                {{ journal.datefin ? journal.datefin|date('d/m/Y') : ('Ongoing'|trans) }}
                            </p>
                            <div class="flex items-center justify-between mt-4">
                                <span class="text-sm bg-green-100 dark:bg-green-900/30 text-green-800 dark:text-green-300 px-2 py-1 rounded">
                                    {{ journalCounts[journal.id]|default(0) }} {{ 'entries'|trans }}
                                </span>
                                <a href="{{ path('app_doctor_analytics_journal_detail', {'id': journal.id}) }}" 
                                   class="text-wellcare-600 dark:text-wellcare-400 hover:text-wellcare-800 dark:hover:text-wellcare-300 text-sm font-medium">
                                    {{ 'View Details'|trans }} â†’
                                </a>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-gray-500 dark:text-gray-400 text-center py-4">{{ 'No journals found.'|trans }}</p>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
