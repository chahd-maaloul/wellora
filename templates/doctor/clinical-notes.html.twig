    function addExamCard(scroll = false) {
        document.getElementById('emptyExams').style.display = 'none';
        examCounter++;
        const card = document.createElement('div');
        card.className = 'exam-card';
        card.innerHTML = `
            <div class="card-header"><h4 class="card-title">Examen</h4><button class="btn-delete" onclick="removeExam(this)"><i class="fas fa-trash"></i> Supprimer</button></div>
            <div class="form-grid">
                <div class="form-group"><label class="form-label">Type</label><select class="form-control exam-type"><option value="scanner">Scanner</option><option value="radio">Radio</option></select></div>
                <div class="form-group"><label class="form-label">Nom</label><input type="text" class="form-control exam-name"></div>
                <div class="form-group"><label class="form-label">Date demandée</label><input type="date" class="form-control exam-requested-date"></div>
                <div class="form-group"><label class="form-label">Statut</label><select class="form-control exam-status"><option value="prescrit">Prescrit</option><option value="realise">Réalisé</option></select></div>
