{% extends 'layouts/auth.html.twig' %}
{% set auth_container_class = 'max-w-5xl' %}

{% block title %}Reset Password - WellCare Connect{% endblock %}

{% block auth_heading %}{% endblock %}
{% block auth_description %}{% endblock %}

{% block auth_form %}
  <div class="grid grid-cols-1 gap-0 lg:grid-cols-12 min-h-[550px]">
    {# Left Panel - Visual & Trust Elements #}
    <div class="hidden lg:col-span-5 lg:flex lg:flex-col">
      <div class="relative flex flex-col h-full p-8 overflow-hidden bg-gradient-to-br from-wellcare-500 via-wellcare-600 to-wellcare-700 rounded-l-2xl">
        {# Animated Decorative Elements #}
        <div class="absolute top-0 right-0 w-64 h-64 -mt-20 -mr-20 rounded-full bg-white/10 blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 -mb-16 -ml-16 rounded-full bg-wellcare-400/20 blur-2xl"></div>
        
        <div class="relative z-10 flex flex-col h-full">
          {# Back Link with enhanced styling #}
          <a href="/login" class="inline-flex items-center gap-2 mb-8 transition-colors text-white/80 hover:text-white group">
            <div class="flex items-center justify-center w-8 h-8 transition-colors rounded-lg bg-white/10 group-hover:bg-white/20">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
            </div>
            <span class="text-sm font-medium">Back to sign in</span>
          </a>

          {# Main Content #}
          <div class="flex flex-col justify-center flex-1">
            <div class="flex items-center justify-center w-20 h-20 mb-6 shadow-lg bg-white/20 rounded-2xl backdrop-blur-sm">
              <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            
            <h2 class="mb-4 text-2xl font-bold text-white">Password Recovery</h2>
            <p class="text-sm leading-relaxed text-wellcare-100">
              We'll send you a secure link to reset your password. For your security, this link will expire in 24 hours.
            </p>

            {# Security Info with enhanced styling #}
            <div class="mt-8 space-y-4">
              <div class="flex items-center gap-3 p-4 transition-all duration-300 border bg-white/10 rounded-xl backdrop-blur-sm border-white/10 hover:bg-white/15">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">Secure Link</p>
                  <p class="text-xs text-wellcare-100">24-hour expiration</p>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 transition-all duration-300 border bg-white/10 rounded-xl backdrop-blur-sm border-white/10 hover:bg-white/15">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">Email Verification</p>
                  <p class="text-xs text-wellcare-100">Sent to your registered address</p>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 transition-all duration-300 border bg-white/10 rounded-xl backdrop-blur-sm border-white/10 hover:bg-white/15">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">One-Time Use</p>
                  <p class="text-xs text-wellcare-100">Link can only be used once</p>
                </div>
              </div>
            </div>
          </div>

          {# Help Text #}
          <div class="pt-8 mt-auto border-t border-white/20">
            <p class="text-xs text-center text-wellcare-100">
              Need help? Contact our support team at<br>
              <a href="mailto:support@wellora.com" class="font-medium text-white hover:underline">support@wellora.com</a>
            </p>
          </div>
        </div>
      </div>
    </div>

    {# Right Panel - Form #}
    <div class="lg:col-span-7">
      <div class="flex flex-col justify-center h-full p-8 lg:p-10">
        {# Mobile Header #}
        <div class="mb-8 text-center lg:hidden">
          <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 bg-wellcare-100 rounded-2xl">
            <svg class="w-8 h-8 text-wellcare-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Forgot password?</h1>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">No worries, we'll send you reset instructions.</p>
        </div>

        {# Desktop Header #}
        <div class="hidden mb-8 lg:block">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Forgot your password?</h1>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
            Enter your email address and we'll send you a link to reset your password.
          </p>
        </div>

        <form 
          class="space-y-6" 
          action="/forgot-password" 
          method="POST"
          x-data="{ 
            email: '',
            isSubmitting: false,
            isSuccess: false,
            touched: false,
            validateEmail(email) {
              return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
            }
          }"
          @submit.prevent="
            if (validateEmail(email)) {
              isSubmitting = true;
              setTimeout(() => { isSuccess = true; isSubmitting = false; }, 1500);
            }
          "
        >
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('forgot_password') }}">

          {# Success State with enhanced styling #}
          <div 
            x-show="isSuccess" 
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 translate-y-2"
            x-transition:enter-end="opacity-100 translate-y-0"
            class="p-6 border border-green-200 rounded-xl bg-green-50 dark:bg-green-900/20 dark:border-green-800"
            style="display: none;"
            role="alert"
          >
            <div class="flex items-start gap-4">
              <div class="flex items-center justify-center w-12 h-12 bg-green-100 rounded-full shrink-0 dark:bg-green-800">
                <svg class="w-6 h-6 text-green-600 dark:text-green-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
              <div>
                <p class="text-base font-semibold text-green-800 dark:text-green-200">Check your inbox</p>
                <p class="mt-1 text-sm text-green-700 dark:text-green-300">
                  We've sent a password reset link to <span x-text="email" class="font-medium"></span>. 
                  Please check your email and follow the instructions.
                </p>
                <p class="mt-3 text-xs text-green-600 dark:text-green-400">
                  Didn't receive it? Check your spam folder or 
                  <button type="button" @click="isSuccess = false; email = '';" class="font-medium underline hover:text-green-800 dark:hover:text-green-200">try again</button>
                </p>
              </div>
            </div>
          </div>

          {# Form Fields #}
          <div x-show="!isSuccess" class="space-y-6" x-transition:enter="transition ease-out duration-200">
            {# Email Field with enhanced validation feedback #}
            <div class="space-y-1.5">
              <label for="email" class="flex items-center gap-2 label">
                <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
                </svg>
                Email address
              </label>
              <div class="relative group">
                <input 
                  id="email" 
                  name="email" 
                  type="email" 
                  x-model="email"
                  @blur="touched = true"
                  autocomplete="email" 
                  required 
                  aria-required="true"
                  aria-describedby="email-error"
                  class="w-full transition-all duration-200 input pl-11"
                  :class="touched && email && !validateEmail(email) ? 'border-red-300 focus:border-red-500 focus:ring-red-500/20' : (email && validateEmail(email) ? 'border-green-300 focus:border-green-500 focus:ring-green-500/20' : '')"
                  placeholder="you@example.com"
                >
                <div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400 transition-colors group-focus-within:text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                  </svg>
                </div>
                {# Success indicator #}
                <div x-show="email && validateEmail(email)" class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none" style="display: none;">
                  <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
              </div>
              
              {# Validation Message #}
              <p 
                id="email-error"
                x-show="touched && email && !validateEmail(email)" 
                x-transition:enter="transition ease-out duration-200"
                x-transition:enter-start="opacity-0 -translate-y-1"
                x-transition:enter-end="opacity-100 translate-y-0"
                class="flex items-center gap-1.5 text-xs text-red-500"
                style="display: none;"
                role="alert"
              >
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Please enter a valid email address
              </p>
            </div>

            {# Info Box with enhanced styling #}
            <div class="p-5 border rounded-xl bg-wellcare-50 dark:bg-wellcare-900/20 border-wellcare-200 dark:border-wellcare-800">
              <div class="flex items-start gap-3">
                <div class="flex items-center justify-center rounded-lg w-9 h-9 bg-wellcare-100 shrink-0 dark:bg-wellcare-800">
                  <svg class="w-4 h-4 text-wellcare-600 dark:text-wellcare-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-wellcare-800 dark:text-wellcare-200">What happens next?</p>
                  <ul class="mt-2 space-y-2 text-xs text-wellcare-700 dark:text-wellcare-300">
                    <li class="flex items-center gap-2">
                      <svg class="w-3.5 h-3.5 text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                      Check your inbox for the reset link
                    </li>
                    <li class="flex items-center gap-2">
                      <svg class="w-3.5 h-3.5 text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                      Click the link to create a new password
                    </li>
                    <li class="flex items-center gap-2">
                      <svg class="w-3.5 h-3.5 text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                      </svg>
                      Link expires in 24 hours for security
                    </li>
                  </ul>
                </div>
              </div>
            </div>

            {# Submit Button with enhanced states #}
            <button 
              type="submit" 
              class="w-full btn-solid py-3 text-base font-semibold shadow-lg shadow-wellcare-500/30 hover:shadow-wellcare-500/40 transition-all duration-200 hover:-translate-y-0.5 disabled:opacity-70 disabled:cursor-not-allowed disabled:hover:translate-y-0"
              :disabled="isSubmitting || !email || (email && !validateEmail(email))"
            >
              <span x-show="!isSubmitting" class="flex items-center justify-center gap-2">
                Send reset link
                <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </span>
              <span x-show="isSubmitting" class="flex items-center justify-center gap-2" style="display: none;">
                <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Sending...
              </span>
            </button>
          </div>
        </form>

        {# Mobile Back Link #}
        <div class="mt-8 text-center lg:hidden">
          <a href="/login" class="inline-flex items-center gap-2 text-sm font-medium transition-colors text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to sign in
          </a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block auth_footer %}{% endblock %}

{% block auth_below %}
  <div class="flex flex-wrap items-center justify-center gap-2 text-xs text-gray-500 dark:text-gray-400">
    <span class="flex items-center gap-1.5 px-2 py-1 rounded-full bg-gray-100 dark:bg-gray-800">
      <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
      </svg>
      Secure & encrypted
    </span>
    <span class="hidden text-gray-300 dark:text-gray-700 sm:inline">•</span>
    <a href="/privacy" class="transition-colors hover:text-wellcare-600 dark:hover:text-wellcare-400 hover:underline">Privacy Policy</a>
    <span class="text-gray-300 dark:text-gray-700">•</span>
    <a href="/terms" class="transition-colors hover:text-wellcare-600 dark:hover:text-wellcare-400 hover:underline">Terms of Service</a>
  </div>
{% endblock %}
