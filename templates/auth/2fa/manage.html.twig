{% extends 'layouts/app.html.twig' %}

{% block title %}Gestion 2FA - WellCare Connect{% endblock %}

{% block body %}
<div class="w-full max-w-2xl mx-auto">
    <div class="mb-8 text-center">
        <div class="inline-flex items-center justify-center w-16 h-16 mb-4 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
            <svg class="w-8 h-8 text-wellcare-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
        </div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Authentification à Deux Facteurs</h1>
        <p class="mt-2 text-gray-600 dark:text-gray-400">Gérez les paramètres de sécurité de votre compte</p>
    </div>

    <div class="p-8 bg-white shadow-xl dark:bg-gray-800 rounded-2xl">
        <!-- Current Status -->
        <div class="mb-8">
            <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">État actuel</h2>
            <div class="flex items-center p-4 rounded-lg {% if is2FAEnabled %}bg-green-50 dark:bg-green-900/30 border border-green-200 dark:border-green-800{% else %}bg-gray-50 dark:bg-gray-700 border border-gray-200 dark:border-gray-600{% endif %}">
                <div class="flex-shrink-0">
                    {% if is2FAEnabled %}
                        <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                    {% else %}
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                        </svg>
                    {% endif %}
                </div>
                <div class="ml-4">
                    <p class="text-sm font-medium {% if is2FAEnabled %}text-green-800 dark:text-green-200{% else %}text-gray-700 dark:text-gray-300{% endif %}">
                        {% if is2FAEnabled %}
                            L'authentification à deux facteurs est activée
                        {% else %}
                            L'authentification à deux facteurs n'est pas activée
                        {% endif %}
                    </p>
                </div>
            </div>
        </div>

        <!-- Options -->
        <div class="space-y-4">
            {% if not is2FAEnabled %}
                <a href="{{ path('app_2fa_setup') }}" 
                   class="block p-6 transition-colors border rounded-lg bg-wellcare-50 dark:bg-wellcare-900/30 border-wellcare-200 dark:border-wellcare-800 hover:bg-wellcare-100 dark:hover:bg-wellcare-900/50">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <svg class="w-6 h-6 text-wellcare-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-medium text-wellcare-900 dark:text-wellcare-200">Activer la 2FA</h3>
                            <p class="mt-1 text-sm text-wellcare-700 dark:text-wellcare-300">
                                Configurez l'authentification à deux facteurs avec Google Authenticator ou une application similaire
                            </p>
                        </div>
                    </div>
                </a>
            {% else %}
                <!-- Backup Codes -->
                <a href="{{ path('app_2fa_backup_codes') }}" 
                   class="block p-6 transition-colors border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-600">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Codes de sauvegarde</h3>
                                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                                    {{ backupCodesCount }} codes restants
                                </p>
                            </div>
                        </div>
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </a>

                <!-- Trusted Devices -->
                <a href="{{ path('app_2fa_trusted_devices') }}" 
                   class="block p-6 transition-colors border border-gray-200 rounded-lg bg-gray-50 dark:bg-gray-700 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-600">
                    <div class="flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="flex-shrink-0">
                                <svg class="w-6 h-6 text-gray-600 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                            <div class="ml-4">
                                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Appareils de confiance</h3>
                                <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
                                    {{ trustedDevicesCount }} appareils enregistrés
                                </p>
                            </div>
                        </div>
                        <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </div>
                </a>

                <!-- Disable 2FA -->
                <a href="{{ path('app_2fa_disable') }}" 
                   class="block p-6 transition-colors border border-red-200 rounded-lg bg-red-50 dark:bg-red-900/30 dark:border-red-800 hover:bg-red-100 dark:hover:bg-red-900/50">
                    <div class="flex items-center">
                        <div class="flex-shrink-0">
                            <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin-width="2"="round" stroke d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <h3 class="text-lg font-medium text-red-900 dark:text-red-200">Désactiver la 2FA</h3>
                            <p class="mt-1 text-sm text-red-700 dark:text-red-300">
                                Désactiver l'authentification à deux facteurs (non recommandé)
                            </p>
                        </div>
                    </div>
                </a>
            {% endif %}
        </div>

        <div class="mt-8 text-center">
            <a href="{{ path('app_home') }}" class="text-sm text-gray-600 dark:text-gray-400 hover:text-wellcare-600">
                ← Retour à l'accueil
            </a>
        </div>
    </div>
</div>
{% endblock %}
