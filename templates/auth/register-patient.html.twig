{% extends 'layouts/auth.html.twig' %}
{% set auth_container_class = 'max-w-5xl' %}

{% block title %}Patient Registration - WellCare Connect{% endblock %}

{% block auth_heading %}{% endblock %}
{% block auth_description %}{% endblock %}

{% block auth_form %}
  <form 
    class="min-h-[600px]" 
    id="registration-form"
    action="{{ path('app_register_patient') }}" 
    method="POST" 
    @submit="console.log('Form submitted via @submit')"
    x-data="{
      step: 1,
      showPw: false,
      showPw2: false,
      pw: '',
      confirmPw: '',
      email: '',
      emailAvailable: null,
      emailCheckLoading: false,
      phone: '',
      phoneAvailable: null,
      phoneCheckLoading: false,
      passwordStrength: null,
      passwordValid: false,
      passwordErrors: [],
      firstName: '',
      lastName: '',
      birthdate: '',
      isSubmitting: false,
      touched: {},
      async checkEmailAvailability() {
        if (!this.validateEmail(this.email)) {
          this.emailAvailable = null;
          return;
        }
        this.emailCheckLoading = true;
        try {
          const formData = new FormData();
          formData.append('email', this.email);
          const response = await fetch('{{ path('app_check_email') }}', {
            method: 'POST',
            body: formData
          });
          const data = await response.json();
          this.emailAvailable = data.available;
        } catch (e) {
          console.error('Error checking email:', e);
        } finally {
          this.emailCheckLoading = false;
        }
      },
      async checkPhoneAvailability() {
        if (!this.phone || this.phone.length < 8) {
          this.phoneAvailable = null;
          return;
        }
        this.phoneCheckLoading = true;
        try {
          const formData = new FormData();
          formData.append('phone', this.phone);
          const response = await fetch('{{ path('app_check_phone') }}', {
            method: 'POST',
            body: formData
          });
          const data = await response.json();
          this.phoneAvailable = data.available;
        } catch (e) {
          console.error('Error checking phone:', e);
        } finally {
          this.phoneCheckLoading = false;
        }
      },
      async validatePasswordStrength() {
        if (!this.pw) {
          this.passwordStrength = null;
          this.passwordValid = false;
          this.passwordErrors = [];
          return;
        }
        try {
          const formData = new FormData();
          formData.append('password', this.pw);
          const response = await fetch('{{ path('app_validate_password') }}', {
            method: 'POST',
            body: formData
          });
          const data = await response.json();
          this.passwordStrength = data.strength;
          this.passwordValid = data.valid;
          this.passwordErrors = data.errors || [];
        } catch (e) {
          console.error('Error validating password:', e);
        }
      },
      validateEmail(email) {
        return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
      },
      validatePhone(phone) {
        return phone.length >= 8;
      },
      strength() {
        return this.passwordStrength !== null ? this.passwordStrength : this.clientStrength();
      },
      clientStrength() {
        const p = this.pw || '';
        let s = 0;
        if (p.length >= 8) s++;
        if (/[A-Z]/.test(p)) s++;
        if (/[0-9]/.test(p)) s++;
        if (/[^A-Za-z0-9]/.test(p)) s++;
        return s;
      },
      get strengthLabel() {
        const labels = ['Very Weak', 'Weak', 'Fair', 'Good', 'Strong'];
        return labels[this.strength()];
      },
      get strengthColor() {
        const colors = ['bg-red-500', 'bg-red-500', 'bg-yellow-500', 'bg-wellcare-500', 'bg-green-500'];
        return colors[this.strength()];
      },
      get strengthTextColor() {
        const colors = ['text-red-500', 'text-red-500', 'text-yellow-600', 'text-wellcare-600', 'text-green-600'];
        return colors[this.strength()];
      },
      pct() { return Math.round(((this.step - 1) / 2) * 100); },
      get canProceed() {
        if (this.step === 1) {
          const hasRequired = this.firstName && this.lastName && this.email && this.birthdate && this.validateEmail(this.email);
          const isEmailAvailable = this.emailAvailable === true || this.emailAvailable === null;
          return hasRequired && isEmailAvailable;
        }
        if (this.step === 2) {
          // Phone is optional, but if provided must be available
          if (this.phone && this.phone.length >= 8) {
            return this.phoneAvailable === true;
          }
          return true;
        }
        if (this.step === 3) {
          const isPasswordValid = this.passwordValid !== false; // Allow if not validated yet
          const passwordsMatch = this.pw && this.confirmPw && this.pw === this.confirmPw;
          const hasStrength = this.strength() >= 2;
          return this.pw && this.confirmPw && passwordsMatch && hasStrength && isPasswordValid;
        }
        return false;
      },
      get passwordsMatch() {
        return this.confirmPw && this.pw === this.confirmPw;
      },
      goNext() {
        if (this.canProceed && this.step < 3) {
          this.step++;
          this.touched = {};
        }
      },
      goBack() {
        if (this.step > 1) {
          this.step--;
          this.touched = {};
        }
      }
    }"
    @submit="if (!canProceed) { event.preventDefault(); alert('Veuillez remplir tous les champs requis correctement.'); } else { isSubmitting = true; }"
  >
    <input type="hidden" name="_submit" value="1">

    {# Server-side Validation Errors Display #}
    {% if registrationForm is defined and registrationForm.vars.errors|length > 0 %}
      <div class="p-4 mb-4 text-sm text-red-700 border border-red-200 rounded-lg bg-red-50 dark:bg-red-900/50 dark:text-red-300 dark:border-red-700 flash-alert">
        <div class="flex items-start gap-3">
          <div class="flex-shrink-0 mt-0.5">
            <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <div class="flex-1">
            <span class="font-semibold">Erreurs de validation:</span>
            <ul class="mt-2 ml-4 list-disc list-inside">
              {% for error in registrationForm.vars.errors %}
                <li>{{ error.message }}</li>
              {% endfor %}
            </ul>
          </div>
          <button @click="$event.target.closest('.flash-alert').style.opacity='0'; $event.target.closest('.flash-alert').style.transform='translateX(100%)'; setTimeout(() => $event.target.closest('.flash-alert').remove(), 500)" class="flex-shrink-0 ml-2 text-current transition-opacity opacity-60 hover:opacity-100">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
      </div>
    {% endif %}

    <div class="grid grid-cols-1 gap-0 lg:grid-cols-12">
      {# Left Panel - Progress & Trust Elements #}
      <div class="hidden lg:col-span-4 lg:flex lg:flex-col">
        <div class="relative flex flex-col h-full p-6 overflow-hidden bg-gradient-to-br from-wellcare-500 via-wellcare-600 to-wellcare-700 rounded-l-2xl">
          {# Decorative circles with animation #}
          <div class="absolute top-0 right-0 w-40 h-40 -mt-10 -mr-10 rounded-full bg-white/10 blur-2xl animate-pulse"></div>
          <div class="absolute bottom-0 left-0 w-32 h-32 -mb-8 -ml-8 rounded-full bg-wellcare-400/20 blur-xl"></div>
          
          <div class="relative z-10">
            <h3 class="text-xl font-bold text-white">Create Your Account</h3>
            <p class="mt-2 text-sm text-wellcare-100">Join our healthcare platform and take control of your health journey with secure, personalized care.</p>
          </div>

          {# Progress Steps with enhanced styling #}
          <div class="relative z-10 flex flex-col gap-3 mt-8">
            {# Step 1 #}
            <div class="flex items-center gap-3 transition-opacity duration-300" :class="step >= 1 ? 'opacity-100' : 'opacity-50'">
              <div 
                class="flex items-center justify-center w-10 h-10 transition-all duration-300 border-2 rounded-full shadow-lg"
                :class="step === 1 ? 'bg-white border-white text-wellcare-600 shadow-white/30' : (step > 1 ? 'bg-green-400 border-green-400 text-white' : 'border-white/50 text-white')"
              >
                <svg x-show="step > 1" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display: none;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span x-show="step <= 1" class="text-sm font-semibold">1</span>
              </div>
              <div class="flex-1">
                <p class="text-sm font-semibold text-white">Personal</p>
                <p class="text-xs text-wellcare-100">Basic information</p>
              </div>
            </div>

            {# Connector #}
            <div class="ml-5 w-0.5 h-8 bg-white/30 rounded-full overflow-hidden">
              <div class="w-full transition-all duration-500 bg-white" :style="`height: ${step > 1 ? '100%' : '0%'}`"></div>
            </div>

            {# Step 2 #}
            <div class="flex items-center gap-3 transition-opacity duration-300" :class="step >= 2 ? 'opacity-100' : 'opacity-50'">
              <div 
                class="flex items-center justify-center w-10 h-10 transition-all duration-300 border-2 rounded-full shadow-lg"
                :class="step === 2 ? 'bg-white border-white text-wellcare-600 shadow-white/30' : (step > 2 ? 'bg-green-400 border-green-400 text-white' : 'border-white/50 text-white')"
              >
                <svg x-show="step > 2" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display: none;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                <span x-show="step <= 2" class="text-sm font-semibold">2</span>
              </div>
              <div class="flex-1">
                <p class="text-sm font-semibold text-white">Contact</p>
                <p class="text-xs text-wellcare-100">Phone & address</p>
              </div>
            </div>

            {# Connector #}
            <div class="ml-5 w-0.5 h-8 bg-white/30 rounded-full overflow-hidden">
              <div class="w-full transition-all duration-500 bg-white" :style="`height: ${step > 2 ? '100%' : '0%'}`"></div>
            </div>

            {# Step 3 #}
            <div class="flex items-center gap-3 transition-opacity duration-300" :class="step >= 3 ? 'opacity-100' : 'opacity-50'">
              <div 
                class="flex items-center justify-center w-10 h-10 transition-all duration-300 border-2 rounded-full shadow-lg"
                :class="step === 3 ? 'bg-white border-white text-wellcare-600 shadow-white/30' : 'border-white/50 text-white'"
              >
                <span class="text-sm font-semibold">3</span>
              </div>
              <div class="flex-1">
                <p class="text-sm font-semibold text-white">Security</p>
                <p class="text-xs text-wellcare-100">Password setup</p>
              </div>
            </div>
          </div>

          {# Trust indicators #}
          <div class="relative z-10 pt-6 mt-auto space-y-3">
            <div class="flex items-center gap-2 text-xs text-wellcare-100">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              <span>Your data is securely encrypted</span>
            </div>
            <div class="flex items-center gap-2 text-xs text-wellcare-100">
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <span>HIPAA compliant platform</span>
            </div>
          </div>
        </div>
      </div>

      {# Right Panel - Form Content #}
      <div class="lg:col-span-8">
        <div class="p-6 lg:p-10">
          {# Mobile Header #}
          <div class="mb-6 text-center lg:hidden">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Create your account</h1>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              Already have an account? 
              <a href="{{ path('app_login') }}" class="font-medium text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300">Sign in</a>
            </p>
          </div>

          {# Desktop Header #}
          <div class="hidden mb-8 lg:block">
            <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Register as a patient</h1>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              Already have an account?
              <a href="{{ path('app_login') }}" class="font-medium text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">Sign in</a>.
            </p>
          </div>

          {# Mobile Progress Bar with enhanced styling #}
          <div class="mb-8 space-y-3 lg:hidden">
            <div class="flex items-center justify-between text-xs font-semibold text-gray-500 dark:text-gray-400">
              <span>Step <span x-text="step"></span> of 3</span>
              <span class="text-wellcare-600 dark:text-wellcare-400" x-text="`${pct()}%`"></span>
            </div>
            <div class="h-2.5 w-full overflow-hidden rounded-full bg-gray-100 dark:bg-gray-800 shadow-inner">
              <div class="h-full transition-all duration-500 ease-out rounded-full bg-gradient-to-r from-wellcare-500 to-wellcare-600" :style="`width: ${pct()}%`"></div>
            </div>
            <div class="flex items-center justify-between text-[11px] text-gray-500 dark:text-gray-400">
              <span :class="step === 1 ? 'text-wellcare-600 dark:text-wellcare-400 font-semibold' : ''">Personal</span>
              <span :class="step === 2 ? 'text-wellcare-600 dark:text-wellcare-400 font-semibold' : ''">Contact</span>
              <span :class="step === 3 ? 'text-wellcare-600 dark:text-wellcare-400 font-semibold' : ''">Security</span>
            </div>
          </div>

          {# Step 1: Personal Information with enhanced validation #}
          <div x-show="step === 1" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 translate-x-4" x-transition:enter-end="opacity-100 translate-x-0" class="space-y-5">
            <div class="flex items-center gap-2 mb-4">
              <div class="p-2 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                <svg class="w-5 h-5 text-wellcare-600 dark:text-wellcare-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
              <h3 class="text-base font-semibold text-gray-900 dark:text-gray-100">Personal Information</h3>
            </div>

            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div class="space-y-1.5">
                <label for="first-name" class="label">First name <span class="text-red-500">*</span></label>
                <input 
                  id="first-name" 
                  name="firstName" 
                  type="text" 
                  x-model="firstName"
                  required 
                  class="input"
                  placeholder="John"
                  @blur="touched.firstName = true"
                >
              </div>
              <div class="space-y-1.5">
                <label for="last-name" class="label">Last name <span class="text-red-500">*</span></label>
                <input 
                  id="last-name" 
                  name="lastName" 
                  type="text" 
                  x-model="lastName"
                  required 
                  class="input"
                  placeholder="Doe"
                  @blur="touched.lastName = true"
                >
              </div>
            </div>

            <div class="space-y-1.5">
              <label for="email" class="label">Email address <span class="text-red-500">*</span></label>
              <div class="relative">
                <input 
                  id="email" 
                  name="email" 
                  type="email" 
                  x-model="email"
                  required 
                  class="input"
                  :class="email && !validateEmail(email) ? 'border-red-300 focus:border-red-500 focus:ring-red-500/20' : (email && validateEmail(email) && emailAvailable === false ? 'border-red-300 focus:border-red-500 focus:ring-red-500/20' : (email && validateEmail(email) && emailAvailable === true ? 'border-green-300 focus:border-green-500 focus:ring-green-500/20' : ''))"
                  placeholder="you@example.com"
                  @blur="touched.email = true; checkEmailAvailability()"
                  @input="checkEmailAvailability()"
                >
                <div x-show="email && validateEmail(email) && emailCheckLoading" class="absolute inset-y-0 right-0 flex items-center pr-3" style="display: none;">
                  <svg class="w-5 h-5 text-gray-400 animate-spin" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                  </svg>
                </div>
                <div x-show="email && validateEmail(email) && emailAvailable === true && !emailCheckLoading" class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none" style="display: none;">
                  <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div x-show="email && validateEmail(email) && emailAvailable === false && !emailCheckLoading" class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none" style="display: none;">
                  <svg class="w-5 h-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                  </svg>
                </div>
              </div>
              <p x-show="email && !validateEmail(email)" class="flex items-center gap-1 text-xs text-red-500" style="display: none;">
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Please enter a valid email address
              </p>
              <p x-show="email && validateEmail(email) && emailAvailable === false" class="flex items-center gap-1 text-xs text-red-500" style="display: none;">
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                This email is already registered
              </p>
              <p class="helper-text">We'll use this for account access and important health notifications.</p>
            </div>

            <div class="space-y-1.5">
              <label for="birthdate" class="label">Date of birth <span class="text-red-500">*</span></label>
              <input 
                id="birthdate" 
                name="birthdate" 
                type="text" 
                required 
                class="relative z-10 input"
                placeholder="YYYY-MM-DD"
                x-model="birthdate"
                @blur="touched.birthdate = true"
                pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}"
              >
              <p class="helper-text">Format: 1990-05-15</p>
            </div>
          </div>

          {# Step 2: Contact Information #}
          <div x-show="step === 2" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 translate-x-4" x-transition:enter-end="opacity-100 translate-x-0" class="space-y-5" style="display: none;">
            <div class="flex items-center gap-2 mb-4">
              <div class="p-2 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                <svg class="w-5 h-5 text-wellcare-600 dark:text-wellcare-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <h3 class="text-base font-semibold text-gray-900 dark:text-gray-100">Contact Information</h3>
            </div>

            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div class="space-y-1.5">
                <label for="phone" class="label">Phone number</label>
                <div class="relative">
                  <input 
                    id="phone" 
                    name="phone" 
                    type="tel" 
                    x-model="phone"
                    class="input"
                    :class="phone && !validatePhone(phone) ? 'border-red-300 focus:border-red-500 focus:ring-red-500/20' : (phone && validatePhone(phone) && phoneAvailable === false ? 'border-red-300 focus:border-red-500 focus:ring-red-500/20' : (phone && validatePhone(phone) && phoneAvailable === true ? 'border-green-300 focus:border-green-500 focus:ring-green-500/20' : ''))"
                    placeholder="+216 XX XXX XXX"
                    @blur="touched.phone = true; checkPhoneAvailability()"
                    @input="checkPhoneAvailability()"
                  >
                  <div x-show="phone && validatePhone(phone) && phoneCheckLoading" class="absolute inset-y-0 right-0 flex items-center pr-3" style="display: none;">
                    <svg class="w-5 h-5 text-gray-400 animate-spin" fill="none" viewBox="0 0 24 24">
                      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                    </svg>
                  </div>
                  <div x-show="phone && validatePhone(phone) && phoneAvailable === true && !phoneCheckLoading" class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none" style="display: none;">
                    <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div x-show="phone && validatePhone(phone) && phoneAvailable === false && !phoneCheckLoading" class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none" style="display: none;">
                    <svg class="w-5 h-5 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                  </div>
                </div>
                <p x-show="phone && !validatePhone(phone)" class="flex items-center gap-1 text-xs text-red-500" style="display: none;">
                  <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Please enter a valid phone number
                </p>
                <p x-show="phone && validatePhone(phone) && phoneAvailable === false" class="flex items-center gap-1 text-xs text-red-500" style="display: none;">
                  <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  This phone number is already registered
                </p>
              </div>
              <div class="space-y-1.5">
                <label for="address" class="label">Address</label>
                <input 
                  id="address" 
                  name="address" 
                  type="text" 
                  class="input"
                  placeholder="Your address"
                >
              </div>
            </div>

            <div class="p-4 border rounded-xl bg-wellcare-50 dark:bg-wellcare-900/20 border-wellcare-200 dark:border-wellcare-800">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-wellcare-600 dark:text-wellcare-400 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-gray-100">Why do we need this?</p>
                  <p class="mt-1 text-xs text-gray-600 dark:text-gray-400">Your contact information helps us reach you for appointment reminders and important health updates.</p>
                </div>
              </div>
            </div>
          </div>

          {# Step 3: Account Security with enhanced password strength #}
          <div x-show="step === 3" x-transition:enter="transition ease-out duration-300" x-transition:enter-start="opacity-0 translate-x-4" x-transition:enter-end="opacity-100 translate-x-0" class="space-y-5" style="display: none;">
            <div class="flex items-center gap-2 mb-4">
              <div class="p-2 rounded-lg bg-wellcare-100 dark:bg-wellcare-900/30">
                <svg class="w-5 h-5 text-wellcare-600 dark:text-wellcare-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              </div>
              <h3 class="text-base font-semibold text-gray-900 dark:text-gray-100">Account Security</h3>
            </div>

            <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
              <div class="space-y-1.5">
                <label for="password" class="label">Password <span class="text-red-500">*</span></label>
                <div class="relative">
                  <input 
                    id="password" 
                    name="plainPassword[first]" 
                    :type="showPw ? 'text' : 'password'" 
                    required 
                    class="pr-20 input"
                    :class="pw && passwordValid === false ? 'border-red-300 focus:border-red-500 focus:ring-red-500/20' : (pw && passwordValid === true ? 'border-green-300 focus:border-green-500 focus:ring-green-500/20' : '')"
                    placeholder="••••••••"
                    x-model="pw"
                    @input="validatePasswordStrength()"
                  >
                  <button 
                    type="button" 
                    class="absolute inset-y-0 right-0 inline-flex items-center px-3 text-xs font-medium text-gray-500 transition-colors hover:text-wellcare-600 dark:text-gray-400 dark:hover:text-wellcare-300"
                    @click="showPw = !showPw"
                  >
                    <span x-text="showPw ? 'Hide' : 'Show'"></span>
                  </button>
                </div>
                <template x-if="pw && passwordErrors && passwordErrors.length > 0">
                  <div class="mt-2 space-y-1">
                    <template x-for="error in passwordErrors" :key="error">
                      <p class="flex items-center gap-1 text-xs text-red-500">
                        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <span x-text="error"></span>
                      </p>
                    </template>
                  </div>
                </template>
              </div>
              <div class="space-y-1.5">
                <label for="confirm-password" class="label">Confirm password <span class="text-red-500">*</span></label>
                <div class="relative">
                  <input 
                    id="confirm-password" 
                    name="plainPassword[second]" 
                    :type="showPw2 ? 'text' : 'password'" 
                    required 
                    class="pr-20 input"
                    :class="confirmPw && !passwordsMatch ? 'border-red-300 focus:border-red-500 focus:ring-red-500/20' : (confirmPw && passwordsMatch ? 'border-green-300 focus:border-green-500 focus:ring-green-500/20' : '')"
                    placeholder="••••••••"
                    x-model="confirmPw"
                  >
                  <button 
                    type="button" 
                    class="absolute inset-y-0 right-0 inline-flex items-center px-3 text-xs font-medium text-gray-500 transition-colors hover:text-wellcare-600 dark:text-gray-400 dark:hover:text-wellcare-300"
                    @click="showPw2 = !showPw2"
                  >
                    <span x-text="showPw2 ? 'Hide' : 'Show'"></span>
                  </button>
                </div>
                <p x-show="confirmPw && !passwordsMatch" class="flex items-center gap-1 text-xs text-red-500" style="display: none;">
                  <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                  Passwords do not match
                </p>
                <p x-show="confirmPw && passwordsMatch" class="flex items-center gap-1 text-xs text-green-600" style="display: none;">
                  <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  Passwords match
                </p>
              </div>
            </div>

            {# Enhanced Password Strength Meter #}
            <div class="p-5 space-y-3 border border-gray-100 rounded-xl bg-gray-50 dark:bg-gray-900/50 dark:border-gray-800">
              <div class="flex items-center justify-between">
                <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Password strength</span>
                <span 
                  class="text-sm font-semibold"
                  :class="strengthTextColor"
                  x-text="pw ? strengthLabel : 'Not entered'"
                ></span>
              </div>
              <div class="h-2.5 w-full overflow-hidden rounded-full bg-gray-200 dark:bg-gray-700 shadow-inner">
                <div
                  class="h-full transition-all duration-500 ease-out rounded-full"
                  :class="strengthColor"
                  :style="`width: ${Math.min(100, (strength()/4)*100)}%`"
                ></div>
              </div>
              <ul class="grid grid-cols-2 gap-2 text-xs text-gray-500 dark:text-gray-400">
                <li class="flex items-center gap-1.5 transition-colors duration-200" :class="pw.length >= 8 ? 'text-green-600 dark:text-green-400' : ''">
                  <svg x-show="pw.length >= 8" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span x-show="pw.length < 8" class="h-3.5 w-3.5 rounded-full border border-gray-300 dark:border-gray-600"></span>
                  8+ characters
                </li>
                <li class="flex items-center gap-1.5 transition-colors duration-200" :class="/[A-Z]/.test(pw) ? 'text-green-600 dark:text-green-400' : ''">
                  <svg x-show="/[A-Z]/.test(pw)" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span x-show="!/[A-Z]/.test(pw)" class="h-3.5 w-3.5 rounded-full border border-gray-300 dark:border-gray-600"></span>
                  Uppercase letter
                </li>
                <li class="flex items-center gap-1.5 transition-colors duration-200" :class="/[0-9]/.test(pw) ? 'text-green-600 dark:text-green-400' : ''">
                  <svg x-show="/[0-9]/.test(pw)" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span x-show="!/[0-9]/.test(pw)" class="h-3.5 w-3.5 rounded-full border border-gray-300 dark:border-gray-600"></span>
                  Number
                </li>
                <li class="flex items-center gap-1.5 transition-colors duration-200" :class="/[^A-Za-z0-9]/.test(pw) ? 'text-green-600 dark:text-green-400' : ''">
                  <svg x-show="/[^A-Za-z0-9]/.test(pw)" class="h-3.5 w-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span x-show="!/[^A-Za-z0-9]/.test(pw)" class="h-3.5 w-3.5 rounded-full border border-gray-300 dark:border-gray-600"></span>
                  Special character
                </li>
              </ul>
            </div>

            {# Terms agreement #}
            <div class="flex items-start gap-3 p-4 border rounded-xl bg-wellcare-50 dark:bg-wellcare-900/20 border-wellcare-200 dark:border-wellcare-800">
              <input id="terms" name="agreeTerms" type="checkbox" required class="w-4 h-4 mt-0.5 text-wellcare-600 border-gray-300 rounded focus:ring-wellcare-500">
              <label for="terms" class="text-xs text-gray-600 dark:text-gray-400">
                I agree to the <a href="/terms" class="text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">Terms of Service</a> and <a href="/privacy" class="text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">Privacy Policy</a>. I understand that my health information will be handled in accordance with HIPAA regulations.
              </label>
            </div>

            {# Captcha Verification #}
            {% include 'components/captcha.html.twig' with {
              input_name: 'captcha_code',
              container_class: 'mt-4'
            } %}
          </div>

          {# Navigation Buttons with enhanced styling #}
          <div class="flex items-center justify-between pt-6 mt-8 border-t border-gray-100 dark:border-gray-800">
            <button 
              type="button" 
              @click="goBack()" 
              x-show="step > 1"
              class="flex items-center gap-2 btn-outline"
              style="display: none;"
            >
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
              Back
            </button>
            <div x-show="step === 1" class="w-20"></div>

            <button 
              type="button" 
              @click="goNext()" 
              x-show="step < 3"
              class="flex items-center gap-2 ml-auto btn-solid"
              :disabled="!canProceed"
              :class="!canProceed ? 'opacity-50 cursor-not-allowed' : ''"
            >
              Next
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            </button>

            <button 
              type="submit" 
              name="_submit"
              x-show="step === 3"
              class="flex items-center gap-2 ml-auto btn-solid"
              :disabled="isSubmitting || !canProceed"
              :class="(isSubmitting || !canProceed) ? 'opacity-50 cursor-not-allowed' : ''"
            >
              <span x-show="!isSubmitting" class="flex items-center gap-2">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Create account
              </span>
              <span x-show="isSubmitting" class="flex items-center gap-2" style="display: none;">
                <svg class="w-4 h-4 animate-spin" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Creating...
              </span>
            </button>
          </div>
        </div>
      </div>
    </div>
  </form>
{% endblock %}

{% block auth_footer %}
  <div class="flex flex-col items-center justify-center gap-2 text-sm">
    <span class="text-gray-600 dark:text-gray-400">Already have an account?</span>
    <a href="/login" class="font-medium text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">
      Sign in to your account
    </a>
  </div>
{% endblock %}

