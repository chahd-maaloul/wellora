{% extends 'layouts/auth.html.twig' %}
{% set auth_container_class = 'max-w-5xl' %}

{% block title %}Sign In - WellCare Connect{% endblock %}

{% block auth_heading %}{% endblock %}
{% block auth_description %}{% endblock %}

{% block auth_form %}
  <div class="grid grid-cols-1 gap-0 lg:grid-cols-12 min-h-[600px]">
    {# Left Panel - Visual & Trust Elements #}
    <div class="hidden lg:col-span-5 lg:flex lg:flex-col">
      <div class="relative flex flex-col h-full p-8 overflow-hidden bg-gradient-to-br from-wellcare-500 via-wellcare-600 to-wellcare-700 rounded-l-2xl">
        {# Animated Decorative Elements #}
        <div class="absolute top-0 right-0 w-64 h-64 -mt-20 -mr-20 rounded-full bg-white/10 blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 -mb-16 -ml-16 rounded-full bg-wellcare-400/20 blur-2xl"></div>
        <div class="absolute -translate-x-1/2 -translate-y-1/2 rounded-full w-80 h-80 top-1/2 left-1/2 bg-white/5 blur-3xl"></div>
        
        <div class="relative z-10 flex flex-col h-full">
          {# Logo Area with subtle animation #}
          <div class="flex items-center gap-3 mb-8" x-data="{ hovered: false }" @mouseenter="hovered = true" @mouseleave="hovered = false">
            <div class="flex items-center justify-center w-12 h-12 transition-transform duration-300 bg-white/20 rounded-xl backdrop-blur-sm" :class="hovered ? 'scale-110' : ''">
              <img src="{{ asset('build/images/logo-icon.svg') }}" alt="Wellora" class="w-8 h-8">
            </div>
            <span class="text-xl font-bold text-white">Wellora</span>
          </div>

          {# Main Content #}
          <div class="flex-1">
            <h2 class="mb-4 text-3xl font-bold leading-tight text-white">Welcome back to your health journey</h2>
            <p class="mb-8 text-sm leading-relaxed text-wellcare-100">
              Access your health records, manage appointments, and connect with your healthcare providers—all in one secure, HIPAA-compliant platform.
            </p>

            {# Trust Indicators with enhanced styling #}
            <div class="space-y-4">
              <div class="flex items-center gap-3 p-4 bg-white/10 rounded-xl backdrop-blur-sm border border-white/10 transition-all duration-300 hover:bg-white/15 hover:scale-[1.02]">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">HIPAA Compliant</p>
                  <p class="text-xs text-wellcare-100">Your data is encrypted & secure</p>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 bg-white/10 rounded-xl backdrop-blur-sm border border-white/10 transition-all duration-300 hover:bg-white/15 hover:scale-[1.02]">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">Secure Authentication</p>
                  <p class="text-xs text-wellcare-100">Multi-factor authentication available</p>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 bg-white/10 rounded-xl backdrop-blur-sm border border-white/10 transition-all duration-300 hover:bg-white/15 hover:scale-[1.02]">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">Trusted by Thousands</p>
                  <p class="text-xs text-wellcare-100">Patients & healthcare providers</p>
                </div>
              </div>
            </div>
          </div>

          {# Bottom Stats with enhanced styling #}
          <div class="pt-8 mt-auto border-t border-white/20">
            <div class="grid grid-cols-3 gap-4 text-center">
              <div class="p-3 rounded-lg bg-white/5">
                <p class="text-2xl font-bold text-white">50K+</p>
                <p class="text-xs text-wellcare-100">Active Users</p>
              </div>
              <div class="p-3 rounded-lg bg-white/5">
                <p class="text-2xl font-bold text-white">1M+</p>
                <p class="text-xs text-wellcare-100">Appointments</p>
              </div>
              <div class="p-3 rounded-lg bg-white/5">
                <p class="text-2xl font-bold text-white">99.9%</p>
                <p class="text-xs text-wellcare-100">Uptime</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {# Right Panel - Login Form #}
    <div class="lg:col-span-7">
      <div class="flex flex-col justify-center h-full p-8 lg:p-10">
        {# Mobile Header #}
        <div class="mb-8 text-center lg:hidden">
          <div class="flex items-center justify-center gap-3 mb-4">
            <div class="flex items-center justify-center w-12 h-12 bg-wellcare-100 rounded-xl">
              <img src="{{ asset('build/images/logo-icon.svg') }}" alt="Wellora" class="w-8 h-8">
            </div>
            <span class="text-xl font-bold text-gray-900 dark:text-white">Wellora</span>
          </div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Welcome back</h1>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Sign in to access your health dashboard</p>
        </div>

        {# Desktop Header #}
        <div class="hidden mb-8 lg:block">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Sign in to your account</h1>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
            Don't have an account? 
            <a href="/register-patient" class="font-medium transition-colors text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">Create one now</a>
          </p>
        </div>

        <form class="space-y-5" action="/login" method="POST" x-data="{ 
          showPw: false, 
          email: '',
          password: '',
          isSubmitting: false,
          touched: { email: false, password: false },
          validateEmail(email) {
            return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);
          },
          get isEmailValid() {
            return !this.touched.email || this.validateEmail(this.email) || this.email === '';
          },
          get isEmailInvalid() {
            return this.touched.email && this.email !== '' && !this.validateEmail(this.email);
          }
        }" @submit.prevent="if (validateEmail(email) && password) { isSubmitting = true; $el.submit(); }">
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

          {# Email Field with enhanced validation feedback #}
          <div class="space-y-1.5">
            <label for="email" class="flex items-center gap-2 label">
              <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
              Email address
            </label>
            <div class="relative group">
              <input 
                id="email" 
                name="email" 
                type="email" 
                x-model="email"
                @blur="touched.email = true"
                autocomplete="email" 
                required 
                aria-required="true"
                aria-invalid="false"
                :aria-invalid="isEmailInvalid ? 'true' : 'false'"
                aria-describedby="email-error"
                class="w-full transition-all duration-200 input pl-11"
                :class="isEmailInvalid ? 'border-red-300 focus:border-red-500 focus:ring-red-500/20' : (email && validateEmail(email) ? 'border-green-300 focus:border-green-500 focus:ring-green-500/20' : '')"
                placeholder="you@example.com"
              >
              <div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400 transition-colors group-focus-within:text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
              {# Success indicator #}
              <div x-show="email && validateEmail(email)" class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none" style="display: none;">
                <svg class="w-5 h-5 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
              </div>
            </div>
            <p 
              id="email-error"
              x-show="isEmailInvalid" 
              x-transition:enter="transition ease-out duration-200"
              x-transition:enter-start="opacity-0 -translate-y-1"
              x-transition:enter-end="opacity-100 translate-y-0"
              class="flex items-center gap-1.5 text-xs text-red-500"
              style="display: none;"
              role="alert"
            >
              <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Please enter a valid email address
            </p>
          </div>

          {# Password Field with enhanced visibility toggle #}
          <div class="space-y-1.5">
            <label for="password" class="flex items-center gap-2 label">
              <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              Password
            </label>
            <div class="relative group">
              <input
                id="password"
                name="password"
                x-model="password"
                :type="showPw ? 'text' : 'password'"
                autocomplete="current-password"
                required
                aria-required="true"
                class="w-full transition-all duration-200 pr-28 input pl-11"
                placeholder="••••••••"
                @blur="touched.password = true"
              >
              <div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400 transition-colors group-focus-within:text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                </svg>
              </div>
              <button
                type="button"
                class="absolute inset-y-0 right-0 inline-flex items-center gap-1.5 px-3 text-xs font-medium text-gray-500 hover:text-wellcare-600 dark:text-gray-400 dark:hover:text-wellcare-300 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-wellcare-500 rounded-r-xl"
                @click="showPw = !showPw"
                :aria-label="showPw ? 'Hide password' : 'Show password'"
              >
                <svg x-show="!showPw" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                <svg x-show="showPw" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display: none;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                </svg>
                <span x-text="showPw ? 'Hide' : 'Show'"></span>
              </button>
            </div>
          </div>

          {# Remember Me & Forgot Password with enhanced styling #}
          <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <label class="inline-flex items-center gap-2.5 text-sm text-gray-700 dark:text-gray-300 cursor-pointer group">
              <input id="remember-me" name="remember-me" type="checkbox" class="w-4 h-4 transition-colors border-gray-300 rounded cursor-pointer text-wellcare-600 focus:ring-wellcare-500 focus:ring-offset-0">
              <span class="transition-colors group-hover:text-gray-900 dark:group-hover:text-gray-100">Remember me</span>
            </label>

            <a href="/forgot-password" class="text-sm font-medium transition-colors text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">
              Forgot password?
            </a>
          </div>

          {# Submit Button with enhanced states #}
          <button 
            type="submit" 
            class="w-full btn-solid py-3 text-base font-semibold shadow-lg shadow-wellcare-500/30 hover:shadow-wellcare-500/40 transition-all duration-200 hover:-translate-y-0.5 disabled:opacity-70 disabled:cursor-not-allowed disabled:hover:translate-y-0"
            :disabled="isSubmitting || !email || !password || !validateEmail(email)"
          >
            <span x-show="!isSubmitting" class="flex items-center justify-center gap-2">
              Sign in
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
              </svg>
            </span>
            <span x-show="isSubmitting" class="flex items-center justify-center gap-2" style="display: none;">
              <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Signing in...
            </span>
          </button>

          {# Divider with enhanced styling #}
          <div class="relative">
            <div class="absolute inset-0 flex items-center">
              <div class="w-full border-t border-gray-200 dark:border-gray-700"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-4 text-gray-500 bg-white dark:bg-gray-900 dark:text-gray-400">Or continue with</span>
            </div>
          </div>

          {# Social Login with enhanced hover effects #}
          <div class="grid gap-3 sm:grid-cols-2">
            <button type="button" class="flex items-center justify-center gap-3 px-4 py-2.5 border border-gray-300 dark:border-gray-700 rounded-xl text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-200 hover:shadow-md hover:-translate-y-0.5 focus:outline-none focus-visible:ring-2 focus-visible:ring-wellcare-500">
              <svg class="w-5 h-5" viewBox="0 0 24 24">
                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              Google
            </button>
            <button type="button" class="flex items-center justify-center gap-3 px-4 py-2.5 border border-gray-300 dark:border-gray-700 rounded-xl text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 transition-all duration-200 hover:shadow-md hover:-translate-y-0.5 focus:outline-none focus-visible:ring-2 focus-visible:ring-wellcare-500">
              <svg class="w-5 h-5" viewBox="0 0 21 21">
                <path fill="#f25022" d="M1 1h9v9H1z"/>
                <path fill="#00a4ef" d="M1 11h9v9H1z"/>
                <path fill="#7fba00" d="M11 1h9v9h-9z"/>
                <path fill="#ffb900" d="M11 11h9v9h-9z"/>
              </svg>
              Microsoft
            </button>
          </div>
        </form>

        {# Mobile Trust Indicators with enhanced styling #}
        <div class="mt-8 lg:hidden">
          <div class="flex flex-wrap items-center justify-center gap-4 text-xs text-gray-500 dark:text-gray-400">
            <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-wellcare-50 dark:bg-wellcare-900/20">
              <svg class="w-4 h-4 text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <span>HIPAA Compliant</span>
            </div>
            <div class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-wellcare-50 dark:bg-wellcare-900/20">
              <svg class="w-4 h-4 text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              <span>Secure</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block auth_footer %}
  <div class="flex flex-col items-center justify-center gap-3 text-sm sm:flex-row">
    <span class="text-gray-600 dark:text-gray-400">Don't have an account?</span>
    <div class="flex items-center gap-3">
      <a href="/register-patient" class="font-medium transition-colors text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">
        Register as Patient
      </a>
      <span class="text-gray-300 dark:text-gray-700">|</span>
      <a href="/register-professional" class="font-medium transition-colors text-wellcare-dark-600 hover:text-wellcare-dark-700 dark:text-wellcare-dark-400 dark:hover:text-wellcare-dark-300 hover:underline">
        Join as Professional
      </a>
    </div>
  </div>
{% endblock %}

{% block auth_below %}
  <div class="flex flex-wrap items-center justify-center gap-2 text-xs text-gray-500 dark:text-gray-400">
    <span class="flex items-center gap-1.5 px-2 py-1 rounded-full bg-gray-100 dark:bg-gray-800">
      <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
      </svg>
      End-to-end encrypted
    </span>
    <span class="hidden text-gray-300 dark:text-gray-700 sm:inline">•</span>
    <a href="/privacy" class="transition-colors hover:text-wellcare-600 dark:hover:text-wellcare-400 hover:underline">Privacy Policy</a>
    <span class="text-gray-300 dark:text-gray-700">•</span>
    <a href="/terms" class="transition-colors hover:text-wellcare-600 dark:hover:text-wellcare-400 hover:underline">Terms of Service</a>
  </div>
{% endblock %}
