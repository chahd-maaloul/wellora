{% block javascripts %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const loginForm = document.getElementById('login-form');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const emailMessage = document.getElementById('email-message');
        const passwordMessage = document.getElementById('password-message');
        const submitBtn = document.getElementById('login-submit-btn');
        const statusContainer = document.getElementById('login-status-container');
        
        // Clear messages on input
        emailInput.addEventListener('input', function() {
            hideFieldMessage(emailInput, emailMessage);
        });
        
        passwordInput.addEventListener('input', function() {
            hideFieldMessage(passwordInput, passwordMessage);
        });
        
        // Form submission - let the form submit normally to Symfony
        // The AJAX validation was causing issues with session establishment
        loginForm.addEventListener('submit', function(e) {
            const email = emailInput.value.trim();
            const password = passwordInput.value;
            
            // Basic client-side validation
            if (!email || !password) {
                e.preventDefault();
                showStatusMessage('error', 'Erreur', 'Veuillez remplir tous les champs.');
                return;
            }
            
            // Show loading state
            const btnText = submitBtn.querySelector('.btn-text');
            const btnLoading = submitBtn.querySelector('.btn-loading');
            btnText.classList.add('hidden');
            btnLoading.classList.remove('hidden');
            submitBtn.disabled = true;
        });
        
        function showFieldMessage(input, messageDiv, type, title, message) {
            input.classList.add(type === 'error' ? 'border-red-500 focus:ring-red-500' : 'border-yellow-500 focus:ring-yellow-500');
            input.classList.remove('border-gray-300', 'dark:border-gray-600');
            
            messageDiv.classList.remove('hidden');
            
            if (type === 'error') {
                messageDiv.className = 'text-sm mt-1 text-red-600 dark:text-red-400 flex items-start gap-2';
                messageDiv.innerHTML = `
                    <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>${message}</span>
                `;
            } else {
                messageDiv.className = 'text-sm mt-1 text-yellow-600 dark:text-yellow-400 flex items-start gap-2';
                messageDiv.innerHTML = `
