{% extends 'layouts/auth.html.twig' %}
{% set auth_container_class = 'max-w-5xl' %}

{% block title %}Sign In - WellCare Connect{% endblock %}

{% block auth_heading %}{% endblock %}
{% block auth_description %}{% endblock %}

{% block auth_form %}
  <div class="grid grid-cols-1 gap-0 lg:grid-cols-12 min-h-[600px]">
    {# Left Panel - Visual & Trust Elements #}
    <div class="hidden lg:col-span-5 lg:flex lg:flex-col">
      <div class="relative flex flex-col h-full p-8 overflow-hidden bg-gradient-to-br from-wellcare-500 via-wellcare-600 to-wellcare-700 rounded-l-2xl">
        {# Animated Decorative Elements #}
        <div class="absolute top-0 right-0 w-64 h-64 -mt-20 -mr-20 rounded-full bg-white/10 blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 -mb-16 -ml-16 rounded-full bg-wellcare-400/20 blur-2xl"></div>
        <div class="absolute -translate-x-1/2 -translate-y-1/2 rounded-full w-80 h-80 top-1/2 left-1/2 bg-white/5 blur-3xl"></div>
        
        <div class="relative z-10 flex flex-col h-full">
          {# Logo Area #}
          <div class="flex items-center gap-3 mb-8">
            <div class="flex items-center justify-center w-12 h-12 bg-white/20 rounded-xl backdrop-blur-sm">
              <img src="{{ asset('build/images/logo-icon.svg') }}" alt="Wellora" class="w-8 h-8">
            </div>
            <span class="text-xl font-bold text-white">Wellora</span>
          </div>

          {# Main Content #}
          <div class="flex-1">
            <h2 class="mb-4 text-3xl font-bold leading-tight text-white">Welcome back to your health journey</h2>
            <p class="mb-8 text-sm leading-relaxed text-wellcare-100">
              Access your health records, manage appointments, and connect with your healthcare providers.
            </p>

            {# Trust Indicators #}
            <div class="space-y-4">
              <div class="flex items-center gap-3 p-4 border bg-white/10 rounded-xl backdrop-blur-sm border-white/10">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">HIPAA Compliant</p>
                  <p class="text-xs text-wellcare-100">Your data is encrypted</p>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 border bg-white/10 rounded-xl backdrop-blur-sm border-white/10">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">Secure Authentication</p>
                  <p class="text-xs text-wellcare-100">Protected login</p>
                </div>
              </div>
            </div>
          </div>

          {# Bottom Stats #}
          <div class="pt-8 mt-auto border-t border-white/20">
            <div class="grid grid-cols-3 gap-4 text-center">
              <div class="p-3 rounded-lg bg-white/5">
                <p class="text-2xl font-bold text-white">50K+</p>
                <p class="text-xs text-wellcare-100">Active Users</p>
              </div>
              <div class="p-3 rounded-lg bg-white/5">
                <p class="text-2xl font-bold text-white">1M+</p>
                <p class="text-xs text-wellcare-100">Appointments</p>
              </div>
              <div class="p-3 rounded-lg bg-white/5">
                <p class="text-2xl font-bold text-white">99.9%</p>
                <p class="text-xs text-wellcare-100">Uptime</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    {# Right Panel - Login Form #}
    <div class="lg:col-span-7">
      <div class="flex flex-col justify-center h-full p-8 lg:p-10">
        {# Mobile Header #}
        <div class="mb-8 text-center lg:hidden">
          <div class="flex items-center justify-center gap-3 mb-4">
            <div class="flex items-center justify-center w-12 h-12 bg-wellcare-100 rounded-xl">
              <img src="{{ asset('build/images/logo-icon.svg') }}" alt="Wellora" class="w-8 h-8">
            </div>
            <span class="text-xl font-bold text-gray-900 dark:text-white">Wellora</span>
          </div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Welcome back</h1>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Sign in to access your health dashboard</p>
        </div>

        {# Desktop Header #}
        <div class="hidden mb-8 lg:block">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Sign in to your account</h1>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
            Don't have an account? 
            <a href="{{ path('app_register_patient') }}" class="font-medium transition-colors text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">Create one now</a>
          </p>

          {# Professional Registration Links #}
          <p class="mt-4 text-sm text-gray-600 dark:text-gray-400">
            You are a healthcare professional?
            <span class="block mt-1">
              <a href="{{ path('app_register_medecin') }}" class="font-medium text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">Register as Physician</a> |
              <a href="{{ path('app_register_coach') }}" class="font-medium text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">Register as Coach</a> |
              <a href="{{ path('app_register_nutritionist') }}" class="font-medium text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">Register as Nutritionist</a>
            </span>
          </p>
        </div>

        {# Flash Messages #}
        {% for type, messages in app.flashes %}
            {% for message in messages %}
                <div class="p-4 mb-4 text-sm rounded-lg {% if type == 'error' %}bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300{% elseif type == 'warning' %}bg-yellow-100 text-yellow-700 dark:bg-yellow-900 dark:text-yellow-300{% else %}bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300{% endif %} flash-alert" role="alert" x-data="{ init() { setTimeout(() => { this.$el.style.opacity = '0'; this.$el.style.transform = 'translateX(100%)'; setTimeout(() => this.$el.remove(), 500) }, 7000) } }">
                    <div class="flex items-start gap-3">
                        {% if type == 'error' %}
                            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        {% elseif type == 'warning' %}
                            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                        {% else %}
                            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        {% endif %}
                        <div class="flex-1">
                            <span class="font-semibold">{{ type == 'error' ? 'Erreur:' : type == 'warning' ? 'Attention:' : 'Succès:' }}</span>
                            <p class="mt-1">{{ message }}</p>
                        </div>
                        <button @click="$el.closest('.flash-alert').style.opacity='0'; $el.closest('.flash-alert').style.transform='translateX(100%)'; setTimeout(() => $el.closest('.flash-alert').remove(), 500)" class="flex-shrink-0 ml-2 text-current transition-opacity opacity-60 hover:opacity-100">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}

        {# Login Status Messages #}
        <div id="login-status-container" class="hidden"></div>

        {% if error %}
          {% set loginErrorMessage = error.messageKey|trans(error.messageData, 'security') %}
          <div class="p-4 mb-4 text-sm text-red-700 border border-red-200 rounded-lg bg-red-50 dark:bg-red-900/50 dark:text-red-300 dark:border-red-700 flash-alert" role="alert" x-data="{ init() { setTimeout(() => { this.$el.style.opacity = '0'; this.$el.style.transform = 'translateX(100%)'; setTimeout(() => this.$el.remove(), 500) }, 10000) } }">
            <div class="flex items-start gap-3">
                <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div class="flex-1">
                    <span class="font-semibold">Erreur:</span>
                    <p class="mt-1">{{ loginErrorMessage }}</p>
                    {% if 'adresse email' in loginErrorMessage|lower %}
                      <p class="mt-2">
                        <a href="{{ path('app_verify_email', {'email': lastEmail}) }}" class="font-medium underline text-wellcare-700 hover:text-wellcare-800 dark:text-wellcare-300 dark:hover:text-wellcare-200">
                          Renvoyer un email de vérification
                        </a>
                      </p>
                    {% endif %}
                </div>
                <button @click="$el.closest('.flash-alert').style.opacity='0'; $el.closest('.flash-alert').style.transform='translateX(100%)'; setTimeout(() => $el.closest('.flash-alert').remove(), 500)" class="flex-shrink-0 ml-2 text-current transition-opacity opacity-60 hover:opacity-100">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
          </div>
        {% endif %}

        {# Login Form #}
          <form class="space-y-5" action="{{ path('app_login') }}" method="POST" id="login-form" novalidate>

          {# Email Field #}
          <div class="space-y-1.5">
            <label for="email" class="flex items-center gap-2 label">
              <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
              Email address
            </label>
            <div class="relative group">
              <input 
                id="email" 
                name="email" 
                type="email" 
                value="{{ lastEmail }}"
                autocomplete="email" 
                required 
                class="w-full transition-all duration-200 input pl-11"
                placeholder="you@example.com"
                data-validate="email"
              >
              <div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                </svg>
              </div>
            </div>
            {# Email validation message #}
            <div id="email-message" class="hidden text-sm"></div>
          </div>

          {# Password Field #}
          <div class="space-y-1.5">
            <label for="password" class="flex items-center gap-2 label">
              <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              Password
            </label>
            <div class="relative group">
              <input
                id="password"
                name="password"
                type="password"
                autocomplete="current-password"
                required
                class="w-full transition-all duration-200 input pl-11 pr-11"
                placeholder="••••••••"
                data-validate="password"
              >
              <div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                </svg>
              </div>
            </div>
            {# Password validation message #}
            <div id="password-message" class="hidden text-sm"></div>
          </div>

          {# Remember Me & Forgot Password #}
          <div class="flex flex-col gap-3 sm:flex-row sm:items-center sm:justify-between">
            <label class="inline-flex items-center gap-2.5 text-sm text-gray-700 dark:text-gray-300 cursor-pointer">
              <input id="remember-me" name="remember-me" type="checkbox" class="w-4 h-4 transition-colors border-gray-300 rounded cursor-pointer text-wellcare-600 focus:ring-wellcare-500 focus:ring-offset-0">
              <span>Remember me</span>
            </label>
            <a href="{{ path('app_forgot_password') }}" class="text-sm font-medium transition-colors text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">
              Forgot password?
            </a>
          </div>

          {# Captcha Verification #}
          {% include 'components/captcha.html.twig' with {
            input_name: 'captcha_code',
            container_class: 'mt-4'
          } %}

          {# Submit Button #}
          <button 
            type="submit" 
            class="w-full btn-solid py-3 text-base font-semibold shadow-lg shadow-wellcare-500/30 hover:shadow-wellcare-500/40 transition-all duration-200 hover:-translate-y-0.5 relative"
            id="login-submit-btn"
          >
            <span class="btn-text">Sign in</span>
            <span class="absolute inset-0 flex items-center justify-center hidden btn-loading">
                <svg class="w-5 h-5 text-white animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                    <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                    <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
            </span>
          </button>
        </form>

        {# Divider #}
        <div class="relative my-6">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-200 dark:border-gray-700"></div>
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-3 text-gray-500 bg-white dark:bg-gray-900 dark:text-gray-400">Or continue with</span>
          </div>
        </div>

        {# Social Login Buttons #}
        <div class="grid grid-cols-1 gap-3">
          <a 
            href="{{ path('app_connect_google') }}"
            class="flex items-center justify-center gap-3 px-4 py-3 text-sm font-medium text-gray-700 transition-all duration-200 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 hover:border-gray-400 hover:shadow-md dark:bg-gray-800 dark:border-gray-600 dark:text-gray-300 dark:hover:bg-gray-700 dark:hover:border-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500"
          >
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
            </svg>
            Continue with Google
          </a>
        </div>

        {# Mobile Trust Indicators #}
        <div class="mt-8 lg:hidden">
          <div class="flex flex-wrap items-center justify-center gap-4 text-xs text-gray-500 dark:text-gray-400">
            <span class="flex items-center gap-1.5 px-3 py-1.5 rounded-full bg-wellcare-50 dark:bg-wellcare-900/20">
              <svg class="w-4 h-4 text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              HIPAA Compliant
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block auth_footer %}
  <div class="flex flex-col items-center justify-center gap-3 text-sm sm:flex-row">
    <span class="text-gray-600 dark:text-gray-400">Don't have an accounts?</span>
    <div class="flex items-center gap-3">
      <a href="{{ path('app_register_patient') }}" class="font-medium transition-colors text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300 hover:underline">
