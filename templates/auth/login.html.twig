{% block javascripts %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const loginForm = document.getElementById('login-form');
        const emailInput = document.getElementById('email');
        const passwordInput = document.getElementById('password');
        const emailMessage = document.getElementById('email-message');
        const passwordMessage = document.getElementById('password-message');
        const submitBtn = document.getElementById('login-submit-btn');
        const statusContainer = document.getElementById('login-status-container');
        
        // Clear messages on input
        emailInput.addEventListener('input', function() {
            hideFieldMessage(emailInput, emailMessage);
        });
        
        passwordInput.addEventListener('input', function() {
            hideFieldMessage(passwordInput, passwordMessage);
        });
        
        // Form submission with AJAX validation
        loginForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            const email = emailInput.value.trim();
            const password = passwordInput.value;
            
            // Hide previous messages
            hideAllMessages();
            
            // Validate via AJAX
            validateLogin(email, password);
        });
        
        function validateLogin(email, password) {
            // Show loading state
            setLoading(true);
            
            const formData = new FormData();
            formData.append('email', email);
            formData.append('password', password);
            
            fetch('{{ path('app_login_validate') }}', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                setLoading(false);
                
                if (data.valid) {
                    // Credentials valid - submit form
                    showStatusMessage('success', data.title, data.message);
                    
                    // Redirect after short delay
                    setTimeout(() => {
                        window.location.href = data.redirect;
                    }, 1000);
                } else {
                    // Show error message
                    if (data.field === 'email') {
                        showFieldMessage(emailInput, emailMessage, data.type, data.title, data.message);
                    } else if (data.field === 'password') {
                        showFieldMessage(passwordInput, passwordMessage, data.type, data.title, data.message);
                    } else {
                        showStatusMessage(data.type, data.title, data.message);
                    }
                    
                    // For blocking errors, show prominent message
                    if (data.blocking) {
                        showStatusMessage(data.type, data.title, data.message);
                    }
                }
            })
            .catch(error => {
                setLoading(false);
                console.error('Validation error:', error);
                // On error, allow normal form submission
                loginForm.submit();
            });
        }
        
        function setLoading(loading) {
            const btnText = submitBtn.querySelector('.btn-text');
            const btnLoading = submitBtn.querySelector('.btn-loading');
            
            if (loading) {
                btnText.classList.add('hidden');
                btnLoading.classList.remove('hidden');
                submitBtn.disabled = true;
                submitBtn.classList.add('opacity-75', 'cursor-not-allowed');
            } else {
                btnText.classList.remove('hidden');
                btnLoading.classList.add('hidden');
                submitBtn.disabled = false;
                submitBtn.classList.remove('opacity-75', 'cursor-not-allowed');
            }
        }
        
        function showFieldMessage(input, messageDiv, type, title, message) {
            input.classList.add(type === 'error' ? 'border-red-500 focus:ring-red-500' : 'border-yellow-500 focus:ring-yellow-500');
            input.classList.remove('border-gray-300', 'dark:border-gray-600');
            
            messageDiv.classList.remove('hidden');
            
            if (type === 'error') {
                messageDiv.className = 'text-sm mt-1 text-red-600 dark:text-red-400 flex items-start gap-2';
                messageDiv.innerHTML = `
                    <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                    <span>${message}</span>
                `;
            } else {
                messageDiv.className = 'text-sm mt-1 text-yellow-600 dark:text-yellow-400 flex items-start gap-2';
                messageDiv.innerHTML = `
                    <svg class="w-4 h-4 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                    </svg>
                    <span>${message}</span>
                `;
            }
        }
        
        function hideFieldMessage(input, messageDiv) {
            input.classList.remove('border-red-500', 'focus:ring-red-500', 'border-yellow-500', 'focus:ring-yellow-500');
            input.classList.add('border-gray-300', 'dark:border-gray-600');
            messageDiv.classList.add('hidden');
        }
        
        function showStatusMessage(type, title, message) {
            statusContainer.classList.remove('hidden');
            
            if (type === 'error') {
                statusContainer.className = 'p-4 mb-4 text-sm rounded-lg bg-red-100 text-red-700 dark:bg-red-900 dark:text-red-300';
                statusContainer.innerHTML = `
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                        <div>
                            <span class="font-semibold">${title}</span>
                            <p class="mt-1">${message}</p>
                        </div>
                    </div>
                `;
            } else if (type === 'warning') {
                statusContainer.className = 'p-4 mb-4 text-sm rounded-lg bg-yellow-100 text-yellow-700 dark:bg-yellow-900 dark:text-yellow-300';
                statusContainer.innerHTML = `
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <div>
                            <span class="font-semibold">${title}</span>
                            <p class="mt-1">${message}</p>
                        </div>
                    </div>
                `;
            } else {
                statusContainer.className = 'p-4 mb-4 text-sm rounded-lg bg-green-100 text-green-700 dark:bg-green-900 dark:text-green-300';
                statusContainer.innerHTML = `
                    <div class="flex items-start gap-3">
                        <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
