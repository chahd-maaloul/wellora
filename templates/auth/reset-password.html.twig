{% extends 'layouts/auth.html.twig' %}
{% set auth_container_class = 'max-w-5xl' %}

{% block title %}Create New Password - WellCare Connect{% endblock %}

{% block auth_heading %}{% endblock %}
{% block auth_description %}{% endblock %}

{% block auth_form %}
  <div class="grid grid-cols-1 gap-0 lg:grid-cols-12 min-h-[600px]">
    {# Left Panel - Visual & Trust Elements #}
    <div class="hidden lg:col-span-5 lg:flex lg:flex-col">
      <div class="relative flex flex-col h-full p-8 overflow-hidden bg-gradient-to-br from-wellcare-500 via-wellcare-600 to-wellcare-700 rounded-l-2xl">
        {# Animated Decorative Elements #}
        <div class="absolute top-0 right-0 w-64 h-64 -mt-20 -mr-20 rounded-full bg-white/10 blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 left-0 w-48 h-48 -mb-16 -ml-16 rounded-full bg-wellcare-400/20 blur-2xl"></div>
        
        <div class="relative z-10 flex flex-col h-full">
          {# Icon #}
          <div class="flex items-center justify-center w-20 h-20 mb-6 shadow-lg bg-white/20 rounded-2xl backdrop-blur-sm">
            <svg class="w-10 h-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>

          {# Main Content #}
          <div class="flex-1">
            <h2 class="mb-4 text-2xl font-bold text-white">Create New Password</h2>
            <p class="mb-8 text-sm leading-relaxed text-wellcare-100">
              Your new password must be different from previously used passwords. Choose a strong, unique password to keep your account secure.
            </p>

            {# Security Tips with enhanced styling #}
            <div class="space-y-4">
              <div class="flex items-center gap-3 p-4 transition-all duration-300 border bg-white/10 rounded-xl backdrop-blur-sm border-white/10 hover:bg-white/15">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">Unique Password</p>
                  <p class="text-xs text-wellcare-100">Don't reuse old passwords</p>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 transition-all duration-300 border bg-white/10 rounded-xl backdrop-blur-sm border-white/10 hover:bg-white/15">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">Strong & Complex</p>
                  <p class="text-xs text-wellcare-100">Mix of letters, numbers & symbols</p>
                </div>
              </div>

              <div class="flex items-center gap-3 p-4 transition-all duration-300 border bg-white/10 rounded-xl backdrop-blur-sm border-white/10 hover:bg-white/15">
                <div class="flex items-center justify-center rounded-lg shadow-inner w-11 h-11 bg-white/20">
                  <svg class="w-5 h-5 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-sm font-semibold text-white">Account Protected</p>
                  <p class="text-xs text-wellcare-100">Your security is our priority</p>
                </div>
              </div>
            </div>
          </div>

          {# Help Text #}
          <div class="pt-8 mt-auto border-t border-white/20">
            <p class="text-xs text-center text-wellcare-100">
              Having trouble? <a href="/forgot-password" class="font-medium text-white hover:underline">Request a new reset link</a>
            </p>
          </div>
        </div>
      </div>
    </div>

    {# Right Panel - Form #}
    <div class="lg:col-span-7">
      <div class="flex flex-col justify-center h-full p-8 lg:p-10">
        {# Mobile Header #}
        <div class="mb-8 text-center lg:hidden">
          <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 bg-wellcare-100 rounded-2xl">
            <svg class="w-8 h-8 text-wellcare-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
            </svg>
          </div>
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Create new password</h1>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Your new password must be different from previous passwords.</p>
        </div>

        {# Desktop Header #}
        <div class="hidden mb-8 lg:block">
          <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Create a new password</h1>
          <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
            Enter a new secure password for your account.
          </p>
        </div>

        <form 
          class="space-y-6" 
          action="/reset-password" 
          method="POST" 
          x-data="{
            show1: false,
            show2: false,
            pw: '',
            confirmPw: '',
            isSubmitting: false,
            get strength() {
              const p = this.pw || '';
              let s = 0;
              if (p.length >= 8) s++;
              if (/[A-Z]/.test(p)) s++;
              if (/[0-9]/.test(p)) s++;
              if (/[^A-Za-z0-9]/.test(p)) s++;
              return s;
            },
            get strengthLabel() {
              const labels = ['Very Weak', 'Weak', 'Fair', 'Good', 'Strong'];
              return labels[this.strength];
            },
            get strengthColor() {
              const colors = ['bg-red-500', 'bg-red-500', 'bg-yellow-500', 'bg-wellcare-500', 'bg-green-500'];
              return colors[this.strength];
            },
            get strengthTextColor() {
              const colors = ['text-red-500', 'text-red-500', 'text-yellow-600', 'text-wellcare-600', 'text-green-600'];
              return colors[this.strength];
            },
            get passwordsMatch() {
              return this.pw && this.confirmPw && this.pw === this.confirmPw;
            },
            get canSubmit() {
              return this.pw && this.confirmPw && this.passwordsMatch && this.strength >= 2;
            }
          }"
          @submit.prevent="
            if (canSubmit) {
              isSubmitting = true;
              $el.submit();
            }
          "
        >
          <input type="hidden" name="_csrf_token" value="{{ csrf_token('reset_password') }}">
          <input type="hidden" name="token" value="{{ app.request.query.get('token') }}">

          {# New Password Field with enhanced strength indicator #}
          <div class="space-y-1.5">
            <label for="password" class="flex items-center gap-2 label">
              <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
              </svg>
              New password
            </label>
            <div class="relative group">
              <input 
                id="password" 
                name="password" 
                :type="show1 ? 'text' : 'password'" 
                x-model="pw"
                autocomplete="new-password" 
                required 
                aria-required="true"
                class="w-full transition-all duration-200 pr-28 input pl-11"
                :class="pw && strength < 2 ? 'border-yellow-300 focus:border-yellow-500 focus:ring-yellow-500/20' : (pw && strength >= 2 ? 'border-green-300 focus:border-green-500 focus:ring-green-500/20' : '')"
                placeholder="••••••••"
              >
              <div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400 transition-colors group-focus-within:text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"/>
                </svg>
              </div>
              <button 
                type="button" 
                class="absolute inset-y-0 right-0 inline-flex items-center gap-1.5 px-3 text-xs font-medium text-gray-500 hover:text-wellcare-600 dark:text-gray-400 dark:hover:text-wellcare-300 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-wellcare-500 rounded-r-xl"
                @click="show1 = !show1"
                :aria-label="show1 ? 'Hide password' : 'Show password'"
              >
                <svg x-show="!show1" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                <svg x-show="show1" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display: none;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                </svg>
                <span x-text="show1 ? 'Hide' : 'Show'"></span>
              </button>
            </div>
            
            {# Enhanced Password Strength Meter #}
            <div x-show="pw" x-transition:enter="transition ease-out duration-200" class="mt-3 space-y-2" style="display: none;">
              <div class="flex items-center justify-between">
                <span class="text-xs text-gray-500 dark:text-gray-400">Password strength</span>
                <span 
                  class="text-xs font-semibold"
                  :class="strengthTextColor"
                  x-text="strengthLabel"
                ></span>
              </div>
              <div class="w-full h-2 overflow-hidden bg-gray-100 rounded-full shadow-inner dark:bg-gray-800">
                <div
                  class="h-full transition-all duration-500 ease-out rounded-full"
                  :class="strengthColor"
                  :style="`width: ${Math.min(100, (strength/4)*100)}%`"
                ></div>
              </div>
            </div>
          </div>

          {# Confirm Password Field with enhanced match indicator #}
          <div class="space-y-1.5">
            <label for="confirm-password" class="flex items-center gap-2 label">
              <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Confirm password
            </label>
            <div class="relative group">
              <input 
                id="confirm-password" 
                name="confirm_password" 
                :type="show2 ? 'text' : 'password'" 
                x-model="confirmPw"
                autocomplete="new-password" 
                required 
                aria-required="true"
                class="w-full transition-all duration-200 pr-28 input pl-11"
                :class="confirmPw && !passwordsMatch ? 'border-red-300 focus:border-red-500 focus:ring-red-500/20' : (confirmPw && passwordsMatch ? 'border-green-300 focus:border-green-500 focus:ring-green-500/20' : '')"
                placeholder="••••••••"
              >
              <div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none">
                <svg class="w-5 h-5 text-gray-400 transition-colors group-focus-within:text-wellcare-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <button 
                type="button" 
                class="absolute inset-y-0 right-0 inline-flex items-center gap-1.5 px-3 text-xs font-medium text-gray-500 hover:text-wellcare-600 dark:text-gray-400 dark:hover:text-wellcare-300 transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-wellcare-500 rounded-r-xl"
                @click="show2 = !show2"
                :aria-label="show2 ? 'Hide password' : 'Show password'"
              >
                <svg x-show="!show2" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                </svg>
                <svg x-show="show2" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="display: none;">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"/>
                </svg>
                <span x-text="show2 ? 'Hide' : 'Show'"></span>
              </button>
            </div>
            
            {# Match Indicator with enhanced styling #}
            <div x-show="confirmPw" x-transition:enter="transition ease-out duration-200" class="mt-2" style="display: none;">
              <p 
                x-show="!passwordsMatch" 
                class="flex items-center gap-1.5 text-xs text-red-500"
                role="alert"
              >
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                Passwords do not match
              </p>
              <p 
                x-show="passwordsMatch" 
                class="flex items-center gap-1.5 text-xs text-green-600"
              >
                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
                Passwords match
              </p>
            </div>
          </div>

          {# Password Requirements with enhanced styling #}
          <div class="p-5 border border-gray-100 rounded-xl bg-gray-50 dark:bg-gray-900/50 dark:border-gray-800">
            <p class="mb-3 text-sm font-semibold text-gray-700 dark:text-gray-300">Password requirements</p>
            <ul class="space-y-2.5">
              <li 
                class="flex items-center gap-3 text-sm transition-colors duration-200"
                :class="pw.length >= 8 ? 'text-green-600 dark:text-green-400' : 'text-gray-500 dark:text-gray-400'"
              >
                <span 
                  class="flex items-center justify-center w-5 h-5 transition-colors duration-200 rounded-full"
                  :class="pw.length >= 8 ? 'bg-green-100 dark:bg-green-900/30' : 'bg-gray-200 dark:bg-gray-700'"
                >
                  <svg x-show="pw.length >= 8" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span x-show="pw.length < 8" class="text-[10px] font-medium">1</span>
                </span>
                At least 8 characters
              </li>
              <li 
                class="flex items-center gap-3 text-sm transition-colors duration-200"
                :class="/[A-Z]/.test(pw) ? 'text-green-600 dark:text-green-400' : 'text-gray-500 dark:text-gray-400'"
              >
                <span 
                  class="flex items-center justify-center w-5 h-5 transition-colors duration-200 rounded-full"
                  :class="/[A-Z]/.test(pw) ? 'bg-green-100 dark:bg-green-900/30' : 'bg-gray-200 dark:bg-gray-700'"
                >
                  <svg x-show="/[A-Z]/.test(pw)" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span x-show="!/[A-Z]/.test(pw)" class="text-[10px] font-medium">2</span>
                </span>
                One uppercase letter
              </li>
              <li 
                class="flex items-center gap-3 text-sm transition-colors duration-200"
                :class="/[0-9]/.test(pw) ? 'text-green-600 dark:text-green-400' : 'text-gray-500 dark:text-gray-400'"
              >
                <span 
                  class="flex items-center justify-center w-5 h-5 transition-colors duration-200 rounded-full"
                  :class="/[0-9]/.test(pw) ? 'bg-green-100 dark:bg-green-900/30' : 'bg-gray-200 dark:bg-gray-700'"
                >
                  <svg x-show="/[0-9]/.test(pw)" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span x-show="!/[0-9]/.test(pw)" class="text-[10px] font-medium">3</span>
                </span>
                One number
              </li>
              <li 
                class="flex items-center gap-3 text-sm transition-colors duration-200"
                :class="/[^A-Za-z0-9]/.test(pw) ? 'text-green-600 dark:text-green-400' : 'text-gray-500 dark:text-gray-400'"
              >
                <span 
                  class="flex items-center justify-center w-5 h-5 transition-colors duration-200 rounded-full"
                  :class="/[^A-Za-z0-9]/.test(pw) ? 'bg-green-100 dark:bg-green-900/30' : 'bg-gray-200 dark:bg-gray-700'"
                >
                  <svg x-show="/[^A-Za-z0-9]/.test(pw)" class="w-3 h-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/>
                  </svg>
                  <span x-show="!/[^A-Za-z0-9]/.test(pw)" class="text-[10px] font-medium">4</span>
                </span>
                One special character
              </li>
            </ul>
          </div>

          {# Submit Button with enhanced states #}
          <button 
            type="submit" 
            class="w-full btn-solid py-3 text-base font-semibold shadow-lg shadow-wellcare-500/30 hover:shadow-wellcare-500/40 transition-all duration-200 hover:-translate-y-0.5 disabled:opacity-70 disabled:cursor-not-allowed disabled:hover:translate-y-0"
            :disabled="isSubmitting || !canSubmit"
          >
            <span x-show="!isSubmitting" class="flex items-center justify-center gap-2">
              <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
              Reset password
            </span>
            <span x-show="isSubmitting" class="flex items-center justify-center gap-2" style="display: none;">
              <svg class="w-5 h-5 animate-spin" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Resetting...
            </span>
          </button>
        </form>

        {# Mobile Back Link #}
        <div class="mt-8 text-center lg:hidden">
          <a href="/login" class="inline-flex items-center gap-2 text-sm font-medium transition-colors text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300">
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to sign in
          </a>
        </div>
      </div>
    </div>
  </div>
{% endblock %}

{% block auth_footer %}{% endblock %}

{% block auth_below %}
  <div class="flex flex-wrap items-center justify-center gap-2 text-xs text-gray-500 dark:text-gray-400">
    <span class="flex items-center gap-1.5 px-2 py-1 rounded-full bg-gray-100 dark:bg-gray-800">
      <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
      </svg>
      Secure & encrypted
    </span>
    <span class="hidden text-gray-300 dark:text-gray-700 sm:inline">•</span>
    <a href="/privacy" class="transition-colors hover:text-wellcare-600 dark:hover:text-wellcare-400 hover:underline">Privacy Policy</a>
    <span class="text-gray-300 dark:text-gray-700">•</span>
    <a href="/terms" class="transition-colors hover:text-wellcare-600 dark:hover:text-wellcare-400 hover:underline">Terms of Service</a>
  </div>
{% endblock %}
