{% extends 'base.html.twig' %}

{% block title %}Patients - Nutrisioniste - WellCare{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body_class %}bg-gray-50 dark:bg-gray-900{% endblock %}

{% block body %}
<div class="min-h-screen py-8">
    <div class="px-4 mx-auto max-w-7xl">
        {# Header #}
        <div class="flex flex-col gap-4 mb-6 lg:flex-row lg:items-center lg:justify-between">
            <div>
                <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
                    <i class="mr-3 text-wellcare-500 fas fa-users"></i>
                    Patients
                </h1>
                <p class="mt-1 text-gray-500 dark:text-gray-400">Gérez vos patients</p>
            </div>
            <div class="flex items-center gap-3">
                <a href="{{ path('nutrisioniste_dash') }}" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700">
                    <i class="mr-2 fas fa-arrow-left"></i>Retour
                </a>
                <button class="px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                    <i class="mr-2 fas fa-plus"></i>Ajouter Patient
                </button>
            </div>
        </div>

        {# Search #}
        <form method="get" class="mb-6">
            <div class="relative">
                <input type="text" name="search" value="{{ search }}" placeholder="Rechercher un patient..."
                       class="w-full py-3 pl-12 pr-4 border border-gray-300 rounded-xl dark:border-gray-600 dark:bg-gray-800 dark:text-white text-lg">
                <i class="absolute text-gray-400 transform -translate-y-1/2 fas fa-search left-4 top-1/2"></i>
            </div>
        </form>

        {# Stats #}
        <div class="grid grid-cols-2 gap-4 mb-6 lg:grid-cols-4">
            <div class="p-4 bg-white dark:bg-gray-800 rounded-xl shadow">
                <p class="text-sm text-gray-500">Total patients</p>
                <p class="text-2xl font-bold text-gray-900 dark:text-white">{{ stats.total }}</p>
            </div>
            <div class="p-4 bg-white dark:bg-gray-800 rounded-xl shadow">
                <p class="text-sm text-gray-500">Actifs</p>
                <p class="text-2xl font-bold text-green-500">{{ stats.active }}</p>
            </div>
        </div>

        {# Patients List #}
        <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-lg overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-50 dark:bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Patient</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Objectif</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Dernière activité</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-300 uppercase tracking-wider">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
                    {% for patient in patients %}
                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50">
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30 flex items-center justify-center">
                                    <span class="text-sm font-medium text-wellcare-600">#{{ patient.userId }}</span>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900 dark:text-white">Patient #{{ patient.userId }}</div>
                                    <div class="text-sm text-gray-500">ID: {{ patient.userId }}</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            {% if patient.caloriesTarget %}
                            <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400">
                                {{ patient.caloriesTarget }} kcal/jour
                            </span>
                            {% else %}
                            <span class="text-gray-500">Non défini</span>
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                            {% if patient.createdAt %}
                                {{ patient.createdAt|date('d M Y') }}
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center gap-2">
                                <a href="{{ path('nutrisioniste_patient_view', { id: patient.userId }) }}" 
                                   class="p-2 text-gray-400 hover:text-wellcare-500" title="Voir dossier">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="{{ path('nutrisioniste_message_view', { id: patient.userId }) }}" 
                                   class="p-2 text-gray-400 hover:text-wellcare-500" title="Envoyer message">
                                    <i class="fas fa-envelope"></i>
                                </a>
                                <a href="{{ path('nutrisioniste_consultation_new') }}" 
                                   class="p-2 text-gray-400 hover:text-wellcare-500" title="Planifier consultation">
                                    <i class="fas fa-calendar-plus"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
            
            {% if patients|length == 0 %}
            <div class="p-8 text-center text-gray-500">
                <i class="text-4xl mb-2 far fa-users"></i>
                <p>Aucun patient trouvé</p>
            </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}
