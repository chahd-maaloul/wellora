{% extends 'layouts/app.html.twig' %}


{% block title %}Edit Goal - Goals Management{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50 py-8 animate-gradient">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="mb-10 transform transition-all duration-500 hover:scale-[1.01]">
            <div class="relative overflow-hidden rounded-3xl bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 shadow-2xl group">
                <!-- Animated gradient overlay -->
                <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-700">
                    <div class="absolute inset-0 bg-gradient-to-r from-cyan-400/30 via-purple-400/30 to-pink-400/30 animate-gradient-x"></div>
                </div>
                
                <!-- Animated background pattern -->
                <div class="absolute inset-0 opacity-5">
                    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23ffffff\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
                </div>
                
                <div class="relative p-8 md:p-10">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                        <div class="text-green-800">
                            <div class="flex items-center gap-3 mb-4">
                                <a href="{{ path('fitness_goal_show') }}" 
                                   class="text-green-800 hover:text-gray-200 transition-all duration-300 hover:-translate-x-1 p-2 rounded-2xl group/back">
                                    <svg class="w-6 h-6 group-hover/back:translate-x-[-2px] transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                                    </svg>
                                </a>
                                <div>
                                    <h1 class="text-3xl md:text-4xl font-bold tracking-tight">Edit Goal</h1>
                                    <div class="h-1 w-20 bg-gradient-to-r from-cyan-300 to-purple-300 rounded-full mt-2"></div>
                                </div>
                            </div>
                            <p class="text-lg text-green-800 max-w-2xl">Refine your fitness journey with precise updates and progress tracking</p>
                        </div>
                        <div class="flex items-center gap-4">
                            <div class="bg-white/10 backdrop-blur-sm rounded-2xl px-4 py-2 border border-white/20">
                                <div class="flex items-center gap-2">
                                    <div class="w-2 h-2 bg-gradient-to-r from-green-400 to-cyan-400 rounded-full animate-pulse"></div>
                                    <span class="text-sm font-medium text-green-800">Auto-save Enabled</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Form Card -->
        <div class="bg-white/80 backdrop-blur-sm rounded-3xl shadow-2xl overflow-hidden border border-white/20 transform transition-all duration-500 hover:shadow-3xl">
            <!-- Form Header with animated gradient -->
            <div class="relative px-8 py-8 border-b border-gray-200/50">
                <!-- Background gradient -->
                <div class="absolute inset-0 bg-gradient-to-r from-blue-50/50 via-white to-purple-50/50"></div>
                
                <!-- Animated border -->
                <div class="absolute bottom-0 left-0 right-0 h-[1px] bg-gradient-to-r from-transparent via-blue-300 to-transparent"></div>
                
                <div class="relative flex items-center gap-4 mb-2">
                    <div class="relative p-3 bg-gradient-to-br from-blue-400 to-blue-600 rounded-2xl shadow-lg group/icon">
                        <div class="absolute inset-0 bg-gradient-to-br from-cyan-400 to-blue-500 rounded-2xl opacity-0 group-hover/icon:opacity-100 transition-opacity duration-300"></div>
                        <svg class="relative w-6 h-6 text-green-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                        </svg>
                    </div>
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 bg-gradient-to-r from-gray-900 to-gray-700 bg-clip-text text-transparent">
                            Goal Details
                        </h2>
                        <p class="text-gray-600">Update and refine your fitness objectives</p>
                    </div>
                </div>
            </div>

            <!-- Form Content -->
            <div class="p-8">
                {{ form_start(form, {'attr': {'class': 'space-y-8', 'id': 'goal-form'}}) }}
                
                <!-- Progress Overview Card -->
                {% set progressPercentage = goal.progress ?? 0 %}
                {% set progressColor = progressPercentage >= 75 ? 'from-emerald-500 to-green-400' : 
                                      progressPercentage >= 50 ? 'from-blue-500 to-cyan-400' : 
                                      progressPercentage >= 25 ? 'from-amber-500 to-yellow-400' : 
                                      'from-rose-500 to-pink-400' %}
                
                <div class="relative bg-gradient-to-br from-white to-gray-50 rounded-2xl p-6 mb-8 border border-gray-200/50 shadow-lg overflow-hidden group/progress">
                    <!-- Animated background -->
                    <div class="absolute inset-0 opacity-0 group-hover/progress:opacity-100 transition-opacity duration-500">
                        <div class="absolute inset-0 bg-gradient-to-r from-blue-50/30 to-purple-50/30"></div>
                    </div>
                    
                    <div class="relative">
                        <div class="flex items-center justify-between mb-4">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-900">Goal Progress</h3>
                                <p class="text-sm text-gray-600">Visualize your achievement journey</p>
                            </div>
                            <div class="text-2xl font-bold bg-gradient-to-r {{ progressColor }} bg-clip-text text-transparent progress-percentage">
                                {{ progressPercentage }}%
                            </div>
                        </div>
                        
                        <!-- Progress bar with glow effect -->
                        <div class="relative h-3 bg-gray-200 rounded-full overflow-hidden shadow-inner">
                            <div class="absolute inset-0 bg-gradient-to-r from-white/50 to-transparent"></div>
                            <div class="h-full bg-gradient-to-r {{ progressColor }} rounded-full transition-all duration-1000 progress-bar relative overflow-hidden"
                                 style="width: {{ progressPercentage }}%">
                                <div class="absolute inset-0 bg-gradient-to-r from-white/30 via-white/10 to-transparent animate-shimmer"></div>
                            </div>
                        </div>
                        
                        <!-- Progress milestones -->
                        <div class="flex justify-between mt-3 text-xs text-gray-500">
                            <span class="transform transition-transform duration-300 hover:scale-110 cursor-default">Start</span>
                            <span class="transform transition-transform duration-300 hover:scale-110 cursor-default">25%</span>
                            <span class="transform transition-transform duration-300 hover:scale-110 cursor-default">50%</span>
                            <span class="transform transition-transform duration-300 hover:scale-110 cursor-default">75%</span>
                            <span class="transform transition-transform duration-300 hover:scale-110 cursor-default">Complete</span>
                        </div>
                    </div>
                </div>

                <!-- Basic Information Grid -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Left Column -->
                    <div class="space-y-6">
                        <!-- Title Field -->
                        <div class="group/field transform transition-all duration-300 hover:translate-x-1">
                            <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2">
                                <div class="p-1.5 bg-gradient-to-br from-blue-100 to-blue-200 rounded-lg">
                                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                </div>
                                {{ form_label(form.title) }}
                            </label>
                            <div class="relative">
                                {{ form_widget(form.title, {
                                    'attr': {
                                        'class': 'w-full pl-12 pr-4 py-3.5 bg-white/80 border border-gray-300/50 rounded-xl focus:ring-2 focus:ring-blue-500/30 focus:border-blue-400 transition-all duration-300 shadow-sm focus:shadow-lg focus:bg-white backdrop-blur-sm',
                                        'placeholder': 'Enter your goal title...'
                                    }
                                }) }}
                                <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                    <svg class="w-5 h-5 text-gray-400 group-hover/field:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                                    </svg>
                                </div>
                            </div>
                            <div class="mt-2 text-xs text-gray-500 flex items-center gap-1">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                {{ form_help(form.title) }}
                            </div>
                            {{ form_errors(form.title) }}
                        </div>

                        <!-- Status Field -->
<div class="group/field transform transition-all duration-300 hover:translate-x-1">
    <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2">
        <div class="p-1.5 bg-gradient-to-br from-emerald-100 to-emerald-200 rounded-lg">
            <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
        </div>
        {{ form_label(form.status) }}
    </label>
    <div class="relative">
        {{ form_widget(form.status, {
            'attr': {
                'class': 'w-full pl-12 pr-10 py-3.5 bg-white/80 border border-gray-300/50 rounded-xl focus:ring-2 focus:ring-emerald-500/30 focus:border-emerald-400 transition-all duration-300 shadow-sm focus:shadow-lg focus:bg-white backdrop-blur-sm appearance-none'
            }
        }) }}
        <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
            <svg class="w-5 h-5 text-gray-400 group-hover/field:text-emerald-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
        </div>
        <div class="absolute right-3 top-1/2 transform -translate-y-1/2 pointer-events-none">
            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
        </div>
    </div>
    <div class="mt-2 text-xs text-gray-500 flex items-center gap-1">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        {{ form_help(form.status) }}
    </div>
    {{ form_errors(form.status) }}
</div>

                        <!-- Progress Field -->
                        <div class="group/field transform transition-all duration-300 hover:translate-x-1">
                            <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2">
                                <div class="p-1.5 bg-gradient-to-br from-purple-100 to-purple-200 rounded-lg">
                                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                                    </svg>
                                </div>
                                {{ form_label(form.progress) }}
                            </label>
                            <div class="relative">
                                {{ form_widget(form.progress, {
                                    'attr': {
                                        'class': 'progress-input w-full pl-12 pr-4 py-3.5 bg-white/80 border border-gray-300/50 rounded-xl focus:ring-2 focus:ring-purple-500/30 focus:border-purple-400 transition-all duration-300 shadow-sm focus:shadow-lg focus:bg-white backdrop-blur-sm',
                                        'min': '0',
                                        'max': '100',
                                        'step': '5'
                                    }
                                }) }}
                                <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                    <svg class="w-5 h-5 text-gray-400 group-hover/field:text-purple-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                                    </svg>
                                </div>
                            </div>
                            <div class="mt-2 text-xs text-gray-500 flex items-center gap-1">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                {{ form_help(form.progress) }}
                            </div>
                            {{ form_errors(form.progress) }}
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="space-y-6">
                        <!-- Start Date Field -->
                        <div class="group/field transform transition-all duration-300 hover:translate-x-1">
                            <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2">
                                <div class="p-1.5 bg-gradient-to-br from-amber-100 to-amber-200 rounded-lg">
                                    <svg class="w-4 h-4 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                                {{ form_label(form.startDate) }}
                            </label>
                            <div class="relative">
                                {{ form_widget(form.startDate, {
                                    'attr': {
                                        'class': 'w-full pl-12 pr-4 py-3.5 bg-white/80 border border-gray-300/50 rounded-xl focus:ring-2 focus:ring-amber-500/30 focus:border-amber-400 transition-all duration-300 shadow-sm focus:shadow-lg focus:bg-white backdrop-blur-sm'
                                    }
                                }) }}
                                <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                    <svg class="w-5 h-5 text-gray-400 group-hover/field:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                            </div>
                            <div class="mt-2 text-xs text-gray-500 flex items-center gap-1">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                {{ form_help(form.startDate) }}
                            </div>
                            {{ form_errors(form.startDate) }}
                        </div>

                        <!-- End Date Field -->
                        <div class="group/field transform transition-all duration-300 hover:translate-x-1">
                            <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2">
                                <div class="p-1.5 bg-gradient-to-br from-rose-100 to-rose-200 rounded-lg">
                                    <svg class="w-4 h-4 text-rose-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                                {{ form_label(form.endDate) }}
                            </label>
                            <div class="relative">
                                {{ form_widget(form.endDate, {
                                    'attr': {
                                        'class': 'w-full pl-12 pr-4 py-3.5 bg-white/80 border border-gray-300/50 rounded-xl focus:ring-2 focus:ring-rose-500/30 focus:border-rose-400 transition-all duration-300 shadow-sm focus:shadow-lg focus:bg-white backdrop-blur-sm'
                                    }
                                }) }}
                                <div class="absolute left-3 top-1/2 transform -translate-y-1/2">
                                    <svg class="w-5 h-5 text-gray-400 group-hover/field:text-rose-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                    </svg>
                                </div>
                            </div>
                            <div class="mt-2 text-xs text-gray-500 flex items-center gap-1">
                                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                {{ form_help(form.endDate) }}
                            </div>
                            {{ form_errors(form.endDate) }}
                        </div>

                        <!-- Status Summary Card -->
                        <div class="relative bg-gradient-to-br from-gray-50 to-white rounded-2xl p-5 border border-gray-200/50 shadow-sm overflow-hidden group/summary">
                            <div class="absolute inset-0 bg-gradient-to-r from-blue-500/5 to-purple-500/5 opacity-0 group-hover/summary:opacity-100 transition-opacity duration-500"></div>
                            <div class="relative">
                                <div class="flex items-center justify-between mb-3">
                                    <div class="flex items-center gap-2">
                                        <div class="p-1.5 bg-gradient-to-br from-indigo-100 to-indigo-200 rounded-lg">
                                            <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                        </div>
                                        <span class="text-sm font-semibold text-gray-700">Timeline</span>
                                    </div>
                                    {% if goal.status == 'pending' %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gradient-to-r from-amber-100 to-yellow-100 text-amber-800 border border-amber-200/50 shadow-sm">
                                            <span class="w-2 h-2 mr-1.5 bg-gradient-to-r from-amber-500 to-yellow-500 rounded-full"></span>
                                            Pending
                                        </span>
                                    {% elseif goal.status == 'in progress' %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gradient-to-r from-blue-100 to-cyan-100 text-blue-800 border border-blue-200/50 shadow-sm">
                                            <span class="w-2 h-2 mr-1.5 bg-gradient-to-r from-blue-500 to-cyan-500 rounded-full animate-pulse"></span>
                                            In Progress
                                        </span>
                                    {% elseif goal.status == 'completed' %}
                                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gradient-to-r from-emerald-100 to-green-100 text-emerald-800 border border-emerald-200/50 shadow-sm">
                                            <span class="w-2 h-2 mr-1.5 bg-gradient-to-r from-emerald-500 to-green-500 rounded-full"></span>
                                            Completed
                                        </span>
                                    {% endif %}
                                </div>
                                {% set daysRemaining = goal.endDate ? date().diff(goal.endDate).days : 0 %}
                                <div class="text-sm text-gray-600">
                                    {% if daysRemaining > 0 %}
                                        <div class="flex items-center gap-2 mb-1">
                                            <svg class="w-4 h-4 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            <span class="font-medium text-gray-900">{{ daysRemaining }} days</span> remaining
                                        </div>
                                        <div class="text-xs text-gray-500">
                                            Target: {{ goal.endDate ? goal.endDate|date('M d, Y') : 'Not set' }}
                                        </div>
                                    {% elseif daysRemaining == 0 %}
                                        <div class="flex items-center gap-2 text-amber-600">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.998-.833-2.732 0L4.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>
                                            </svg>
                                            <span class="font-medium">Today is the deadline!</span>
                                        </div>
                                    {% else %}
                                        <div class="flex items-center gap-2 text-rose-600">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                            </svg>
                                            <span class="font-medium">{{ -daysRemaining }} days</span> overdue
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Description Field -->
                <div class="group/field transform transition-all duration-300 hover:translate-x-1">
                    <label class="block text-sm font-semibold text-gray-700 mb-2 flex items-center gap-2">
                        <div class="p-1.5 bg-gradient-to-br from-indigo-100 to-indigo-200 rounded-lg">
                            <svg class="w-4 h-4 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/>
                            </svg>
                        </div>
                        {{ form_label(form.description) }}
                    </label>
                    <div class="relative">
