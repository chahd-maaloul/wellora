{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fitness') }}
    <script>
        // Configuration globale
        let currentStep = 1;
        const totalSteps = 5;
        let isTransitioning = false;
        let selectedCategory = null;

        // Éléments DOM
        const progressLine = document.getElementById('progress-line');
        const currentStepDisplay = document.getElementById('current-step-display');
        const submitButton = document.getElementById('submit-button');
        const successToast = document.getElementById('success-toast');
        const targetFields = document.getElementById('target-fields');
        const goalTypeField = document.getElementById('{{ form.goalType.vars.id }}');

        // Fonction pour naviguer vers une étape spécifique
        function goToStep(targetStep) {
            if (targetStep < 1 || targetStep > totalSteps || targetStep > currentStep) return;
            
            if (targetStep < currentStep) {
                prevStep(targetStep);
            }
        }

        // Animation de transition entre les étapes
        async function transitionStep(fromStep, toStep, direction = 'forward') {
            if (isTransitioning) return;
            
            isTransitioning = true;
            const currentContent = document.getElementById(`step-${fromStep}-content`);
            const nextContent = document.getElementById(`step-${toStep}-content`);
            
            // Animation de sortie
            if (currentContent) {
                currentContent.style.transition = 'all 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
                currentContent.style.opacity = '0';
                currentContent.style.transform = direction === 'forward' 
                    ? 'translateX(-100px) scale(0.95)' 
                    : 'translateX(100px) scale(0.95)';
                
                await new Promise(resolve => setTimeout(resolve, 300));
                currentContent.classList.add('hidden');
            }
            
            // Mettre à jour l'affichage
            currentStepDisplay.textContent = toStep;
            currentStepDisplay.style.transform = 'scale(1.2)';
            setTimeout(() => {
                currentStepDisplay.style.transform = 'scale(1)';
            }, 300);
            
            // Mettre à jour la barre de progression
            updateProgressBar(toStep);
            
            // Animation d'entrée
            if (nextContent) {
                nextContent.classList.remove('hidden');
                nextContent.style.opacity = '0';
                nextContent.style.transform = direction === 'forward' 
                    ? 'translateX(100px) scale(0.95)' 
                    : 'translateX(-100px) scale(0.95)';
                
                await new Promise(resolve => requestAnimationFrame(resolve));
                
                nextContent.style.transition = 'all 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
                nextContent.style.opacity = '1';
                nextContent.style.transform = 'translateX(0) scale(1)';
                
                window.scrollTo({ top: 0, behavior: 'smooth' });
                
                await new Promise(resolve => setTimeout(resolve, 500));
            }
            
            isTransitioning = false;
            currentStep = toStep;
            
            // Mettre à jour le résumé à l'étape 5
            if (toStep === 5) {
                updateSummary();
            }
        }

        // Mettre à jour la barre de progression
        function updateProgressBar(step) {
            const progressPercentage = ((step - 1) / (totalSteps - 1)) * 100;
            
            progressLine.style.transition = 'width 0.8s cubic-bezier(0.34, 1.56, 0.64, 1)';
            progressLine.style.width = `${progressPercentage}%`;
            
            updateStepIndicators(step);
        }

        // Mettre à jour les indicateurs d'étape
        function updateStepIndicators(step) {
            for (let i = 1; i <= totalSteps; i++) {
                const indicator = document.getElementById(`step-${i}-indicator`);
                const numberSpan = indicator.querySelector('span');
                const checkIcon = indicator.querySelector('svg');
                
                indicator.classList.remove('completed', 'active', 'upcoming');
                
                setTimeout(() => {
                    if (i < step) {
                        indicator.classList.add('completed');
                        indicator.style.borderColor = '#4f46e5';
                        indicator.style.backgroundColor = '#4f46e5';
                        numberSpan.classList.add('hidden');
                        checkIcon.style.opacity = '0';
                        checkIcon.classList.remove('hidden');
                        
                        setTimeout(() => {
                            checkIcon.style.transition = 'opacity 0.3s ease';
                            checkIcon.style.opacity = '1';
                            checkIcon.style.transform = 'scale(1)';
                        }, 100);
                        
                    } else if (i === step) {
                        indicator.classList.add('active');
                        indicator.style.borderColor = '#4f46e5';
                        indicator.style.backgroundColor = window.matchMedia('(prefers-color-scheme: dark)').matches 
                            ? '#1f2937' 
                            : '#ffffff';
                        
                        numberSpan.classList.remove('hidden');
                        checkIcon.classList.add('hidden');
                        
                        numberSpan.style.transform = 'scale(0.8)';
                        setTimeout(() => {
                            numberSpan.style.transition = 'transform 0.3s ease';
                            numberSpan.style.transform = 'scale(1.1)';
                            setTimeout(() => {
                                numberSpan.style.transform = 'scale(1)';
                            }, 300);
                        }, 50);
                        
                    } else {
                        indicator.classList.add('upcoming');
                        indicator.style.borderColor = '#d1d5db';
                        indicator.style.backgroundColor = window.matchMedia('(prefers-color-scheme: dark)').matches 
                            ? '#1f2937' 
                            : '#ffffff';
                        
                        numberSpan.classList.remove('hidden');
                        checkIcon.classList.add('hidden');
                    }
                }, (i - 1) * 80);
            }
        }

        // Validation avant de passer à l'étape suivante (sans contrôles stricts)
        async function nextStep(targetStep) {
            await transitionStep(currentStep, targetStep, 'forward');
        }

        // Aller à l'étape précédente
        async function prevStep(targetStep) {
            await transitionStep(currentStep, targetStep, 'backward');
        }

        // Sélection de catégorie
        function selectCategory(category) {
            if (selectedCategory === category) return;
            
            selectedCategory = category;
            
            // Animation de désélection
            document.querySelectorAll('.category-option').forEach((el, index) => {
                if (el.id !== `category-${category}`) {
                    setTimeout(() => {
                        el.style.transform = 'scale(0.95)';
                        el.style.opacity = '0.7';
                        setTimeout(() => {
                            el.style.transition = 'all 0.3s ease';
                            el.classList.remove('selected', 'border-wellcare-500', 'bg-wellcare-50', 'dark:bg-wellcare-900/20');
                            el.classList.add('border-gray-200', 'dark:border-gray-700');
                            el.style.transform = 'scale(1)';
                            el.style.opacity = '1';
                        }, 50);
                    }, index * 50);
                }
            });
            
            // Animation de sélection
            const selectedEl = document.getElementById(`category-${category}`);
            if (selectedEl) {
                setTimeout(() => {
                    selectedEl.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        selectedEl.style.transition = 'all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1)';
                        selectedEl.classList.add('selected', 'border-wellcare-500', 'bg-wellcare-50', 'dark:bg-wellcare-900/20');
                        selectedEl.classList.remove('border-gray-200', 'dark:border-gray-700');
                        selectedEl.style.transform = 'scale(1.05) translateY(-5px)';
                        
                        setTimeout(() => {
                            selectedEl.style.transform = 'scale(1.02) translateY(-2px)';
                        }, 200);
                    }, 100);
                }, 300);
            }
            
            // Mettre à jour le champ caché
            const categoryField = document.getElementById('goal_category');
            if (categoryField) {
                categoryField.value = category;
            }
            
            // Gérer l'affichage des champs target
            if (category === 'weight_loss') {
                if (targetFields) {
                    targetFields.classList.add('hidden');
                }
                // Définir goalType automatiquement
                if (goalTypeField) {
                    goalTypeField.value = 'weight_loss';
                }
                // Définir targetValue et currentValue à 0
                const targetValueField = document.getElementById('{{ form.targetValue.vars.id }}');
                const currentValueField = document.getElementById('{{ form.currentValue.vars.id }}');
                if (targetValueField) targetValueField.value = '0';
                if (currentValueField) currentValueField.value = '0';
            } else {
                if (targetFields) {
                    targetFields.classList.remove('hidden');
                }
            }
            
            // Auto-remplissage des champs
            setTimeout(() => autoFillFields(category), 500);
        }

        // Auto-remplissage intelligent des champs
        async function autoFillFields(category) {
            const presets = {
                weight_loss: {
                    title: '{{ "Weight Management Goal" | trans }}',
                    description: '{{ "Achieve and maintain healthy body weight through balanced nutrition and exercise" | trans }}',
                    relevant: '{{ "Improve overall health, increase energy levels, and boost confidence" | trans }}',
                    difficultyLevel: 'medium',
                    targetAudience: 'beginner',
                    sessionsPerWeek: '3',
                    sessionDuration: '45',
                    caloriesTarget: '1800'
                },
                strength: {
                    title: '{{ "Strength Building Goal" | trans }}',
                    description: '{{ "Increase muscular strength and power through progressive resistance training" | trans }}',
                    relevant: '{{ "Build muscle, improve functional strength, and enhance physical performance" | trans }}',
                    targetValue: '10',
                    unit: 'kg',
                    difficultyLevel: 'medium',
                    targetAudience: 'intermediate',
                    sessionsPerWeek: '4',
                    sessionDuration: '60',
                    caloriesTarget: '2200'
                },
                endurance: {
                    title: '{{ "Endurance Enhancement Goal" | trans }}',
                    description: '{{ "Improve cardiovascular fitness and stamina for longer duration activities" | trans }}',
                    relevant: '{{ "Enhance cardiovascular health, increase stamina, and improve overall fitness" | trans }}',
                    targetValue: '30',
                    unit: 'minutes',
                    difficultyLevel: 'hard',
                    targetAudience: 'intermediate',
                    sessionsPerWeek: '5',
                    sessionDuration: '30',
                    caloriesTarget: '2500'
                },
                flexibility: {
                    title: '{{ "Flexibility & Mobility Goal" | trans }}',
                    description: '{{ "Enhance range of motion and joint mobility through stretching and mobility exercises" | trans }}',
                    relevant: '{{ "Improve posture, reduce injury risk, and enhance movement quality" | trans }}',
                    targetValue: '15',
                    unit: 'minutes',
                    difficultyLevel: 'easy',
                    targetAudience: 'beginner',
                    sessionsPerWeek: '7',
                    sessionDuration: '20',
                    caloriesTarget: '2000'
                },
                sports: {
                    title: '{{ "Sport Performance Goal" | trans }}',
                    description: '{{ "Enhance athletic performance for specific sports or physical activities" | trans }}',
                    relevant: '{{ "Improve sports performance, achieve competition goals, and enhance athletic skills" | trans }}',
                    targetValue: '10',
                    unit: 'points',
                    difficultyLevel: 'expert',
                    targetAudience: 'advanced',
                    sessionsPerWeek: '6',
                    sessionDuration: '90',
                    caloriesTarget: '2800'
                },
                rehabilitation: {
                    title: '{{ "Medical Rehabilitation Goal" | trans }}',
                    description: '{{ "Recover from injury or medical condition with guided exercise therapy" | trans }}',
                    relevant: '{{ "Regain functional abilities, reduce pain, and improve quality of life" | trans }}',
                    targetValue: '20',
                    unit: 'sessions',
                    difficultyLevel: 'easy',
                    targetAudience: 'beginner',
                    sessionsPerWeek: '2',
                    sessionDuration: '30',
                    caloriesTarget: '1900'
                }
            };
            
            if (presets[category]) {
                const preset = presets[category];
                const fields = {
                    '{{ form.title.vars.id }}': preset.title,
                    '{{ form.description.vars.id }}': preset.description,
                    '{{ form.relevant.vars.id }}': preset.relevant,
                    '{{ form.difficultyLevel.vars.id }}': preset.difficultyLevel,
                    '{{ form.targetAudience.vars.id }}': preset.targetAudience,
                    '{{ form.sessionsPerWeek.vars.id }}': preset.sessionsPerWeek,
                    '{{ form.sessionDuration.vars.id }}': preset.sessionDuration,
                    '{{ form.caloriesTarget.vars.id }}': preset.caloriesTarget
                };
                
                // Pour weight_loss, ne pas remplir targetValue/unit
                if (category !== 'weight_loss') {
                    fields['{{ form.targetValue.vars.id }}'] = preset.targetValue;
                    fields['{{ form.unit.vars.id }}'] = preset.unit;
                }
                
                // Animation de remplissage séquentiel
                let delay = 0;
                Object.keys(fields).forEach(fieldId => {
                    const field = document.getElementById(fieldId);
                    if (field && fields[fieldId]) {
                        setTimeout(() => {
                            if (field.tagName === 'SELECT') {
                                field.value = fields[fieldId];
                                field.dispatchEvent(new Event('change'));
                            } else {
                                field.value = fields[fieldId];
                                field.dispatchEvent(new Event('input'));
                            }
                            
                            // Animation de feedback
                            field.style.transition = 'all 0.3s ease';
                            field.style.backgroundColor = 'rgba(79, 70, 229, 0.1)';
                            field.style.boxShadow = '0 0 0 3px rgba(79, 70, 229, 0.1)';
                            
                            setTimeout(() => {
                                field.style.backgroundColor = '';
                                field.style.boxShadow = '';
                            }, 600);
                        }, delay);
                        delay += 100;
                    }
                });
                
                // Définir les dates par défaut
                setTimeout(() => {
                    const today = new Date();
                    const startDate = today.toISOString().split('T')[0];
                    const endDate = new Date(today);
                    endDate.setDate(endDate.getDate() + 84); // 12 semaines par défaut
                    const targetDate = endDate.toISOString().split('T')[0];
                    
                    const startDateField = document.getElementById('{{ form.startDate.vars.id }}');
                    const endDateField = document.getElementById('{{ form.endDate.vars.id }}');
                    const statusField = document.getElementById('{{ form.status.vars.id }}');
                    const dateField = document.getElementById('{{ form.date.vars.id }}');
                    const progressField = document.getElementById('{{ form.progress.vars.id }}');
                    
                    if (startDateField) startDateField.value = startDate;
                    if (endDateField) endDateField.value = targetDate;
                    if (statusField) statusField.value = 'PENDING';
                    if (dateField) dateField.value = startDate;
                    if (progressField) {
                        progressField.value = '0';
                        updateProgressValue(0);
                    }
                    
                    // Calculer durationWeeks
                    calculateDurationWeeks();
                    
                    // Mettre à jour l'indicateur de difficulté
                    updateDifficultyIndicator(preset.difficultyLevel);
                }, delay + 100);
            }
        }

        // Calculer la durée en semaines
        function calculateDurationWeeks() {
            const startDateField = document.getElementById('{{ form.startDate.vars.id }}');
            const endDateField = document.getElementById('{{ form.endDate.vars.id }}');
            const durationField = document.getElementById('{{ form.durationWeeks.vars.id }}');
            const durationMessage = document.getElementById('duration-message');
            
            if (startDateField && startDateField.value && endDateField && endDateField.value && durationField) {
                const startDate = new Date(startDateField.value);
                const endDate = new Date(endDateField.value);
                
                if (endDate > startDate) {
                    const diffTime = Math.abs(endDate - startDate);
                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));
                    const diffWeeks = Math.ceil(diffDays / 7);
                    
                    durationField.value = diffWeeks;
                    
                    if (durationMessage) {
                        durationMessage.classList.remove('hidden');
                        durationMessage.textContent = `{{ 'Calculated based on selected dates' | trans }} (${diffDays} days)`;
                    }
                }
            }
        }

        // Mettre à jour l'indicateur visuel de difficulté
        function updateDifficultyIndicator(level) {
            const indicator = document.getElementById('difficulty-indicator');
            if (!indicator) return;
            
            const levels = ['easy', 'medium', 'hard', 'expert'];
            const levelIndex = levels.indexOf(level);
            
            indicator.querySelectorAll('div').forEach((bar, index) => {
                bar.style.transition = 'all 0.3s ease';
                if (index <= levelIndex) {
                    bar.style.backgroundColor = index === 0 ? '#10b981' : 
                                               index === 1 ? '#f59e0b' : 
                                               index === 2 ? '#f97316' : 
                                               '#ef4444';
                } else {
                    bar.style.backgroundColor = '#e5e7eb';
                }
            });
        }

        // Mettre à jour l'affichage de la valeur du slider de progression
        function updateProgressValue(value) {
            const progressValue = document.getElementById('progress-value');
            if (progressValue) {
                progressValue.textContent = `${value}%`;
                progressValue.style.transform = 'scale(1.2)';
                setTimeout(() => {
                    progressValue.style.transition = 'transform 0.2s ease';
                    progressValue.style.transform = 'scale(1)';
                }, 100);
            }
        }

        // Mettre à jour le résumé
        function updateSummary() {
            const categoryField = document.getElementById('goal_category');
            const titleField = document.getElementById('{{ form.title.vars.id }}');
            const durationField = document.getElementById('{{ form.durationWeeks.vars.id }}');
            const sessionsField = document.getElementById('{{ form.sessionsPerWeek.vars.id }}');
            
            if (categoryField) {
                document.getElementById('summary-category').textContent = 
                    categoryField.value === 'weight_loss' ? '{{ "Weight Management" | trans }}' :
                    categoryField.value === 'strength' ? '{{ "Strength Building" | trans }}' :
                    categoryField.value === 'endurance' ? '{{ "Endurance" | trans }}' :
                    categoryField.value === 'flexibility' ? '{{ "Flexibility & Mobility" | trans }}' :
                    categoryField.value === 'sports' ? '{{ "Sport Performance" | trans }}' :
                    '{{ "Medical Rehab" | trans }}';
            }
            
            if (titleField) {
                document.getElementById('summary-title').textContent = titleField.value || '-';
            }
            
            if (durationField) {
                document.getElementById('summary-duration').textContent = 
                    durationField.value ? `${durationField.value} weeks` : '- weeks';
            }
            
            if (sessionsField) {
                document.getElementById('summary-frequency').textContent = 
                    sessionsField.value ? `${sessionsField.value} sessions/week` : '- sessions/week';
            }
        }

        // Gestion de la soumission du formulaire
        function handleFormSubmit(event) {
            // Validation finale
            const commitmentField = document.getElementById('{{ form.userCommitment.vars.id }}');
            if (commitmentField && !commitmentField.checked) {
                event.preventDefault();
                showValidationError('commitment-error', '{{ "Please confirm your commitment to this goal" | trans }}');
                return;
            }
            
            // Animation du bouton de soumission
            if (submitButton) {
                submitButton.disabled = true;
                submitButton.innerHTML = `
                    <div class="flex items-center gap-3">
                        <div class="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin"></div>
                        <span class="font-medium">{{ 'Creating...' | trans }}</span>
                    </div>
                `;
            }
        }

        // Affichage d'erreur de validation
        function showValidationError(elementId, message, inputElement = null) {
            const existingError = document.getElementById(elementId);
            if (existingError) existingError.remove();
            
            const errorDiv = document.createElement('div');
            errorDiv.id = elementId;
            errorDiv.className = 'mt-3 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl text-red-700 dark:text-red-400 text-sm animate-fade-in flex items-start gap-3';
            errorDiv.innerHTML = `
                <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <span>${message}</span>
            `;
            
            if (inputElement) {
                inputElement.parentNode.insertBefore(errorDiv, inputElement.nextSibling);
                highlightInputError(inputElement);
            } else {
                document.querySelector(`#step-${currentStep}-content .rounded-2xl`).appendChild(errorDiv);
            }
            
            errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
            
            setTimeout(() => {
                if (errorDiv.parentNode) {
                    errorDiv.style.opacity = '0';
                    errorDiv.style.transition = 'opacity 0.3s ease';
                    setTimeout(() => {
                        if (errorDiv.parentNode) {
                            errorDiv.parentNode.removeChild(errorDiv);
                        }
                    }, 300);
                }
            }, 5000);
        }

        // Mettre en évidence un champ en erreur
        function highlightInputError(inputElement) {
            inputElement.style.borderColor = '#ef4444';
            inputElement.style.boxShadow = '0 0 0 3px rgba(239, 68, 68, 0.1)';
            
            let start = null;
            
            function shake(timestamp) {
                if (!start) start = timestamp;
                const progress = timestamp - start;
                
                const x = Math.sin(progress * 0.02) * 10;
                inputElement.style.transform = `translateX(${x}px)`;
                
                if (progress < 500) {
                    requestAnimationFrame(shake);
                } else {
                    inputElement.style.transition = 'all 0.3s ease';
                    inputElement.style.transform = 'translateX(0)';
                    setTimeout(() => {
                        inputElement.style.borderColor = '';
                        inputElement.style.boxShadow = '';
                    }, 300);
                }
            }
            
            requestAnimationFrame(shake);
        }

        // Initialisation
        document.addEventListener('DOMContentLoaded', async function() {
            // Configuration des champs par défaut
            const today = new Date().toISOString().split('T')[0];
            const statusField = document.getElementById('{{ form.status.vars.id }}');
            const dateField = document.getElementById('{{ form.date.vars.id }}');
            const progressField = document.getElementById('{{ form.progress.vars.id }}');
            
            if (statusField && !statusField.value) statusField.value = 'PENDING';
            if (dateField && !dateField.value) dateField.value = today;
            if (progressField && !progressField.value) {
                progressField.value = '0';
                updateProgressValue(0);
            }
            
            // Configurer l'écouteur du slider de progression
            if (progressField) {
                progressField.addEventListener('input', function() {
                    updateProgressValue(this.value);
                });
            }
            
            // Configurer les dates
            const startDateField = document.getElementById('{{ form.startDate.vars.id }}');
            const endDateField = document.getElementById('{{ form.endDate.vars.id }}');
            if (startDateField && !startDateField.value) startDateField.value = today;
            if (endDateField && !endDateField.value) {
                const endDate = new Date(today);
                endDate.setDate(endDate.getDate() + 84);
                endDateField.value = endDate.toISOString().split('T')[0];
                calculateDurationWeeks();
            }
            
            // Vérifier la catégorie existante
            const currentCategory = document.getElementById('goal_category');
            if (currentCategory && currentCategory.value) {
                setTimeout(() => selectCategory(currentCategory.value), 300);
            }
            
            // Animation d'entrée initiale
            await new Promise(resolve => setTimeout(resolve, 200));
            const firstStepContent = document.getElementById('step-1-content');
            firstStepContent.style.opacity = '1';
            firstStepContent.style.transform = 'translateY(0)';
            
            // Gestion de la navigation au clavier
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Enter' && !e.shiftKey && e.target.tagName !== 'TEXTAREA') {
                    e.preventDefault();
                    if (currentStep < totalSteps) {
                        nextStep(currentStep + 1);
                    } else if (currentStep === totalSteps) {
                        submitButton.click();
                    }
                }
                
                if (e.key === 'ArrowLeft' && currentStep > 1) {
                    e.preventDefault();
                    prevStep(currentStep - 1);
                }
                if (e.key === 'ArrowRight' && currentStep < totalSteps) {
                    e.preventDefault();
                    nextStep(currentStep + 1);
                }
            });
            
            // Écouteur pour la soumission du formulaire
            const form = document.getElementById('goal-form');
            if (form) {
                form.addEventListener('submit', handleFormSubmit);
            }
            
            // Initialiser l'indicateur de difficulté
            const difficultyField = document.getElementById('{{ form.difficultyLevel.vars.id }}');
            if (difficultyField && difficultyField.value) {
                updateDifficultyIndicator(difficultyField.value);
            }
        });

        // Exposer les fonctions globales
        window.selectCategory = selectCategory;
        window.nextStep = nextStep;
        window.prevStep = prevStep;
        window.goToStep = goToStep;
        window.currentStep = currentStep;
        window.calculateDurationWeeks = calculateDurationWeeks;
        window.updateProgressValue = updateProgressValue;
        window.updateDifficultyIndicator = updateDifficultyIndicator;
