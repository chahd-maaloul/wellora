{% extends 'layouts/app.html.twig' %}

{% block title %}Goals Management{% endblock %}

{% block body %}
<div class="min-h-screen bg-white py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 space-y-8">

        <!-- Modern Header white style -->
        <div class="mb-12">
            <div class="relative overflow-hidden rounded-3xl bg-white shadow-2xl border border-gray-200">
                <div class="relative p-8 md:p-10">
                    <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
                        <!-- TEXT -->
                        <div>
                            <h1 class="text-4xl md:text-5xl font-bold mb-3 text-green-800">
                                Goals Dashboard
                            </h1>
                            <p class="text-lg text-gray-700">
                                Track, manage, and conquer your fitness journey
                            </p>
                            <div class="flex items-center gap-4 mt-4">
                                <div class="flex items-center gap-2 text-black">
                                    <div class="w-3 h-3 bg-green-500 rounded-full animate-pulse"></div>
                                    <span class="text-sm font-medium">Live Updates</span>
                                </div>
                                <div class="flex items-center gap-2 text-black">
                                    <div class="w-3 h-3 bg-green-500 rounded-full"></div>
                                    <span class="text-sm font-medium">Smart Tracking</span>
                                </div>
                            </div>
                        </div>

                        <!-- BUTTON -->
                        <a href="{{ path('fitness_goal_new') }}"
                           class="group inline-flex items-center px-8 py-4 bg-green-500 text-white rounded-2xl hover:bg-green-800 transition-all duration-300 shadow-lg hover:shadow-xl">
                            <svg class="w-6 h-6 mr-3 group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                            </svg>
                            <span class="font-semibold text-lg">Create New Goal</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Calcul des statistiques -->
        {% set total = goals|length %}
        {% set completed = 0 %}
        {% set inProgress = 0 %}
        {% set pending = 0 %}
        
        {% for goal in goals %}
            {% if goal.getStatus() == 'completed' %}
                {% set completed = completed + 1 %}
            {% elseif goal.getStatus() == 'in progress' %}
                {% set inProgress = inProgress + 1 %}
            {% elseif goal.getStatus() == 'PENDING' %}
                {% set pending = pending + 1 %}
            {% endif %}
        {% endfor %}
        
        {% set successRate = total > 0 ? (completed / total * 100)|round : 0 %}
        {% set completedPct = total > 0 ? (completed / total * 100) : 0 %}
        {% set inProgressPct = total > 0 ? (inProgress / total * 100) : 0 %}
        {% set pendingPct = total > 0 ? (pending / total * 100) : 0 %}

        <!-- Modern Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
            <!-- Total Goals Card -->
            <div class="group relative">
                <div class="absolute inset-0 bg-gradient-to-r from-blue-500 to-blue-600 rounded-3xl blur opacity-20 group-hover:opacity-30 transition-opacity"></div>
                <div class="relative bg-white rounded-3xl border border-gray-200 shadow-xl hover:shadow-2xl transition-all duration-500 p-6 hover:-translate-y-1">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-semibold text-gray-500 uppercase tracking-widest">Total Goals</p>
                            <p class="text-4xl font-bold text-gray-900 mt-2">{{ total }}</p>
                        </div>
                        <div class="p-3 bg-blue-100 rounded-2xl shadow-lg">
                            <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-6">
                        <div class="flex justify-between text-xs text-gray-500 mb-1">
                            <span>Completion Rate</span>
                            <span class="text-blue-600 font-semibold">{{ completedPct|round }}%</span>
                        </div>
                        <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                            <div class="h-full bg-gradient-to-r from-blue-500 to-blue-600 rounded-full transition-all duration-1000" 
                                 style="width: {{ completedPct }}%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Completed Goals Card -->
            <div class="group relative">
                <div class="absolute inset-0 bg-gradient-to-r from-emerald-500 to-green-600 rounded-3xl blur opacity-20 group-hover:opacity-30 transition-opacity"></div>
                <div class="relative bg-white rounded-3xl border border-gray-200 shadow-xl hover:shadow-2xl transition-all duration-500 p-6 hover:-translate-y-1">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-semibold text-gray-500 uppercase tracking-widest">Completed</p>
                            <p class="text-4xl font-bold text-gray-900 mt-2">{{ completed }}</p>
                        </div>
                        <div class="p-3 bg-green-100 rounded-2xl shadow-lg">
                            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-6">
                        <div class="flex justify-between text-xs text-gray-500 mb-1">
                            <span>Achievement</span>
                            <span class="text-green-600 font-semibold">{{ completedPct|round }}%</span>
                        </div>
                        <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                            <div class="h-full bg-gradient-to-r from-emerald-500 to-green-600 rounded-full transition-all duration-1000" 
                                 style="width: {{ completedPct }}%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- In Progress Card -->
            <div class="group relative">
                <div class="absolute inset-0 bg-gradient-to-r from-amber-500 to-orange-500 rounded-3xl blur opacity-20 group-hover:opacity-30 transition-opacity"></div>
                <div class="relative bg-white rounded-3xl border border-gray-200 shadow-xl hover:shadow-2xl transition-all duration-500 p-6 hover:-translate-y-1">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-semibold text-gray-500 uppercase tracking-widest">In Progress</p>
                            <p class="text-4xl font-bold text-gray-900 mt-2">{{ inProgress }}</p>
                        </div>
                        <div class="p-3 bg-yellow-100 rounded-2xl shadow-lg">
                            <svg class="w-8 h-8 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-6">
                        <div class="flex justify-between text-xs text-gray-500 mb-1">
                            <span>Active Rate</span>
                            <span class="text-yellow-600 font-semibold">{{ inProgressPct|round }}%</span>
                        </div>
                        <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                            <div class="h-full bg-gradient-to-r from-amber-500 to-orange-500 rounded-full transition-all duration-1000" 
                                 style="width: {{ inProgressPct }}%"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Success Rate Card -->
            <div class="group relative">
                <div class="absolute inset-0 bg-gradient-to-r from-purple-500 to-pink-500 rounded-3xl blur opacity-20 group-hover:opacity-30 transition-opacity"></div>
                <div class="relative bg-white rounded-3xl border border-gray-200 shadow-xl hover:shadow-2xl transition-all duration-500 p-6 hover:-translate-y-1">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-sm font-semibold text-gray-500 uppercase tracking-widest">Success Rate</p>
                            <p class="text-4xl font-bold text-gray-900 mt-2">{{ successRate }}%</p>
                        </div>
                        <div class="p-3 bg-purple-100 rounded-2xl shadow-lg">
                            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
                            </svg>
                        </div>
                    </div>
                    <div class="mt-6">
                        <div class="flex justify-between text-xs text-gray-500 mb-1">
                            <span>Overall Performance</span>
                            <span class="text-purple-600 font-semibold">{{ successRate }}%</span>
                        </div>
                        <div class="h-2 bg-gray-200 rounded-full overflow-hidden">
                            <div class="h-full bg-gradient-to-r from-purple-500 to-pink-500 rounded-full transition-all duration-1000" 
                                 style="width: {{ successRate }}%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modern Main Content Card -->
        <div class="bg-white rounded-3xl shadow-2xl overflow-hidden border border-gray-200">
            <!-- Modern Header with search -->
            <div class="px-8 py-8 border-b border-gray-200 bg-gradient-to-r from-gray-50 to-white">
                <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-6">
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-3">
                           <span class="text-green-800">My Goals</span>
                            <span class="text-sm font-normal px-3 py-1 bg-blue-100 text-blue-800 rounded-full">{{ total }} total</span>
                        </h2>
                        <p class="text-gray-600 mt-2 flex items-center gap-2">
                            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"/>
                            </svg>
                            <span id="goalsCount" class="text-gray-700">{{ total }} goal{{ total != 1 ? 's' : '' }} found</span>
                        </p>
                    </div>
                    <div class="flex flex-col sm:flex-row gap-4">
                        <div class="relative flex-1 sm:w-72">
                            <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                                <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
                                </svg>
                            </div>
                            <input type="text" 
                                   id="searchInput"
                                   placeholder="Search goals by title or description..." 
                                   class="w-full pl-12 pr-4 py-3 bg-white border border-gray-300 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-blue-400 transition-all duration-300 shadow-sm focus:shadow-lg">
                        </div>
                        <select id="statusFilter"
                                class="px-5 py-3 bg-white border border-gray-300 rounded-2xl focus:ring-2 focus:ring-blue-500 focus:border-blue-400 transition-all duration-300 shadow-sm focus:shadow-lg text-gray-700">
                            <option value="">All Status</option>
                            <option value="in progress">üöÄ In Progress</option>
                            <option value="completed">‚úÖ Completed</option>
                            <option value="PENDING">‚è≥ Pending</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Goals List -->
            <div id="goalsListContainer">
                {% if goals is not empty %}
                    {% for item in goalsWithCoach %}
                        {% set goal = item.goal %}
                        {% set coach = item.coach %}
                        {% set daysLeft = date(goal.endDate).diff(date()).days %}
                        {% set progress = goal.getProgress() %}
                        {% set progress = progress is defined ? progress : 0 %}
                        
                        <!-- COULEURS DE LA BARRE SELON LE NIVEAU DE PROGRESSION -->
                        {% if progress >= 90 %}
                            {% set progressBarColor = 'bg-gradient-to-r from-emerald-500 via-emerald-400 to-green-500' %}
                            {% set progressTextColor = 'text-emerald-600' %}
                            {% set progressBg = 'bg-emerald-100' %}
                        {% elseif progress >= 70 %}
                            {% set progressBarColor = 'bg-gradient-to-r from-blue-500 via-blue-400 to-cyan-500' %}
                            {% set progressTextColor = 'text-blue-600' %}
                            {% set progressBg = 'bg-blue-100' %}
                        {% elseif progress >= 50 %}
                            {% set progressBarColor = 'bg-gradient-to-r from-indigo-500 via-indigo-400 to-purple-500' %}
                            {% set progressTextColor = 'text-indigo-600' %}
                            {% set progressBg = 'bg-indigo-100' %}
                        {% elseif progress >= 30 %}
                            {% set progressBarColor = 'bg-gradient-to-r from-amber-500 via-amber-400 to-orange-500' %}
                            {% set progressTextColor = 'text-amber-600' %}
                            {% set progressBg = 'bg-amber-100' %}
                        {% elseif progress >= 10 %}
                            {% set progressBarColor = 'bg-gradient-to-r from-orange-500 via-orange-400 to-red-500' %}
                            {% set progressTextColor = 'text-orange-600' %}
                            {% set progressBg = 'bg-orange-100' %}
                        {% else %}
                            {% set progressBarColor = 'bg-gradient-to-r from-rose-500 via-rose-400 to-pink-500' %}
                            {% set progressTextColor = 'text-rose-600' %}
                            {% set progressBg = 'bg-rose-100' %}
                        {% endif %}
                        
                        <div class="group p-8 hover:bg-gray-50 transition-all duration-300 goal-item border-b border-gray-200 last:border-b-0" 
                             data-status="{{ goal.getStatus() }}"
                             data-title="{{ goal.getTitle()|lower }}"
                             data-description="{{ goal.getDescription()|lower }}"
                             data-progress="{{ progress }}">
                            <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-8">
                                <!-- Goal Info -->
                                <div class="flex-1">
                                    <div class="flex items-start gap-6">
                                        <!-- Goal Icon -->
                                        <div class="flex-shrink-0">
                                            <div class="p-4 rounded-2xl bg-gradient-to-br from-white to-gray-50 border border-gray-200 shadow-lg">
                                                {% if goal.getStatus() == 'completed' %}
                                                    <svg class="w-8 h-8 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                                    </svg>
                                                {% elseif goal.getStatus() == 'PENDING' %}
                                                    <svg class="w-8 h-8 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                                                    </svg>
                                                {% else %}
                                                    <svg class="w-8 h-8 text-amber-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                    </svg>
                                                {% endif %}
                                            </div>
                                        </div>
                                        
                                        <!-- Goal Details -->
                                        <div class="flex-1 min-w-0">
                                            <div class="flex items-center gap-4 mb-4">
                                                <h3 class="text-xl font-bold text-gray-900 truncate group-hover:text-blue-600 transition-colors">{{ goal.getTitle() }}</h3>
                                                <div class="flex gap-2">
                                                    {% if goal.getStatus() == 'PENDING' %}
                                                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-yellow-100 text-yellow-800 border border-yellow-200">
                                                            <span class="w-2 h-2 mr-2 bg-yellow-500 rounded-full animate-pulse"></span>
                                                            ‚è≥ Pending
                                                        </span>
                                                    {% elseif goal.getStatus() == 'completed' %}
                                                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-green-100 text-green-800 border border-green-200">
                                                            <span class="w-2 h-2 mr-2 bg-green-500 rounded-full"></span>
                                                            ‚úÖ Completed
                                                        </span>
                                                    {% elseif goal.getStatus() == 'in progress' %}
                                                        <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold bg-blue-100 text-blue-800 border border-blue-200">
                                                            <span class="w-2 h-2 mr-2 bg-blue-500 rounded-full animate-pulse"></span>
                                                            üöÄ In Progress
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <p class="text-gray-600 mb-6 line-clamp-2 leading-relaxed">{{ goal.getDescription() }}</p>
                                            
                                            <!-- Coach Information - NEW SECTION -->
                                            {% if coach %}
                                            <div class="mb-6 p-4 bg-gradient-to-r from-purple-50 to-indigo-50 rounded-xl border border-purple-200">
                                                <div class="flex items-center gap-4">
                                                    <div class="flex-shrink-0">
                                                        <div class="w-12 h-12 bg-gradient-to-br from-purple-500 to-indigo-600 rounded-full flex items-center justify-center text-white font-bold text-lg shadow-lg">
                                                            {{ coach.firstName|first }}{{ coach.lastName|first }}
                                                        </div>
                                                    </div>
                                                    <div class="flex-1">
                                                        <div class="flex items-center gap-2 mb-1">
                                                            <span class="text-sm font-semibold text-purple-700 uppercase tracking-wider">Coach</span>
                                                            <span class="px-2 py-0.5 bg-purple-200 text-purple-800 text-xs rounded-full">Assigned</span>
                                                        </div>
                                                        <h4 class="font-bold text-gray-900">{{ coach.firstName }} {{ coach.lastName }}</h4>
                                                        <div class="flex items-center gap-3 mt-1 text-sm">
                                                            <span class="text-gray-600 flex items-center gap-1">
                                                                <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                                                                </svg>
                                                                {{ coach.email }}
                                                            </span>
                                                            
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            {% elseif goal.getCoachId() %}
                                            <div class="mb-6 p-4 bg-gray-50 rounded-xl border border-gray-200">
                                                <div class="flex items-center gap-3">
                                                    <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                                                        <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                                        </svg>
                                                    </div>
                                                    <div>
                                                        <p class="text-sm text-gray-500">Coach ID: {{ goal.getCoachId() }}</p>
                                                        <p class="text-xs text-amber-600">Coach information unavailable</p>
                                                    </div>
                                                </div>
                                            </div>
                                            {% endif %}
                                            
                                            <!-- BARRE DE PROGRESSION COLOR√âE SELON LE NIVEAU -->
                                            <div class="mb-6">
                                                <div class="flex items-center justify-between mb-3">
                                                    <div class="flex items-center gap-3">
                                                        <span class="text-sm font-semibold text-gray-700">Progress</span>
                                                        <span class="text-lg font-bold {{ progressTextColor }}">{{ progress }}%</span>
                                                        {% if progress == 100 %}
                                                            <span class="text-xs px-2 py-1 bg-emerald-100 text-emerald-800 rounded-full animate-pulse">üéØ Achieved</span>
                                                        {% elseif progress >= 70 %}
                                                            <span class="text-xs px-2 py-1 bg-blue-100 text-blue-800 rounded-full">üöÄ On Track</span>
                                                        {% elseif progress <= 30 %}
                                                            <span class="text-xs px-2 py-1 bg-rose-100 text-rose-800 rounded-full">‚ö†Ô∏è Needs Effort</span>
                                                        {% endif %}
                                                    </div>
                                                    <span class="text-sm text-gray-500">{{ daysLeft }} days left</span>
                                                </div>
                                                
                                                <!-- Barre de progression avec couleur dynamique -->
                                                <div class="relative h-3 bg-gray-200 rounded-full overflow-hidden shadow-inner">
                                                    <!-- Barre color√©e selon le niveau -->
                                                    <div class="h-full {{ progressBarColor }} rounded-full transition-all duration-1000 ease-out progress-bar-animate" 
                                                         style="width: {{ progress }}%">
                                                        <!-- Effet de brillance -->
                                                        <div class="absolute inset-0 bg-gradient-to-r from-white/30 to-transparent"></div>
                                                    </div>
                                                    
                                                    <!-- Indicateur de position -->
                                                    <div class="absolute top-1/2 transform -translate-y-1/2 w-3 h-3 bg-white rounded-full border-2 {{ progressTextColor }} shadow-lg" 
                                                         style="left: calc({{ progress }}% - 6px);"></div>
                                                </div>
                                            </div>
                                            
                                            <!-- Meta Info -->
                                            <div class="flex items-center gap-8 text-sm">
                                                <div class="flex items-center gap-3">
                                                    <div class="p-2 bg-blue-50 rounded-lg">
                                                        <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                                                        </svg>
                                                    </div>
                                                    <div>
                                                        <div class="text-xs text-gray-500">End Date</div>
                                                        <div class="font-medium text-gray-900">{{ goal.endDate|date('M d, Y') }}</div>
                                                    </div>
                                                </div>
                                                <div class="flex items-center gap-3">
                                                    <div class="p-2 bg-purple-50 rounded-lg">
                                                        <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                                        </svg>
                                                    </div>
                                                    <div>
                                                        <div class="text-xs text-gray-500">Time Remaining</div>
                                                        <div class="font-medium text-gray-900">{{ daysLeft }} days</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Action Buttons -->
                                <div class="flex items-center gap-3">
                                    <div class="flex flex-col sm:flex-row gap-3">
                                        <button onclick='showGoalDetails(
                                            "{{ goal.id }}", 
                                            "{{ goal.getTitle()|e('js') }}", 
                                            "{{ goal.getDescription()|e('js') }}", 
                                            {{ progress }}, 
                                            "{{ goal.endDate|date('M d, Y') }}", 
                                            {{ daysLeft }}, 
                                            "{{ goal.getStatus() }}",
                                            {% if coach %}
                                            {
                                                firstName: "{{ coach.firstName|e('js') }}",
                                                lastName: "{{ coach.lastName|e('js') }}",
                                                email: "{{ coach.email|e('js') }}",
                                                specialization: "{{ coach.specialization|default('')|e('js') }}"
                                            }
                                            {% else %}
                                            null
                                            {% endif %}
                                        )'
