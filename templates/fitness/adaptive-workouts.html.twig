{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Adaptive Workouts - WellCare Connect' | trans }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fitness-css') }}
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50 dark:bg-gray-800" x-data="adaptiveWorkouts()">
    {# Header #}
    <div class="bg-white shadow-sm dark:bg-gray-900">
        <div class="px-4 py-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                    <a href="{{ path('fitness_dashboard') }}" class="text-gray-500 hover:text-gray-700 dark:text-gray-400">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
                        </svg>
                    </a>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">{{ 'Adaptive Workouts' | trans }}</h1>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'AI-powered workout adjustments based on your performance' | trans }}</p>
                    </div>
                </div>
                <div class="flex items-center space-x-3">
                    <button @click="generateWorkout()" class="px-4 py-2 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <svg class="inline w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                        </svg>
                        {{ 'Generate Workout' | trans }}
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="px-4 py-8 mx-auto max-w-7xl sm:px-6 lg:px-8">
        {# Performance Status #}
        <div class="grid grid-cols-1 gap-6 mb-8 md:grid-cols-4">
            <div class="p-6 bg-white shadow-sm dark:bg-gray-900 rounded-xl">
                <div class="flex items-center justify-between mb-4">
                    <span class="text-sm text-gray-500 dark:text-gray-400">{{ "Today's Readiness" | trans }}</span>
                    <svg class="w-5 h-5 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <p class="text-3xl font-bold text-green-500">{{ readinessScore }}%</p>
                <p class="mt-1 text-xs text-gray-500">{{ 'Great day to push' | trans }}</p>
            </div>

            <div class="p-6 bg-white shadow-sm dark:bg-gray-900 rounded-xl">
                <div class="flex items-center justify-between mb-4">
                    <span class="text-sm text-gray-500 dark:text-gray-400">{{ 'Last Workout' | trans }}</span>
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <p class="text-xl font-bold text-gray-900 dark:text-white">{{ lastWorkout }}</p>
                <p class="mt-1 text-xs text-gray-500">{{ lastWorkoutType }}</p>
            </div>

            <div class="p-6 bg-white shadow-sm dark:bg-gray-900 rounded-xl">
                <div class="flex items-center justify-between mb-4">
                    <span class="text-sm text-gray-500 dark:text-gray-400">{{ 'Muscle Recovery' | trans }}</span>
                    <svg class="w-5 h-5 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/>
                    </svg>
                </div>
                <p class="text-3xl font-bold text-blue-500">{{ recoveryStatus }}%</p>
                <p class="mt-1 text-xs text-gray-500">{{ 'Upper body recovering' | trans }}</p>
            </div>

            <div class="p-6 bg-white shadow-sm dark:bg-gray-900 rounded-xl">
                <div class="flex items-center justify-between mb-4">
                    <span class="text-sm text-gray-500 dark:text-gray-400">{{ 'Suggested Focus' | trans }}</span>
                    <svg class="w-5 h-5 text-purple-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                    </svg>
                </div>
                <p class="text-xl font-bold text-purple-500">{{ suggestedFocus }}</p>
                <p class="mt-1 text-xs text-gray-500">{{ 'Based on your schedule' | trans }}</p>
            </div>
        </div>

        <div class="grid grid-cols-1 gap-8 lg:grid-cols-3">
            {# Workout Generator #}
            <div class="lg:col-span-2">
                {# AI Recommendation #}
                <div class="p-6 mb-6 text-white bg-gradient-to-r from-wellcare-500 to-wellcare-600 rounded-xl">
                    <div class="flex items-start">
                        <div class="flex items-center justify-center flex-shrink-0 w-12 h-12 mr-4 rounded-full bg-white/20">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
                            </svg>
                        </div>
                        <div>
                            <h3 class="mb-1 text-lg font-bold">{{ 'AI Workout Recommendation' | trans }}</h3>
                            <p class="text-white/90">{{ aiRecommendation }}</p>
                        </div>
                    </div>
                </div>

                {# Workout Type Selection #}
                <div class="p-6 mb-6 bg-white shadow-sm dark:bg-gray-900 rounded-xl">
                    <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">{{ 'Select Workout Type' | trans }}</h2>
                    
                    <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
                        {% for type in workoutTypes %}
                        <div @click="selectWorkoutType('{{ type.id }}')" 
                             class="p-4 text-center transition-all duration-200 border-2 cursor-pointer rounded-xl"
                             :class="selectedType === '{{ type.id }}' ? 'border-wellcare-500 bg-wellcare-50 dark:bg-wellcare-900/20' : 'border-gray-200 dark:border-gray-700 hover:border-wellcare-300'">
                            <div class="mb-2 text-3xl">{{ type.icon }}</div>
                            <h3 class="text-sm font-medium text-gray-900 dark:text-white">{{ type.name }}</h3>
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">{{ type.duration }}</p>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                {# Generated Workout #}
                <div class="p-6 bg-white shadow-sm dark:bg-gray-900 rounded-xl">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">{{ 'Your Adaptive Workout' | trans }}</h2>
                        <button @click="regenerateWorkout()" class="text-sm text-wellcare-500 hover:text-wellcare-600">
                            <svg class="inline w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                            </svg>
                            {{ 'Regenerate' | trans }}
                        </button>
                    </div>

                    {# Warm-up #}
                    <div class="mb-6">
                        <h3 class="flex items-center mb-3 font-medium text-gray-900 dark:text-white">
                            <span class="flex items-center justify-center w-8 h-8 mr-2 text-sm text-orange-500 bg-orange-100 rounded-full dark:bg-orange-900/30">{{ 'üî•' }}</span>
                            {{ 'Warm-up' | trans }}
                        </h3>
                        <div class="space-y-2">
                            {% for exercise in warmup %}
                            <div class="flex items-center justify-between p-3 rounded-lg bg-gray-50 dark:bg-gray-800">
                                <div class="flex items-center">
                                    <span class="mr-3 text-lg">{{ exercise.icon }}</span>
                                    <span class="text-sm font-medium text-gray-900 dark:text-white">{{ exercise.name }}</span>
                                </div>
                                <span class="text-sm text-gray-500">{{ exercise.duration }}</span>
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    {# Main Exercises #}
                    <div class="mb-6">
                        <h3 class="flex items-center mb-3 font-medium text-gray-900 dark:text-white">
                            <span class="flex items-center justify-center w-8 h-8 mr-2 text-sm rounded-full bg-wellcare-100 dark:bg-wellcare-900/30 text-wellcare-500">{{ 'üí™' }}</span>
                            {{ 'Main Workout' | trans }}
                        </h3>
                        <div class="space-y-3">
                            {% for exercise in mainExercises %}
                            <div class="p-4 border border-gray-200 rounded-lg dark:border-gray-700">
                                <div class="flex items-start justify-between mb-3">
                                    <div class="flex items-center">
                                        <span class="mr-3 text-lg">{{ exercise.icon }}</span>
                                        <div>
                                            <h4 class="font-medium text-gray-900 dark:text-white">{{ exercise.name }}</h4>
                                            <p class="text-xs text-gray-500 dark:text-gray-400">{{ exercise.target }}</p>
                                        </div>
                                    </div>
                                    <span class="px-2 py-1 text-xs rounded-full {% if exercise.adaptation %}{% if exercise.adaptation.type == 'reduced' %}bg-green-100 text-green-600 dark:bg-green-900/30 dark:text-green-400{% else %}bg-amber-100 text-amber-600 dark:bg-amber-900/30 dark:text-amber-400{% endif %}{% endif %}">
                                        {% if exercise.adaptation %}{{ exercise.adaptation.reason }}{% endif %}
                                    </span>
                                </div>
                                <div class="grid grid-cols-4 gap-4 text-center">
                                    <div>
                                        <p class="text-xs text-gray-500">{{ 'Sets' | trans }}</p>
                                        <p class="font-bold text-gray-900 dark:text-white">{{ exercise.sets }}</p>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-500">{{ 'Reps' | trans }}</p>
                                        <p class="font-bold text-gray-900 dark:text-white">{{ exercise.reps }}</p>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-500">{{ 'Rest' | trans }}</p>
                                        <p class="font-bold text-gray-900 dark:text-white">{{ exercise.rest }}</p>
                                    </div>
                                    <div>
                                        <p class="text-xs text-gray-500">{{ 'RPE' | trans }}</p>
                                        <p class="font-bold text-wellcare-500">{{ exercise.rpe }}</p>
                                    </div>
                                </div>
                                {% if exercise.notes %}
                                <p class="mt-2 text-xs text-amber-600 dark:text-amber-400">{{ '‚ö†Ô∏è' }} {{ exercise.notes }}</p>
                                {% endif %}
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    {# Cool-down #}
                    <div>
                        <h3 class="flex items-center mb-3 font-medium text-gray-900 dark:text-white">
                            <span class="flex items-center justify-center w-8 h-8 mr-2 text-sm text-blue-500 bg-blue-100 rounded-full dark:bg-blue-900/30">{{ '‚ùÑÔ∏è' }}</span>
                            {{ 'Cool-down' | trans }}
                        </h3>
                        <div class="space-y-2">
                            {% for exercise in cooldown %}
                            <div class="flex items-center justify-between p-3 rounded-lg bg-gray-50 dark:bg-gray-800">
                                <div class="flex items-center">
                                    <span class="mr-3 text-lg">{{ exercise.icon }}</span>
                                    <span class="text-sm font-medium text-gray-900 dark:text-white">{{ exercise.name }}</span>
                                </div>
                                <span class="text-sm text-gray-500">{{ exercise.duration }}</span>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

            {# Sidebar #}
            <div class="space-y-6">
                {# Modifications Panel #}
                <div class="p-6 bg-white shadow-sm dark:bg-gray-900 rounded-xl">
                    <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">{{ 'Active Modifications' | trans }}</h2>
                    
                    <div class="space-y-3">
                        {% for mod in activeModifications %}
                        <div class="p-3 rounded-lg {% if mod.severity == 'warning' %}bg-amber-50 dark:bg-amber-900/20 border border-amber-200 dark:border-amber-800{% else %}bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800{% endif %}">
                            <div class="flex items-center justify-between mb-1">
                                <span class="text-sm font-medium text-gray-900 dark:text-white">{{ mod.condition }}</span>
                                <span class="text-xs px-2 py-0.5 rounded-full {% if mod.severity == 'warning' %}bg-amber-200 text-amber-700 dark:bg-amber-800 dark:text-amber-200{% else %}bg-blue-200 text-blue-700 dark:bg-blue-800 dark:text-blue-200{% endif %}">
                                    {{ mod.status }}
                                </span>
                            </div>
                            <p class="text-xs text-gray-600 dark:text-gray-400">{{ mod.modification }}</p>
                        </div>
                        {% endfor %}
                    </div>

                    <button @click="addModification()" class="w-full py-2 mt-4 text-sm text-gray-500 transition-colors border-2 border-gray-300 border-dashed rounded-lg dark:border-gray-600 dark:text-gray-400 hover:border-wellcare-500 hover:text-wellcare-500">
                        + {{ 'Add Modification' | trans }}
                    </button>
                </div>

                {# Substitution Suggestions #}
                <div class="p-6 bg-white shadow-sm dark:bg-gray-900 rounded-xl">
                    <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">{{ 'Exercise Substitutions' | trans }}</h2>
                    
                    <div class="space-y-4">
                        {% for sub in substitutions %}
                        <div class="p-3 rounded-lg bg-gray-50 dark:bg-gray-800">
                            <div class="flex items-center justify-between mb-2">
                                <span class="text-sm font-medium text-gray-500 line-through dark:text-gray-400">{{ sub.original }}</span>
                            </div>
                            <div class="flex items-center">
                                <svg class="w-4 h-4 mr-2 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                                </svg>
                                <span class="text-sm font-medium text-gray-900 dark:text-white">{{ sub.replacement }}</span>
                            </div>
                            <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">{{ sub.reason }}</p>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                {# Recovery Recommendations #}
                <div class="p-6 bg-white shadow-sm dark:bg-gray-900 rounded-xl">
                    <h2 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">{{ 'Recovery Recommendations' | trans }}</h2>
                    
                    <div class="space-y-3">
                        {% for rec in recoveryRecommendations %}
                        <div class="flex items-start">
                            <div class="w-8 h-8 rounded-full {% if rec.completed %}bg-green-100 dark:bg-green-900/30{% else %}bg-gray-100 dark:bg-gray-800{% endif %} flex items-center justify-center mr-3 flex-shrink-0">
                                {% if rec.completed %}
                                <svg class="w-4 h-4 text-green-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                                </svg>
                                {% else %}
                                <span class="text-sm">{{ rec.icon }}</span>
                                {% endif %}
                            </div>
                            <div class="flex-1">
                                <p class="text-sm font-medium text-gray-900 dark:text-white">{{ rec.title }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ rec.description }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>

                {# Medical Safety #}
                <div class="p-4 border border-red-200 bg-red-50 dark:bg-red-900/20 rounded-xl dark:border-red-800">
                    <div class="flex items-center mb-2">
                        <svg class="w-5 h-5 mr-2 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                        </svg>
                        <span class="font-medium text-red-700 dark:text-red-400">{{ 'Medical Safety' | trans }}</span>
                    </div>
                    <p class="text-xs text-red-600 dark:text-red-300">{{ 'This workout has been adapted based on your medical profile. Always consult your healthcare provider before starting new exercises.' | trans }}</p>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fitness') }}
{% endblock %}
