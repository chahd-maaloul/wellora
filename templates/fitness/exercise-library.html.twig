{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Exercise Library - WellCare Connect' }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fitness') }}
    <style>
        .line-clamp-2 {
            overflow: hidden;
            display: -webkit-box;
            -webkit-box-orient: vertical;
            -webkit-line-clamp: 2;
        }
        
        /* Video preview styles */
        .video-container video {
            transition: transform 0.3s ease;
        }
        
        .video-container:hover video {
            transform: scale(1.02);
        }
        
        /* Ensure YouTube thumbnails show properly */
        .youtube-thumbnail {
            background-size: cover;
            background-position: center;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fitness') }}
{% endblock %}

{% block body %}
<div x-data="exerciseLibrary({{ exercises|json_encode|e('html_attr') }})" class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <a href="{{ path('fitness_dashboard') }}" class="p-2 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="text-gray-600 fas fa-arrow-left dark:text-gray-400"></i>
                    </a>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-book-open text-wellcare-500"></i>
                            {{ 'Exercise Library' }}
                        </h1>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            {{ 'Browse exercises with video demonstrations' }}
                        </p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                  
                    <div class="relative">
                        <input 
                            type="text" 
                            x-model="searchQuery"
                            @input.debounce.300ms="filterExercises()"
                            placeholder="{{ 'Search exercises...' }}"
                            class="w-64 px-4 py-2 pl-10 text-gray-900 border border-gray-300 rounded-lg dark:border-gray-600 bg-gray-50 dark:bg-gray-700 dark:text-white focus:ring-wellcare-500 focus:border-wellcare-500">
                        <i class="absolute text-gray-400 transform -translate-y-1/2 fas fa-search left-3 top-1/2"></i>
                    </div>
                </div
            </div>
        </div>
    </header>

    <main class="p-6">
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-4">
            <!-- Sidebar - Filters -->
            <div class="space-y-6 lg:col-span-1">
                <!-- Categories -->
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-th-large text-wellcare-500"></i>
                        {{ 'Categories' }}
                    </h3>
                    
                    <div class="space-y-2">
                        <button
                            @click="selectCategory('all')"
                            :class="{'bg-wellcare-50 dark:bg-wellcare-900/30 text-wellcare-600 dark:text-wellcare-400': selectedCategory === 'all', 'hover:bg-gray-50 dark:hover:bg-gray-700/50 text-gray-700 dark:text-gray-300': selectedCategory !== 'all'}"
                            class="flex items-center justify-between w-full p-3 transition-colors rounded-lg">
                            <div class="flex items-center gap-3">
                                <i class="fas fa-layer-group"></i>
                                <span>All Categories</span>
                            </div>
                            <span class="px-2 py-1 text-xs bg-gray-100 rounded-full dark:bg-gray-700" x-text="getTotalCount()"></span>
                        </button>
                        
                        {% set categories = ['Strength', 'Cardio', 'Flexibility', 'Balance', 'Core', 'Warm-up', 'Cool-down'] %}
                        {% for category in categories %}
                        <button
                            @click="selectCategory('{{ category }}')"
                            :class="{'bg-wellcare-50 dark:bg-wellcare-900/30 text-wellcare-600 dark:text-wellcare-400': selectedCategory === '{{ category }}', 'hover:bg-gray-50 dark:hover:bg-gray-700/50 text-gray-700 dark:text-gray-300': selectedCategory !== '{{ category }}'}"
                            class="flex items-center justify-between w-full p-3 transition-colors rounded-lg">
                            <div class="flex items-center gap-3">
                                <i class="fas {{ 
                                    category == 'Strength' ? 'fa-dumbbell' :
                                    category == 'Cardio' ? 'fa-heart-pulse' :
                                    category == 'Flexibility' ? 'fa-expand' :
                                    category == 'Balance' ? 'fa-balance-scale' :
                                    category == 'Core' ? 'fa-fire' :
                                    category == 'Warm-up' ? 'fa-temperature-up' :
                                    'fa-temperature-down'
                                }}"></i>
                                <span>{{ category }}</span>
                            </div>
                            <span class="px-2 py-1 text-xs bg-gray-100 rounded-full dark:bg-gray-700" x-text="getCategoryCount('{{ category }}')"></span>
                        </button>
                        {% endfor %}
                    </div>
                </div>

                <!-- Difficulty -->
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-signal text-wellcare-500"></i>
                        {{ 'Difficulty' }}
                    </h3>
                    
                    <div class="space-y-2">
                        <button
                            @click="selectDifficulty('all')"
                            :class="{'bg-wellcare-50 dark:bg-wellcare-900/30 text-wellcare-600 dark:text-wellcare-400': selectedDifficulty === 'all', 'hover:bg-gray-50 dark:hover:bg-gray-700/50 text-gray-700 dark:text-gray-300': selectedDifficulty !== 'all'}"
                            class="flex items-center w-full gap-3 p-3 transition-colors rounded-lg">
                            <span class="flex items-center justify-center w-8 h-8 text-sm bg-gray-100 rounded-full dark:bg-gray-700">All</span>
                            <span>{{ 'All Levels' }}</span>
                        </button>
                        {% for level in ['Beginner', 'Intermediate', 'Advanced'] %}
                        <button
                            @click="selectDifficulty('{{ level }}')"
                            :class="{'bg-wellcare-50 dark:bg-wellcare-900/30 text-wellcare-600 dark:text-wellcare-400': selectedDifficulty === '{{ level }}', 'hover:bg-gray-50 dark:hover:bg-gray-700/50 text-gray-700 dark:text-gray-300': selectedDifficulty !== '{{ level }}'}"
                            class="flex items-center w-full gap-3 p-3 transition-colors rounded-lg">
                            <span class="w-8 h-8 rounded-full flex items-center justify-center text-sm
                                {{ level == 'Beginner' ? 'bg-green-100 dark:bg-green-900/30 text-green-600 dark:text-green-400' : 
                                  level == 'Intermediate' ? 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-600 dark:text-yellow-400' : 
                                  'bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400' }}">
                                {% if level == 'Beginner' %}
                                <i class="fas fa-star"></i>
                                {% elseif level == 'Intermediate' %}
                                <i class="fas fa-star"></i><i class="fas fa-star"></i>
                                {% else %}
                                <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i>
                                {% endif %}
                            </span>
                            <span>{{ level }}</span>
                        </button>
                        {% endfor %}
                    </div>
                </div>

                <!-- Activity Status -->
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-toggle-on text-wellcare-500"></i>
                        {{ 'Status' }}
                    </h3>
                    
                    <div class="space-y-2">
                        <button
                            @click="toggleStatus('all')"
                            :class="{'bg-wellcare-50 dark:bg-wellcare-900/30 text-wellcare-600 dark:text-wellcare-400': selectedStatus === 'all', 'hover:bg-gray-50 dark:hover:bg-gray-700/50 text-gray-700 dark:text-gray-300': selectedStatus !== 'all'}"
                            class="flex items-center w-full gap-3 p-3 transition-colors rounded-lg">
                            <span class="flex items-center justify-center w-8 h-8 text-sm bg-gray-100 rounded-full dark:bg-gray-700">All</span>
                            <span>{{ 'All Exercises' }}</span>
                        </button>
                        <button
                            @click="toggleStatus('active')"
                            :class="{'bg-wellcare-50 dark:bg-wellcare-900/30 text-wellcare-600 dark:text-wellcare-400': selectedStatus === 'active', 'hover:bg-gray-50 dark:hover:bg-gray-700/50 text-gray-700 dark:text-gray-300': selectedStatus !== 'active'}"
                            class="flex items-center w-full gap-3 p-3 transition-colors rounded-lg">
                            <span class="flex items-center justify-center w-8 h-8 text-sm bg-green-100 rounded-full text-green-600 dark:bg-green-900/30 dark:text-green-400">
                                <i class="fas fa-check"></i>
                            </span>
                            <span>{{ 'Active Only' }}</span>
                        </button>
                        <button
                            @click="toggleStatus('inactive')"
                            :class="{'bg-wellcare-50 dark:bg-wellcare-900/30 text-wellcare-600 dark:text-wellcare-400': selectedStatus === 'inactive', 'hover:bg-gray-50 dark:hover:bg-gray-700/50 text-gray-700 dark:text-gray-300': selectedStatus !== 'inactive'}"
                            class="flex items-center w-full gap-3 p-3 transition-colors rounded-lg">
                            <span class="flex items-center justify-center w-8 h-8 text-sm bg-red-100 rounded-full text-red-600 dark:bg-red-900/30 dark:text-red-400">
                                <i class="fas fa-times"></i>
                            </span>
                            <span>{{ 'Inactive Only' }}</span>
                        </button>
                    </div>
                </div>
            </div>

            <!-- Main Content - Exercise Grid -->
            <div class="space-y-6 lg:col-span-3">
                <!-- Results Header -->
                <div class="flex items-center justify-between">
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        <span x-text="filteredExercises.length"></span> {{ 'exercises found' }}
                        <span x-show="filteredExercises.length === 0" class="ml-4">
                            <a href="{{ path('exercises_new') }}" class="text-wellcare-500 hover:underline">
                                Create your first exercise
                            </a>
                        </span>
                    </p>
                    <div class="flex items-center gap-4">
                        <select x-model="sortBy" @change="filterExercises()" class="text-sm text-gray-700 bg-white border-gray-300 rounded-lg dark:border-gray-600 dark:bg-gray-700 dark:text-gray-300 focus:ring-wellcare-500 focus:border-wellcare-500">
                            <option value="name">{{ 'Sort by Name' }}</option>
                            <option value="difficulty">{{ 'Sort by Difficulty' }}</option>
                            <option value="duration">{{ 'Sort by Duration' }}</option>
                            <option value="calories">{{ 'Sort by Calories' }}</option>
                            <option value="created">{{ 'Sort by Date Created' }}</option>
                        </select>
                    </div>
                </div>

                <!-- Exercise Grid -->
                <div class="grid grid-cols-1 gap-6 md:grid-cols-2 xl:grid-cols-3">
                    <template x-for="exercise in filteredExercises" :key="exercise.id">
                        <div 
                            @click="openExerciseDetail(exercise)"
                            class="overflow-hidden transition-shadow bg-white border border-gray-100 shadow-sm cursor-pointer dark:bg-gray-800 rounded-xl dark:border-gray-700 hover:shadow-md">
                            <!-- Thumbnail avec vidéo -->
                            <div class="relative h-40 bg-gray-100 dark:bg-gray-700">
                                <!-- Vidéo uploadée (depuis l'ordinateur) -->
                                <template x-if="exercise.videoFileName">
                                    <div class="relative h-full">
                                        <video 
                                            class="absolute inset-0 w-full h-full object-cover"
                                            preload="metadata"
                                            playsinline
                                            @mouseenter="playPreviewVideo($event)"
                                            @mouseleave="pausePreviewVideo($event)"
                                            @click="event.stopPropagation(); openExerciseDetail(exercise)">
                                            <source :src="getVideoUrl(exercise)" type="video/mp4">
                                            Your browser does not support the video tag.
                                        </video>
                                        <div class="absolute inset-0 bg-black opacity-0 hover:opacity-10 transition-opacity"></div>
                                    </div>
                                </template>
                                
                                <!-- Vidéo YouTube (URL externe) -->
                                <template x-if="!exercise.videoFileName && exercise.videoUrl && exercise.videoUrl.includes('youtube.com')">
                                    <div class="relative h-full youtube-thumbnail" 
                                         :style="`background-image: url('${getYouTubeThumbnail(exercise.videoUrl)}')`">
                                        <div class="absolute inset-0 flex items-center justify-center">
                                            <div class="absolute inset-0 bg-black bg-opacity-40"></div>
                                            <div class="relative z-10 flex items-center justify-center w-16 h-16 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                                <i class="text-3xl fas fa-play-circle text-wellcare-500"></i>
                                            </div>
                                        </div>
                                    </div>
                                </template>
                                
                                <!-- Pas de vidéo -->
                                <template x-if="!exercise.videoFileName && (!exercise.videoUrl || !exercise.videoUrl.includes('youtube.com'))">
                                    <div class="absolute inset-0 flex items-center justify-center">
                                        <div class="flex items-center justify-center w-16 h-16 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                            <i class="text-3xl fas fa-play-circle text-wellcare-500"></i>
                                        </div>
                                    </div>
                                </template>
                                
                                <!-- Badge de difficulté -->
                                <div class="absolute top-3 left-3 z-20">
                                    <span 
                                        class="px-2 py-1 text-xs font-medium rounded"
                                        :class="{
                                            'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400': exercise.difficulty_level === 'Beginner',
                                            'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400': exercise.difficulty_level === 'Intermediate',
                                            'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400': exercise.difficulty_level === 'Advanced'
                                        }"
                                        x-text="exercise.difficulty_level"></span>
                                </div>
                                
                                <!-- Durée -->
                                <div class="absolute top-3 right-3 z-20">
                                    <span class="flex items-center gap-1 px-2 py-1 text-xs font-medium text-white rounded bg-gray-900/70">
                                        <i class="fas fa-clock"></i>
                                        <span x-text="(exercise.duration || 0) + ' min'"></span>
                                    </span>
                                </div>
                                
                                <!-- Badge type vidéo -->
                                <div class="absolute bottom-3 left-3 z-20">
                                    <span x-show="exercise.videoFileName" 
                                          class="px-2 py-1 text-xs font-medium bg-blue-500 text-white rounded">
                                        <i class="fas fa-upload mr-1"></i>Uploaded
                                    </span>
                                    <span x-show="exercise.videoUrl && exercise.videoUrl.includes('youtube.com')" 
                                          class="px-2 py-1 text-xs font-medium bg-red-500 text-white rounded">
                                        <i class="fab fa-youtube mr-1"></i>YouTube
                                    </span>
                                </div>
                            </div>
                            
                            <div class="p-4">
                                <div class="flex items-center gap-2 mb-2">
                                    <span 
                                        class="px-2 py-0.5 text-xs font-medium rounded"
                                        :class="{
                                            'bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400': exercise.category === 'Strength',
                                            'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400': exercise.category === 'Cardio',
                                            'bg-purple-100 dark:bg-purple-900/30 text-purple-700 dark:text-purple-400': exercise.category === 'Flexibility',
                                            'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400': exercise.category === 'Balance',
                                            'bg-orange-100 dark:bg-orange-900/30 text-orange-700 dark:text-orange-400': exercise.category === 'Core',
                                            'bg-teal-100 dark:bg-teal-900/30 text-teal-700 dark:text-teal-400': exercise.category === 'Warm-up',
                                            'bg-indigo-100 dark:bg-indigo-900/30 text-indigo-700 dark:text-indigo-400': exercise.category === 'Cool-down'
                                        }"
                                        x-text="exercise.category"></span>
                                    <span x-show="exercise.isActive" class="px-2 py-0.5 text-xs font-medium bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded">
                                        <i class="mr-1 fas fa-check-circle"></i>Active
                                    </span>
                                    <span x-show="!exercise.isActive" class="px-2 py-0.5 text-xs font-medium bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 rounded">
                                        <i class="mr-1 fas fa-times-circle"></i>Inactive
                                    </span>
                                </div>
                                
                                <h3 class="mb-1 font-semibold text-gray-900 dark:text-white" x-text="exercise.name"></h3>
                                <p class="mb-3 text-sm text-gray-500 dark:text-gray-400 line-clamp-2" x-text="exercise.description"></p>
                                
                                <div class="flex items-center justify-between text-sm text-gray-500 dark:text-gray-400">
                                    <div class="flex items-center gap-3">
                                        <span x-show="exercise.calories">
                                            <i class="mr-1 fas fa-fire"></i>
                                            <span x-text="exercise.calories + ' kcal/min'"></span>
                                        </span>
                                        <span x-show="exercise.sets">
                                            <i class="mr-1 fas fa-list"></i>
                                            <span x-text="exercise.sets + ' sets'"></span>
                                        </span>
                                        <span x-show="exercise.reps">
                                            <i class="mr-1 fas fa-redo"></i>
                                            <span x-text="exercise.reps + ' reps'"></span>
                                        </span>
                                        <span x-show="exercise.defaultUnit">
                                            <i class="mr-1 fas fa-ruler"></i>
                                            <span x-text="exercise.defaultUnit"></span>
                                        </span>
                                    </div>
                                    <div class="flex items-center gap-1 text-gray-500">
                                        <i class="text-xs fas fa-calendar"></i>
                                        <span class="text-xs" x-text="formatDate(exercise.createdAt)"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </template>
                    
                    <!-- Empty State -->
                    <div x-show="filteredExercises.length === 0" class="col-span-full py-12 text-center">
                        <div class="inline-block p-6 mb-4 rounded-full bg-gray-100 dark:bg-gray-800">
                            <i class="text-4xl text-gray-400 fas fa-dumbbell"></i>
                        </div>
                        <h3 class="mb-2 text-lg font-semibold text-gray-900 dark:text-white">No exercises found</h3>
                        <p class="mb-6 text-gray-500 dark:text-gray-400">
                            <span x-show="searchQuery || selectedCategory !== 'all' || selectedDifficulty !== 'all'">
                                Try adjusting your filters or search query
                            </span>
                            <span x-show="!searchQuery && selectedCategory === 'all' && selectedDifficulty === 'all'">
                                No exercises in your library yet
                            </span>
                        </p>
                        <a href="{{ path('exercises_new') }}" class="inline-flex items-center gap-2 px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                            <i class="fas fa-plus"></i>
                            Create New Exercise
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Exercise Detail Modal avec lecteur vidéo complet -->
    <div x-show="showDetailModal" style="display: none;" x-cloak class="fixed inset-0 z-50 overflow-y-auto">
        <div class="flex items-start justify-center min-h-screen px-4 pt-6 pb-20">
            <div @click="showDetailModal = false" class="fixed inset-0 transition-opacity bg-black bg-opacity-75"></div>
            
            <div class="relative z-10 w-full max-w-4xl overflow-hidden bg-white shadow-xl dark:bg-gray-800 rounded-xl">
                <!-- Header avec bouton fermer -->
                <div class="absolute top-4 right-4 z-20">
                    <button @click="showDetailModal = false" class="p-2 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="text-xl text-gray-500 fas fa-times dark:text-gray-400"></i>
                    </button>
                </div>

                <!-- Lecteur vidéo complet -->
                <div class="bg-black">
                    <!-- Vidéo uploadée -->
                    <template x-if="selectedExercise.videoFileName">
                        <div class="relative">
                            <video 
                                id="detailVideoPlayer"
                                class="w-full h-auto max-h-[500px]"
                                controls
                                autoplay
                                preload="metadata">
                                <source :src="getVideoUrl(selectedExercise)" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                            <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/80 to-transparent">
                                <div class="flex items-center justify-between text-white">
                                    <div>
                                        <i class="fas fa-upload mr-2"></i>
                                        <span>Uploaded Video</span>
                                    </div>
                                    <button @click="toggleFullscreen('detailVideoPlayer')" class="p-2 hover:bg-white/20 rounded">
                                        <i class="fas fa-expand"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </template>
                    
                    <!-- Vidéo YouTube intégrée -->
                    <template x-if="!selectedExercise.videoFileName && selectedExercise.videoUrl && selectedExercise.videoUrl.includes('youtube.com')">
                        <div class="relative aspect-video">
                            <iframe 
                                id="youtubeIframe"
                                :src="getYouTubeEmbedUrl(selectedExercise.videoUrl) + '?autoplay=1&rel=0&modestbranding=1'"
                                class="absolute inset-0 w-full h-full"
                                frameborder="0"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen>
                            </iframe>
                            <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/80 to-transparent">
                                <div class="flex items-center justify-between text-white">
                                    <div>
                                        <i class="fab fa-youtube mr-2"></i>
                                        <span>YouTube Video</span>
                                    </div>
                                    <button @click="toggleFullscreen('youtubeIframe')" class="p-2 hover:bg-white/20 rounded">
                                        <i class="fas fa-expand"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </template>
                    
                    <!-- Pas de vidéo -->
                    <template x-if="!selectedExercise.videoFileName && (!selectedExercise.videoUrl || !selectedExercise.videoUrl.includes('youtube.com'))">
                        <div class="aspect-video bg-gray-800 flex items-center justify-center">
                            <div class="text-center">
                                <i class="text-6xl text-gray-400 fas fa-video-slash mb-4"></i>
                                <p class="text-gray-300">No video available for this exercise</p>
                            </div>
                        </div>
                    </template>
                </div>

                <div class="p-6">
                    <div class="flex items-start justify-between mb-6">
                        <div>
                            <h2 class="text-2xl font-bold text-gray-900 dark:text-white" x-text="selectedExercise.name"></h2>
                            <div class="flex items-center gap-2 mt-2">
                                <span 
                                    class="px-3 py-1 text-sm font-medium rounded"
                                    :class="{
                                        'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400': selectedExercise.difficulty_level === 'Beginner',
                                        'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400': selectedExercise.difficulty_level === 'Intermediate',
                                        'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400': selectedExercise.difficulty_level === 'Advanced'
                                    }"
                                    x-text="selectedExercise.difficulty_level"></span>
                                <span class="px-3 py-1 text-sm font-medium text-gray-700 bg-gray-100 rounded dark:bg-gray-700 dark:text-gray-300" x-text="selectedExercise.category"></span>
                                <span 
                                    class="px-3 py-1 text-sm font-medium rounded"
                                    :class="{
                                        'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400': selectedExercise.isActive,
                                        'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400': !selectedExercise.isActive
                                    }">
                                    <i :class="selectedExercise.isActive ? 'fas fa-check-circle' : 'fas fa-times-circle'" class="mr-1"></i>
                                    <span x-text="selectedExercise.isActive ? 'Active' : 'Inactive'"></span>
                                </span>
                            </div>
                        </div>
                       
                    </div>

                    <!-- Description -->
                    <div class="mb-6">
                        <h3 class="mb-2 font-semibold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-align-left text-wellcare-500"></i>
                            {{ 'Description' }}
                        </h3>
                        <p class="text-gray-700 dark:text-gray-300" x-text="selectedExercise.description"></p>
                    </div>

                    <!-- Stats Grid -->
                    <div class="grid grid-cols-4 gap-4 mb-6">
                        <div class="p-3 text-center rounded-lg bg-gray-50 dark:bg-gray-700/50" x-show="selectedExercise.duration">
                            <p class="text-2xl font-bold text-wellcare-500" x-text="selectedExercise.duration"></p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Minutes' }}</p>
                        </div>
                        <div class="p-3 text-center rounded-lg bg-gray-50 dark:bg-gray-700/50" x-show="selectedExercise.calories">
                            <p class="text-2xl font-bold text-wellcare-500" x-text="selectedExercise.calories"></p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Calories/min' }}</p>
                        </div>
                        <div class="p-3 text-center rounded-lg bg-gray-50 dark:bg-gray-700/50" x-show="selectedExercise.sets">
                            <p class="text-2xl font-bold text-wellcare-500" x-text="selectedExercise.sets"></p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Sets' }}</p>
                        </div>
                        <div class="p-3 text-center rounded-lg bg-gray-50 dark:bg-gray-700/50" x-show="selectedExercise.reps">
                            <p class="text-2xl font-bold text-wellcare-500" x-text="selectedExercise.reps"></p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Reps' }}</p>
                        </div>
                    </div>

                    <!-- Additional Info -->
                    <div class="grid grid-cols-2 gap-6">
                        <div>
                            <h3 class="mb-2 font-semibold text-gray-900 dark:text-white">
                                <i class="mr-2 fas fa-info-circle text-wellcare-500"></i>
                                {{ 'Exercise Details' }}
                            </h3>
                            <div class="space-y-2">
                                <div class="flex items-center gap-2 text-sm text-gray-700 dark:text-gray-300">
                                    <i class="text-gray-400 fas fa-ruler"></i>
                                    <span>Default Unit:</span>
                                    <span class="font-medium" x-text="selectedExercise.defaultUnit"></span>
                                </div>
                                <div class="flex items-center gap-2 text-sm text-gray-700 dark:text-gray-300">
                                    <i class="text-gray-400 fas fa-calendar"></i>
                                    <span>Created:</span>
                                    <span class="font-medium" x-text="formatDate(selectedExercise.createdAt)"></span>
                                </div>
                                <div class="flex items-center gap-2 text-sm text-gray-700 dark:text-gray-300">
                                    <i class="text-gray-400 fas fa-video"></i>
                                    <span>Video Type:</span>
                                    <span class="font-medium" x-text="selectedExercise.videoFileName ? 'Uploaded' : (selectedExercise.videoUrl ? 'YouTube' : 'None')"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div>
                           
                            <div class="flex flex-col gap-2">
                               
                                <template x-if="selectedExercise.videoUrl && !selectedExercise.videoFileName">
                                    <a :href="selectedExercise.videoUrl" target="_blank" class="flex items-center justify-center gap-2 px-4 py-2 font-medium text-red-700 transition-colors bg-red-100 rounded-lg hover:bg-red-200 dark:bg-red-900/30 dark:text-red-400 dark:hover:bg-red-900/50">
                                        <i class="fab fa-youtube"></i>
                                        {{ 'Open on YouTube' }}
                                    </a>
                                </template>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('alpine:init', () => {
    Alpine.data('exerciseLibrary', (exercisesData) => ({
        // Data
        exercises: exercisesData,
        searchQuery: '',
        selectedCategory: 'all',
        selectedDifficulty: 'all',
        selectedStatus: 'all',
        sortBy: 'name',
        showDetailModal: false,
        selectedExercise: {},

        // Initialize
        init() {
            // Format dates in exercises
            this.exercises = this.exercises.map(ex => ({
                ...ex,
                createdAt: ex.createdAt ? this.formatDateFromString(ex.createdAt) : 'N/A'
            }));
            
            // Initialize selected exercise if available
            if (this.exercises.length > 0) {
                this.selectedExercise = this.exercises[0];
            }
        },

        // Get video URL for uploaded videos
        getVideoUrl(exercise) {
            if (exercise.videoFileName) {
                return `/uploads/exercises/videos/${exercise.videoFileName}`;
            }
            return '';
        },

        // Format date from string
        formatDateFromString(dateString) {
            if (!dateString) return 'N/A';
            try {
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
            } catch (e) {
                return dateString;
            }
        },

        // Computed filtered exercises
        get filteredExercises() {
            let filtered = this.exercises.filter(ex => {
                // Search filter
                const matchesSearch = this.searchQuery === '' ||
                    (ex.name && ex.name.toLowerCase().includes(this.searchQuery.toLowerCase())) ||
                    (ex.description && ex.description.toLowerCase().includes(this.searchQuery.toLowerCase()));
                
                // Category filter
                const matchesCategory = this.selectedCategory === 'all' ||
                    ex.category === this.selectedCategory;
                
                // Difficulty filter
                const matchesDifficulty = this.selectedDifficulty === 'all' ||
                    ex.difficulty_level === this.selectedDifficulty;
                
                // Status filter
                const matchesStatus = this.selectedStatus === 'all' ||
                    (this.selectedStatus === 'active' && ex.isActive) ||
                    (this.selectedStatus === 'inactive' && !ex.isActive);
                
                return matchesSearch && matchesCategory && matchesDifficulty && matchesStatus;
            });

            // Sorting
            filtered.sort((a, b) => {
                switch(this.sortBy) {
                    case 'name':
                        return (a.name || '').localeCompare(b.name || '');
                    case 'difficulty':
                        const difficultyOrder = { 'Beginner': 1, 'Intermediate': 2, 'Advanced': 3 };
                        return (difficultyOrder[a.difficulty_level] || 0) - (difficultyOrder[b.difficulty_level] || 0);
                    case 'duration':
                        return (b.duration || 0) - (a.duration || 0);
                    case 'calories':
                        return (b.calories || 0) - (a.calories || 0);
                    case 'created':
                        try {
                            return new Date(b.createdAt) - new Date(a.createdAt);
                        } catch (e) {
                            return 0;
                        }
                    default:
                        return 0;
                }
            });

            return filtered;
        },

        // Helper methods
        getCategoryCount(category) {
            return this.exercises.filter(ex => ex.category === category).length;
        },

        getTotalCount() {
            return this.exercises.length;
        },

        formatDate(dateString) {
            return this.formatDateFromString(dateString);
        },

        // YouTube thumbnail URL
        getYouTubeThumbnail(url) {
            if (!url || !url.includes('youtube.com') && !url.includes('youtu.be')) return '';
            
            try {
                let videoId = '';
                if (url.includes('v=')) {
                    videoId = url.split('v=')[1]?.split('&')[0];
                } else if (url.includes('youtu.be/')) {
                    videoId = url.split('youtu.be/')[1]?.split('?')[0];
                }
                
                if (videoId) {
                    return `https://img.youtube.com/vi/${videoId}/hqdefault.jpg`;
                }
            } catch (e) {
                console.error('Error extracting YouTube thumbnail:', e);
            }
            return '';
        },

        // YouTube embed URL
        getYouTubeEmbedUrl(url) {
            if (!url || !url.includes('youtube.com') && !url.includes('youtu.be')) return '';
            
            try {
                let videoId = '';
                if (url.includes('v=')) {
                    videoId = url.split('v=')[1]?.split('&')[0];
                } else if (url.includes('youtu.be/')) {
                    videoId = url.split('youtu.be/')[1]?.split('?')[0];
                }
                
                if (videoId) {
                    return `https://www.youtube.com/embed/${videoId}`;
                }
            } catch (e) {
                console.error('Error extracting YouTube embed URL:', e);
            }
            return '';
        },

        // Video preview controls
        playPreviewVideo(event) {
            const video = event.target;
            video.muted = true; // Mute for autoplay
            video.play().catch(e => console.log('Autoplay prevented:', e));
        },

        pausePreviewVideo(event) {
            const video = event.target;
            video.pause();
            video.currentTime = 0;
        },

        // Action methods
        selectCategory(category) {
            this.selectedCategory = category;
        },

        selectDifficulty(difficulty) {
            this.selectedDifficulty = difficulty;
        },

        toggleStatus(status) {
            this.selectedStatus = status;
        },

        filterExercises() {
            // Filtering handled by computed property
        },

        openExerciseDetail(exercise) {
            this.selectedExercise = exercise;
            this.showDetailModal = true;
            
            // Play video automatically when modal opens
            setTimeout(() => {
                const videoPlayer = document.getElementById('detailVideoPlayer');
                if (videoPlayer && exercise.videoFileName) {
                    videoPlayer.play().catch(e => console.log('Autoplay prevented:', e));
                }
            }, 300);
        },

        // Fullscreen function
        toggleFullscreen(elementId) {
            const element = document.getElementById(elementId);
            
            if (!document.fullscreenElement) {
                if (element.requestFullscreen) {
                    element.requestFullscreen();
                } else if (element.webkitRequestFullscreen) {
                    element.webkitRequestFullscreen();
                } else if (element.msRequestFullscreen) {
                    element.msRequestFullscreen();
                }
            } else {
                if (document.exitFullscreen) {
                    document.exitFullscreen();
                } else if (document.webkitExitFullscreen) {
                    document.webkitExitFullscreen();
                } else if (document.msExitFullscreen) {
                    document.msExitFullscreen();
                }
            }
        },

        clearFilters() {
            this.searchQuery = '';
            this.selectedCategory = 'all';
            this.selectedDifficulty = 'all';
            this.selectedStatus = 'all';
            this.sortBy = 'name';
        }
    }));
});
</script>
