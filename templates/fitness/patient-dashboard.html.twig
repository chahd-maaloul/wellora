{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Fitness Dashboard - WellCare Connect' }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fitness') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fitness') }}
{% endblock %}

{% block body %}
<div x-data="fitnessDashboard()" class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-dumbbell text-wellcare-500"></i>
                        {{ 'Fitness Dashboard' }}
                    </h1>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                        {{ 'Track your workouts, goals, and progress' }}
                    </p>
                </div>
                <div class="flex items-center gap-4">
                    <!-- Theme Toggle -->
                    <button @click="toggleTheme()" class="p-2 text-gray-600 transition-colors bg-gray-100 rounded-lg dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600">
                        <i class="fas" :class="darkMode ? 'fa-sun' : 'fa-moon'"></i>
                    </button>
                    <!-- Notifications -->
                    <button class="relative p-2 text-gray-600 transition-colors bg-gray-100 rounded-lg dark:bg-gray-700 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-600">
                        <i class="fas fa-bell"></i>
                        <span class="absolute top-0 right-0 flex items-center justify-center w-5 h-5 text-xs text-white bg-red-500 rounded-full">3</span>
                    </button>
                    <!-- User Profile -->
                    <div class="flex items-center gap-3">
                        <img src="{{ asset('build/images/logo-icon.svg') }}" alt="Profile" class="object-cover w-10 h-10 rounded-full">
                        <div class="hidden md:block">
                            <p class="text-sm font-medium text-gray-900 dark:text-white">{{ app.user.firstName|default('Patient') }} {{ app.user.lastName|default('') }}</p>
                            <p class="text-xs text-gray-500 dark:text-gray-400">Premium Member</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main class="p-6">
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-4">
            <!-- Left Column - Main Content -->
            <div class="space-y-6 lg:col-span-3">
                <!-- Quick Stats Row -->
                <div class="grid grid-cols-2 gap-4 md:grid-cols-4">
                    <!-- Activity Streak -->
                    <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs tracking-wide text-gray-500 uppercase dark:text-gray-400">{{ 'Activity Streak' }}</p>
                                <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ streak.days|default(0) }}</p>
                                <p class="mt-1 text-xs text-green-500 dark:text-green-400">
                                    <i class="mr-1 fas fa-fire"></i>{{ 'days in a row' }}
                                </p>
                            </div>
                            <div class="flex items-center justify-center w-12 h-12 bg-orange-100 rounded-full dark:bg-orange-900/30">
                                <i class="text-xl text-orange-500 fas fa-fire"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Weekly Minutes -->
                    <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs tracking-wide text-gray-500 uppercase dark:text-gray-400">{{ 'Weekly Minutes' }}</p>
                                <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ weeklyStats.minutes|default(0) }}</p>
                                <div class="w-full bg-gray-200 dark:bg-gray-700 rounded-full h-1.5 mt-2">
                                    <div class="bg-wellcare-500 h-1.5 rounded-full" style="width: {{ min(((weeklyStats.minutes|default(0) / weeklyStats.target|default(150)) * 100), 100) }}%"></div>
                                </div>
                                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">{{ 'of' }} {{ weeklyStats.target|default(150) }} {{ 'min' }}</p>
                            </div>
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                <i class="text-xl fas fa-stopwatch text-wellcare-500"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Calories Burned -->
                    <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs tracking-wide text-gray-500 uppercase dark:text-gray-400">{{ 'Calories Burned' }}</p>
                                <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ dailyStats.caloriesBurned|default(0) }}</p>
                                <p class="mt-1 text-xs text-green-500 dark:text-green-400">
                                    <i class="mr-1 fas fa-arrow-up"></i>{{ '+' ~ dailyStats.caloriesChange|default(0) }}%
                                </p>
                            </div>
                            <div class="flex items-center justify-center w-12 h-12 bg-red-100 rounded-full dark:bg-red-900/30">
                                <i class="text-xl text-red-500 fas fa-fire"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Workouts Completed -->
                    <div class="p-4 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-xs tracking-wide text-gray-500 uppercase dark:text-gray-400">{{ 'Workouts This Week' }}</p>
                                <p class="mt-1 text-2xl font-bold text-gray-900 dark:text-white">{{ weeklyStats.workoutsCompleted|default(0) }}</p>
                                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
                                    <i class="mr-1 text-green-500 fas fa-check-circle"></i>{{ weeklyStats.targetWorkouts|default(5) }} {{ 'target' }}
                                </p>
                            </div>
                            <div class="flex items-center justify-center w-12 h-12 bg-green-100 rounded-full dark:bg-green-900/30">
                                <i class="text-xl text-green-500 fas fa-check"></i>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Today's Workout Section -->
                <div class="overflow-hidden bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <div class="flex items-center justify-between px-6 py-4 border-b border-gray-100 dark:border-gray-700">
                        <div>
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                                <i class="mr-2 fas fa-calendar-day text-wellcare-500"></i>
                                {{ "Today's Workout" }}
                            </h2>
                            <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'now'|date('l, d/m/Y') }}</p>
                        </div>
                        <span class="px-3 py-1 text-sm font-medium rounded-full {{ todayWorkout.completed ? 'bg-green-100 text-green-700 dark:bg-green-900/30 dark:text-green-400' : 'bg-wellcare-100 text-wellcare-700 dark:bg-wellcare-900/30 dark:text-wellcare-400' }}">
                            {{ todayWorkout.completed ? 'Terminé' : 'À faire' }}
                        </span>
                    </div>
                    
                    <div class="p-6">
                        {% if todayWorkout %}
                        <div class="flex items-center gap-4 mb-4">
                            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
                                <i class="fas fa-clock"></i>
                                <span>{{ todayWorkout.duration|default(45) }} {{ 'min' }}</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
                                <i class="fas fa-list"></i>
                                <span>{{ todayWorkout.exercises|length|default(0) }} {{ 'exercises' }}</span>
                            </div>
                            <div class="flex items-center gap-2 text-sm text-gray-500 dark:text-gray-400">
                                <i class="fas fa-fire"></i>
                                <span>~{{ todayWorkout.calories|default(300) }} {{ 'kcal' }}</span>
                            </div>
                        </div>

                        <div class="space-y-3">
                            {% for exercise in todayWorkout.exercises|default([]) %}
                            <div class="flex items-center gap-4 p-4 border border-gray-100 dark:border-gray-700 rounded-lg {{ exercise.completed ? 'bg-green-50 dark:bg-green-900/20' : 'bg-gray-50 dark:bg-gray-700/50' }}">
                                <button 
                                    @click="toggleExercise({{ loop.index0 }})"
                                    class="w-8 h-8 rounded-full flex items-center justify-center transition-all duration-200 {{ exercise.completed ? 'bg-green-500 text-white' : 'bg-gray-200 dark:bg-gray-600 text-gray-500' }}">
                                    <i class="fas fa-check"></i>
                                </button>
                                <div class="flex-1">
                                    <h4 class="font-medium text-gray-900 dark:text-white">{{ exercise.name|default('Exercise') }}</h4>
                                    <p class="text-sm text-gray-500 dark:text-gray-400">
                                        {{ exercise.sets|default(3) }} {{ 'sets' }} × {{ exercise.reps|default(10) }} {{ 'reps' }}
                                        {% if exercise.weight %}| {{ exercise.weight }} kg{% endif %}
                                    </p>
                                </div>
                                <div class="text-right">
                                    <p class="text-sm font-medium text-wellcare-600 dark:text-wellcare-400">{{ exercise.duration|default(5) }} {{ 'min' }}</p>
                                    <p class="text-xs text-gray-500 dark:text-gray-400">{{ exercise.rpe|default(7) }}/10 RPE</p>
                                </div>
                                <button class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="text-xl fas fa-play-circle"></i>
                                </button>
                            </div>
                            {% endfor %}
                        </div>

                        {% if not todayWorkout.completed %}
                        <button @click="completeWorkout()" class="flex items-center justify-center w-full gap-2 px-4 py-3 mt-4 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                            <i class="fas fa-check-circle"></i>
                            {{ 'Terminer l\'entraînement' }}
                        </button>
                        {% endif %}
                        {% else %}
                        <div class="py-8 text-center">
                            <div class="flex items-center justify-center w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full dark:bg-gray-700">
                                <i class="text-2xl text-gray-400 fas fa-dumbbell"></i>
                            </div>
                            <h3 class="mb-2 text-lg font-medium text-gray-900 dark:text-white">{{ 'Rest Day!' }}</h3>
                            <p class="text-gray-500 dark:text-gray-400">{{ 'Take a break and recover. Your body needs rest to grow stronger.' }}</p>
                            <button class="px-4 py-2 mt-4 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                                <i class="mr-2 fas fa-plus"></i>{{ 'Add Quick Workout' }}
                            </button>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Weekly Overview & Performance Chart -->
                <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
                    <!-- Weekly Calendar -->
                    <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                                <i class="mr-2 fas fa-calendar-week text-wellcare-500"></i>
                                {{ 'This Week' }}
                            </h2>
                            <a href="{{ path('fitness_planner') }}" class="flex items-center gap-1 text-sm font-medium text-wellcare-600 dark:text-wellcare-400 hover:text-wellcare-700 dark:hover:text-wellcare-300">
                                {{ 'View Calendar' }} <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                        
                        <div class="grid grid-cols-7 gap-2">
                            {% for day in weekDays %}
                            <div class="text-center">
                                <p class="mb-2 text-xs text-gray-500 dark:text-gray-400">{{ day.name|slice(0, 3) }}</p>
                                <div 
                                    class="relative h-16 rounded-lg cursor-pointer transition-all duration-200 hover:scale-105 {{ day.hasWorkout ? (day.completed ? 'bg-green-100 dark:bg-green-900/30 border-2 border-green-500' : 'bg-wellcare-100 dark:bg-wellcare-900/30 border-2 border-wellcare-500') : 'bg-gray-100 dark:bg-gray-700 border-2 border-transparent' }}">
                                    <div class="absolute inset-0 flex items-center justify-center">
                                        {% if day.completed %}
                                        <i class="text-xl text-green-500 fas fa-check-circle"></i>
                                        {% elseif day.hasWorkout %}
                                        <i class="fas fa-dumbbell text-wellcare-500"></i>
                                        {% else %}
                                        <span class="text-sm text-gray-400">{{ day.name|slice(0, 1) }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Performance Chart -->
                    <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                                <i class="mr-2 fas fa-chart-line text-wellcare-500"></i>
                                {{ 'Volume Load' }}
                            </h2>
                            <select class="text-sm text-gray-700 border-gray-300 rounded-lg dark:border-gray-600 bg-gray-50 dark:bg-gray-700 dark:text-gray-300 focus:ring-wellcare-500 focus:border-wellcare-500">
                                <option>{{ 'This Week' }}</option>
                                <option>{{ 'Last Week' }}</option>
                                <option>{{ 'This Month' }}</option>
                            </select>
                        </div>
                        <div class="h-48">
                            <canvas id="performanceChart"></canvas>
                        </div>
                    </div>
                </div>

                <!-- Goals & Achievements Row -->
                <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
                    <!-- Goals Progress -->
                    <div class="p-6 bg-white border border-gray-100 shadow-sm lg:col-span-2 dark:bg-gray-800 rounded-xl dark:border-gray-700">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                                <i class="mr-2 fas fa-trophy text-wellcare-500"></i>
                                {{ 'Goal Progress' }}
                            </h2>
                            <a href="{{ path('fitness_analytics') }}" class="flex items-center gap-1 text-sm font-medium text-wellcare-600 dark:text-wellcare-400 hover:text-wellcare-700 dark:hover:text-wellcare-300">
                                {{ 'View All' }} <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                        
                        <div class="space-y-4">
                            {% for goal in fitnessGoals|default([]) %}
                            <div class="p-4 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                                <div class="flex items-center justify-between mb-2">
                                    <h4 class="font-medium text-gray-900 dark:text-white">{{ goal.name }}</h4>
                                    <span class="text-sm font-medium {{ goal.progress >= 100 ? 'text-green-500' : 'text-wellcare-600 dark:text-wellcare-400' }}">
                                        {{ goal.progress }}%
                                    </span>
                                </div>
                                <div class="w-full h-2 bg-gray-200 rounded-full dark:bg-gray-600">
                                    <div 
                                        class="h-2 rounded-full transition-all duration-500 {{ goal.progress >= 100 ? 'bg-green-500' : 'bg-wellcare-500' }}" 
                                        style="width: {{ goal.progress }}%">
                                    </div>
                                </div>
                                <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                                    {{ goal.remaining|default(0) }} {{ 'remaining' }} | {{ goal.deadline|default('7 days left') }}
                                </p>
                            </div>
                            {% endfor %}
                        </div>
                    </div>

                    <!-- Recovery Score -->
                    <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                        <div class="flex items-center justify-between mb-4">
                            <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                                <i class="mr-2 fas fa-heartbeat text-wellcare-500"></i>
                                {{ 'Recovery' }}
                            </h2>
                            <a href="{{ path('fitness_analytics') }}" class="flex items-center gap-1 text-sm font-medium text-wellcare-600 dark:text-wellcare-400 hover:text-wellcare-700 dark:hover:text-wellcare-300">
                                {{ 'Details' }} <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                        
                        <div class="mb-4 text-center">
                            <div class="relative w-32 h-32 mx-auto">
                                <svg class="w-full h-full transform -rotate-90">
                                    <circle cx="64" cy="64" r="56" stroke="currentColor" stroke-width="8" fill="none" class="text-gray-200 dark:text-gray-600"/>
                                    <circle 
                                        cx="64" cy="64" r="56" 
                                        stroke="currentColor" 
                                        stroke-width="8" 
                                        fill="none"
                                        class="{{ recovery.ready ? 'text-green-500' : 'text-orange-500' }}"
                                        stroke-dasharray="{{ 352 }}"
                                        stroke-dashoffset="{{ 352 - (352 * recovery.score|default(75) / 100) }}"
                                        stroke-linecap="round"/>
                                </svg>
                                <div class="absolute inset-0 flex items-center justify-center">
                                    <div>
                                        <p class="text-3xl font-bold {{ recovery.ready ? 'text-green-500' : 'text-orange-500' }}">{{ recovery.score|default(75) }}</p>
                                        <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Recovery Score' }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="space-y-3">
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-gray-500 dark:text-gray-400">{{ 'Sleep Quality' }}</span>
                                <span class="font-medium {{ recovery.sleepQuality >= 7 ? 'text-green-500' : 'text-orange-500' }}">{{ recovery.sleepQuality|default(7) }}/10</span>
                            </div>
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-gray-500 dark:text-gray-400">{{ 'Muscle Readiness' }}</span>
                                <span class="font-medium {{ recovery.muscleReadiness >= 7 ? 'text-green-500' : 'text-orange-500' }}">{{ recovery.muscleReadiness|default(8) }}/10</span>
                            </div>
                            <div class="flex items-center justify-between text-sm">
                                <span class="text-gray-500 dark:text-gray-400">{{ 'Training Load' }}</span>
                                <span class="font-medium text-wellcare-600 dark:text-wellcare-400">{{ recovery.trainingLoad|default(65) }}%</span>
                            </div>
                        </div>
                        
                        <div class="pt-4 mt-4 border-t border-gray-100 dark:border-gray-700">
                            <p class="text-sm text-center {{ recovery.ready ? 'text-green-600 dark:text-green-400' : 'text-orange-600 dark:text-orange-400' }}">
                                <i class="fas {{ recovery.ready ? 'fa-check-circle' : 'fa-exclamation-circle' }} mr-1"></i>
                                {{ recovery.ready ? 'Ready for intense workout!' : 'Consider light activity today' }}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Recent Badges -->
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <div class="flex items-center justify-between mb-4">
                        <h2 class="text-lg font-semibold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-medal text-wellcare-500"></i>
                            {{ 'Recent Achievements' }}
                        </h2>
                        <a href="#" class="flex items-center gap-1 text-sm font-medium text-wellcare-600 dark:text-wellcare-400 hover:text-wellcare-700 dark:hover:text-wellcare-300">
                            {{ 'View All Badges' }} <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                    
                    <div class="flex flex-wrap gap-4">
                        {% for badge in recentBadges|default([]) %}
                        <div class="flex items-center gap-3 p-3 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                            <div class="w-12 h-12 rounded-full flex items-center justify-center {{ badge.color|default('bg-yellow-100 dark:bg-yellow-900/30') }}">
                                <i class="fas {{ badge.icon|default('fa-trophy') }} {{ badge.iconColor|default('text-yellow-500') }}"></i>
                            </div>
                            <div>
                                <h4 class="font-medium text-gray-900 dark:text-white">{{ badge.name }}</h4>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ badge.description }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>

            <!-- Right Column - Sidebar -->
            <div class="space-y-6 lg:col-span-1">
                <!-- Coach Card -->
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-user-tie text-wellcare-500"></i>
                        {{ 'Your Coach' }}
                    </h3>
                    
                    <div class="flex items-center gap-3 mb-4">
                        <img src="{{ asset('build/images/logo-icon.svg') }}" alt="Coach" class="object-cover w-12 h-12 rounded-full">
                        <div>
                            <p class="font-medium text-gray-900 dark:text-white">{{ coach.name|default('Coach Sarah') }}</p>
                            <p class="text-sm text-gray-500 dark:text-gray-400">Certified Personal Trainer</p>
                        </div>
                    </div>
                    
                    <div class="flex gap-2 mb-4">
                        <button class="flex items-center justify-center flex-1 gap-2 px-3 py-2 text-sm font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                            <i class="fas fa-comment"></i>
                            {{ 'Message' }}
                        </button>
                        <button class="px-3 py-2 text-sm font-medium text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                            <i class="fas fa-video"></i>
                        </button>
                    </div>
                    
                    <div class="p-3 rounded-lg bg-wellcare-50 dark:bg-wellcare-900/20">
                        <p class="text-sm text-wellcare-700 dark:text-wellcare-300">
                            <i class="mr-1 fas fa-lightbulb"></i>
                            {{ "Don't forget your stretching routine after today's workout!" }}
                        </p>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-bolt text-wellcare-500"></i>
                        {{ 'Quick Actions' }}
                    </h3>
                    
                    <div class="space-y-3">
                        <a href="{{ path('fitness_log') }}" class="flex items-center gap-3 p-3 transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50">
                            <div class="flex items-center justify-center w-10 h-10 bg-green-100 rounded-lg dark:bg-green-900/30">
                                <i class="text-green-500 fas fa-plus-circle"></i>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">{{ 'Log Workout' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Record completed exercises' }}</p>
                            </div>
                        </a>
                        
                        <a href="{{ path('fitness_library') }}" class="flex items-center gap-3 p-3 transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50">
                            <div class="flex items-center justify-center w-10 h-10 bg-blue-100 rounded-lg dark:bg-blue-900/30">
                                <i class="text-blue-500 fas fa-book-open"></i>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">{{ 'Exercise Library' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Browse exercises with videos' }}</p>
                            </div>
                        </a>
                        
                        <a href="{{ path('fitness_analytics') }}" class="flex items-center gap-3 p-3 transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50">
                            <div class="flex items-center justify-center w-10 h-10 bg-purple-100 rounded-lg dark:bg-purple-900/30">
                                <i class="text-purple-500 fas fa-chart-bar"></i>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">{{ 'View Analytics' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Track your progress' }}</p>
                            </div>
                        </a>
                        
                        <a href="{{ path('fitness_coach') }}" class="flex items-center gap-3 p-3 transition-colors rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700/50">
                            <div class="flex items-center justify-center w-10 h-10 bg-orange-100 rounded-lg dark:bg-orange-900/30">
                                <i class="text-orange-500 fas fa-paper-plane"></i>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">{{ 'Send Feedback' }}</p>
                                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Share your workout video' }}</p>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Upcoming Schedule -->
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-calendar-alt text-wellcare-500"></i>
                        {{ 'Upcoming Workouts' }}
                    </h3>
                    
                    <div class="space-y-3">
                        {% for workout in upcomingWorkouts|default([]) %}
                        <div class="p-3 border border-gray-100 rounded-lg dark:border-gray-700">
                            <div class="flex items-center justify-between mb-1">
                                <p class="font-medium text-gray-900 dark:text-white">{{ workout.title }}</p>
                                <span class="text-xs text-wellcare-600 dark:text-wellcare-400">{{ workout.day }}</span>
                            </div>
                            <p class="text-sm text-gray-500 dark:text-gray-400">{{ workout.time }} | {{ workout.duration }} min</p>
                        </div>
                        {% endfor %}
                    </div>
                    
                    <a href="{{ path('fitness_planner') }}" class="block mt-4 text-sm font-medium text-center text-wellcare-600 dark:text-wellcare-400 hover:text-wellcare-700 dark:hover:text-wellcare-300">
                        {{ 'View Full Schedule' }}
                    </a>
                </div>

                <!-- Medical Alerts -->
                <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 text-red-500 fas fa-heartbeat"></i>
                        {{ 'Health Alerts' }}
                    </h3>
                    
                    <div class="space-y-3">
                        <div class="p-3 border border-yellow-200 rounded-lg bg-yellow-50 dark:bg-yellow-900/20 dark:border-yellow-800">
                            <div class="flex items-start gap-3">
                                <i class="mt-1 text-yellow-500 fas fa-exclamation-triangle"></i>
                                <div>
                                    <p class="text-sm font-medium text-yellow-800 dark:text-yellow-200">{{ 'HR Zone Warning' }}</p>
                                    <p class="text-xs text-yellow-600 dark:text-yellow-400">{{ 'Stay below 150 bpm during cardio' }}</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="p-3 border border-blue-200 rounded-lg bg-blue-50 dark:bg-blue-900/20 dark:border-blue-800">
                            <div class="flex items-start gap-3">
                                <i class="mt-1 text-blue-500 fas fa-info-circle"></i>
                                <div>
                                    <p class="text-sm font-medium text-blue-800 dark:text-blue-200">{{ 'Doctor Approved' }}</p>
                                    <p class="text-xs text-blue-600 dark:text-blue-400">{{ 'Your program is medically cleared' }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Emergency Stop Button (Medical Safety) -->
    <div class="fixed bottom-6 right-6">
        <button @click="emergencyStop()" class="flex items-center justify-center text-white transition-all duration-200 bg-red-500 rounded-full shadow-lg w-14 h-14 hover:bg-red-600 hover:scale-110">
            <i class="text-xl fas fa-stop"></i>
        </button>
    </div>
</div>

<script>
document.addEventListener('alpine:init', () => {
    Alpine.data('fitnessDashboard', () => ({
        darkMode: false,
        streak: {
            days: 12,
            best: 21
        },
        weeklyStats: {
            minutes: 180,
            target: 200,
            workoutsCompleted: 4,
            targetWorkouts: 5
        },
        dailyStats: {
            caloriesBurned: 450,
            caloriesChange: 12
        },
        recovery: {
            score: 78,
            ready: true,
            sleepQuality: 8,
            muscleReadiness: 8,
            trainingLoad: 65
        },
        todayWorkout: {
            completed: false,
            duration: 45,
            exercises: [
                { name: 'Warm-up', sets: 1, reps: 5, duration: 5, rpe: 3, completed: true },
                { name: 'Push-ups', sets: 3, reps: 12, weight: 0, duration: 8, rpe: 6, completed: false },
                { name: 'Squats', sets: 3, reps: 15, weight: 20, duration: 10, rpe: 7, completed: false },
                { name: 'Plank', sets: 3, reps: 1, duration: 6, rpe: 5, completed: false },
                { name: 'Cool-down', sets: 1, reps: 5, duration: 5, rpe: 2, completed: false }
            ]
        },
        fitnessGoals: [
            { name: 'Weekly Workout Goal', progress: 80, remaining: 1, deadline: '2 days left' },
            { name: 'Weight Loss Target', progress: 65, remaining: 3.5, deadline: '3 weeks left' },
            { name: 'Strength Building', progress: 45, remaining: 15, deadline: '6 weeks left' }
        ],
        recentBadges: [
            { name: 'Week Warrior', icon: 'fa-fire', color: 'bg-orange-100 dark:bg-orange-900/30', iconColor: 'text-orange-500', description: '7 day workout streak' },
            { name: 'Early Bird', icon: 'fa-sun', color: 'bg-yellow-100 dark:bg-yellow-900/30', iconColor: 'text-yellow-500', description: '10 morning workouts' },
            { name: 'Iron Will', icon: 'fa-dumbbell', color: 'bg-gray-100 dark:bg-gray-700', iconColor: 'text-gray-500', description: 'Lifted 1000kg total' }
        ],
        coach: {
            name: 'Coach Sarah'
        },
        upcomingWorkouts: [
            { name: 'Upper Body Strength', day: 'Tomorrow', time: '08:00', duration: 45 },
            { name: 'Cardio Session', day: 'Thursday', time: '07:30', duration: 30 },
            { name: 'Yoga Flow', day: 'Saturday', time: '09:00', duration: 60 }
        ],
        weekDays: [
            { name: 'Mon', date: 27, hasWorkout: true, completed: true },
            { name: 'Tue', date: 28, hasWorkout: true, completed: true },
            { name: 'Wed', date: 29, hasWorkout: true, completed: true },
            { name: 'Thu', date: 30, hasWorkout: true, completed: false },
            { name: 'Fri', date: 31, hasWorkout: false, completed: false },
            { name: 'Sat', date: 1, hasWorkout: true, completed: false },
            { name: 'Sun', date: 2, hasWorkout: false, completed: false }
        ],

        init() {
            this.darkMode = localStorage.getItem('theme') === 'dark';
            this.initChart();
        },

        toggleTheme() {
            this.darkMode = !this.darkMode;
            localStorage.setItem('theme', this.darkMode ? 'dark' : 'light');
            document.documentElement.classList.toggle('dark', this.darkMode);
        },

        toggleExercise(index) {
            this.todayWorkout.exercises[index].completed = !this.todayWorkout.exercises[index].completed;
        },

        completeWorkout() {
            this.todayWorkout.exercises.forEach(ex => ex.completed = true);
            this.todayWorkout.completed = true;
        },

        emergencyStop() {
            if (confirm('Are you experiencing any discomfort? This will pause your current workout.')) {
                // Emergency stop logic
                window.location.href = '/emergency';
            }
        },

        initChart() {
            this.$nextTick(() => {
                const ctx = document.getElementById('performanceChart');
                if (ctx) {
                    new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                            datasets: [{
                                label: 'Volume (kg)',
                                data: [12000, 15000, 13500, 18000, 16000, 14000, 17000],
                                borderColor: 'rgb(0, 167, 144)',
                                backgroundColor: 'rgba(0, 167, 144, 0.1)',
                                fill: true,
                                tension: 0.4,
                                pointRadius: 4,
                                pointHoverRadius: 6
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    display: false
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: 'rgba(156, 163, 175, 0.1)'
                                    },
                                    ticks: {
                                        callback: function(value) {
                                            return value / 1000 + 'k';
                                        }
                                    }
                                },
                                x: {
                                    grid: {
                                        display: false
                                    }
                                }
                            }
                        }
                    });
                }
            });
        }
    }));
});
</script>
{% endblock %}
