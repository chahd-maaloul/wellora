{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Coach Communication - WellCare Connect' }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('fitness') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('fitness') }}
{% endblock %}

{% block body %}
<div x-data="coachCommunication()" class="min-h-screen bg-gray-50 dark:bg-gray-900">
    <!-- Header -->
    <header class="bg-white border-b border-gray-200 shadow-sm dark:bg-gray-800 dark:border-gray-700">
        <div class="px-6 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center gap-4">
                    <a href="{{ path('fitness_dashboard') }}" class="p-2 transition-colors rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700">
                        <i class="text-gray-600 fas fa-arrow-left dark:text-gray-400"></i>
                    </a>
                    <div>
                        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
                            <i class="mr-2 fas fa-comment-dots text-wellcare-500"></i>
                            {{ 'Coach Communication' }}
                        </h1>
                        <p class="text-sm text-gray-500 dark:text-gray-400">
                            {{ 'Connect with your fitness coach' }}
                        </p>
                    </div>
                </div>
                <div class="flex items-center gap-4">
                    <button @click="openNewMessage()" class="flex items-center gap-2 px-4 py-2 font-medium text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                        <i class="fas fa-plus"></i>
                        {{ 'New Message' }}
                    </button>
                </div>
            </div>
        </div>
    </header>

    <main class="p-6">
        <div class="grid grid-cols-1 gap-6 lg:grid-cols-4">
            <!-- Conversations List -->
            <div class="lg:col-span-1">
                <div class="overflow-hidden bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <div class="p-4 border-b border-gray-100 dark:border-gray-700">
                        <input 
                            type="text" 
                            x-model="searchQuery"
                            placeholder="{{ 'Search conversations...' }}"
                            class="w-full px-4 py-2 text-gray-900 border border-gray-300 rounded-lg dark:border-gray-600 bg-gray-50 dark:bg-gray-700 dark:text-white focus:ring-wellcare-500 focus:border-wellcare-500">
                    </div>
                    
                    <div class="divide-y divide-gray-100 dark:divide-gray-700 max-h-[600px] overflow-y-auto">
                        {% for conversation in conversations %}
                        <button 
                            @click="selectConversation('{{ conversation.name|e('js') }}')"
                            :class="{'bg-wellcare-50 dark:bg-wellcare-900/20': selectedConversation === '{{ conversation.name|e('js') }}', 'hover:bg-gray-50 dark:hover:bg-gray-700/50': true }"
                            class="flex items-center w-full gap-3 p-4 transition-colors">
                            <div class="relative">
                                <div class="flex items-center justify-center w-12 h-12 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                    <span class="font-medium text-wellcare-600 dark:text-wellcare-400">{{ conversation.name|first }}</span>
                                </div>
                                {% if conversation.online %}
                                <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full dark:border-gray-800"></span>
                                {% endif %}
                            </div>
                            <div class="flex-1 min-w-0 text-left">
                                <div class="flex items-center justify-between">
                                    <p class="font-medium text-gray-900 truncate dark:text-white">{{ conversation.name }}</p>
                                    <span class="text-xs text-gray-500 dark:text-gray-400">{{ conversation.time }}</span>
                                </div>
                                <p class="text-sm text-gray-500 truncate dark:text-gray-400">{{ conversation.lastMessage }}</p>
                            </div>
                            {% if conversation.unread > 0 %}
                            <span class="flex items-center justify-center w-5 h-5 text-xs text-white rounded-full bg-wellcare-500">{{ conversation.unread }}</span>
                            {% endif %}
                        </button>
                        {% endfor %}
                    </div>
                </div>

                <!-- Video Consultation -->
                <div class="p-6 mt-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                    <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                        <i class="mr-2 fas fa-video text-wellcare-500"></i>
                        {{ 'Video Consultation' }}
                    </h3>
                    
                    <div class="p-4 mb-4 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                        <div class="flex items-center gap-3 mb-2">
                            <div class="flex items-center justify-center w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                <span class="font-medium text-wellcare-600 dark:text-wellcare-400">S</span>
                            </div>
                            <div>
                                <p class="font-medium text-gray-900 dark:text-white">Coach Sarah</p>
                                <p class="text-xs text-green-500">{{ 'Available Now' }}</p>
                            </div>
                        </div>
                        <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Next scheduled: Tomorrow 10:00 AM' }}</p>
                    </div>
                    
                    <button class="flex items-center justify-center w-full gap-2 px-4 py-2 font-medium text-white transition-colors bg-green-500 rounded-lg hover:bg-green-600">
                        <i class="fas fa-video"></i>
                        {{ 'Join Consultation' }}
                    </button>
                    <button class="w-full px-4 py-2 mt-2 text-gray-700 transition-colors border border-gray-300 rounded-lg dark:border-gray-600 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700">
                        {{ 'Schedule New' }}
                    </button>
                </div>
            </div>

            <!-- Chat Area -->
            <div class="lg:col-span-3">
                <div class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-gray-100 dark:border-gray-700 h-[calc(100vh-200px)] flex flex-col">
                    <!-- Chat Header -->
                    <div class="flex items-center justify-between p-4 border-b border-gray-100 dark:border-gray-700">
                        <div class="flex items-center gap-3">
                            <div class="relative">
                                <div class="flex items-center justify-center w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                    <span x-text="selectedConversation ? selectedConversation.charAt(0) : ''" class="font-medium text-wellcare-600 dark:text-wellcare-400"></span>
                                </div>
                                <span class="absolute bottom-0 right-0 w-3 h-3 bg-green-500 border-2 border-white rounded-full dark:border-gray-800"></span>
                            </div>
                            <div>
                                <p x-text="selectedConversation" class="font-medium text-gray-900 dark:text-white"></p>
                                <p class="text-xs text-green-500">{{ 'Online' }}</p>
                            </div>
                        </div>
                        <div class="flex items-center gap-2">
                            <button class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                <i class="fas fa-phone"></i>
                            </button>
                            <button class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                <i class="fas fa-video"></i>
                            </button>
                            <button class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                <i class="fas fa-ellipsis-v"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Messages -->
                    <div class="flex-1 p-4 space-y-4 overflow-y-auto">
                        {% for message in messages|default([
                            {sender: 'coach', text: 'Hi! I reviewed your workout log from yesterday. Great job on the form for those squats!', time: '10:30 AM', date: 'Today'},
                            {sender: 'patient', text: 'Thank you! I focused on keeping my chest up like you suggested.', time: '10:32 AM', date: 'Today'},
                            {sender: 'coach', text: 'I can see the improvement. Let\'s add 5lbs next session. Also, don\'t forget your stretching routine after cardio days.', time: '10:35 AM', date: 'Today'},
                            {sender: 'coach', text: 'I uploaded a video demonstrating the hip flexor stretch we discussed. Please review it before your next session.', time: '10:36 AM', date: 'Today'},
                            {sender: 'patient', text: 'Perfect, I\'ll check it out. Should I continue with the same cardio intensity?', time: '10:40 AM', date: 'Today'},
                            {sender: 'coach', text: 'Yes, keep it at the current level for now. We\'ll reassess after two more weeks. Your heart rate recovery is improving nicely!', time: '10:42 AM', date: 'Today'}
                        ]) %}
                        <div class="flex {{ message.sender == 'patient' ? 'justify-end' : 'justify-start' }}">
                            <div class="max-w-[70%] {{ message.sender == 'patient' ? 'bg-wellcare-500 text-white' : 'bg-gray-100 dark:bg-gray-700 text-gray-900 dark:text-white' }} rounded-2xl px-4 py-3">
                                <p class="text-sm">{{ message.text }}</p>
                                <p class="text-xs mt-1 {{ message.sender == 'patient' ? 'text-wellcare-200' : 'text-gray-500 dark:text-gray-400' }}">{{ message.time }}</p>
                            </div>
                        </div>
                        {% endfor %}
                    </div>

                    <!-- Message Input -->
                    <div class="p-4 border-t border-gray-100 dark:border-gray-700">
                        <form @submit.prevent="sendMessage()" class="flex items-end gap-3">
                            <div class="flex-1">
                                <textarea 
                                    x-model="newMessage"
                                    @keydown.enter.prevent="sendMessage()"
                                    placeholder="{{ 'Type your message...' }}"
                                    rows="1"
                                    class="w-full px-4 py-2 text-gray-900 border border-gray-300 resize-none dark:border-gray-600 rounded-xl bg-gray-50 dark:bg-gray-700 dark:text-white focus:ring-wellcare-500 focus:border-wellcare-500"
                                    ></textarea>
                            </div>
                            <div class="flex items-center gap-2">
                                <button type="button" class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="fas fa-paperclip"></i>
                                </button>
                                <button type="button" class="p-2 text-gray-400 transition-colors hover:text-wellcare-500">
                                    <i class="fas fa-image"></i>
                                </button>
                                <button type="submit" class="p-2 text-white transition-colors rounded-lg bg-wellcare-500 hover:bg-wellcare-600">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                        </form>
                        <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">
                            {{ 'Press Enter to send, Shift+Enter for new line' }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Form Feedback Section -->
        <div class="grid grid-cols-1 gap-6 mt-6 lg:grid-cols-2">
            <!-- Video Uploads for Review -->
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-video text-wellcare-500"></i>
                    {{ 'Form Check Videos' }}
                </h3>
                
                <div class="space-y-4">
                    {% for video in formVideos|default([
                        {name: 'Squat Form Check', date: '2 days ago', status: 'reviewed', feedback: 'Great depth! Focus on keeping knees tracking over toes.', thumbnail: ''},
                        {name: 'Deadlift Setup', date: '1 week ago', status: 'reviewed', feedback: 'Excellent bracing. Your back position has improved significantly.', thumbnail: ''},
                        {name: 'Bench Press', date: '2 weeks ago', status: 'pending', feedback: null, thumbnail: ''}
                    ]) %}
                    <div class="p-4 border border-gray-100 rounded-lg dark:border-gray-700">
                        <div class="flex items-center gap-4">
                            <div class="flex items-center justify-center w-20 bg-gray-100 rounded-lg h-14 dark:bg-gray-700">
                                <i class="text-xl text-gray-400 fas fa-play-circle"></i>
                            </div>
                            <div class="flex-1">
                                <h4 class="font-medium text-gray-900 dark:text-white">{{ video.name }}</h4>
                                <p class="text-sm text-gray-500 dark:text-gray-400">{{ video.date }}</p>
                            </div>
                            <span class="px-3 py-1 text-xs font-medium rounded-full {{ video.status == 'reviewed' ? 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400' : 'bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-400' }}">
                                {{ video.status == 'reviewed' ? 'Reviewed' : 'Pending Review' }}
                            </span>
                        </div>
                        {% if video.feedback %}
                        <div class="p-3 mt-3 rounded-lg bg-wellcare-50 dark:bg-wellcare-900/20">
                            <p class="text-sm text-wellcare-700 dark:text-wellcare-300">
                                <i class="mr-2 fas fa-comment-medical"></i>{{ video.feedback }}
                            </p>
                        </div>
                        {% endif %}
                    </div>
                    {% endfor %}
                </div>
                
                <button class="flex items-center justify-center w-full gap-2 p-4 mt-4 text-gray-500 transition-colors border-2 border-gray-300 border-dashed dark:border-gray-600 rounded-xl dark:text-gray-400 hover:border-wellcare-500 hover:text-wellcare-500">
                    <i class="text-xl fas fa-cloud-upload-alt"></i>
                    {{ 'Upload New Video for Review' }}
                </button>
            </div>

            <!-- Coach Announcements -->
            <div class="p-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
                <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                    <i class="mr-2 fas fa-bullhorn text-wellcare-500"></i>
                    {{ 'Coach Announcements' }}
                </h3>
                
                <div class="space-y-4">
                    <div class="p-4 border rounded-lg bg-wellcare-50 dark:bg-wellcare-900/20 border-wellcare-200 dark:border-wellcare-800">
                        <div class="flex items-start gap-3">
                            <div class="flex items-center justify-center flex-shrink-0 w-10 h-10 rounded-full bg-wellcare-100 dark:bg-wellcare-900/30">
                                <i class="fas fa-info-circle text-wellcare-500"></i>
                            </div>
                            <div>
                                <h4 class="font-medium text-wellcare-800 dark:text-wellcare-200">{{ 'Updated Workout Schedule' }}</h4>
                                <p class="mt-1 text-sm text-wellcare-700 dark:text-wellcare-300">
                                    {{ 'I\'ve updated your weekly workout plan starting next Monday. The focus will shift slightly toward building more functional strength. Check your calendar for the new exercises!' }}
                                </p>
                                <p class="mt-2 text-xs text-wellcare-500">{{ '2 days ago' }}</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="p-4 rounded-lg bg-gray-50 dark:bg-gray-700/50">
                        <div class="flex items-start gap-3">
                            <div class="flex items-center justify-center flex-shrink-0 w-10 h-10 bg-gray-100 rounded-full dark:bg-gray-600">
                                <i class="text-gray-500 fas fa-lightbulb"></i>
                            </div>
                            <div>
                                <h4 class="font-medium text-gray-900 dark:text-white">{{ 'Weekly Tip: Recovery' }}</h4>
                                <p class="mt-1 text-sm text-gray-700 dark:text-gray-300">
                                    {{ 'Remember to prioritize sleep this week. Aim for 7-9 hours to maximize your training adaptations. Your recovery score has been slightly lower than usual.' }}
                                </p>
                                <p class="mt-2 text-xs text-gray-500 dark:text-gray-400">{{ '1 week ago' }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Program Adjustments -->
        <div class="p-6 mt-6 bg-white border border-gray-100 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
            <h3 class="mb-4 font-semibold text-gray-900 dark:text-white">
                <i class="mr-2 fas fa-sliders-h text-wellcare-500"></i>
                {{ 'Program Adjustments' }}
            </h3>
            
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="text-sm text-left text-gray-500 dark:text-gray-400">
                            <th class="pb-3 font-medium">{{ 'Date' }}</th>
                            <th class="pb-3 font-medium">{{ 'Adjustment Type' }}</th>
                            <th class="pb-3 font-medium">{{ 'Exercise' }}</th>
                            <th class="pb-3 font-medium">{{ 'Change' }}</th>
                            <th class="pb-3 font-medium">{{ 'Reason' }}</th>
                            <th class="pb-3 font-medium">{{ 'Status' }}</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100 dark:divide-gray-700">
                        {% for adjustment in programAdjustments|default([
                            {date: 'Today', type: 'Weight Increase', exercise: 'Bench Press', change: '+5 lbs', reason: 'Progressive overload', status: 'approved'},
                            {date: 'Yesterday', type: 'Exercise Swap', exercise: 'Leg Press', change: '→ Bulgarian Split Squat', reason: 'Better for knee rehab', status: 'approved'},
                            {date: '3 days ago', type: 'Volume Decrease', exercise: 'Deadlift', change: '4x6 → 3x5', reason: 'Recovery management', status: 'approved'},
                            {date: '1 week ago', type: 'Intensity Increase', exercise: 'Overhead Press', change: '+2.5 lbs', reason: 'Strength building', status: 'applied'}
                        ]) %}
                        <tr>
                            <td class="py-3 text-sm text-gray-900 dark:text-white">{{ adjustment.date }}</td>
                            <td class="py-3 text-sm text-gray-600 dark:text-gray-300">{{ adjustment.type }}</td>
                            <td class="py-3 text-sm font-medium text-gray-900 dark:text-white">{{ adjustment.exercise }}</td>
                            <td class="py-3 text-sm text-wellcare-600 dark:text-wellcare-400">{{ adjustment.change }}</td>
                            <td class="py-3 text-sm text-gray-500 dark:text-gray-400">{{ adjustment.reason }}</td>
                            <td class="py-3">
                                <span class="px-2 py-1 text-xs font-medium rounded-full {{ adjustment.status == 'approved' ? 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400' : 'bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-400' }}">
                                    {{ adjustment.status }}
                                </span>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <!-- Emergency Stop Button -->
    <div class="fixed bottom-6 right-6">
        <button @click="emergencyStop()" class="flex items-center justify-center text-white transition-all duration-200 bg-red-500 rounded-full shadow-lg w-14 h-14 hover:bg-red-600 hover:scale-110">
            <i class="text-xl fas fa-stop"></i>
        </button>
    </div>
</div>

<script>
document.addEventListener('alpine:init', () => {
    Alpine.data('coachCommunication', () => ({
        darkMode: false,
        searchQuery: '',
        selectedConversation: 'Coach Sarah',
        newMessage: '',

        conversations: [
            { name: 'Coach Sarah', lastMessage: 'Great progress on your squat form!', time: '2h ago', unread: 2, online: true },
            { name: 'Dr. Ahmed', lastMessage: 'Your medical clearance is approved', time: '1d ago', unread: 0, online: false },
            { name: 'Nutrition Coach', lastMessage: "Let's review your meal plan", time: '2d ago', unread: 0, online: true }
        ],

        messages: [
            { sender: 'coach', text: "Hi! I reviewed your workout log from yesterday. Great job on the form for those squats!", time: '10:30 AM' },
            { sender: 'patient', text: 'Thank you! I focused on keeping my chest up like you suggested.', time: '10:32 AM' },
            { sender: 'coach', text: "I can see the improvement. Let's add 5lbs next session. Also, don't forget your stretching routine after cardio days.", time: '10:35 AM' },
            { sender: 'coach', text: "I uploaded a video demonstrating the hip flexor stretch we discussed. Please review it before your next session.", time: '10:36 AM' },
            { sender: 'patient', text: 'Perfect, I\'ll check it out. Should I continue with the same cardio intensity?', time: '10:40 AM' },
            { sender: 'coach', text: 'Yes, keep it at the current level for now. We\'ll reassess after two more weeks. Your heart rate recovery is improving nicely!', time: '10:42 AM' }
        ],

        formVideos: [
            { name: 'Squat Form Check', date: '2 days ago', status: 'reviewed', feedback: 'Great depth! Focus on keeping knees tracking over toes.' },
            { name: 'Deadlift Setup', date: '1 week ago', status: 'reviewed', feedback: 'Excellent bracing. Your back position has improved significantly.' },
            { name: 'Bench Press', date: '2 weeks ago', status: 'pending', feedback: null }
        ],

        init() {
            this.darkMode = localStorage.getItem('theme') === 'dark';
        },

        selectConversation(name) {
            this.selectedConversation = name;
        },

        sendMessage() {
            if (this.newMessage.trim()) {
                this.messages.push({
                    sender: 'patient',
                    text: this.newMessage,
                    time: new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })
                });
                this.newMessage = '';
            }
        },

        openNewMessage() {
            alert('Open new message modal');
        },

        emergencyStop() {
            if (confirm('Are you experiencing any discomfort?')) {
                window.location.href = '/emergency';
            }
        }
    }));
});
</script>
{% endblock %}
