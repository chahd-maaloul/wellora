{% extends 'layouts/app.html.twig' %}

{% block title %}Changer le Mot de Passe - WellCare Connect{% endblock %}

{% block breadcrumb %}
    <li class="flex items-center">
        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <a href="{{ path('app_profile') }}" class="hover:text-wellcare-600 dark:hover:text-wellcare-400">Mon Profil</a>
    </li>
    <li class="flex items-center">
        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="breadcrumb-current">Changer le Mot de Passe</span>
    </li>
{% endblock %}

{% block body %}
<div class="min-h-full">
    <div class="overflow-hidden bg-white border border-gray-200 shadow-sm dark:bg-gray-800 rounded-xl dark:border-gray-700">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Exigences du Mot de Passe</h3>
        </div>
        
        <div class="px-6 py-4 border-b border-yellow-200 bg-yellow-50 dark:bg-yellow-900/20 dark:border-yellow-800">
            <div class="flex">
                <svg class="w-5 h-5 mt-0.5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                </svg>
                <div class="ml-3">
                    <h4 class="text-sm font-medium text-yellow-800 dark:text-yellow-200">Le mot de passe doit contenir :</h4>
                    <ul class="mt-1 text-xs text-yellow-700 list-disc list-inside dark:text-yellow-300">
                        <li>Au moins 8 caractères</li>
                        <li>Au moins une lettre majuscule (A-Z)</li>
                        <li>Au moins une lettre minuscule (a-z)</li>
                        <li>Au moins un chiffre (0-9)</li>
                        <li>Au moins un caractère spécial (@$!%*?&)</li>
                    </ul>
                </div>
            </div>
        </div>
        
        {{ form_start(form, {'attr': {'class': 'p-6 space-y-6', 'novalidate': 'novalidate'}}) }}
        
        <!-- Mot de passe actuel -->
        <div class="form-group">
            <label for="{{ form.currentPassword.vars.id }}" class="form-label">Mot de Passe Actuel</label>
            {{ form_widget(form.currentPassword, {'attr': {'class': 'form-input', 'placeholder': 'Entrez votre mot de passe actuel', 'autocomplete': 'current-password'}}) }}
            {% if form.currentPassword.vars.errors|length > 0 %}
                <div class="form-error">
                    {% for error in form.currentPassword.vars.errors %}
                        <p>{{ error.message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- Nouveau mot de passe -->
        <div class="form-group">
            <label for="{{ form.newPassword.first.vars.id }}" class="form-label">Nouveau Mot de Passe</label>
            {{ form_widget(form.newPassword.first, {'attr': {'class': 'form-input', 'placeholder': 'Entrez le nouveau mot de passe', 'autocomplete': 'new-password'}}) }}
            {% if form.newPassword.first.vars.errors|length > 0 %}
                <div class="form-error">
                    {% for error in form.newPassword.first.vars.errors %}
                        <p>{{ error.message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- Confirmer le nouveau mot de passe -->
        <div class="form-group">
            <label for="{{ form.newPassword.second.vars.id }}" class="form-label">Confirmer le Nouveau Mot de Passe</label>
            {{ form_widget(form.newPassword.second, {'attr': {'class': 'form-input', 'placeholder': 'Confirmez le nouveau mot de passe', 'autocomplete': 'new-password'}}) }}
            {% if form.newPassword.second.vars.errors|length > 0 %}
                <div class="form-error">
                    {% for error in form.newPassword.second.vars.errors %}
                        <p>{{ error.message }}</p>
                    {% endfor %}
                </div>
            {% endif %}
        </div>

        <!-- Actions du formulaire -->
        <div class="flex items-center justify-end pt-4 space-x-4 border-t border-gray-200 dark:border-gray-700">
            <a href="{{ path('app_profile') }}" class="btn btn-secondary">Annuler</a>
            <button type="submit" class="btn btn-primary">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
                Changer le Mot de Passe
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
