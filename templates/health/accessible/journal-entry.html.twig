{# Accessible Health Journal Entry Form - WCAG 2.1 AA Compliant #}

{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Nouvelle Entrée de Journal'|trans }} - {{ 'Journal de Santé Accessible'|trans }} - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block breadcrumb %}
    <li class="flex items-center">
        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <a href="/dashboard" class="breadcrumb-link">{{ 'Tableau de bord'|trans }}</a>
    </li>
    <li class="flex items-center">
        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="breadcrumb-current">{{ 'Nouvelle entrée'|trans }}</span>
    </li>
{% endblock %}

{% block body %}
<div class="min-h-full">
    {# Page Header #}
    <div class="mb-6">
        <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
            <div class="flex items-center gap-4">
                <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-wellcare-100 dark:bg-wellcare-900/30">
                    <i class="fa-solid fa-book-medical text-wellcare-600 dark:text-wellcare-400 text-xl"></i>
                </div>
                <div>
                    <h1 class="text-xl font-bold text-gray-900 dark:text-white">
                        {{ 'Nouvelle Entrée de Journal'|trans }}
                    </h1>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        {{ 'Suivez votre santé au quotidien'|trans }}
                    </p>
                </div>
            </div>
            
            <div class="flex items-center gap-2">
                <a href="{{ path('app_health_accessible_body_map') }}" class="btn-secondary">
                    <i class="fa-solid fa-child mr-2"></i>
                    {{ 'Carte corporelle'|trans }}
                </a>
            </div>
        </div>
    </div>

    {# Form #}
    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    
    {# Global Form Errors #}
    {% if form.vars.errors|length > 0 %}
    <div class="mb-4 p-4 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-xl">
        <div class="flex items-center gap-2 mb-2">
            <i class="fa-solid fa-exclamation-triangle text-red-500"></i>
            <span class="text-red-700 dark:text-red-300 font-medium">{{ 'Erreurs dans le formulaire'|trans }}</span>
        </div>
        {{ form_errors(form) }}
    </div>
    {% endif %}
    
    {# Quick Stats Row #}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        {# Date #}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
            <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-calendar text-wellcare-500"></i>
                {{ 'Date'|trans }}
            </label>
            <div class="space-y-3">
                {{ form_widget(form.date, {
                    'attr': {
                        'class': 'input w-full text-center text-lg',
                        'type': 'date'
                    }
                }) }}
                <span class="text-red-500 text-sm">{{ form_errors(form.date) }}</span>
            </div>
        </div>

        {# Weight #}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
            <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-weight-scale text-wellcare-500"></i>
                {{ 'Poids'|trans }} (kg)
            </label>
            <div class="space-y-3">
                {{ form_widget(form.poids, {
                    'attr': {
                        'class': 'input w-full text-center text-lg',
                        'min': '30',
                        'max': '200',
                        'step': '0.1',
                        'aria-label': 'Poids en kilogrammes'
                    }
                }) }}
                <div class="flex items-center justify-between">
                    <span class="text-xs text-gray-500 dark:text-gray-400">30kg</span>
                    <span class="text-xs text-gray-500 dark:text-gray-400">200kg</span>
                </div>
                <span class="text-red-500 text-sm">{{ form_errors(form.poids) }}</span>
            </div>
        </div>

        {# Blood Sugar (Glycemie) #}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
            <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-droplet text-wellcare-500"></i>
                {{ 'Glycémie'|trans }} (g/l)
            </label>
            <div class="space-y-3">
                {{ form_widget(form.glycemie, {
                    'attr': {
                        'class': 'input w-full text-center text-lg',
                        'min': '0.5',
                        'max': '3',
                        'step': '0.1',
                        'aria-label': 'Glycémie en grammes par litre'
                    }
                }) }}
                <div class="flex items-center justify-between">
                    <span class="text-xs text-gray-500 dark:text-gray-400">0.5</span>
                    <span class="text-xs text-gray-500 dark:text-gray-400">3.0</span>
                </div>
                <span class="text-red-500 text-sm">{{ form_errors(form.glycemie) }}</span>
            </div>
        </div>
    </div>

    {# Blood Pressure & Sleep #}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {# Blood Pressure (Tension) #}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
            <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-heart-pulse text-wellcare-500"></i>
                {{ 'Tension diastolique'|trans }} (mmHg)
            </label>
            <div class="space-y-3">
                {{ form_widget(form.tension, {
                    'attr': {
                        'class': 'input w-full text-center text-lg',
                        'placeholder': '80',
                        'min': '40',
                        'max': '120',
                        'aria-label': 'Tension artérielle diastolique'
                    }
                }) }}
                <p class="text-xs text-gray-500 dark:text-gray-400">{{ 'Entrez la valeur diastolique (ex: 80 pour une tension de 120/80)'|trans }}</p>
                <span class="text-red-500 text-sm">{{ form_errors(form.tension) }}</span>
            </div>
        </div>

        {# Sleep Duration #}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
            <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-bed text-wellcare-500"></i>
                {{ 'Heures de sommeil'|trans }}
            </label>
            <div class="space-y-3">
                {{ form_widget(form.sommeil, {
                    'attr': {
                        'class': 'input w-full text-center text-lg',
                        'min': '0',
                        'max': '12',
                        'step': '0.5',
                        'aria-label': 'Heures de sommeil'
                    }
                }) }}
                <div class="flex items-center justify-between">
                    <span class="text-xs text-gray-500 dark:text-gray-400">0h</span>
                    <span class="text-xs text-gray-500 dark:text-gray-400">12h</span>
                </div>
                <span class="text-red-500 text-sm">{{ form_errors(form.sommeil) }}</span>
            </div>
        </div>
    </div>

    {# Symptoms Section #}
    <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
        <div class="flex items-center justify-between mb-4">
            <label class="flex items-center gap-2 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-notes-medical text-wellcare-500"></i>
                {{ 'Symptômes'|trans }}
            </label>
            <button type="submit" name="add_symptom" value="1" class="btn-secondary text-sm">
                <i class="fa-solid fa-plus mr-1"></i>
                {{ 'Ajouter un symptôme'|trans }}
            </button>
        </div>
        
        {# Render existing symptoms #}
        {% for symptom in form.symptoms %}
            <div class="symptom-item bg-gray-50 dark:bg-gray-800 rounded-xl p-4 mb-3">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                    <div>
                        <label class="text-xs text-gray-500 dark:text-gray-400">{{ 'Type'|trans }}</label>
                        {{ form_widget(symptom.type, {
                            'attr': {
                                'class': 'input w-full text-sm'
                            }
                        }) }}
                    </div>
                    <div>
                        <label class="text-xs text-gray-500 dark:text-gray-400">{{ 'Intensité (1-10)'|trans }}</label>
                        {{ form_widget(symptom.intensite, {
                            'attr': {
                                'class': 'input w-full text-sm',
                                'min': 1,
                                'max': 10
                            }
                        }) }}
                    </div>
                </div>
                {{ form_errors(symptom.type) }}
                {{ form_errors(symptom.intensite) }}
            </div>
        {% endfor %}
        
        {# Message if no symptoms #}
        {% if form.symptoms|length == 0 %}
            <p class="text-sm text-gray-500 dark:text-gray-400 text-center py-4">
                {{ 'Aucun symptôme ajouté. Cliquez sur "Ajouter un symptôme" pour en ajouter.'|trans }}
            </p>
        {% endif %}
    </div>

    {# Submit Actions #}
    <div class="flex items-center justify-between pt-4">
        <a href="{{ path('app_healthentry_index') }}" class="btn-secondary">
            <i class="fa-solid fa-list mr-2"></i>
            {{ 'Voir la liste des entrées'|trans }}
        </a>
        <div class="flex gap-2">
            <button type="button" class="btn-secondary" onclick="window.history.back()">
                <i class="fa-solid fa-arrow-left mr-2"></i>
                {{ 'Annuler'|trans }}
            </button>
            <button type="submit" class="btn-primary">
                <i class="fa-solid fa-check mr-2"></i>
                {{ 'Enregistrer l\'entrée'|trans }}
            </button>
        </div>
    </div>

    {{ form_end(form) }}
</div>

{% endblock %}
