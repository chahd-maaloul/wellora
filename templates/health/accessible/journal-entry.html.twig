{# Accessible Health Journal Entry Form - WCAG 2.1 AA Compliant #}

{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Nouvelle Entrée de Journal'|trans }} - {{ 'Journal de Santé Accessible'|trans }} - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block breadcrumb %}
    <li class="flex items-center">
        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <a href="{{ path('app_healthjournal_index') }}" class="breadcrumb-link">{{ 'Tableau de bord'|trans }}</a>
    </li>
    <li class="flex items-center">
        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="breadcrumb-current">{{ 'Nouvelle entrée'|trans }}</span>
    </li>
{% endblock %}

{% block body %}
<div class="min-h-full">
    {# Page Header #}
    <div class="mb-6">
        <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
            <div class="flex items-center gap-4">
                <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-wellcare-100 dark:bg-wellcare-900/30">
                    <i class="fa-solid fa-book-medical text-wellcare-600 dark:text-wellcare-400 text-xl"></i>
                </div>
                <div>
                    <h1 class="text-xl font-bold text-gray-900 dark:text-white">
                        {{ 'Nouvelle Entrée de Journal'|trans }}
                    </h1>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        {{ 'Suivez votre santé au quotidien'|trans }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
    
    {# Health Metrics Row #}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        {# Weight #}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
            <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-weight-scale text-wellcare-500"></i>
                {{ form_label(form.poids) }} ({{ 'kg'|trans }})
            </label>
            {{ form_widget(form.poids, {
                'attr': {
                    'class': 'w-full input',
                    'step': '0.1',
                    'min': '0',
                    'placeholder': '0.0'|trans
                }
            }) }}
            {{ form_errors(form.poids) }}
        </div>

        {# Blood Sugar #}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
            <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-droplet text-wellcare-500"></i>
                {{ form_label(form.glycemie) }} ({{ 'g/L'|trans }})
            </label>
            {{ form_widget(form.glycemie, {
                'attr': {
                    'class': 'w-full input',
                    'step': '0.01',
                    'min': '0',
                    'placeholder': '0.00'|trans
                }
            }) }}
            {{ form_errors(form.glycemie) }}
        </div>

        {# Blood Pressure #}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
            <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-heart-pulse text-wellcare-500"></i>
                {{ form_label(form.tension) }} ({{ 'mmHg'|trans }})
            </label>
            {{ form_widget(form.tension, {
                'attr': {
                    'class': 'w-full input',
                    'step': '0.1',
                    'min': '0',
                    'placeholder': '0'|trans
                }
            }) }}
            {{ form_errors(form.tension) }}
        </div>

        {# Sleep Duration #}
        <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
            <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-bed text-wellcare-500"></i>
                {{ form_label(form.sommeil) }}
            </label>
            {{ form_widget(form.sommeil, {
                'attr': {
                    'class': 'w-full input',
                    'step': '0.5',
                    'min': '0',
                    'max': '24',
                    'placeholder': '7'|trans
                }
            }) }}
            {{ form_errors(form.sommeil) }}
        </div>
    </div>

    {# Date Field #}
    <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
        <label class="flex items-center gap-2 mb-3 text-sm font-medium text-gray-900 dark:text-white">
            <i class="fa-solid fa-calendar text-wellcare-500"></i>
            {{ form_label(form.date) }}
        </label>
        {{ form_widget(form.date, {
            'attr': {
                'class': 'w-full input',
                'type': 'date'
            }
        }) }}
        {{ form_errors(form.date) }}
    </div>

    {# Journal Field #}
    {{ form_widget(form.journal) }}

    {# Symptoms Section #}
    <div class="bg-white dark:bg-gray-900 rounded-2xl border border-gray-200 dark:border-gray-800 p-5">
        <div class="flex items-center justify-between mb-6">
            <label class="flex items-center gap-2 text-sm font-medium text-gray-900 dark:text-white">
                <i class="fa-solid fa-notes-medical text-wellcare-500"></i>
                {{ 'Symptômes'|trans }}
            </label>
            <button type="button" id="add-symptom" class="btn-secondary text-sm">
                <i class="fa-solid fa-plus-circle mr-1"></i>
                {{ 'Nouveau Symptôme'|trans }}
            </button>
        </div>
        
        <div id="symptoms-container"
             data-prototype="{{ form_widget(form.symptoms.vars.prototype)|e('html_attr') }}"
             class="space-y-6">
            {% for symptomForm in form.symptoms %}
                <div class="symptom-item bg-gradient-to-r from-gray-50 to-gray-100 dark:from-gray-800 dark:to-gray-750 rounded-xl border border-gray-200 dark:border-gray-700 p-5 transition-all duration-300 hover:shadow-md">
                    <div class="flex items-center justify-between mb-4 pb-3 border-b border-gray-200 dark:border-gray-600">
                        <span class="flex items-center gap-2 text-sm font-semibold text-wellcare-600 dark:text-wellcare-400">
                            <i class="fa-solid fa-clipboard-list"></i>
                            {{ 'Symptôme'|trans }} #{{ loop.index }}
                        </span>
                        <button type="button" class="symptom-remove text-red-500 hover:text-red-700 dark:text-red-400 dark:hover:text-red-300 transition-colors" title="{{ 'Supprimer'|trans }}">
                            <i class="fa-solid fa-times-circle text-lg"></i>
                        </button>
                    </div>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <div>
                            <label class="flex items-center gap-2 mb-3 text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wide">
                                <i class="fa-solid fa-tag text-wellcare-500"></i>
                                {{ form_label(symptomForm.type) }}
                            </label>
                            {{ form_widget(symptomForm.type, {
                                'attr': {
                                    'class': 'w-full input text-sm',
                                    'placeholder': 'ex: Maux de tête, Fatigue...'|trans
                                }
                            }) }}
                        </div>
                        <div>
                            <label class="flex items-center gap-2 mb-3 text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wide">
                                <i class="fa-solid fa-bolt text-wellcare-500"></i>
                                {{ form_label(symptomForm.intensite) }}
                            </label>
                            {{ form_widget(symptomForm.intensite, {
                                'attr': {
                                    'class': 'w-full input text-sm',
                                    'min': '1',
                                    'max': '10',
                                    'placeholder': '1-10'|trans
                                }
                            }) }}
                        </div>
                        <div>
                            <label class="flex items-center gap-2 mb-3 text-xs font-semibold text-gray-700 dark:text-gray-300 uppercase tracking-wide">
                                <i class="fa-solid fa-calendar-check text-wellcare-500"></i>
                                {{ form_label(symptomForm.date_observation) }}
                            </label>
                            {{ form_widget(symptomForm.date_observation, {
                                'attr': {
                                    'class': 'w-full input text-sm',
                                    'type': 'date'
                                }
                            }) }}
                        </div>
                    </div>
                    {{ form_errors(symptomForm) }}
                </div>
            {% endfor %}
        </div>
    </div>

    {# Submit Actions #}
    <div class="flex items-center justify-end gap-4 pt-4">
        <a href="{{ path('app_healthjournal_index') }}" class="btn-secondary">
            <i class="fa-solid fa-arrow-left mr-2"></i>
            {{ 'Annuler'|trans }}
        </a>
        <button type="submit" class="btn-primary">
            <i class="fa-solid fa-check-circle mr-2"></i>
            {{ 'Enregistrer'|trans }}
        </button>
    </div>

    {{ form_end(form) }}
</div>
{% endblock %}

{% block scripts %}
{{ parent() }}
<script>
document.addEventListener('DOMContentLoaded', function() {
    const symptomsContainer = document.getElementById('symptoms-container');
    const addSymptomBtn = document.getElementById('add-symptom');
    
    if (!symptomsContainer || !addSymptomBtn) return;
    
    const prototype = symptomsContainer.dataset.prototype;
    let symptomCount = symptomsContainer.querySelectorAll('.symptom-item').length;

    // Add symptom with animation
    addSymptomBtn.addEventListener('click', function() {
        const newSymptom = document.createElement('div');
        newSymptom.className = 'symptom-item bg-gradient-to-r from-wellcare-50 to-white dark:from-gray-800 dark:to-gray-750 rounded-xl border-2 border-wellcare-200 dark:border-wellcare-700 p-5 transition-all duration-300 hover:shadow-lg animate-fade-in';
        newSymptom.innerHTML = prototype.replace(/__name__/g, symptomCount);
        newSymptom.style.opacity = '0';
        newSymptom.style.transform = 'translateY(-10px)';
        symptomsContainer.appendChild(newSymptom);
        
        // Trigger animation
        requestAnimationFrame(() => {
            newSymptom.style.opacity = '1';
            newSymptom.style.transform = 'translateY(0)';
        });
        
        // Add remove button event
        addRemoveListener(newSymptom);
        symptomCount++;
    });

    // Remove symptom with animation
    function addRemoveListener(element) {
        const removeBtn = element.querySelector('.symptom-remove');
        if (removeBtn) {
            removeBtn.addEventListener('click', function() {
                element.style.opacity = '0';
                element.style.transform = 'translateX(20px)';
                setTimeout(() => {
                    element.remove();
                }, 300);
            });
        }
    }

    // Initialize remove buttons for existing symptoms
    symptomsContainer.querySelectorAll('.symptom-item').forEach(addRemoveListener);
});
</script>

<style>
@keyframes fade-in {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-fade-in {
    animation: fade-in 0.3s ease-out forwards;
}
</style>
{% endblock %}
