{# templates/health/lab-results.html.twig #}
{# Lab Results Page - Patient Laboratory Test Results #}

{% extends 'layouts/app.html.twig' %}

{% block title %}{{ 'Résultats de Laboratoire'|trans }} - WellCare Connect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}

{% block breadcrumb %}
    <li class="flex items-center">
        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <a href="/dashboard" class="breadcrumb-link">{{ 'Tableau de bord'|trans }}</a>
    </li>
    <li class="flex items-center">
        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
        <span class="breadcrumb-current">{{ 'Résultats de Laboratoire'|trans }}</span>
    </li>
{% endblock %}

{% block body %}
<div class="min-h-full">
    {# Page Header #}
    <div class="mb-6">
        <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
            <div class="flex items-center gap-4">
                <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-wellcare-50 dark:bg-wellcare-900/30">
                    <i class="text-xl fa-solid fa-flask text-wellcare-600 dark:text-wellcare-400"></i>
                </div>
                <div>
                    <h1 class="text-xl font-bold text-gray-900 dark:text-white">
                        {{ 'Résultats de Laboratoire'|trans }}
                    </h1>
                    <p class="text-sm text-gray-500 dark:text-gray-400">
                        {{ 'Vos analyses et résultats d\'examens'|trans }}
                    </p>
                </div>
            </div>
        </div>
    </div>

    {# Lab Results List #}
    <div class="space-y-6">
        {% for result in labResults %}
            <div class="overflow-hidden bg-white border border-gray-200 shadow-sm dark:bg-gray-900 rounded-2xl dark:border-gray-800">
                <div class="p-5 border-b border-gray-100 dark:border-gray-800">
                    <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
                        <div class="flex items-center gap-4">
                            <div class="flex items-center justify-center w-12 h-12 rounded-xl bg-wellcare-50 dark:bg-wellcare-900/30">
                                <i class="text-xl fa-solid fa-microscope text-wellcare-600 dark:text-wellcare-400"></i>
                            </div>
                            <div>
                                <h3 class="text-base font-semibold text-gray-900 dark:text-white">
                                    {{ result.name }}
                                </h3>
                                <p class="text-xs text-gray-500 dark:text-gray-400">
                                    {{ 'Examen de laboratoire'|trans }}
                                </p>
                            </div>
                        </div>
                        <div>
                            <button type="button" class="px-4 py-2 text-sm font-medium text-white rounded-lg bg-wellcare-600 hover:bg-wellcare-700 shadow-sm" onclick="document.getElementById('lab-upload-{{ result.id }}').click()">
                                <i class="mr-1 fa-solid fa-upload"></i>
                                {% if result.resultFile %}
                                    {{ 'Remplacer PDF'|trans }}
                                {% else %}
                                    {{ 'Uploader PDF'|trans }}
                                {% endif %}
                            </button>
                        </div>
                    </div>
                </div>

                <div class="p-5 space-y-5">
                    <div class="grid grid-cols-1 gap-4 md:grid-cols-3">
                        <div class="p-4 rounded-xl bg-gray-50/70 dark:bg-gray-800/60">
                            <p class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400">{{ 'Date'|trans }}</p>
                            <p class="text-sm font-medium text-gray-900 dark:text-white">
                                {{ result.date ? result.date|date('d/m/Y') : '-' }}
                            </p>
                        </div>
                        <div class="p-4 rounded-xl bg-gray-50/70 dark:bg-gray-800/60">
                            <p class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400">{{ 'Statut'|trans }}</p>
                            <span class="inline-flex items-center mt-1 px-2.5 py-1 text-xs font-medium rounded-full
                                {% if result.status in ['termine', 'terminé', 'done', 'completed'] %}
                                    text-green-700 bg-green-100 dark:bg-green-900/30 dark:text-green-400
                                {% elseif result.status in ['annule', 'annulé', 'canceled'] %}
                                    text-red-700 bg-red-100 dark:bg-red-900/30 dark:text-red-400
                                {% else %}
                                    text-yellow-700 bg-yellow-100 dark:bg-yellow-900/30 dark:text-yellow-400
                                {% endif %}
                            ">
                                {{ result.status|default('prescrit')|capitalize }}
                            </span>
                        </div>
                        <div class="p-4 rounded-xl bg-gray-50/70 dark:bg-gray-800/60">
                            <p class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400">{{ 'Fichier'|trans }}</p>
                            {% if result.resultFile %}
                                {% set fileName = result.resultFile|split('/')|last %}
                                <a class="inline-flex items-center mt-1 text-sm text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300"
                                   href="{{ asset(result.resultFile) }}" target="_blank" rel="noopener">
                                    <i class="mr-2 fa-solid fa-file-pdf"></i>
                                    {{ 'Télécharger PDF'|trans }}
                                </a>
                                <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">{{ fileName }}</p>
                            {% else %}
                                <p class="text-sm text-gray-500 dark:text-gray-400">{{ 'Aucun fichier'|trans }}</p>
                            {% endif %}
                        </div>
                    </div>

                    <div>
                        <p class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400">{{ 'Résultat'|trans }}</p>
                        <div class="p-4 mt-2 text-sm text-gray-800 bg-gray-50/70 rounded-xl dark:bg-gray-800/60 dark:text-gray-200">
                            {{ result.result ? result.result : 'Résultat en attente'|trans }}
                        </div>
                    </div>

                    {% if result.resultFile %}
                        <div>
                            <p class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400">{{ 'Aperçu PDF'|trans }}</p>
                            <div class="mt-2 overflow-hidden border border-gray-200 rounded-xl dark:border-gray-800 shadow-sm">
                                <iframe src="{{ asset(result.resultFile) }}" class="w-full h-64 bg-white" title="PDF preview"></iframe>
                            </div>
                            <div class="mt-2">
                                <a class="text-sm text-wellcare-600 hover:text-wellcare-700 dark:text-wellcare-400 dark:hover:text-wellcare-300"
                                   href="{{ asset(result.resultFile) }}" target="_blank" rel="noopener">
                                    {{ 'Voir en plein écran'|trans }}
                                </a>
                            </div>
                        </div>
                    {% endif %}

                    <div class="pt-2 border-t border-gray-100 dark:border-gray-800">
                        <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
                            <form method="post" enctype="multipart/form-data" action="{{ path('health_lab_results_upload', { id: result.id }) }}" class="flex flex-col gap-3 md:flex-row md:items-center">
                                <input id="lab-upload-{{ result.id }}" type="file" name="result_pdf" accept="application/pdf" class="block w-full text-sm text-gray-700 dark:text-gray-200 file:mr-3 file:rounded-md file:border-0 file:bg-wellcare-50 file:px-3 file:py-2 file:text-sm file:font-medium file:text-wellcare-700 hover:file:bg-wellcare-100 dark:file:bg-wellcare-900/30 dark:file:text-wellcare-200" required onchange="this.form.submit()">
                            </form>

                            {% if result.resultFile %}
                                <form method="post" action="{{ path('health_lab_results_delete_file', { id: result.id }) }}">
                                    <button type="submit" class="px-4 py-2 text-sm font-medium text-red-600 bg-red-100 rounded-lg hover:bg-red-200 dark:bg-red-900/30 dark:text-red-400">
                                        <i class="mr-1 fa-solid fa-trash"></i>
                                        {{ 'Supprimer fichier'|trans }}
                                    </button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="p-8 text-center bg-white border border-gray-200 dark:bg-gray-900 rounded-2xl dark:border-gray-800">
                <i class="mb-4 text-4xl text-gray-300 fa-solid fa-flask-vial dark:text-gray-700"></i>
                <p class="text-gray-500 dark:text-gray-400">
                    {{ 'Aucun résultat de laboratoire trouvé'|trans }}
                </p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
