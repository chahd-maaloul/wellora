                    {% for goal in goals|slice(0, 5) %}
                        <div class="timeline-item">
                            <div class="patient-avatar-minimal">
                                <span>{{ goal.patient.email|first|upper }}</span>
                            </div>
                            <div class="timeline-content">
                                <h6>{{ goal.title }}</h6>
                                <small>
                                    <i class="far fa-clock"></i>
                                    {% if goal.lastAiAnalysis %}
                                        {{ goal.lastAiAnalysis|date('d/m/Y H:i') }}
                                    {% else %}
                                        Never analyzed
                                    {% endif %}
                                </small>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    <!-- Patients Table -->
    <div class="table-container">
        <div class="table-header">
            <h3>
                <i class="fas fa-users me-2"></i>
                My Patients - AI Analysis
            </h3>
            <div class="search-box">
                <input type="text" class="search-input" placeholder="ðŸ” Search patient...">
                <button class="filter-btn">
                    <i class="fas fa-filter me-2"></i>
                    Filters
                </button>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table-minimal">
                <thead>
                    <tr>
                        <th style="width: 18%;">Patient</th>
                        <th style="width: 20%;">Goal</th>
                        <th style="width: 12%;">Category</th>
                        <th style="width: 15%;">Progress</th>
                        <th style="width: 15%;">Last Analysis</th>
                        <th style="width: 10%;">Risk</th>
                        <th style="width: 10%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for goal in goals %}
                        <tr>
                            <td>
                                <div class="patient-info">
                                    <div class="patient-avatar-table">
                                        {{ goal.patient.email|first|upper }}
                                    </div>
                                    <div style="min-width: 120px;">
                                        <strong style="display: block; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;">{{ goal.patient.email }}</strong>
                                        <small style="color: var(--gray-600);">ID: {{ goal.patient.id }}</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <strong style="display: block; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 180px;">{{ goal.title }}</strong>
                                {% if goal.description %}
                                    <small style="color: var(--gray-600); display: block; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 180px;">{{ goal.description|slice(0, 30) }}...</small>
                                {% endif %}
                            </td>
                            <td>
                                <span class="badge-category" style="white-space: nowrap;">{{ goal.category }}</span>
                            </td>
                            <td>
                                <div style="min-width: 130px;">
                                    <div class="progress-minimal" style="width: 100%;">
                                        <div class="progress-minimal-bar" style="width: {{ goal.progress }}%"></div>
                                    </div>
                                    <div style="display: flex; justify-content: space-between; font-size: 0.85rem; margin-top: 4px;">
                                        <span>{{ goal.progress }}%</span>
                                        {% if goal.targetValue %}
                                            <span style="color: var(--gray-600);">/ {{ goal.targetValue }} {{ goal.unit }}</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </td>
                            <td>
                                {% if goal.lastAiAnalysis %}
                                    <div style="display: flex; align-items: center; gap: 6px; white-space: nowrap;">
                                        <i class="fas fa-check-circle" style="color: var(--green-primary);"></i>
                                        <span>{{ goal.lastAiAnalysis|date('d/m/Y H:i') }}</span>
                                    </div>
                                {% else %}
                                    <span class="badge-risk-minimal" style="background: #fef3c7; color: #d97706; white-space: nowrap;">Pending</span>
                                {% endif %}
                            </td>
                            <td>
                                {% set metrics = goal.aiMetrics %}
                                {% if metrics.progressGap is defined %}
                                    {% if metrics.progressGap < -30 %}
                                        <span class="badge-risk-minimal badge-risk-high" style="white-space: nowrap;">High</span>
                                    {% elseif metrics.progressGap < -15 %}
                                        <span class="badge-risk-minimal badge-risk-medium" style="white-space: nowrap;">Medium</span>
                                    {% else %}
                                        <span class="badge-risk-minimal badge-risk-low" style="white-space: nowrap;">Low</span>
                                    {% endif %}
                                {% else %}
                                    <span class="badge-risk-minimal" style="background: #f3f4f6; color: #6b7280; white-space: nowrap;">Not evaluated</span>
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('ai_coach_analyze_goal', {'id': goal.id}) }}" class="btn-action" style="white-space: nowrap;">
                                    <i class="fas fa-robot me-2"></i>
                                    Analyze
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" style="text-align: center; padding: 60px;">
                                <i class="fas fa-frown" style="font-size: 3rem; color: var(--gray-200); margin-bottom: 20px;"></i>
                                <h4 style="color: var(--gray-600); margin-bottom: 10px;">No goals found</h4>
                                <p style="color: var(--gray-400);">Start by adding patients and goals</p>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}

