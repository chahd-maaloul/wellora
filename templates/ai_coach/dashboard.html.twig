{% extends 'layouts/app.html.twig' %}

{% block title %}ðŸ¤– AI Coach - Dashboard{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
    
    :root {
        --white: #ffffff;
        --off-white: #f9fafb;
        --green-primary: #10b981;
        --green-dark: #059669;
        --green-light: #d1fae5;
        --green-soft: #ecfdf5;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-600: #4b5563;
        --gray-800: #1f2937;
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1);
        --shadow-lg: 0 10px 25px -5px rgba(0,0,0,0.1);
        --shadow-xl: 0 20px 30px -10px rgba(0,0,0,0.15);
    }

    body {
    font-family: 'Inter', sans-serif;
    background: #f9fafb;  /* gray-50 */
    min-height: 100vh;
}

.dark body {
    background: #111827;  /* gray-900 */
}

    /* Cards */
    .card-elegant {
        background: var(--white);
        border-radius: 32px;
        box-shadow: var(--shadow-lg);
        border: 1px solid rgba(16, 185, 129, 0.1);
        transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        overflow: hidden;
        position: relative;
    }

    .card-elegant:hover {
        transform: translateY(-6px);
        box-shadow: var(--shadow-xl);
        border-color: var(--green-light);
    }

    /* Welcome Section */
    .welcome-section {
        background: linear-gradient(135deg, var(--green-primary), #34d399);
        border-radius: 40px;
        padding: 48px;
        color: white;
        position: relative;
        overflow: hidden;
        margin-bottom: 48px;
        box-shadow: var(--shadow-xl);
    }

    .welcome-section::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 100%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, transparent 70%);
        animation: rotate 20s linear infinite;
    }

    @keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .welcome-section h1 {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 16px;
        position: relative;
    }

    .welcome-section .lead {
        font-size: 1.3rem;
        opacity: 0.95;
        max-width: 600px;
    }

    /* Stats Cards */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 24px;
        margin-bottom: 48px;
    }

    .stat-card-minimal {
        background: var(--white);
        border-radius: 28px;
        padding: 28px;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--gray-100);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }

    .stat-card-minimal::after {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 100px;
        height: 100px;
        background: var(--green-light);
        border-radius: 50%;
        opacity: 0.2;
        transform: translate(30px, -30px);
    }

    .stat-card-minimal:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
        border-color: var(--green-primary);
    }

    .stat-icon-minimal {
        width: 56px;
        height: 56px;
        background: var(--green-soft);
        border-radius: 18px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

    .stat-icon-minimal i {
        font-size: 2rem;
        color: var(--green-primary);
    }

    .stat-content .value {
        font-size: 2.5rem;
        font-weight: 800;
        color: var(--gray-800);
        line-height: 1.2;
    }

    .stat-content .label {
        font-size: 0.95rem;
        color: var(--gray-600);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 8px;
    }

    .stat-trend {
        font-size: 0.85rem;
        color: var(--green-primary);
        background: var(--green-soft);
        padding: 4px 12px;
        border-radius: 100px;
        display: inline-block;
    }

    /* Chart Section */
    .chart-container {
        background: var(--white);
        border-radius: 32px;
        padding: 32px;
        box-shadow: var(--shadow-lg);
        margin-bottom: 48px;
        border: 1px solid var(--gray-100);
    }

    .chart-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 28px;
    }

    .chart-header h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--gray-800);
    }

    .chart-header h3 i {
        color: var(--green-primary);
        margin-right: 10px;
    }

    .chart-tabs {
        display: flex;
        gap: 8px;
        background: var(--gray-50);
        padding: 4px;
        border-radius: 100px;
    }

    .chart-tab {
        padding: 8px 24px;
        border-radius: 100px;
        font-weight: 600;
        font-size: 0.95rem;
        color: var(--gray-600);
        background: transparent;
        border: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .chart-tab.active {
        background: var(--white);
        color: var(--green-primary);
        box-shadow: var(--shadow-sm);
    }

    /* Recent Analyses */
    .recent-analyses {
        background: var(--white);
        border-radius: 32px;
        padding: 32px;
        box-shadow: var(--shadow-lg);
        height: 100%;
        border: 1px solid var(--gray-100);
    }

    .recent-analyses h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--gray-800);
        margin-bottom: 24px;
    }

    .recent-analyses h3 i {
        color: var(--green-primary);
    }

    .timeline-item {
        display: flex;
        align-items: center;
        padding: 16px;
        border-bottom: 1px solid var(--gray-100);
        transition: all 0.3s ease;
    }

    .timeline-item:hover {
        background: var(--gray-50);
        transform: translateX(5px);
        border-radius: 16px;
    }

    .patient-avatar-minimal {
        width: 48px;
        height: 48px;
        background: var(--green-soft);
        border-radius: 16px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 16px;
    }

    .patient-avatar-minimal span {
        font-weight: 700;
        font-size: 1.2rem;
        color: var(--green-primary);
    }

    .timeline-content h6 {
        font-weight: 700;
        color: var(--gray-800);
        margin-bottom: 4px;
    }

    .timeline-content small {
        color: var(--gray-600);
        display: flex;
        align-items: center;
        gap: 6px;
    }

    /* Table */
    .table-container {
        background: var(--white);
        border-radius: 32px;
        padding: 32px;
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--gray-100);
    }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 28px;
        flex-wrap: wrap;
        gap: 16px;
    }

    .table-header h3 {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--gray-800);
        margin: 0;
    }

    .table-header h3 i {
        color: var(--green-primary);
        margin-right: 10px;
    }

    .search-box {
        display: flex;
        gap: 12px;
        align-items: center;
    }

    .search-input {
        padding: 12px 24px;
        border-radius: 100px;
        border: 1px solid var(--gray-200);
        font-size: 0.95rem;
        width: 280px;
        transition: all 0.3s ease;
    }

    .search-input:focus {
        outline: none;
        border-color: var(--green-primary);
        box-shadow: 0 0 0 4px var(--green-light);
    }

    .filter-btn {
        padding: 12px 28px;
        border-radius: 100px;
        background: var(--green-soft);
        color: var(--green-primary);
        font-weight: 600;
        border: none;
        transition: all 0.3s ease;
    }

    .filter-btn:hover {
        background: var(--green-primary);
        color: white;
    }

    .table-responsive {
        margin: 0 -4px;
        border-radius: 24px;
        overflow-x: auto;
    }

    .table-minimal {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 12px;
        min-width: 1200px;
    }

    .table-minimal th {
        padding: 16px 20px;
        color: var(--gray-600);
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        background: var(--gray-50);
        border-radius: 16px 16px 8px 8px;
        white-space: nowrap;
    }

    .table-minimal td {
        padding: 20px;
        background: var(--white);
        border-radius: 20px;
        box-shadow: var(--shadow-sm);
        border: 1px solid var(--gray-100);
        transition: all 0.3s ease;
        vertical-align: middle;
    }

    .table-minimal tr:hover td {
        background: var(--green-soft);
        border-color: var(--green-light);
        box-shadow: var(--shadow-md);
    }

    .patient-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .patient-avatar-table {
        width: 44px;
        height: 44px;
        background: var(--green-soft);
        border-radius: 14px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 1.1rem;
        color: var(--green-primary);
        flex-shrink: 0;
    }

    .badge-category {
        padding: 6px 16px;
        border-radius: 100px;
        font-size: 0.85rem;
        font-weight: 600;
        background: var(--green-soft);
        color: var(--green-primary);
        display: inline-block;
        white-space: nowrap;
    }

    .progress-minimal {
        height: 8px;
        background: var(--gray-100);
        border-radius: 100px;
        overflow: hidden;
        width: 100%;
    }

    .progress-minimal-bar {
        height: 100%;
        background: linear-gradient(90deg, var(--green-primary), #34d399);
        border-radius: 100px;
        transition: width 0.5s ease;
    }

    .badge-risk-minimal {
        padding: 6px 14px;
        border-radius: 100px;
        font-size: 0.85rem;
        font-weight: 600;
        display: inline-block;
        white-space: nowrap;
    }

    .badge-risk-high {
        background: #fee2e2;
        color: #dc2626;
    }

    .badge-risk-medium {
        background: #fef3c7;
        color: #d97706;
    }

    .badge-risk-low {
        background: var(--green-soft);
        color: var(--green-primary);
    }

    .btn-action {
        padding: 8px 18px;
        border-radius: 100px;
        background: linear-gradient(135deg, var(--green-primary), #34d399);
        color: white;
        font-weight: 600;
        font-size: 0.9rem;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        border: none;
        white-space: nowrap;
    }

    .btn-action:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px -5px rgba(16, 185, 129, 0.4);
        color: white;
    }

    [title] {
        cursor: help;
    }

    @media (max-width: 1400px) {
        .table-minimal {
            min-width: 1100px;
        }
    }

    @media (max-width: 1200px) {
        .table-minimal {
            min-width: 1000px;
        }
        
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .welcome-section {
            padding: 32px;
        }
        
        .welcome-section h1 {
            font-size: 2.5rem;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .table-header {
            flex-direction: column;
            align-items: stretch;
        }
        
        .search-box {
            flex-direction: column;
        }
        
        .search-input {
            width: 100%;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-5 px-4">
    <!-- Welcome Section -->
    <div class="welcome-section mb-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1>
                    ðŸ¤– Hello, <span style="color: rgba(255,255,255,0.95);">{{ coach.email }}</span>
                </h1>
                <p class="lead mb-4">
                    Your AI assistant has analyzed all your patients. Here are today's insights!
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    <a href="{{ path('ai_coach_analyze_all') }}" class="btn-action" style="background: white; color: var(--green-primary);">
                        <i class="fas fa-sync-alt me-2"></i>
                        RUN AI ANALYSIS
                    </a>
                    <button class="btn-action" style="background: rgba(255,255,255,0.2); color: white; border: 1px solid rgba(255,255,255,0.3);">
                        <i class="fas fa-calendar me-2"></i>
                        {{ "now"|date('d F Y') }}
                    </button>
                </div>
            </div>
            <div class="col-lg-4 text-center d-none d-lg-block">
                <i class="fas fa-robot" style="font-size: 8rem; opacity: 0.3;"></i>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-grid">
        <div class="stat-card-minimal">
            <div class="stat-icon-minimal">
                <i class="fas fa-bullseye"></i>
            </div>
            <div class="stat-content">
                <div class="label">Total Goals</div>
                <div class="value">{{ stats.totalGoals }}</div>
                <div class="stat-trend">
                    <i class="fas fa-arrow-up me-1"></i>+12% this month
                </div>
            </div>
        </div>

        <div class="stat-card-minimal">
            <div class="stat-icon-minimal">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="stat-content">
                <div class="label">Completed Goals</div>
                <div class="value">{{ stats.completedGoals }}</div>
                <div class="stat-trend">
                    <i class="fas fa-trophy me-1"></i>Rate: {{ stats.completionRate }}%
                </div>
            </div>
        </div>

        <div class="stat-card-minimal">
            <div class="stat-icon-minimal">
                <i class="fas fa-spinner"></i>
            </div>
            <div class="stat-content">
                <div class="label">In Progress</div>
                <div class="value">{{ stats.inProgressGoals }}</div>
                <div class="stat-trend">
                    <i class="fas fa-chart-line me-1"></i>Avg Progress: {{ stats.averageProgress }}%
                </div>
            </div>
        </div>

        <div class="stat-card-minimal">
            <div class="stat-icon-minimal">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stat-content">
                <div class="label">High Risk</div>
                <div class="value">{{ stats.highRiskGoals }}</div>
