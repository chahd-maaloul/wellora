{% extends 'layouts/app.html.twig' %}

{% block title %}üéØ Personalized Plan - {{ goal.title }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
    
    :root {
        --white: #ffffff;
        --off-white: #f9fafb;
        --green-primary: #10b981;
        --green-dark: #059669;
        --green-light: #d1fae5;
        --green-soft: #ecfdf5;
        --blue-primary: #3b82f6;
        --blue-light: #dbeafe;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-600: #4b5563;
        --gray-800: #1f2937;
        --shadow-sm: 0 1px 3px rgba(0,0,0,0.05);
        --shadow-md: 0 4px 6px -1px rgba(0,0,0,0.1);
        --shadow-lg: 0 10px 25px -5px rgba(0,0,0,0.1);
        --shadow-xl: 0 20px 30px -10px rgba(0,0,0,0.15);
    }

   body {
    font-family: 'Inter', sans-serif;
    background: #f9fafb;  /* gray-50 */
    min-height: 100vh;
}

.dark body {
    background: #111827;  /* gray-900 */
}

    .hero-header {
        background: linear-gradient(135deg, var(--green-primary), #34d399);
        border-radius: 40px;
        padding: 48px;
        color: white;
        position: relative;
        overflow: hidden;
        margin-bottom: 48px;
        box-shadow: var(--shadow-xl);
    }

    .hero-header::after {
        content: 'üèãÔ∏è';
        position: absolute;
        bottom: -20px;
        right: -20px;
        font-size: 180px;
        opacity: 0.1;
        transform: rotate(-5deg);
    }

    .badge-custom {
        padding: 10px 24px;
        border-radius: 100px;
        font-weight: 600;
        font-size: 0.95rem;
        background: rgba(255,255,255,0.2);
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255,255,255,0.3);
        color: white;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    /* Stats Cards */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin: 40px 0;
    }

    .stat-card-modern {
        background: var(--white);
        border-radius: 28px;
        padding: 28px;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--gray-100);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        border-left: 4px solid var(--green-primary);
    }

    .stat-card-modern:nth-child(2) {
        border-left-color: var(--blue-primary);
    }

    .stat-card-modern:hover {
        transform: translateY(-4px);
        box-shadow: var(--shadow-lg);
    }

    .stat-icon {
        font-size: 2rem;
        color: var(--green-primary);
        margin-bottom: 12px;
    }

    .stat-card-modern:nth-child(2) .stat-icon {
        color: var(--blue-primary);
    }

    .stat-value {
        font-size: 2.2rem;
        font-weight: 800;
        color: var(--gray-800);
        line-height: 1.2;
    }

    .stat-label {
        color: var(--gray-600);
        font-size: 0.9rem;
        font-weight: 500;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    /* Horizontal Weeks Navigation */
    .weeks-horizontal {
        display: flex;
        gap: 12px;
        overflow-x: auto;
        padding: 20px 0 30px 0;
        scrollbar-width: thin;
        scrollbar-color: var(--green-primary) var(--gray-200);
        -webkit-overflow-scrolling: touch;
    }

    .weeks-horizontal::-webkit-scrollbar {
        height: 8px;
    }

    .weeks-horizontal::-webkit-scrollbar-track {
        background: var(--gray-200);
        border-radius: 10px;
    }

    .weeks-horizontal::-webkit-scrollbar-thumb {
        background: linear-gradient(90deg, var(--green-primary), var(--blue-primary));
        border-radius: 10px;
    }

    .week-chip {
        flex: 0 0 auto;
        background: var(--white);
        border: 2px solid transparent;
        border-radius: 50px;
        padding: 16px 32px;
        font-weight: 700;
        font-size: 1.1rem;
        color: var(--gray-600);
        box-shadow: var(--shadow-md);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .week-chip:hover {
        transform: translateY(-3px);
        box-shadow: var(--shadow-lg);
        border-color: var(--green-light);
    }

    .week-chip.active {
        background: linear-gradient(135deg, var(--green-primary), var(--blue-primary));
        color: white;
        box-shadow: 0 10px 20px -5px rgba(16, 185, 129, 0.4);
    }

    .week-chip.active::before {
        content: 'üî•';
        margin-right: 8px;
    }

    .week-content {
        background: var(--white);
        border-radius: 32px;
        padding: 32px;
        box-shadow: var(--shadow-lg);
        border: 1px solid var(--gray-200);
        margin-top: 20px;
    }

    .week-header-modern {
        background: linear-gradient(135deg, var(--green-light), var(--blue-light));
        border-radius: 24px;
        padding: 24px 32px;
        margin-bottom: 30px;
        border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .week-header-modern h3 {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(135deg, var(--green-dark), #2563eb);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin: 0;
    }

    .focus-badge {
        background: var(--white);
        border-radius: 50px;
        padding: 8px 24px;
        font-weight: 600;
        color: var(--gray-800);
        display: inline-flex;
        align-items: center;
        gap: 8px;
        box-shadow: var(--shadow-sm);
    }

    .objectives-section {
        background: linear-gradient(135deg, var(--green-light), #ffffff);
        border-radius: 20px;
        padding: 24px;
        margin-bottom: 30px;
        border-left: 4px solid var(--green-primary);
    }

    .objectives-section h4 {
        color: var(--green-dark);
        font-weight: 700;
        margin-bottom: 16px;
    }

    .objectives-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 12px;
    }

    .objective-item {
        background: var(--white);
        border-radius: 12px;
        padding: 12px 16px;
        display: flex;
        align-items: center;
        gap: 12px;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s ease;
    }

    .objective-item:hover {
        transform: translateX(5px);
        box-shadow: var(--shadow-md);
    }

    .objective-item i {
        color: var(--green-primary);
        font-size: 1.2rem;
    }

    .sessions-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
        margin-bottom: 30px;
    }

    .session-card-modern {
        background: var(--white);
        border-radius: 24px;
        overflow: hidden;
        box-shadow: var(--shadow-md);
        border: 1px solid var(--gray-200);
        transition: all 0.3s ease;
    }

    .session-card-modern:hover {
        transform: translateY(-5px);
        box-shadow: var(--shadow-xl);
    }

    .session-header-modern {
        padding: 20px;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .session-header-modern[data-type="cardio"] {
        background: linear-gradient(135deg, var(--blue-primary), #2563eb);
    }

    .session-header-modern[data-type="renforcement"] {
        background: linear-gradient(135deg, var(--green-primary), var(--green-dark));
    }

    .session-header-modern[data-type="mixte"] {
        background: linear-gradient(135deg, #8b5cf6, #6d28d9);
    }

    .session-header-modern h5 {
        font-size: 1.3rem;
        font-weight: 700;
        margin: 0 0 8px 0;
    }

    .session-meta {
        display: flex;
        gap: 12px;
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .session-body-modern {
        padding: 20px;
    }

    .exercise-item-modern {
        padding: 12px;
        margin-bottom: 10px;
        background: var(--gray-50);
        border-radius: 12px;
        border-left: 3px solid var(--green-primary);
        transition: all 0.3s ease;
    }

    .exercise-item-modern:hover {
        background: var(--green-light);
        transform: scale(1.02);
    }

    .exercise-item-modern .name {
        font-weight: 600;
        color: var(--gray-800);
        display: block;
        margin-bottom: 6px;
    }

    .exercise-item-modern .details {
        display: flex;
        gap: 16px;
        font-size: 0.9rem;
        color: var(--gray-600);
        flex-wrap: wrap;
    }

    .advice-card-modern {
        background: linear-gradient(135deg, #fef3c7, #ffffff);
        border-radius: 20px;
        padding: 24px;
        border-left: 4px solid #f59e0b;
        margin-top: 30px;
    }

    .advice-card-modern h5 {
        color: #b45309;
        font-weight: 700;
        margin-bottom: 16px;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .advice-list-modern {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .advice-list-modern li {
        padding: 10px 0;
        display: flex;
        align-items: center;
        gap: 10px;
        border-bottom: 1px solid rgba(245, 158, 11, 0.2);
    }

    .advice-list-modern li:last-child {
        border-bottom: none;
    }

    .advice-list-modern li::before {
        content: 'üí°';
        font-size: 1.2rem;
    }

    .action-buttons-modern {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 40px;
        gap: 16px;
        flex-wrap: wrap;
    }

    .btn-modern {
        padding: 14px 32px;
        border-radius: 100px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        text-decoration: none;
        border: none;
        cursor: pointer;
    }

    .btn-modern-primary {
        background: linear-gradient(135deg, var(--green-primary), var(--blue-primary));
        color: white;
        box-shadow: 0 8px 16px -4px rgba(16, 185, 129, 0.3);
    }

    .btn-modern-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 12px 24px -4px rgba(16, 185, 129, 0.4);
        color: white;
    }

    .btn-modern-secondary {
        background: var(--white);
        color: var(--gray-800);
        border: 1px solid var(--gray-200);
        box-shadow: var(--shadow-sm);
    }

    .btn-modern-secondary:hover {
        background: var(--gray-50);
        transform: translateY(-2px);
        box-shadow: var(--shadow-md);
    }

    .empty-state-modern {
        text-align: center;
        padding: 60px 20px;
        background: var(--white);
        border-radius: 32px;
        box-shadow: var(--shadow-lg);
    }

    .empty-state-modern .icon {
        font-size: 4rem;
        margin-bottom: 20px;
        animation: bounce 2s infinite;
    }

    @keyframes bounce {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }

    @media (max-width: 992px) {
        .stats-grid {
            grid-template-columns: repeat(2, 1fr);
        }
        
        .sessions-grid {
            grid-template-columns: 1fr;
        }
    }

    @media (max-width: 768px) {
        .hero-header {
            padding: 24px;
        }
        
        .hero-header h1 {
            font-size: 2rem;
        }
        
        .stats-grid {
            grid-template-columns: 1fr;
        }
        
        .week-chip {
            padding: 12px 24px;
            font-size: 1rem;
        }
        
        .week-header-modern h3 {
            font-size: 1.5rem;
        }
        
        .action-buttons-modern {
            flex-direction: column;
        }
        
        .btn-modern {
            width: 100%;
            justify-content: center;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4 px-4">
    <!-- Hero Header -->
    <div class="hero-header mb-5">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-3 fw-bold mb-3">üéØ Personalized Plan</h1>
                <p class="lead mb-4 fs-3">
                    <i class="fas fa-user-circle me-2"></i>{{ goal.patient.email }}
                </p>
                <div class="d-flex gap-3 flex-wrap">
                    <span class="badge-custom">
                        <i class="fas fa-bullseye"></i>{{ goal.title }}
                    </span>
                    <span class="badge-custom">
                        <i class="fas fa-calendar"></i>{{ exercisePlans|length }} weeks
                    </span>
                    <span class="badge-custom">
                        <i class="fas fa-chart-line"></i>Level {{ goal.difficultyLevel ?? 'intermediate' }}
                    </span>
                </div>
            </div>
            <div class="col-lg-4 text-center d-none d-lg-block">
                <div style="font-size: 8rem; opacity: 0.8;">
                    <i class="fas fa-dumbbell"></i>
                </div>
            </div>
        </div>
    </div>

    {% if exercisePlans is empty %}
        <!-- Empty State -->
        <div class="empty-state-modern">
            <div class="icon">üèãÔ∏è</div>
            <h2 class="mb-3">No plan generated</h2>
            <p class="text-muted mb-4">Generate a personalized plan for this patient</p>
            <a href="{{ path('ai_coach_generate_personalized_plan', {'id': goal.id}) }}" class="btn-modern btn-modern-primary">
                <i class="fas fa-magic me-2"></i>Generate Plan
            </a>
        </div>
    {% else %}
        <!-- Stats Cards -->
        <div class="stats-grid">
            <div class="stat-card-modern">
                <div class="stat-icon">
                    <i class="fas fa-calendar-alt"></i>
                </div>
                <div class="stat-value">{{ exercisePlans|length }}</div>
                <div class="stat-label">Weeks</div>
            </div>
            <div class="stat-card-modern">
                <div class="stat-icon">
                    <i class="fas fa-dumbbell"></i>
                </div>
                {% set totalExercises = 0 %}
                {% for plan in exercisePlans %}
                    {% set weekData = plan.exercises %}
                    {% if weekData.seances is defined %}
                        {% set totalExercises = totalExercises + weekData.seances|length %}
                    {% endif %}
                {% endfor %}
                <div class="stat-value">{{ totalExercises }}</div>
                <div class="stat-label">Total Sessions</div>
            </div>
            <div class="stat-card-modern">
                <div class="stat-icon">
                    <i class="fas fa-fire"></i>
                </div>
                <div class="stat-value">{{ goal.progress }}%</div>
                <div class="stat-label">Progress</div>
            </div>
            <div class="stat-card-modern">
                <div class="stat-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-value">
                    {% if goal.endDate %}
                        {{ goal.endDate|date('d/m') }}
                    {% else %}
                        -
                    {% endif %}
                </div>
                <div class="stat-label">Target End</div>
            </div>
        </div>

        <!-- Horizontal Weeks Navigation -->
        <div class="weeks-horizontal" id="weeksNav">
            {% for plan in exercisePlans %}
                <button class="week-chip {{ loop.first ? 'active' : '' }}" 
                        onclick="showWeek({{ plan.weekNumber }})">
                    <i class="fas fa-calendar-week me-2"></i>Week {{ plan.weekNumber }}
                </button>
            {% endfor %}
        </div>

        <!-- Weeks Content -->
        {% for plan in exercisePlans %}
            {% set weekData = plan.exercises %}
            <div id="week-{{ plan.weekNumber }}" class="week-content" style="display: {{ loop.first ? 'block' : 'none' }};">
                
                <!-- Week Header -->
                <div class="week-header-modern mb-4">
                    <div class="d-flex justify-content-between align-items-center flex-wrap">
                        <h3>{{ weekData.titre ?? 'Week ' ~ plan.weekNumber }}</h3>
                        <div class="focus-badge">
                            <i class="fas fa-bullseye"></i>
                            {{ plan.focus }}
                        </div>
                    </div>
                </div>

                <!-- Objectives -->
                {% if weekData.objectifs is defined and weekData.objectifs|length > 0 %}
                    <div class="objectives-section">
                        <h4>
                            <i class="fas fa-check-circle me-2"></i>Weekly Objectives
                        </h4>
                        <div class="objectives-grid">
                            {% for objectif in weekData.objectifs %}
                                <div class="objective-item">
                                    <i class="fas fa-check-circle"></i>
                                    <span>{{ objectif }}</span>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

                <!-- Sessions -->
                {% if weekData.seances is defined and weekData.seances|length > 0 %}
                    <div class="sessions-grid">
                        {% for seance in weekData.seances %}
                            <div class="session-card-modern">
                                <div class="session-header-modern" data-type="{{ seance.type }}">
                                    <h5>
                                        <i class="fas fa-calendar-day me-2"></i>Day {{ seance.jour }}
                                    </h5>
                                    <div class="session-meta">
                                        <span>
                                            <i class="fas fa-clock"></i>{{ seance.duree }} min
                                        </span>
                                        {% if seance.intensite is defined %}
                                            <span>
                                                <i class="fas fa-bolt"></i>{{ seance.intensite }}
                                            </span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="session-body-modern">
                                    {% for exercice in seance.exercices %}
                                        <div class="exercise-item-modern">
                                            <span class="name">
                                                {% if exercice.nom is defined %}
                                                    {{ exercice.nom }}
                                                {% elseif exercice.name is defined %}
                                                    {{ exercice.name }}
                                                {% else %}
                                                    Exercise
                                                {% endif %}
                                            </span>
                                            <div class="details">
                                                {% if exercice.duree is defined %}
                                                    <span><i class="far fa-clock"></i>{{ exercice.duree }}</span>
                                                {% elseif exercice.duration is defined %}
                                                    <span><i class="far fa-clock"></i>{{ exercice.duration }}</span>
                                                {% endif %}
                                                
                                                {% if exercice.reps is defined %}
                                                    <span><i class="fas fa-redo-alt"></i>{{ exercice.reps }}</span>
                                                {% endif %}
                                                
                                                {% if exercice.repos is defined %}
                                                    <span><i class="fas fa-pause"></i>{{ exercice.repos }}</span>
                                                {% endif %}
                                            </div>
                                            {% if exercice.instructions is defined %}
                                                <small class="text-muted d-block mt-2">
                                                    <i class="fas fa-info-circle me-1"></i>{{ exercice.instructions }}
                                                </small>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% endif %}

                <!-- Coach Advice -->
                {% if weekData.conseils is defined and weekData.conseils|length > 0 %}
                    <div class="advice-card-modern">
                        <h5>
                            <i class="fas fa-lightbulb"></i>
                            Coach Advice
                        </h5>
                        <ul class="advice-list-modern">
                            {% for conseil in weekData.conseils %}
                                <li>{{ conseil }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <!-- Coach Notes -->
                {% if plan.coachNotes %}
                    <div class="card-elegant mt-4">
                        <div class="p-4">
                            <h5 class="mb-3" style="color: var(--blue-primary);">
                                <i class="fas fa-sticky-note me-2"></i>Coach Notes
                            </h5>
                            <p class="mb-0">{{ plan.coachNotes|nl2br }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>
        {% endfor %}

        <!-- Action Buttons -->
        <div class="action-buttons-modern">
            <a href="{{ path('ai_coach_dashboard') }}" class="btn-modern btn-modern-secondary">
                <i class="fas fa-arrow-left me-2"></i>Dashboard
            </a>
            <div class="d-flex gap-3">
                <a href="{{ path('ai_coach_generate_personalized_plan', {'id': goal.id}) }}" class="btn-modern btn-modern-primary">
                    <i class="fas fa-sync-alt me-2"></i>Regenerate
                </a>
                <a href="{{ path('ai_coach_analyze_goal', {'id': goal.id}) }}" class="btn-modern btn-modern-primary">
                    <i class="fas fa-chart-line me-2"></i>AI Analysis
                </a>
            </div>
        </div>
    {% endif %}
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
function showWeek(weekNumber) {
    // Hide all weeks
    document.querySelectorAll('[id^="week-"]').forEach(el => {
        el.style.display = 'none';
    });
    
    // Show selected week
    document.getElementById(`week-${weekNumber}`).style.display = 'block';
    
    // Update active chip
    document.querySelectorAll('.week-chip').forEach(chip => {
        chip.classList.remove('active');
    });
    event.currentTarget.classList.add('active');
}

document.addEventListener('DOMContentLoaded', function() {
    // Scroll animation
    const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.style.opacity = '1';
                entry.target.style.transform = 'translateY(0)';
            }
        });
    }, observerOptions);

    document.querySelectorAll('.session-card-modern, .stat-card-modern').forEach(el => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(20px)';
        el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(el);
    });

    // Smooth scroll horizontal
    const weeksNav = document.getElementById('weeksNav');
    if (weeksNav) {
        weeksNav.addEventListener('wheel', (e) => {
            e.preventDefault();
            weeksNav.scrollLeft += e.deltaY;
        });
    }
});
</script>
